                                                                    <i class="fas fa-trash text-xs md:text-sm"></i>
                                                                </button>*@
                                                            </div>
                                                        </td>
                                                    </tr>
                                                }
                                            }
                                        }
                                        @Html.AntiForgeryToken()
                                    </tbody>
                                </table>
                            </div>

