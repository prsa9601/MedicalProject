@page
@using MedicalProject.Models
@model MedicalProject.Pages.Auth.LoginModel
@{
    ViewData["Title"] = "ورود به حساب کاربری";
}

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <meta name="robots" content="noindex, nofollow">

    <style>
        /* استایل‌های صفحه لاگین */
        .login-container {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 80vh;
            padding: 2rem 1rem;
            background: linear-gradient(135deg, #dbeafe 0%, white 50%, #dbeafe 100%);
        }

        .login-card {
            width: 100%;
            max-width: 450px;
            background: #fff;
            border-radius: 1rem;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
            padding: 2rem;
        }

        .login-title {
            font-size: 1.75rem;
            font-weight: 700;
            text-align: center;
            margin-bottom: 0.5rem;
            color: #1e40af;
        }

        .input-group {
            position: relative;
            margin-bottom: 1.5rem;
        }

            .input-group input {
                width: 100%;
                padding: 0.75rem 1rem;
                background: #f9fafb;
                border: 1px solid #d1d5db;
                outline: none;
                font-size: 1rem;
                color: #374151;
                font-weight: 500;
                border-radius: 0.5rem;
                transition: all 0.3s;
            }

                .input-group input:focus {
                    border-color: #3b82f6;
                    box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
                }

                .input-group input::placeholder {
                    color: #9ca3af;
                    font-weight: 400;
                }

        .input-icon {
            position: absolute;
            left: 1rem;
            top: 50%;
            transform: translateY(-50%);
            font-size: 1.125rem;
            color: #9ca3af;
        }

        .phone-input-container {
            position: relative;
        }

        .country-code {
            position: absolute;
            left: 12px;
            top: 50%;
            transform: translateY(-50%);
            color: #374151;
            font-size: 0.875rem;
            font-weight: 500;
            background: #f3f4f6;
            padding: 2px 8px;
            border-radius: 4px;
            border: 1px solid #d1d5db;
            z-index: 10;
        }

        .phone-icon {
            position: absolute;
            left: 65px;
            top: 50%;
            transform: translateY(-50%);
            font-size: 1.125rem;
            color: #9ca3af;
            z-index: 10;
        }

        .phone-input {
            padding-left: 90px !important;
            direction: ltr;
            text-align: left;
        }

        .remember-me {
            display: flex;
            align-items: center;
            margin-bottom: 1.5rem;
        }

            .remember-me input {
                margin-left: 0.5rem;
            }

            .remember-me label {
                color: #374151;
                font-size: 0.875rem;
            }

        .submit-btn {
            width: 100%;
            padding: 0.75rem;
            background: #3b82f6;
            border-radius: 0.5rem;
            margin: 1.5rem 0;
            box-shadow: 0 4px 6px rgba(59, 130, 246, 0.2);
            border: none;
            cursor: pointer;
            font-size: 1rem;
            color: #fff;
            font-weight: 600;
            transition: all 0.3s;
        }

            .submit-btn:hover {
                background: #2563eb;
                box-shadow: 0 6px 8px rgba(59, 130, 246, 0.3);
            }

            .submit-btn:disabled {
                opacity: 0.5;
                cursor: not-allowed;
                background: #9ca3af;
            }

        .back-to-login {
            text-align: center;
            margin-top: 1.5rem;
        }

            .back-to-login a {
                color: #3b82f6;
                text-decoration: none;
                font-weight: 500;
                transition: color 0.2s;
            }

                .back-to-login a:hover {
                    color: #1e40af;
                    text-decoration: underline;
                }

        .text-error {
            color: #dc2626;
            font-size: 0.875rem;
            margin-top: 0.25rem;
            display: block;
        }

        .alert-error {
            background-color: #fef2f2;
            border: 1px solid #fecaca;
            color: #dc2626;
            padding: 0.75rem;
            border-radius: 0.5rem;
            margin-bottom: 1rem;
        }

        .phone-hint {
            color: #6b7280;
            font-size: 0.75rem;
            margin-top: 0.25rem;
        }

        .password-toggle {
            position: absolute;
            left: 10px;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            color: #9ca3af;
            cursor: pointer;
            padding: 4px;
            border-radius: 4px;
            transition: color 0.2s;
        }

            .password-toggle:hover {
                color: #6b7280;
            }

        /* حالت موبایل */
        @@media screen and (max-width: 600px) {
            .login-card {
                padding: 1.5rem;
                border-radius: 0.75rem;
            }

            .login-title {
                font-size: 1.5rem;
            }

            .phone-input {
                padding-left: 85px !important;
            }

            .phone-icon {
                left: 60px;
            }
        }
    </style>
}

<div class="login-container">
    <div class="login-card">
        <!-- Header -->
        <div class="text-center mb-8">
            <div class="flex justify-center mb-4">
                <div class="w-16 h-16 bg-blue-600 rounded-xl flex items-center justify-center">
                    <span class="text-white font-bold text-2xl">د</span>
                </div>
            </div>
            <h1 class="login-title">ورود به حساب کاربری</h1>
            <p class="text-gray-600 mt-2">
                یا
                <a href="/Auth/Register" class="text-blue-600 hover:text-blue-500 font-medium mr-1">
                    حساب جدید ایجاد کنید
                </a>
            </p>
        </div>

        <!-- Login Form -->
        <form method="post" class="space-y-4" id="loginForm">
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert-error">
                    <p>لطفا اطلاعات را به درستی وارد کنید</p>
                </div>
            }

            <div class="input-group">
                <label for="PhoneNumber" class="block text-sm font-medium text-gray-700 mb-2">شماره تلفن همراه</label>
                <div class="phone-input-container">
                    <span class="country-code">98+</span>
                    <i class="phone-icon fa-solid fa-phone"></i>
                    <input type="tel"
                           id="PhoneNumber"
                           name="PhoneNumber"
                           class="phone-input w-full pr-3 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200"
                           placeholder="912 345 6789"
                           maxlength="11"
                           value="@Model.PhoneNumber"
                           required
                           disabled
                           dir="ltr">
                </div>
                @if (ViewData.ModelState["PhoneNumber"]?.Errors?.Count > 0)
                {
                    <span class="text-error">@ViewData.ModelState["PhoneNumber"].Errors[0].ErrorMessage</span>
                }
                <p class="phone-hint">شماره تلفن همراه خود را بدون صفر وارد کنید</p>
            </div>

            <div class="input-group">
                <label for="Password" class="block text-sm font-medium text-gray-700 mb-2">رمز عبور</label>
                <div class="relative">
                    <input type="password"
                           id="Password"
                           name="Password"
                           class="w-full pr-10 pl-12 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200"
                           placeholder="رمز عبور خود را وارد کنید"
                           required />
                    <i class="input-icon fa-solid fa-lock" style="left: 12px;"></i>
                    <button type="button"
                            class="password-toggle"
                            onclick="togglePassword()">
                        <i id="eyeIcon" class="fa-solid fa-eye hidden"></i>
                        <i id="eyeOffIcon" class="fa-solid fa-eye-slash"></i>
                    </button>
                </div>
                @if (ViewData.ModelState["Password"]?.Errors?.Count > 0)
                {
                    <span class="text-error">@ViewData.ModelState["Password"].Errors[0].ErrorMessage</span>
                }
            </div>

            <div class="remember-me">
                <input type="checkbox"
                       id="RememberMe"
                       name="RememberMe"
                       value="true"
                       @(Model.RememberMe ? "checked" : "") />
                <label for="RememberMe">مرا به خاطر بسپار</label>
            </div>

            <button type="submit" id="submitButton" class="submit-btn">
                ورود به حساب کاربری
            </button>
        </form>

        <!-- Additional Links -->
        <div class="text-center space-y-4">
            <div>
                <a asp-page="/Auth/VerificationPhoneNumber" asp-route-action="@ForAuthAction.ResetPassword"
                   asp-route-path="/Auth/Login"
                               class="text-blue-600 hover:text-blue-500 text-sm font-medium">
                    فراموشی رمز عبور؟
                </a>
            </div>

            <div class="pt-4 border-t border-gray-200">
                <p class="text-sm text-gray-600">
                    با ورود به سایت،
                    <a href="/Terms" class="text-blue-600 hover:text-blue-500 mr-1">شرایط استفاده</a>
                    و
                    <a href="/Privacy" class="text-blue-600 hover:text-blue-500 mr-1">حریم خصوصی</a>
                    را می‌پذیرید.
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const phoneInput = document.getElementById('PhoneNumber');
        const submitButton = document.getElementById('submitButton');
        const form = document.getElementById('loginForm');

        // فرمت خودکار شماره تلفن
        phoneInput.addEventListener('input', function(e) {
            let value = e.target.value.replace(/\D/g, '');

            // اگر با 9 شروع شد (فرمت ایرانی)
            if (value.startsWith('9')) {
                value = value.substring(0, 10);
                if (value.length >= 4) {
                    value = value.replace(/(\d{3})(\d{3})(\d{4})/, '$1 $2 $3');
                } else if (value.length >= 3) {
                    value = value.replace(/(\d{3})(\d{1})/, '$1 $2');
                }
            }

            e.target.value = value;
            validatePhoneNumber();
        });

        // ولیدیشن شماره تلفن
        function validatePhoneNumber() {
            const value = phoneInput.value.replace(/\s/g, '');
            const isValid = /^9[0-9]{9}$/.test(value);

            if (value.length === 0) {
                submitButton.disabled = true;
                return false;
            }

            if (!isValid) {
                submitButton.disabled = true;
            } else {
                submitButton.disabled = false;
            }

            return isValid;
        }

        // مدیریت ارسال فرم
        form.addEventListener('submit', function(e) {
            const password = document.getElementById('Password').value.trim();

            if (!validatePhoneNumber() || !password) {
                e.preventDefault();
                return false;
            }

            // نمایش حالت loading
            submitButton.disabled = true;
            submitButton.classList.add('opacity-50', 'cursor-not-allowed');
            const originalText = submitButton.innerHTML;
            submitButton.innerHTML = `
                <svg class="animate-spin -ml-1 mr-3 h-5 w-5 text-white inline" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
                در حال ورود...
            `;

            // فرم به صورت طبیعی ارسال می‌شود
            return true;
        });

        // نمایش/مخفی کردن رمز عبور
        function togglePassword() {
            const passwordInput = document.getElementById('Password');
            const eyeIcon = document.getElementById('eyeIcon');
            const eyeOffIcon = document.getElementById('eyeOffIcon');

            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                eyeIcon.classList.remove('hidden');
                eyeOffIcon.classList.add('hidden');
            } else {
                passwordInput.type = 'password';
                eyeIcon.classList.add('hidden');
                eyeOffIcon.classList.remove('hidden');
            }
        }

        // ولیدیشن هنگام تغییر مقدار
        phoneInput.addEventListener('blur', validatePhoneNumber);
        phoneInput.addEventListener('input', validatePhoneNumber);

        // جلوگیری از ورود کاراکترهای غیر عددی
        phoneInput.addEventListener('keydown', function(e) {
            if (!/[\d\s]/.test(e.key) &&
                !['Backspace', 'Delete', 'ArrowLeft', 'ArrowRight', 'Tab'].includes(e.key)) {
                e.preventDefault();
            }
        });

        // ولیدیشن اولیه هنگام لود صفحه
        document.addEventListener('DOMContentLoaded', function() {
            validatePhoneNumber();

            // فوکوس روی فیلد شماره تلفن اگر خالی است
            if (!phoneInput.value.trim()) {
                phoneInput.focus();
            }
        });
    </script>
}