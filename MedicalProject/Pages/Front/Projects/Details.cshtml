    <script>
        document.addEventListener('DOMContentLoaded', function() {
            console.log('Product details page loaded');

            const dongSelect = document.getElementById('dongAmount');
            const quickDongButtons = document.querySelectorAll('.quick-dong-btn');
            const monthlyProfit = document.getElementById('monthlyProfit');
            const annualProfit = document.getElementById('annualProfit');
            const totalProfit = document.getElementById('totalProfit');

            // محاسبه سود پایه برای یک دانگ (این مقادیر باید از سرور گرفته شوند)
            const baseAnnualProfitPerDong = @CalculationOfAnnualProfit(Model.Product.InventoryDto?.Profit, Model.Product.InventoryDto?.ProfitableTime);
            const baseMonthlyProfitPerDong = baseAnnualProfitPerDong / 12;
            const baseFiveYearProfitPerDong = baseAnnualProfitPerDong * 5;

            console.log('Base profits:', {
                monthly: baseMonthlyProfitPerDong,
                annual: baseAnnualProfitPerDong,
                fiveYear: baseFiveYearProfitPerDong
            });

            // Function to update investment summary based on selected dong
            function updateInvestmentSummary(dongValue) {
                // محاسبه سودها بر اساس تعداد دانگ انتخاب شده
                const monthlyProfitValue = baseMonthlyProfitPerDong * dongValue;
                const annualProfitValue = baseAnnualProfitPerDong * dongValue;
                const fiveYearProfitValue = baseFiveYearProfitPerDong * dongValue;

                console.log('Updating profits for dong:', dongValue, {
                    monthly: monthlyProfitValue,
                    annual: annualProfitValue,
                    fiveYear: fiveYearProfitValue
                });

                // نمایش مقادیر با فرمت فارسی
                monthlyProfit.textContent = Math.round(monthlyProfitValue).toLocaleString('fa-IR');
                annualProfit.textContent = Math.round(annualProfitValue).toLocaleString('fa-IR');
                totalProfit.textContent = Math.round(fiveYearProfitValue).toLocaleString('fa-IR');
            }

            // Initialize with default value (نیم دانگ)
            updateInvestmentSummary(0.5);

            // Handle select change
            if (dongSelect) {
                dongSelect.addEventListener('change', function() {
                    const selectedValue = parseFloat(this.value);
                    console.log('Select changed to:', selectedValue);
                    updateInvestmentSummary(selectedValue);

                    // Update quick buttons selection
                    quickDongButtons.forEach(btn => {
                        const btnValue = parseFloat(btn.getAttribute('data-dong'));
                        btn.classList.remove('selected', 'bg-blue-600', 'text-white');
                        if (Math.abs(btnValue - selectedValue) < 0.01) {
                            btn.classList.add('selected', 'bg-blue-600', 'text-white');
                        }
                    });
                });
            }

            // Quick dong buttons
            quickDongButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const dongValue = parseFloat(this.getAttribute('data-dong'));
                    console.log('Button clicked, dong value:', dongValue);

                    // Set select value
                    if (dongSelect) {
                        dongSelect.value = dongValue.toString();

                        // ایجاد event change دستی
                        const event = new Event('change');
                        dongSelect.dispatchEvent(event);
                    }

                    // Update selection state
                    quickDongButtons.forEach(btn => {
                        btn.classList.remove('selected', 'bg-blue-600', 'text-white');
                        btn.classList.add('btn-outline');
                    });
                    this.classList.remove('btn-outline');
                    this.classList.add('selected', 'bg-blue-600', 'text-white');

                    // Update summary
                    updateInvestmentSummary(dongValue);
                });
            });

            // مقدار اولیه برای دکمه‌ها (نیم دانگ انتخاب شده)
            quickDongButtons.forEach(btn => {
                const btnValue = parseFloat(btn.getAttribute('data-dong'));
                if (Math.abs(btnValue - 0.5) < 0.01) {
                    btn.classList.remove('btn-outline');
                    btn.classList.add('selected', 'bg-blue-600', 'text-white');
                }
            });

