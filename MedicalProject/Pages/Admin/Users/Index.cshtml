        async function updatePageContent(html) {
            // ایجاد یک المان موقت برای پارس کردن HTML
            const tempDiv = document.createElement('div');
            tempDiv.innerHTML = html;

            // آپدیت کارت‌های آمار
            const newStats = tempDiv.querySelector('.grid.grid-cols-1.md\\:grid-cols-4.gap-4.mb-6');
            if (newStats) {
                const currentStats = document.querySelector('.grid.grid-cols-1.md\\:grid-cols-4.gap-4.mb-6');
                currentStats.innerHTML = newStats.innerHTML;
            }

            // آپدیت جدول کاربران
            const newTableBody = tempDiv.querySelector('tbody');
            if (newTableBody) {
                document.querySelector('tbody').innerHTML = newTableBody.innerHTML;
            }

