@page
@model MedicalProject.Pages.Admin.Product.EditModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ویرایش محصول - پلتفرم دنگ</title>

    <!-- فونت‌ها -->
    <link href="https://fonts.googleapis.com/css2?family=Vazir:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/gh/rastikerdar/vazir-font@v30.1.0/dist/font-face.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>

    <style>
        /* استایل‌های سفارشی */
        html {
            direction: rtl;
            font-family: 'Vazir', 'IRANSans', system-ui, sans-serif;
        }

        body {
            background-color: #f9fafb;
            color: #111827;
            font-family: 'Vazir', 'IRANSans', system-ui, sans-serif;
        }

        * {
            border-color: #e5e7eb;
        }

        input:focus, textarea:focus, select:focus {
            outline: none;
            ring: 2px;
            ring-color: #3b82f6;
            border-color: #3b82f6;
        }

        /* کامپوننت‌های سفارشی */
        .btn {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            padding: 0.5rem 1rem;
            border: 1px solid transparent;
            font-size: 0.875rem;
            font-weight: 500;
            border-radius: 0.5rem;
            box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
            transition: all 0.2s;
            cursor: pointer;
        }

            .btn:focus {
                outline: 2px solid transparent;
                outline-offset: 2px;
                ring: 2px;
                ring-offset: 2px;
            }

            .btn:disabled {
                opacity: 0.5;
                cursor: not-allowed;
            }

        .btn-primary {
            background-color: #2563eb;
            color: white;
        }

            .btn-primary:hover {
                background-color: #1d4ed8;
            }

        .btn-secondary {
            background-color: white;
            color: #374151;
            border: 1px solid #d1d5db;
        }

            .btn-secondary:hover {
                background-color: #f9fafb;
            }

        .btn-success {
            background-color: #059669;
            color: white;
        }

            .btn-success:hover {
                background-color: #047857;
            }

        .btn-danger {
            background-color: #dc2626;
            color: white;
        }

            .btn-danger:hover {
                background-color: #b91c1c;
            }

        .btn-outline {
            border: 1px solid #d1d5db;
            color: #374151;
            background-color: white;
        }

            .btn-outline:hover {
                background-color: #f9fafb;
            }

        .card {
            background-color: white;
            border-radius: 0.75rem;
            box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
            border: 1px solid #f3f4f6;
            overflow: hidden;
        }

        .card-hover {
            transition: all 0.3s;
        }

            .card-hover:hover {
                box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
                transform: translateY(-0.25rem);
            }

        .input {
            display: block;
            width: 100%;
            padding: 0.5rem 0.75rem;
            border: 1px solid #d1d5db;
            border-radius: 0.5rem;
            box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
        }

            .input::placeholder {
                color: #9ca3af;
            }

            .input:focus {
                outline: none;
                ring: 2px;
                ring-color: #3b82f6;
                border-color: #3b82f6;
            }

        .label {
            display: block;
            font-size: 0.875rem;
            font-weight: 500;
            color: #374151;
            margin-bottom: 0.25rem;
        }

        .badge {
            display: inline-flex;
            align-items: center;
            padding: 0.25rem 0.625rem;
            border-radius: 9999px;
            font-size: 0.75rem;
            font-weight: 500;
        }

        .badge-primary {
            background-color: #dbeafe;
            color: #1e40af;
        }

        .badge-success {
            background-color: #d1fae5;
            color: #065f46;
        }

        .badge-warning {
            background-color: #fef3c7;
            color: #92400e;
        }

        .badge-danger {
            background-color: #fee2e2;
            color: #991b1b;
        }

        .badge-secondary {
            background-color: #f3f4f6;
            color: #6b7280;
        }

        .text-gradient {
            background: linear-gradient(to right, #2563eb, #1e40af);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        /* استایل‌های مخصوص پنل ادمین */
        .admin-sidebar {
            width: 260px;
            background: linear-gradient(180deg, #1e40af 0%, #1e3a8a 100%);
            color: white;
            transition: all 0.3s;
        }

        .admin-main {
            margin-right: 260px;
            transition: all 0.3s;
        }

        .admin-content {
            min-height: calc(100vh - 64px);
        }

        .sidebar-collapsed .admin-sidebar {
            width: 70px;
        }

        .sidebar-collapsed .admin-main {
            margin-right: 70px;
        }

        .sidebar-link {
            display: flex;
            align-items: center;
            padding: 0.75rem 1rem;
            color: #d1d5db;
            border-radius: 0.5rem;
            margin: 0.25rem 0.5rem;
            transition: all 0.2s;
        }

            .sidebar-link:hover, .sidebar-link.active {
                background-color: rgba(255, 255, 255, 0.1);
                color: white;
            }

            .sidebar-link i {
                width: 24px;
                text-align: center;
            }

            .sidebar-link span {
                margin-right: 0.75rem;
                white-space: nowrap;
                overflow: hidden;
                text-overflow: ellipsis;
            }

        .sidebar-collapsed .sidebar-link span {
            display: none;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-label {
            display: block;
            margin-bottom: 0.5rem;
            font-weight: 500;
            color: #374151;
        }

        .form-control {
            display: block;
            width: 100%;
            padding: 0.5rem 0.75rem;
            border: 1px solid #d1d5db;
            border-radius: 0.5rem;
            box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
            transition: all 0.2s;
        }

            .form-control:focus {
                outline: none;
                box-shadow: 0 0 0 2px #3b82f6;
                border-color: #3b82f6;
            }

        .form-text {
            display: block;
            margin-top: 0.25rem;
            font-size: 0.875rem;
            color: #6b7280;
        }

        .checkbox-label {
            display: flex;
            align-items: center;
            cursor: pointer;
        }

        .checkbox-input {
            width: 1rem;
            height: 1rem;
            border-radius: 0.25rem;
            border: 1px solid #d1d5db;
            margin-left: 0.5rem;
        }

        .image-preview {
            width: 200px;
            height: 150px;
            border: 2px dashed #d1d5db;
            border-radius: 0.5rem;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
            background-color: #f9fafb;
        }

            .image-preview img {
                max-width: 100%;
                max-height: 100%;
                object-fit: cover;
            }

        /* Responsive */
        @@media (max-width: 1024px) {
            .admin-sidebar {
                width: 70px;
            }

            .admin-main {
                margin-right: 70px;
            }

            .sidebar-link span {
                display: none;
            }
        }

        @@media (max-width: 768px) {
            .admin-sidebar {
                position: fixed;
                right: -260px;
                z-index: 50;
                height: 100vh;
            }

            .admin-main {
                margin-right: 0;
            }

            .sidebar-mobile-open .admin-sidebar {
                right: 0;
            }

            .sidebar-link span {
                display: block;
            }
        }
    </style>
</head>
<body class="admin-layout">
    <!-- Header -->
    <header class="bg-white shadow-sm border-b border-gray-200 sticky top-0 z-40">
        <div class="max-w-full mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <!-- Logo and Toggle -->
                <div class="flex items-center">
                    <button id="sidebarToggle" class="p-2 rounded-lg text-gray-400 hover:text-gray-600 hover:bg-gray-100 transition-colors mr-2">
                        <i class="fas fa-bars"></i>
                    </button>
                    <a href="/">
                        <div class="flex items-center space-x-2 space-x-reverse">
                            <div class="w-8 h-8 bg-blue-600 rounded-lg flex items-center justify-center">
                                <span class="text-white font-bold text-lg">د</span>
                            </div>
                            <span class="text-xl font-bold text-gray-900">پلتفرم دنگ</span>
                        </div>
                    </a>
                </div>

                <!-- User Actions -->
                <div class="flex items-center space-x-4 space-x-reverse">
                    <!-- Notifications -->
                    <a href="/Notifications" class="relative p-2 text-gray-400 hover:text-gray-600 transition-colors">
                        <i class="fas fa-bell"></i>
                        <span class="badge badge-danger absolute -top-1 -left-1 min-w-[1.25rem] h-5 flex items-center justify-center">
                            3
                        </span>
                    </a>

                    <!-- Profile Dropdown -->
                    <div class="relative">
                        <button onclick="toggleProfileDropdown()"
                                class="flex items-center space-x-2 space-x-reverse p-2 rounded-lg hover:bg-gray-100 transition-colors">
                            <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center">
                                <i class="fas fa-user text-blue-600"></i>
                            </div>
                            <span class="hidden sm:block font-medium text-gray-700">
                                ادمین
                            </span>
                        </button>

                        <!-- Dropdown Menu -->
                        <div id="profileDropdown" class="hidden absolute left-0 mt-2 w-48 bg-white rounded-lg shadow-lg border border-gray-200 py-1 z-50">
                            <a href="/Admin/Dashboard"
                               class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 transition-colors">
                                <i class="fas fa-tachometer-alt ml-3"></i>
                                داشبورد
                            </a>
                            <a href="/Profile"
                               class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 transition-colors">
                                <i class="fas fa-user ml-3"></i>
                                پروفایل
                            </a>
                            <form asp-page="/Logout" method="post" class="w-full">
                                <button type="submit"
                                        class="flex items-center w-full px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 transition-colors">
                                    <i class="fas fa-sign-out-alt ml-3"></i>
                                    خروج
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="flex">
        <!-- Sidebar -->
        <div class="admin-sidebar fixed h-full z-30">
            <div class="flex flex-col h-full">
                <!-- Sidebar Header -->
                <div class="p-4 border-b border-blue-700">
                    <div class="flex items-center justify-between">
                        <div class="flex items-center space-x-2 space-x-reverse">
                            <div class="w-8 h-8 bg-white rounded-lg flex items-center justify-center">
                                <span class="text-blue-600 font-bold text-sm">د</span>
                            </div>
                            <span class="text-white font-bold">پنل مدیریت</span>
                        </div>
                    </div>
                </div>

                <!-- Sidebar Menu -->
                <div class="flex-1 overflow-y-auto py-4">
                    <nav class="space-y-1">
                        <a href="/Admin/Dashboard" class="sidebar-link">
                            <i class="fas fa-tachometer-alt"></i>
                            <span>داشبورد</span>
                        </a>

                        <a href="/Admin/Product" class="sidebar-link">
                            <i class="fas fa-box"></i>
                            <span>محصولات</span>
                        </a>

                        <a href="/Admin/Product/Add" class="sidebar-link">
                            <i class="fas fa-plus-circle"></i>
                            <span>افزودن محصول</span>
                        </a>

                        <a href="/Admin/Product/Edit/@Model.productId" class="sidebar-link active">
                            <i class="fas fa-edit"></i>
                            <span>ویرایش محصول</span>
                        </a>

                        <a href="/Admin/Projects" class="sidebar-link">
                            <i class="fas fa-project-diagram"></i>
                            <span>پروژه‌ها</span>
                        </a>

                        <a href="/Admin/Categories" class="sidebar-link">
                            <i class="fas fa-folder"></i>
                            <span>دسته‌بندی‌ها</span>
                        </a>

                        <a href="/Admin/Users" class="sidebar-link">
                            <i class="fas fa-users"></i>
                            <span>کاربران</span>
                        </a>

                        <a href="/Admin/Settings" class="sidebar-link">
                            <i class="fas fa-cog"></i>
                            <span>تنظیمات</span>
                        </a>
                    </nav>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="admin-main flex-1">
            <div class="admin-content">
                <!-- Page Header -->
                <div class="bg-white border-b border-gray-200">
                    <div class="max-w-full mx-auto px-4 sm:px-6 lg:px-8 py-6">
                        <div class="flex justify-between items-center">
                            <div>
                                <h1 class="text-2xl font-bold text-gray-900">ویرایش محصول</h1>
                                <p class="mt-1 text-sm text-gray-600">اطلاعات محصول را ویرایش کنید</p>
                                <div class="flex items-center space-x-2 space-x-reverse mt-2">
                                    <span class="text-xs text-gray-500">شناسه محصول:</span>
                                    <span class="text-xs font-mono bg-gray-100 px-2 py-1 rounded">@Model.productId</span>
                                </div>
                            </div>
                            <div class="flex items-center space-x-3 space-x-reverse">
                                <a href="/Admin/Product" class="btn btn-outline">
                                    <i class="fas fa-arrow-right ml-2"></i>
                                    بازگشت به لیست
                                </a>
                                <button type="button" onclick="previewProduct()" class="btn btn-secondary">
                                    <i class="fas fa-eye ml-2"></i>
                                    پیش‌نمایش
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Main Content Area -->
                <div class="max-w-full mx-auto px-4 sm:px-6 lg:px-8 py-6">
                    <form method="post" enctype="multipart/form-data" class="space-y-6">
                        <input type="hidden" name="productId" value="@Model.productId" />

                        <!-- Basic Information Card -->
                        <div class="card">
                            <div class="p-6 border-b border-gray-200">
                                <h2 class="text-lg font-semibold text-gray-900">
                                    <i class="fas fa-info-circle ml-2 text-blue-500"></i>
                                    اطلاعات پایه محصول
                                </h2>
                            </div>
                            <div class="p-6">
                                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                    <div class="form-group">
                                        <label class="form-label" for="title">
                                            عنوان محصول
                                            <span class="text-red-500">*</span>
                                        </label>
                                        <input type="text"
                                               id="title"
                                               name="title"
                                               class="form-control"
                                               placeholder="عنوان محصول را وارد کنید"
                                               required
                                               value="@Model.title">
                                        <div class="form-text">عنوان محصول باید واضح و توصیفی باشد</div>
                                    </div>

                                    <div class="form-group">
                                        <label class="form-label" for="slug">
                                            اسلاگ
                                            <span class="text-red-500">*</span>
                                        </label>
                                        <input type="text"
                                               id="slug"
                                               name="slug"
                                               class="form-control"
                                               placeholder="اسلاگ محصول را وارد کنید"
                                               required
                                               value="@Model.slug">
                                        <div class="form-text">اسلاگ باید یکتا و فقط شامل حروف، اعداد و خط تیره باشد</div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="form-label" for="description">
                                        توضیحات محصول
                                        <span class="text-red-500">*</span>
                                    </label>
                                    <textarea id="description"
                                              name="description"
                                              class="form-control"
                                              rows="6"
                                              placeholder="توضیحات کامل محصول را وارد کنید"
                                              required>@Model.description</textarea>
                                    <div class="form-text">توضیحات کامل و جامع درباره محصول بنویسید</div>
                                </div>

                                <!-- Image Upload Section -->
                                <div class="form-group">
                                    <label class="form-label" for="imageproduct">تصویر محصول</label>
                                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                        <div>
                                            <div class="border-2 border-dashed border-gray-300 rounded-lg p-6 text-center cursor-pointer hover:border-blue-400 transition-colors"
                                                 onclick="document.getElementById('imageproduct').click()"
                                                 id="imageUploadArea">
                                                <i class="fas fa-cloud-upload-alt text-gray-400 text-3xl mb-3"></i>
                                                <p class="text-sm text-gray-600 mb-2">برای تغییر تصویر کلیک کنید یا فایل جدید را اینجا رها کنید</p>
                                                <p class="text-xs text-gray-500">فرمت‌های مجاز: JPG, PNG, GIF - حداکثر سایز: 5MB</p>
                                            </div>
                                            <input type="file"
                                                   class="hidden"
                                                   id="imageproduct"
                                                   name="imageproduct"
                                                   accept="image/*"
                                                   onchange="handleImageUpload(this)">
                                        </div>
                                        <div>
                                            <label class="form-label">پیش‌نمایش تصویر فعلی</label>
                                            <div class="image-preview" id="imagePreview">
                                                <i class="fas fa-image text-gray-300 text-4xl"></i>
                                            </div>
                                            <div class="form-text">تصویر فعلی محصول</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- SEO Settings Card -->
                        <div class="card">
                            <div class="p-6 border-b border-gray-200">
                                <h2 class="text-lg font-semibold text-gray-900">
                                    <i class="fas fa-search ml-2 text-green-500"></i>
                                    تنظیمات سئو
                                </h2>
                            </div>
                            <div class="p-6">
                                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                    <div class="form-group">
                                        <label class="form-label" for="MetaTitle">عنوان متا</label>
                                        <input type="text"
                                               id="MetaTitle"
                                               name="MetaTitle"
                                               class="form-control"
                                               placeholder="عنوان متا برای موتورهای جستجو"
                                               value="@Model.MetaTitle">
                                        <div class="form-text">عنوانی که در نتایج جستجو نمایش داده می‌شود</div>
                                    </div>

                                    <div class="form-group">
                                        <label class="form-label" for="MetaKeyWords">کلمات کلیدی متا</label>
                                        <input type="text"
                                               id="MetaKeyWords"
                                               name="MetaKeyWords"
                                               class="form-control"
                                               placeholder="کلمات کلیدی جدا شده با کاما"
                                               value="@Model.MetaKeyWords">
                                        <div class="form-text">کلمات کلیدی مرتبط با محصول را وارد کنید</div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="form-label" for="MetaDescription">توضیحات متا</label>
                                    <textarea id="MetaDescription"
                                              name="MetaDescription"
                                              class="form-control"
                                              rows="3"
                                              placeholder="توضیحات متا برای موتورهای جستجو">@Model.MetaDescription</textarea>
                                    <div class="form-text">توضیح مختصر و جذاب برای نمایش در نتایج جستجو</div>
                                </div>

                                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                    <div class="form-group">
                                        <label class="form-label" for="Canonical">Canonical URL</label>
                                        <input type="text"
                                               id="Canonical"
                                               name="Canonical"
                                               class="form-control"
                                               placeholder="آدرس کانونیکال"
                                               value="@Model.Canonical">
                                        <div class="form-text">در صورت نیاز به مشخص کردن آدرس کانونیکال</div>
                                    </div>

                                    <div class="form-group">
                                        <label class="form-label" for="Schema">اسکیما</label>
                                        <textarea id="Schema"
                                                  name="Schema"
                                                  class="form-control"
                                                  rows="2"
                                                  placeholder="کد اسکیما">@Model.Schema</textarea>
                                        <div class="form-text">کد اسکیما برای ساختاردهی بهتر اطلاعات</div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="checkbox-label">
                                        <input type="checkbox"
                                               id="IndexPage"
                                               name="IndexPage"
                                               class="checkbox-input"
                                               @(Model.IndexPage ? "checked" : "")>
                                        <span class="text-sm text-gray-700">اجازه ایندکس شدن در موتورهای جستجو</span>
                                    </label>
                                    <div class="form-text">در صورت غیرفعال کردن، این صفحه در نتایج جستجو نمایش داده نمی‌شود</div>
                                </div>
                            </div>
                        </div>

                        <!-- Additional Settings Card -->
                        <div class="card">
                            <div class="p-6 border-b border-gray-200">
                                <h2 class="text-lg font-semibold text-gray-900">
                                    <i class="fas fa-cog ml-2 text-purple-500"></i>
                                    تنظیمات اضافی
                                </h2>
                            </div>
                            <div class="p-6">
                                <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                                    <div class="form-group">
                                        <label class="form-label" for="category">دسته‌بندی</label>
                                        <select id="category" name="category" class="form-control">
                                            <option value="">انتخاب دسته‌بندی</option>
                                            <option value="medical" selected>تجهیزات پزشکی</option>
                                            <option value="industrial">تجهیزات صنعتی</option>
                                            <option value="laboratory">تجهیزات آزمایشگاهی</option>
                                        </select>
                                    </div>

                                    <div class="form-group">
                                        <label class="form-label" for="status">وضعیت</label>
                                        <select id="status" name="status" class="form-control">
                                            <option value="active" selected>فعال</option>
                                            <option value="inactive">غیرفعال</option>
                                            <option value="draft">پیش‌نویس</option>
                                        </select>
                                    </div>

                                    <div class="form-group">
                                        <label class="form-label" for="priority">اولویت نمایش</label>
                                        <select id="priority" name="priority" class="form-control">
                                            <option value="1">کم</option>
                                            <option value="2" selected>متوسط</option>
                                            <option value="3">بالا</option>
                                            <option value="4">خیلی بالا</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="form-label">اطلاعات فنی</label>
                                    <div class="space-y-3">
                                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                            <input type="text" class="form-control" placeholder="مدل دستگاه" value="CT-Scan Pro 2024">
                                            <input type="text" class="form-control" placeholder="سازنده" value="Siemens Healthineers">
                                        </div>
                                        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                                            <input type="text" class="form-control" placeholder="وزن (kg)" value="1200">
                                            <input type="text" class="form-control" placeholder="ابعاد (cm)" value="200x150x180">
                                            <input type="text" class="form-control" placeholder="گارانتی" value="24 ماه">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Form Actions -->
                        <div class="flex justify-between items-center">
                            <div>
                                <button type="button" onclick="deleteProduct()" class="btn btn-danger">
                                    <i class="fas fa-trash ml-2"></i>
                                    حذف محصول
                                </button>
                            </div>
                            <div class="flex space-x-3 space-x-reverse">
                                <a href="/Admin/Product" class="btn btn-outline">
                                    <i class="fas fa-times ml-2"></i>
                                    انصراف
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save ml-2"></i>
                                    بروزرسانی محصول
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Success Modal -->
    <div id="successModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50 hidden">
        <div class="relative top-20 mx-auto p-5 border w-full max-w-md shadow-lg rounded-lg bg-white">
            <div class="text-center">
                <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
                    <i class="fas fa-check text-green-600 text-2xl"></i>
                </div>
                <h3 class="text-xl font-semibold text-gray-900 mb-2">محصول با موفقیت بروزرسانی شد</h3>
                <p class="text-gray-600 mb-6">تغییرات با موفقیت ذخیره شدند</p>
                <div class="flex justify-center space-x-3 space-x-reverse">
                    <a href="/Admin/Product" class="btn btn-primary">
                        <i class="fas fa-list ml-2"></i>
                        مشاهده لیست محصولات
                    </a>
                    <button onclick="closeSuccessModal()" class="btn btn-outline">
                        ادامه ویرایش
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Delete Confirmation Modal -->
    <div id="deleteModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50 hidden">
        <div class="relative top-20 mx-auto p-5 border w-full max-w-md shadow-lg rounded-lg bg-white">
            <div class="text-center">
                <div class="w-16 h-16 bg-red-100 rounded-full flex items-center justify-center mx-auto mb-4">
                    <i class="fas fa-exclamation-triangle text-red-600 text-2xl"></i>
                </div>
                <h3 class="text-xl font-semibold text-gray-900 mb-2">حذف محصول</h3>
                <p class="text-gray-600 mb-4">آیا از حذف این محصول اطمینان دارید؟</p>
                <p class="text-sm text-gray-500 mb-6">این عمل قابل بازگشت نیست</p>
                <div class="flex justify-center space-x-3 space-x-reverse">
                    <button onclick="closeDeleteModal()" class="btn btn-outline">
                        <i class="fas fa-times ml-2"></i>
                        انصراف
                    </button>
                    <button onclick="confirmDelete()" class="btn btn-danger">
                        <i class="fas fa-trash ml-2"></i>
                        بله، حذف شود
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script>
        // توابع مدیریت پنل ادمین
        function toggleSidebar() {
            document.body.classList.toggle('sidebar-collapsed');
        }

        function toggleMobileSidebar() {
            document.body.classList.toggle('sidebar-mobile-open');
        }

        function toggleProfileDropdown() {
            const dropdown = document.getElementById('profileDropdown');
            dropdown.classList.toggle('hidden');
        }

        function closeSuccessModal() {
            document.getElementById('successModal').classList.add('hidden');
        }

        function closeDeleteModal() {
            document.getElementById('deleteModal').classList.add('hidden');
        }

        function deleteProduct() {
            document.getElementById('deleteModal').classList.remove('hidden');
        }

        function confirmDelete() {
            // شبیه‌سازی حذف محصول
            setTimeout(() => {
                window.location.href = '/Admin/Product';
            }, 1000);
        }

        function previewProduct() {
            alert('پیش‌نمایش محصول در حال بارگذاری...');
        }

        // مدیریت منوی سایدبار
        document.getElementById('sidebarToggle').addEventListener('click', function() {
            if (window.innerWidth < 768) {
                toggleMobileSidebar();
            } else {
                toggleSidebar();
            }
        });

        // بستن منوها هنگام کلیک خارج
        document.addEventListener('click', function(event) {
            const profileDropdown = document.getElementById('profileDropdown');
            const profileButton = event.target.closest('button[onclick="toggleProfileDropdown()"]');

            if (profileDropdown && !profileDropdown.contains(event.target) && !profileButton) {
                profileDropdown.classList.add('hidden');
            }

            // بستن سایدبار موبایل هنگام کلیک خارج
            if (window.innerWidth < 768 &&
                !event.target.closest('.admin-sidebar') &&
                !event.target.closest('#sidebarToggle')) {
                document.body.classList.remove('sidebar-mobile-open');
            }
        });

        // مدیریت فرم اسلاگ
        document.getElementById('title').addEventListener('input', function() {
            const title = this.value;
            const slug = title
                .replace(/[^a-zA-Z0-9\u0600-\u06FF\s]/g, '')
                .replace(/\s+/g, '-')
                .toLowerCase();
            document.getElementById('slug').value = slug;
        });

        // مدیریت آپلود تصویر
        function handleImageUpload(input) {
            if (input.files && input.files[0]) {
                const reader = new FileReader();

                reader.onload = function(e) {
                    const preview = document.getElementById('imagePreview');
                    preview.innerHTML = `<img src="${e.target.result}" alt="پیش‌نمایش تصویر">`;

                    const uploadArea = document.getElementById('imageUploadArea');
                    uploadArea.innerHTML = `
                        <i class="fas fa-check text-green-500 text-3xl mb-3"></i>
                        <p class="text-sm text-green-600 mb-2">تصویر جدید انتخاب شد</p>
                        <p class="text-xs text-gray-500">${input.files[0].name}</p>
                    `;
                };

                reader.readAsDataURL(input.files[0]);
            }
        }

        // Drag and Drop برای آپلود تصویر
        const uploadArea = document.getElementById('imageUploadArea');

        uploadArea.addEventListener('dragover', function(e) {
            e.preventDefault();
            this.classList.add('border-blue-400', 'bg-blue-50');
        });

        uploadArea.addEventListener('dragleave', function(e) {
            e.preventDefault();
            this.classList.remove('border-blue-400', 'bg-blue-50');
        });

        uploadArea.addEventListener('drop', function(e) {
            e.preventDefault();
            this.classList.remove('border-blue-400', 'bg-blue-50');

            const files = e.dataTransfer.files;
            if (files.length > 0) {
                document.getElementById('imageproduct').files = files;
                handleImageUpload(document.getElementById('imageproduct'));
            }
        });

        // مدیریت ارسال فرم
        document.querySelector('form').addEventListener('submit', function(e) {
            e.preventDefault();

            // شبیه‌سازی ارسال موفق فرم
            setTimeout(() => {
                document.getElementById('successModal').classList.remove('hidden');
            }, 1000);
        });

        // بارگذاری اولیه تصویر نمونه
        window.addEventListener('load', function() {
            // شبیه‌سازی تصویر فعلی محصول
            const sampleImage = 'data:image/svg+xml;base64,';
            document.getElementById('imagePreview').innerHTML = `<img src="${sampleImage}" alt="تصویر فعلی محصول">`;
        });
    </script>
</body>
</html>