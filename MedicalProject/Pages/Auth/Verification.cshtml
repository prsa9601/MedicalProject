@page
@model MedicalProject.Pages.Auth.VerificationModel
@{
    ViewData["Title"] = "احراز هویت";
}

<div class="min-h-screen bg-gradient-to-br from-blue-50 via-white to-green-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-4xl mx-auto">
        <!-- Header -->
        <div class="text-center mb-8">
            <div class="flex justify-center mb-4">
                <div class="w-16 h-16 bg-blue-600 rounded-xl flex items-center justify-center">
                    <span class="text-white font-bold text-2xl">د</span>
                </div>
            </div>
            <h1 class="text-3xl font-bold text-gray-900 mb-2">
                احراز هویت
            </h1>
            <p class="text-gray-600">
                برای استفاده از خدمات پلتفرم، لطفاً هویت خود را تأیید کنید
            </p>
        </div>

        <!-- Progress Steps -->
        <div class="card mb-8">
            <div class="p-6">
                <div class="flex items-center justify-between">
                    <div class="flex items-center space-x-4 space-x-reverse">
                        <span id="step1Icon">
                            <div class="w-5 h-5 rounded-full bg-gray-300"></div>
                        </span>
                        <div>
                            <h3 class="font-medium text-gray-900">تأیید شماره تلفن</h3>
                            <p class="text-sm text-gray-500">ارسال کد تأیید</p>
                        </div>
                    </div>
                    
                    <div class="hidden sm:block w-16 h-px bg-gray-300"></div>
                    
                    <div class="flex items-center space-x-4 space-x-reverse">
                        <span id="step2Icon">
                            <div class="w-5 h-5 rounded-full bg-gray-300"></div>
                        </span>
                        <div>
                            <h3 class="font-medium text-gray-900">تأیید کد</h3>
                            <p class="text-sm text-gray-500">وارد کردن کد ارسالی</p>
                        </div>
                    </div>
                    
                    <div class="hidden sm:block w-16 h-px bg-gray-300"></div>
                    
                    <div class="flex items-center space-x-4 space-x-reverse">
                        <span id="step3Icon">
                            <div class="w-5 h-5 rounded-full bg-gray-300"></div>
                        </span>
                        <div>
                            <h3 class="font-medium text-gray-900">آپلود مدارک</h3>
                            <p class="text-sm text-gray-500">ارسال کارت ملی</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Step 1: Phone Verification -->
        <div id="step1" class="card">
            <div class="p-8">
                <div class="text-center mb-6">
                    <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
                        <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                        </svg>
                    </div>
                    <h2 class="text-2xl font-bold text-gray-900 mb-2">
                        تأیید شماره تلفن
                    </h2>
                    <p class="text-gray-600">
                        کد تأیید به شماره تلفن شما ارسال خواهد شد
                    </p>
                </div>

                <div class="max-w-md mx-auto space-y-6">
                    <div class="space-y-2">
                        <label class="label" for="phoneNumber">شماره تلفن</label>
                        <div class="relative">
                            <input
                                type="tel"
                                id="phoneNumber"
                                class="input pr-10"
                                placeholder="09123456789"
                            />
                            <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
                                <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                                </svg>
                            </div>
                        </div>
                    </div>

                    <div id="phoneVerifiedMessage" class="p-4 bg-blue-50 rounded-lg hidden">
                        <div class="flex items-center">
                            <svg class="w-5 h-5 text-blue-600 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                            <p class="text-sm text-blue-800">
                                شماره تلفن شما: <span id="verifiedPhoneNumber"></span>
                            </p>
                        </div>
                    </div>

                    <div id="step1Error" class="bg-red-50 border border-red-200 rounded-lg p-4 hidden">
                        <p class="text-red-800 text-sm" id="step1ErrorMessage"></p>
                    </div>

                    <button
                        id="sendCodeBtn"
                        class="btn btn-primary w-full py-3 text-lg flex items-center justify-center"
                    >
                        <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                        </svg>
                        ارسال کد تأیید
                    </button>
                </div>
            </div>
        </div>

        <!-- Step 2: Code Verification -->
        <div id="step2" class="card hidden">
            <div class="p-8">
                <div class="text-center mb-6">
                    <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
                        <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                        </svg>
                    </div>
                    <h2 class="text-2xl font-bold text-gray-900 mb-2">
                        وارد کردن کد تأیید
                    </h2>
                    <p class="text-gray-600" id="codeSentMessage">
                        کد 6 رقمی ارسال شده به شماره <span id="targetPhoneNumber"></span> را وارد کنید
                    </p>
                </div>

                <div class="max-w-md mx-auto space-y-6">
                    <div class="space-y-2">
                        <label class="label" for="verificationCode">کد تأیید</label>
                        <div class="relative">
                            <input
                                type="password"
                                id="verificationCode"
                                class="input pr-10"
                                placeholder="123456"
                                maxlength="6"
                            />
                            <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
                                <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                                </svg>
                            </div>
                            <button
                                type="button"
                                class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400 hover:text-gray-600 transition-colors"
                                onclick="toggleCodeVisibility()"
                            >
                                <svg id="codeEyeIcon" class="w-5 h-5 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                                </svg>
                                <svg id="codeEyeOffIcon" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"/>
                                </svg>
                            </button>
                        </div>
                    </div>

                    <div id="countdownMessage" class="text-center hidden">
                        <p class="text-sm text-gray-500">
                            ارسال مجدد کد در <span id="countdownTimer">02:00</span> ثانیه
                        </p>
                    </div>

                    <div id="step2Error" class="bg-red-50 border border-red-200 rounded-lg p-4 hidden">
                        <p class="text-red-800 text-sm" id="step2ErrorMessage"></p>
                    </div>

                    <div class="flex space-x-3 space-x-reverse">
                        <button
                            id="backToStep1"
                            class="btn btn-outline w-full flex items-center justify-center"
                        >
                            <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                            </svg>
                            بازگشت
                        </button>
                        
                        <button
                            id="verifyCodeBtn"
                            class="btn btn-primary w-full flex items-center justify-center"
                            disabled
                        >
                            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                            تأیید کد
                        </button>
                    </div>

                    <button
                        id="resendCodeBtn"
                        class="btn btn-outline w-full flex items-center justify-center hidden"
                    >
                        <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
                        </svg>
                        ارسال مجدد کد
                    </button>
                </div>
            </div>
        </div>

        <!-- Step 3: Document Upload -->
        <div id="step3" class="card hidden">
            <div class="p-8">
                <div class="text-center mb-6">
                    <div class="w-16 h-16 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-4">
                        <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/>
                        </svg>
                    </div>
                    <h2 class="text-2xl font-bold text-gray-900 mb-2">
                        آپلود مدارک هویتی
                    </h2>
                    <p class="text-gray-600">
                        تصویر کارت ملی خود را آپلود کنید
                    </p>
                </div>

                <div class="max-w-md mx-auto space-y-6">
                    <div>
                        <label class="label">تصویر کارت ملی</label>
                        <div class="mt-1 flex justify-center px-6 pt-5 pb-6 border-2 border-gray-300 border-dashed rounded-lg hover:border-blue-400 transition-colors">
                            <div class="space-y-1 text-center">
                                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/>
                                </svg>
                                <div class="flex text-sm text-gray-600">
                                    <label
                                        for="nationalCardImage"
                                        class="relative cursor-pointer bg-white rounded-md font-medium text-blue-600 hover:text-blue-500 focus-within:outline-none focus-within:ring-2 focus-within:ring-offset-2 focus-within:ring-blue-500"
                                    >
                                        <span>انتخاب فایل</span>
                                        <input
                                            id="nationalCardImage"
                                            type="file"
                                            accept="image/*"
                                            class="sr-only"
                                        />
                                    </label>
                                    <p class="mr-1">یا کشیدن و رها کردن</p>
                                </div>
                                <p class="text-xs text-gray-500">
                                    PNG, JPG, JPEG تا 10MB
                                </p>
                            </div>
                        </div>
                        
                        <div id="fileSelected" class="mt-4 p-4 bg-green-50 rounded-lg hidden">
                            <div class="flex items-center">
                                <svg class="w-5 h-5 text-green-600 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                </svg>
                                <p class="text-sm text-green-800">
                                    فایل انتخاب شد: <span id="fileName"></span>
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="p-4 bg-yellow-50 rounded-lg">
                        <div class="flex">
                            <svg class="w-5 h-5 text-yellow-600 ml-2 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z"/>
                            </svg>
                            <div class="text-sm text-yellow-800">
                                <p class="font-medium">نکات مهم:</p>
                                <ul class="mt-1 list-disc list-inside space-y-1">
                                    <li>تصویر باید واضح و خوانا باشد</li>
                                    <li>تمام اطلاعات کارت ملی قابل مشاهده باشد</li>
                                    <li>فرمت فایل: JPG, PNG, JPEG</li>
                                    <li>حجم فایل: حداکثر 10 مگابایت</li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <div id="step3Error" class="bg-red-50 border border-red-200 rounded-lg p-4 hidden">
                        <p class="text-red-800 text-sm" id="step3ErrorMessage"></p>
                    </div>

                    <div class="flex space-x-3 space-x-reverse">
                        <button
                            id="backToStep2"
                            class="btn btn-outline w-full flex items-center justify-center"
                        >
                            <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                            </svg>
                            بازگشت
                        </button>
                        
                        <button
                            id="uploadDocumentsBtn"
                            class="btn btn-primary w-full flex items-center justify-center"
                            disabled
                        >
                            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/>
                            </svg>
                            ارسال مدارک
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Status Information -->
        <div class="card mt-8">
            <div class="p-6">
                <h3 class="text-lg font-semibold text-gray-900 mb-4">
                    وضعیت احراز هویت
                </h3>
                
                <div class="space-y-4">
                    <div class="flex items-center justify-between">
                        <span class="text-gray-600">شماره تلفن</span>
                        <span id="phoneStatus" class="badge badge-warning">
                            تأیید نشده
                        </span>
                    </div>
                    
                    <div class="flex items-center justify-between">
                        <span class="text-gray-600">مدارک هویتی</span>
                        <span id="kycStatus" class="badge badge-warning">
                            در انتظار تأیید
                        </span>
                    </div>
                    
                    <div class="flex items-center justify-between">
                        <span class="text-gray-600">وضعیت کلی</span>
                        <span id="overallStatus" class="badge badge-warning">
                            در انتظار تأیید
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Toast Container -->
<div id="toast" class="fixed top-4 right-4 bg-gray-800 text-white px-6 py-3 rounded-lg shadow-lg transform translate-x-full transition-transform duration-300 z-50">
    <div class="flex items-center space-x-2 space-x-reverse">
        <span id="toastIcon">ℹ️</span>
        <span id="toastMessage"></span>
    </div>
</div>

@section Scripts {
    <script>
        // وضعیت فعلی
        let currentStep = 1;
        let countdown = 0;
        let countdownInterval;
        let phoneNumber = '';
        let verificationCode = '';

        // المنت‌های مهم
        const step1 = document.getElementById('step1');
        const step2 = document.getElementById('step2');
        const step3 = document.getElementById('step3');
        const phoneNumberInput = document.getElementById('phoneNumber');
        const verificationCodeInput = document.getElementById('verificationCode');
        const nationalCardImageInput = document.getElementById('nationalCardImage');

        // آپدیت وضعیت مراحل
        function updateStepIcons() {
            const step1Icon = document.getElementById('step1Icon');
            const step2Icon = document.getElementById('step2Icon');
            const step3Icon = document.getElementById('step3Icon');

            // پاک کردن همه آیکون‌ها
            step1Icon.innerHTML = '<div class="w-5 h-5 rounded-full bg-gray-300"></div>';
            step2Icon.innerHTML = '<div class="w-5 h-5 rounded-full bg-gray-300"></div>';
            step3Icon.innerHTML = '<div class="w-5 h-5 rounded-full bg-gray-300"></div>';

            // آپدیت آیکون‌ها بر اساس مرحله فعلی
            if (currentStep >= 1) {
                step1Icon.innerHTML = currentStep > 1 ? 
                    '<svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>' :
                    '<svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>';
            }

            if (currentStep >= 2) {
                step2Icon.innerHTML = currentStep > 2 ? 
                    '<svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>' :
                    '<svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>';
            }

            if (currentStep >= 3) {
                step3Icon.innerHTML = currentStep > 3 ? 
                    '<svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>' :
                    '<svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>';
            }
        }

        // نمایش مرحله
        function showStep(step) {
            currentStep = step;
            
            // مخفی کردن همه مراحل
            step1.classList.add('hidden');
            step2.classList.add('hidden');
            step3.classList.add('hidden');

            // نمایش مرحله فعلی
            if (step === 1) step1.classList.remove('hidden');
            if (step === 2) step2.classList.remove('hidden');
            if (step === 3) step3.classList.remove('hidden');

            updateStepIcons();
        }

        // نمایش/مخفی کردن کد تأیید
        function toggleCodeVisibility() {
            const eyeIcon = document.getElementById('codeEyeIcon');
            const eyeOffIcon = document.getElementById('codeEyeOffIcon');
            
            if (verificationCodeInput.type === 'password') {
                verificationCodeInput.type = 'text';
                eyeIcon.classList.remove('hidden');
                eyeOffIcon.classList.add('hidden');
            } else {
                verificationCodeInput.type = 'password';
                eyeIcon.classList.add('hidden');
                eyeOffIcon.classList.remove('hidden');
            }
        }

        // مدیریت انتخاب فایل
        function handleFileSelect(input) {
            const fileSelected = document.getElementById('fileSelected');
            const fileName = document.getElementById('fileName');
            const uploadButton = document.getElementById('uploadDocumentsBtn');
            
            if (input.files && input.files[0]) {
                const file = input.files[0];
                fileName.textContent = file.name;
                fileSelected.classList.remove('hidden');
                uploadButton.disabled = false;
            } else {
                fileSelected.classList.add('hidden');
                uploadButton.disabled = true;
            }
        }

        // نمایش toast
        function showToast(message, type = 'info') {
            const toast = document.getElementById('toast');
            const toastMessage = document.getElementById('toastMessage');
            const toastIcon = document.getElementById('toastIcon');
            
            // تنظیم آیکون بر اساس نوع
            if (type === 'success') {
                toastIcon.textContent = '✅';
            } else if (type === 'error') {
                toastIcon.textContent = '❌';
            } else {
                toastIcon.textContent = 'ℹ️';
            }
            
            toastMessage.textContent = message;
            toast.classList.remove('translate-x-full');
            
            setTimeout(() => {
                toast.classList.add('translate-x-full');
            }, 3000);
        }

        // نمایش خطا
        function showError(step, message) {
            const errorDiv = document.getElementById(`step${step}Error`);
            const errorMessage = document.getElementById(`step${step}ErrorMessage`);
            
            errorMessage.textContent = message;
            errorDiv.classList.remove('hidden');
        }

        // مخفی کردن خطا
        function hideError(step) {
            const errorDiv = document.getElementById(`step${step}Error`);
            errorDiv.classList.add('hidden');
        }

        // شروع تایمر
        function startCountdown() {
            countdown = 120; // 2 دقیقه
            const countdownMessage = document.getElementById('countdownMessage');
            const countdownTimer = document.getElementById('countdownTimer');
            const resendCodeBtn = document.getElementById('resendCodeBtn');
            
            countdownMessage.classList.remove('hidden');
            resendCodeBtn.classList.add('hidden');
            
            countdownInterval = setInterval(() => {
                const minutes = Math.floor(countdown / 60);
                const seconds = countdown % 60;
                countdownTimer.textContent = `${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
                
                if (countdown <= 0) {
                    clearInterval(countdownInterval);
                    countdownMessage.classList.add('hidden');
                    resendCodeBtn.classList.remove('hidden');
                }
                
                countdown--;
            }, 1000);
        }

        // فرمت کردن شماره تلفن
        function formatPhoneNumber(phone) {
            if (!phone || phone.length !== 11 || !phone.startsWith('09')) return phone;
            return `${phone[0]}${phone[1]}${phone[2]}${phone[3]} ${phone[4]}${phone[5]}${phone[6]} ${phone[7]}${phone[8]}${phone[9]}${phone[10]}`;
        }

        // آپدیت وضعیت احراز هویت
        function updateVerificationStatus() {
            const phoneStatus = document.getElementById('phoneStatus');
            const kycStatus = document.getElementById('kycStatus');
            const overallStatus = document.getElementById('overallStatus');

            // آپدیت وضعیت تلفن
            if (currentStep >= 2) {
                phoneStatus.textContent = 'تأیید شده';
                phoneStatus.className = 'badge badge-success';
            }

            // آپدیت وضعیت مدارک
            if (currentStep >= 4) {
                kycStatus.textContent = 'تأیید شده';
                kycStatus.className = 'badge badge-success';
                overallStatus.textContent = 'تأیید شده';
                overallStatus.className = 'badge badge-success';
            }
        }

        // رویدادهای صفحه
        document.addEventListener('DOMContentLoaded', function() {
            // محدود کردن ورود کد به اعداد
            verificationCodeInput?.addEventListener('input', function(e) {
                this.value = this.value.replace(/\D/g, '').slice(0, 6);
                document.getElementById('verifyCodeBtn').disabled = this.value.length !== 6;
            });

            // محدود کردن ورود شماره تلفن به اعداد
            phoneNumberInput?.addEventListener('input', function(e) {
                this.value = this.value.replace(/\D/g, '').slice(0, 11);
            });

            // مدیریت انتخاب فایل
            nationalCardImageInput?.addEventListener('change', function(e) {
                handleFileSelect(this);
            });

            // ارسال کد تأیید
            document.getElementById('sendCodeBtn').addEventListener('click', function() {
                const phone = phoneNumberInput.value.trim();
                
                if (!phone || phone.length !== 11) {
                    showError(1, 'لطفاً شماره تلفن معتبر وارد کنید');
                    return;
                }

                hideError(1);
                phoneNumber = phone;
                
                // شبیه‌سازی ارسال کد
                this.innerHTML = `
                    <svg class="animate-spin -ml-1 mr-3 h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                    </svg>
                    در حال ارسال...
                `;
                this.disabled = true;

                setTimeout(() => {
                    this.innerHTML = `
                        <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                        </svg>
                        ارسال کد تأیید
                    `;
                    this.disabled = false;

                    showToast('کد تأیید با موفقیت ارسال شد', 'success');
                    document.getElementById('targetPhoneNumber').textContent = formatPhoneNumber(phone);
                    showStep(2);
                    startCountdown();
                    updateVerificationStatus();
                }, 2000);
            });

            // تأیید کد
            document.getElementById('verifyCodeBtn').addEventListener('click', function() {
                const code = verificationCodeInput.value.trim();
                
                if (!code || code.length !== 6) {
                    showError(2, 'لطفاً کد تأیید 6 رقمی را وارد کنید');
                    return;
                }

                hideError(2);
                verificationCode = code;
                
                // شبیه‌سازی تأیید کد
                this.innerHTML = `
                    <svg class="animate-spin -ml-1 mr-3 h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                    </svg>
                    در حال تأیید...
                `;
                this.disabled = true;

                setTimeout(() => {
                    showToast('شماره تلفن با موفقیت تأیید شد', 'success');
                    document.getElementById('phoneVerifiedMessage').classList.remove('hidden');
                    document.getElementById('verifiedPhoneNumber').textContent = formatPhoneNumber(phoneNumber);
                    showStep(3);
                    updateVerificationStatus();
                    clearInterval(countdownInterval);
                }, 2000);
            });

            // ارسال مجدد کد
            document.getElementById('resendCodeBtn').addEventListener('click', function() {
                startCountdown();
                showToast('کد تأیید مجدداً ارسال شد', 'success');
            });

            // آپلود مدارک
            document.getElementById('uploadDocumentsBtn').addEventListener('click', function() {
                const file = nationalCardImageInput.files[0];
                
                if (!file) {
                    showError(3, 'لطفاً تصویر کارت ملی را انتخاب کنید');
                    return;
                }

                hideError(3);
                
                // شبیه‌سازی آپلود
                this.innerHTML = `
                    <svg class="animate-spin -ml-1 mr-3 h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                    </svg>
                    در حال آپلود...
                `;
                this.disabled = true;

                setTimeout(() => {
                    showToast('مدارک هویتی با موفقیت ارسال شد. در انتظار تأیید ادمین...', 'success');
                    currentStep = 4;
                    updateStepIcons();
                    updateVerificationStatus();
                    
                    // هدایت به داشبورد پس از 3 ثانیه
                    setTimeout(() => {
                        window.location.href = '/Dashboard';
                    }, 3000);
                }, 3000);
            });

            // دکمه‌های بازگشت
            document.getElementById('backToStep1').addEventListener('click', () => showStep(1));
            document.getElementById('backToStep2').addEventListener('click', () => showStep(2));
        });
    </script>
}