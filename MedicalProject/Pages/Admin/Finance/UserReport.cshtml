            function generateTaxReport() {
                alert('گزارش مالیاتی کاربر در حال تولید است...');
            }

            function showPaymentHistory() {
                alert('نمایش کامل تاریخچه پرداخت‌های کاربر');
            }

            function showInvestmentHistory() {
                alert('نمایش تاریخچه کامل سرمایه‌گذاری‌های کاربر');
