@page "{handler?}"
@model MedicalProject.Pages.Auth.VerificationOtpCodeModel
@{
    ViewData["Title"] = "تأیید شماره تلفن";
}
@section Styles {
    <meta name="robots" content="noindex, nofollow">
    <style>
        .code-input {
            width: 50px;
            height: 50px;
            text-align: center;
            font-size: 18px;
            font-weight: 600;
            border: 2px solid #e5e7eb;
            border-radius: 8px;
            background-color: white;
            transition: all 0.2s;
            direction: ltr;
        }

            .code-input:focus {
                outline: none;
                border-color: #3b82f6;
                box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
                transform: scale(1.05);
            }

            .code-input:disabled {
                background-color: #f9fafb;
                border-color: #d1d5db;
                color: #9ca3af;
                cursor: not-allowed;
            }

            .code-input.filled {
                border-color: #10b981;
                background-color: #f0fdf4;
            }

            /* حذف فلش‌های بالا و پایین در input number */
            .code-input::-webkit-outer-spin-button,
            .code-input::-webkit-inner-spin-button {
                -webkit-appearance: none;
                margin: 0;
            }

            .code-input[type="number"] {
                -moz-appearance: textfield;
            }

        .custom-notification {
            position: fixed;
            top: 1rem;
            right: 1rem;
            z-index: 50;
            padding: 1rem 1.5rem;
            border-radius: 0.5rem;
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
            transform: translateY(-100%);
            opacity: 0;
            transition: opacity 0.3s, transform 0.3s;
            max-width: 400px;
            font-family: Vazirmatn, sans-serif;
        }

            .custom-notification.show {
                transform: translateY(0);
                opacity: 1;
            }

            .custom-notification.success {
                background-color: #d1fae5;
                color: #065f46;
                border: 1px solid #a7f3d0;
            }

            .custom-notification.error {
                background-color: #fee2e2;
                color: #991b1b;
                border: 1px solid #fecaca;
            }

            .custom-notification.info {
                background-color: #dbeafe;
                color: #1e40af;
                border: 1px solid #bfdbfe;
            }

        .loading-spinner {
            animation: spin 1s linear infinite;
        }

        @@keyframes spin {
            from {
                transform: rotate(0deg);
            }

            to {
                transform: rotate(360deg);
            }
        }

        .fade-in {
            animation: fadeIn 0.3s ease-in;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
}

@if (TempData.ContainsKey("Error"))
{
    <div id="errorNotification" class="custom-notification error show">
        <div class="flex items-center">
            <svg class="w-5 h-5 ml-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
            </svg>
            <span>@TempData["Error"]</span>
        </div>
    </div>
}

@if (TempData.ContainsKey("Success"))
{
    <div id="successNotification" class="custom-notification success show">
        <div class="flex items-center">
            <svg class="w-5 h-5 ml-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <span>@TempData["Success"]</span>
        </div>
    </div>
}

<div class="min-h-screen bg-gradient-to-br from-blue-50 to-gray-50 flex flex-col justify-center py-12 sm:px-6 lg:px-8 fade-in">
    <div class="sm:mx-auto sm:w-full sm:max-w-md">
        <div class="flex justify-center">
            <div class="w-20 h-20 bg-gradient-to-r from-blue-500 to-blue-600 rounded-full flex items-center justify-center shadow-lg">
                <svg class="h-10 w-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                </svg>
            </div>
        </div>
        <h2 class="mt-8 text-center text-3xl font-extrabold text-gray-900">
            تأیید شماره تلفن
        </h2>
        <p class="mt-4 text-center text-sm text-gray-600 max-w-md mx-auto">
            کد تأیید ۶ رقمی ارسال شده به شماره
            <span class="font-bold text-blue-600 bg-blue-50 px-2 py-1 rounded-md mr-1">@Model.PhoneNumber.Replace(" ", "")</span>
            را وارد کنید
        </p>
    </div>

    <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-md">
        <div class="bg-white py-10 px-8 shadow-xl rounded-2xl sm:px-10 border border-gray-100">
            <form method="post" class="space-y-8" id="otpForm" autocomplete="off">
                <input type="hidden" asp-for="PhoneNumber" id="phoneNumberInput" />
                <input type="hidden" asp-for="Path" id="pathInput" />
                @* @if (@Model.Action.)
                {
                    <input type="hidden" asp-for="Action" id="actionInput" />
                } *@

                <div class="space-y-4">
                    <label class="block text-sm font-medium text-gray-700 mb-4 text-center">
                        کد تأیید
                    </label>
                    <div class="flex justify-center gap-3" dir="ltr">
                        @for (int i = 0; i < 6; i++)
                        {
                            <input type="text"
                                   inputmode="numeric"
                                   pattern="[0-9]*"
                                   maxlength="1"
                                   class="code-input text-center"
                                   data-index="@i"
                                   @(i == 0 ? "" : "disabled")
                                   autocomplete="one-time-code"
                                   required />
                        }
                    </div>
                    <!-- فیلد مخفی برای ذخیره کد کامل -->
                    <input type="hidden" asp-for="Token" id="tokenInput" />
                    <div class="text-center mt-2">
                        <span asp-validation-for="Token" class="text-red-600 text-sm"></span>
                    </div>
                </div>

                <div class="flex items-center justify-between pt-4 border-t border-gray-200">
                    <div class="text-sm">
                        <button type="button" id="resendLink"
                                class="font-medium text-blue-600 hover:text-blue-500 transition-colors disabled:text-gray-400 disabled:cursor-not-allowed disabled:hover:text-gray-400"
                                disabled>
                            ارسال مجدد کد
                        </button>
                    </div>
                    <div class="text-sm">
                        <span id="countdown" class="font-medium text-gray-500">03:00</span>
                    </div>
                </div>

                <div class="space-y-4">
                    <button type="submit"
                            id="verifyButton"
                            class="w-full flex justify-center items-center py-3.5 px-4 border border-transparent rounded-xl shadow-sm text-base font-medium text-white bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 disabled:opacity-50 disabled:cursor-not-allowed transition-all duration-200 transform hover:-translate-y-0.5 active:translate-y-0 disabled:transform-none">
                        <span id="verifyText">تأیید کد</span>
                        <svg id="verifySpinner" class="hidden loading-spinner ml-2 h-5 w-5 text-white" fill="none" viewBox="0 0 24 24">
                            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                        </svg>
                    </button>

                    <div class="text-center">
                        <a asp-page="VerificationPhoneNumber"
                           class="inline-flex items-center text-sm font-medium text-gray-600 hover:text-gray-900 transition-colors">
                            <svg class="ml-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                            </svg>
                            تغییر شماره تلفن
                        </a>
                    </div>
                </div>
            </form>

            <div class="mt-10 pt-8 border-t border-gray-200">
                <div class="text-center">
                    <p class="text-sm text-gray-600">
                        کد را دریافت نکرده‌اید؟
                        <br class="sm:hidden" />
                        <span class="block sm:inline mt-1 sm:mt-0">مطمئن شوید شماره تلفن را صحیح وارد کرده‌اید.</span>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // متغیرهای گلوبال
        const inputs = document.querySelectorAll(".code-input");
        const verifyButton = document.getElementById("verifyButton");
        const verifyText = document.getElementById("verifyText");
        const verifySpinner = document.getElementById("verifySpinner");
        const resendLink = document.getElementById("resendLink");
        const tokenInput = document.getElementById("tokenInput");
        const otpForm = document.getElementById("otpForm");
        const phoneNumberInput = document.getElementById("phoneNumberInput");
        const pathInput = document.getElementById("pathInput");
        const actionInput = document.getElementById("actionInput");

        // تایمر شمارش معکوس
        let timeLeft = 180;
        let countdownInterval;

        // شروع تایمر
        function startCountdown() {
            clearInterval(countdownInterval);
            timeLeft = 180;
            updateCountdownDisplay();

            resendLink.disabled = true;
            resendLink.classList.remove('text-blue-600', 'hover:text-blue-500');
            resendLink.classList.add('text-gray-400');

            countdownInterval = setInterval(() => {
                timeLeft--;
                updateCountdownDisplay();

                if (timeLeft <= 0) {
                    clearInterval(countdownInterval);
                    resendLink.disabled = false;
                    resendLink.classList.remove('text-gray-400');
                    resendLink.classList.add('text-blue-600', 'hover:text-blue-500');
                }
            }, 1000);
        }

        // به‌روزرسانی نمایش تایمر
        function updateCountdownDisplay() {
            const minutes = Math.floor(timeLeft / 60);
            const seconds = timeLeft % 60;
            document.getElementById("countdown").textContent =
                `${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
        }

        // به‌روزرسانی فیلد مخفی Token
        function updateTokenInput() {
            const token = Array.from(inputs).map(input => input.value).join('');
            tokenInput.value = token;
            return token;
        }

        // بررسی پر بودن تمام فیلدها
        function checkAllInputsFilled() {
            const allFilled = Array.from(inputs).every(input => input.value.length === 1);
            verifyButton.disabled = !allFilled;
            return allFilled;
        }

        // نمایش نوتیفیکیشن
        function showNotification(message, type = 'info') {
            // حذف نوتیفیکیشن قبلی
            const existingNotifications = document.querySelectorAll('.custom-notification:not(#errorNotification):not(#successNotification)');
            existingNotifications.forEach(notif => notif.remove());

            const notification = document.createElement('div');
            notification.className = `custom-notification ${type} show`;

            let icon = '';
            switch (type) {
                case 'success':
                    icon = '<svg class="w-5 h-5 ml-2" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" /></svg>';
                    break;
                case 'error':
                    icon = '<svg class="w-5 h-5 ml-2" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" /></svg>';
                    break;
                default:
                    icon = '<svg class="w-5 h-5 ml-2" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" /></svg>';
            }

            notification.innerHTML = `
                <div class="flex items-center">
                    ${icon}
                    <span>${message}</span>
                </div>
            `;

            document.body.appendChild(notification);

            // حذف خودکار پس از 5 ثانیه
            setTimeout(() => {
                notification.classList.remove('show');
                setTimeout(() => notification.remove(), 300);
            }, 5000);
        }

        // ریست کردن فرم OTP
        function resetOtpForm() {
            inputs.forEach((input, index) => {
                input.value = '';
                input.classList.remove('filled');
                if (index > 0) {
                    input.disabled = true;
                }
            });
            inputs[0].focus();
            tokenInput.value = '';
            checkAllInputsFilled();
        }

        // مدیریت ورود کد OTP
        inputs.forEach((input, index) => {
            // رویداد input
            input.addEventListener('input', (e) => {
                const value = e.target.value;

                // فقط اعداد مجاز هستند
                if (!/^\d*$/.test(value)) {
                    e.target.value = value.replace(/\D/g, '');
                    return;
                }

                // محدود کردن به یک رقم
                if (value.length > 1) {
                    e.target.value = value.charAt(0);
                }

                // اضافه کردن کلاس filled
                if (value.length === 1) {
                    e.target.classList.add('filled');
                } else {
                    e.target.classList.remove('filled');
                }

                // رفتن به فیلد بعدی
                if (value.length === 1 && index < inputs.length - 1) {
                    const nextInput = inputs[index + 1];
                    nextInput.disabled = false;
                    nextInput.focus();
                }

                // به‌روزرسانی و بررسی
                updateTokenInput();
                checkAllInputsFilled();
            });

            // رویداد keydown
            input.addEventListener('keydown', (e) => {
                // مدیریت Backspace
                if (e.key === 'Backspace') {
                    e.preventDefault();

                    if (e.target.value === '' && index > 0) {
                        const prevInput = inputs[index - 1];
                        e.target.disabled = true;
                        e.target.classList.remove('filled');
                        prevInput.focus();
                        prevInput.select();
                    } else {
                        e.target.value = '';
                        e.target.classList.remove('filled');
                    }

                    updateTokenInput();
                    checkAllInputsFilled();
                }

                // مدیریت کلیدهای جهت‌دار
                if (e.key === 'ArrowLeft' && index > 0) {
                    e.preventDefault();
                    inputs[index - 1].focus();
                } else if (e.key === 'ArrowRight' && index < inputs.length - 1 && !inputs[index + 1].disabled) {
                    e.preventDefault();
                    inputs[index + 1].focus();
                }

                // جلوگیری از ورود غیر عدد
                if (e.key.length === 1 && !/\d/.test(e.key)) {
                    e.preventDefault();
                }
            });

            // رویداد focus
            input.addEventListener('focus', (e) => {
                e.target.select();
            });

            // رویداد paste
            input.addEventListener('paste', (e) => {
                e.preventDefault();
                const pasteData = e.clipboardData.getData('text').replace(/\D/g, '');

                if (pasteData.length === 6) {
                    for (let i = 0; i < 6; i++) {
                        if (i < inputs.length) {
                            inputs[i].value = pasteData.charAt(i);
                            inputs[i].classList.add('filled');
                            if (i < inputs.length - 1) {
                                inputs[i + 1].disabled = false;
                            }
                        }
                    }
                    updateTokenInput();
                    checkAllInputsFilled();
                    inputs[5].focus();
                    showNotification('کد با موفقیت paste شد!', 'success');
                } else {
                    showNotification('کد باید ۶ رقم باشد!', 'error');
                }
            });
        });

        // رویداد کلیک برای ارسال مجدد
        resendLink.addEventListener('click', async (e) => {
            e.preventDefault();

            if (resendLink.disabled) return;

            // نمایش حالت loading
            const originalText = resendLink.innerHTML;
            resendLink.innerHTML = `
                <span class="inline-flex items-center">
                    <svg class="loading-spinner mr-2 h-4 w-4 text-blue-600" fill="none" viewBox="0 0 24 24">
                        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                    </svg>
                    در حال ارسال...
                </span>
            `;
            resendLink.disabled = true;

            try {
                // ساخت URL برای درخواست
                const params = new URLSearchParams({
                    phoneNumber: phoneNumberInput.value,
                    path: pathInput.value
                });

                if (actionInput && actionInput.value) {
                    params.append('action', actionInput.value);
                }

                // ارسال درخواست به سرور
                const response = await fetch(`?handler=RetrySendOtpCode&${params.toString()}`, {
                    method: 'GET',
                    headers: {
                        'Accept': 'application/json',
                        'X-Requested-With': 'XMLHttpRequest'
                    }
                });

                if (response.ok) {
                    // ریست کردن فرم
                    resetOtpForm();

                    // شروع مجدد تایمر
                    startCountdown();

                    // نمایش پیام موفقیت
                    showNotification('کد جدید با موفقیت ارسال شد!', 'success');
                } else {
                    throw new Error('خطا در ارسال درخواست');
                }
            } catch (error) {
                console.error('خطا در ارسال مجدد کد:', error);
                showNotification('خطا در برقراری ارتباط با سرور', 'error');
            } finally {
                // بازگرداندن متن اصلی
                setTimeout(() => {
                    resendLink.innerHTML = originalText;
                    resendLink.disabled = timeLeft > 0;
                }, 1000);
            }
        });

        // مدیریت ارسال فرم
        otpForm.addEventListener('submit', function(e) {
            if (!checkAllInputsFilled()) {
                e.preventDefault();
                showNotification('لطفاً تمامی ۶ رقم کد تأیید را وارد کنید', 'error');
                inputs[0].focus();
                return false;
            }

            // نمایش حالت loading
            verifyText.textContent = 'در حال تأیید...';
            verifySpinner.classList.remove('hidden');
            verifyButton.disabled = true;

            // فرم به صورت طبیعی ارسال می‌شود
            return true;
        });

        // حذف خودکار نوتیفیکیشن‌های ارور و ساکسس بعد از 5 ثانیه
        setTimeout(() => {
            const errorNotif = document.getElementById('errorNotification');
            const successNotif = document.getElementById('successNotification');

            if (errorNotif) {
                errorNotif.classList.remove('show');
                setTimeout(() => errorNotif.remove(), 300);
            }

            if (successNotif) {
                successNotif.classList.remove('show');
                setTimeout(() => successNotif.remove(), 300);
            }
        }, 5000);

        // شروع تایمر هنگام لود صفحه
        document.addEventListener('DOMContentLoaded', () => {
            startCountdown();
            inputs[0].focus();

            // حذف نوتیفیکیشن‌ها با کلیک
            document.addEventListener('click', (e) => {
                if (e.target.closest('.custom-notification')) {
                    const notification = e.target.closest('.custom-notification');
                    notification.classList.remove('show');
                    setTimeout(() => notification.remove(), 300);
                }
            });
        });

        // جلوگیری از submit فرم با کلید Enter در فیلدهای کد
        inputs.forEach(input => {
            input.addEventListener('keydown', (e) => {
                if (e.key === 'Enter') {
                    e.preventDefault();
                    if (checkAllInputsFilled()) {
                        otpForm.requestSubmit();
                    }
                }
            });
        });
    </script>
}