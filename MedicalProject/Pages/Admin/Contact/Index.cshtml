                    console.error('Error:', error);
                    await Swal.fire({
                        title: 'خطا!',
                        text: 'خطا در بروزرسانی وضعیت تماس',
                        icon: 'error',
                        confirmButtonText: 'باشه',
                        customClass: {
                            container: 'rtl',
                            title: 'text-right',
                            htmlContainer: 'text-right'
