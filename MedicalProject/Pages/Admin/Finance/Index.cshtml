@page
@using MedicalProject.Infrastructure
@using MedicalProject.Infrastructure.EnumUtil
@using MedicalProject.Infrastructure.Extensions
@using MedicalProject.Infrastructure.ProfitUtil
@using MedicalProject.Models.User.Enum
@model MedicalProject.Pages.Admin.Finance.IndexModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>مدیریت مالی و سود - پلتفرم دنگ</title>

    <!-- فونت‌ها -->
    <link href="https://fonts.googleapis.com/css2?family=Vazir:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/gh/rastikerdar/vazir-font@v30.1.0/dist/font-face.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>

    <style>
        /* استایل‌های سفارشی */
        html {
            direction: rtl;
            font-family: 'Vazir', 'IRANSans', system-ui, sans-serif;
        }

        body {
            background-color: #f9fafb;
            color: #111827;
            font-family: 'Vazir', 'IRANSans', system-ui, sans-serif;
            overflow-x: hidden;
        }

        * {
            border-color: #e5e7eb;
        }

        input:focus, textarea:focus, select:focus {
            outline: none;
            ring: 2px;
            ring-color: #3b82f6;
            border-color: #3b82f6;
        }

        /* کامپوننت‌های سفارشی */
        .btn {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            padding: 0.5rem 1rem;
            border: 1px solid transparent;
            font-size: 0.875rem;
            font-weight: 500;
            border-radius: 0.5rem;
            box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
            transition: all 0.2s;
            cursor: pointer;
            white-space: nowrap;
        }

            .btn:focus {
                outline: 2px solid transparent;
                outline-offset: 2px;
                ring: 2px;
                ring-offset: 2px;
            }

            .btn:disabled {
                opacity: 0.5;
                cursor: not-allowed;
            }

        .btn-primary {
            background-color: #2563eb;
            color: white;
        }

            .btn-primary:hover {
                background-color: #1d4ed8;
            }

        .btn-secondary {
            background-color: white;
            color: #374151;
            border: 1px solid #d1d5db;
        }

            .btn-secondary:hover {
                background-color: #f9fafb;
            }

        .btn-success {
            background-color: #059669;
            color: white;
        }

            .btn-success:hover {
                background-color: #047857;
            }

        .btn-danger {
            background-color: #dc2626;
            color: white;
        }

            .btn-danger:hover {
                background-color: #b91c1c;
            }

        .btn-outline {
            border: 1px solid #d1d5db;
            color: #374151;
            background-color: white;
        }

            .btn-outline:hover {
                background-color: #f9fafb;
            }

        .btn-warning {
            background-color: #d97706;
            color: white;
        }

            .btn-warning:hover {
                background-color: #b45309;
            }

        .card {
            background-color: white;
            border-radius: 0.75rem;
            box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
            border: 1px solid #f3f4f6;
            overflow: hidden;
        }

        .card-hover {
            transition: all 0.3s;
        }

            .card-hover:hover {
                box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
                transform: translateY(-0.25rem);
            }

        .input {
            display: block;
            width: 100%;
            padding: 0.5rem 0.75rem;
            border: 1px solid #d1d5db;
            border-radius: 0.5rem;
            box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
        }

            .input::placeholder {
                color: #9ca3af;
            }

            .input:focus {
                outline: none;
                ring: 2px;
                ring-color: #3b82f6;
                border-color: #3b82f6;
            }

        .label {
            display: block;
            font-size: 0.875rem;
            font-weight: 500;
            color: #374151;
            margin-bottom: 0.25rem;
        }

        .badge {
            display: inline-flex;
            align-items: center;
            padding: 0.25rem 0.625rem;
            border-radius: 9999px;
            font-size: 0.75rem;
            font-weight: 500;
        }

        .badge-primary {
            background-color: #dbeafe;
            color: #1e40af;
        }

        .badge-success {
            background-color: #d1fae5;
            color: #065f46;
        }

        .badge-warning {
            background-color: #fef3c7;
            color: #92400e;
        }

        .badge-danger {
            background-color: #fee2e2;
            color: #991b1b;
        }

        .badge-secondary {
            background-color: #f3f4f6;
            color: #6b7280;
        }

        .badge-info {
            background-color: #d1f5f9;
            color: #0e7490;
        }

        .text-gradient {
            background: linear-gradient(to right, #2563eb, #1e40af);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        /* استایل‌های مخصوص پنل ادمین */
        .admin-sidebar {
            width: 260px;
            background: linear-gradient(180deg, #1e40af 0%, #1e3a8a 100%);
            color: white;
            transition: all 0.3s;
            z-index: 40;
        }

        .admin-main {
            margin-right: 260px;
            transition: all 0.3s;
            width: calc(100% - 260px);
        }

        .admin-content {
            min-height: calc(100vh - 64px);
        }

        .sidebar-collapsed .admin-sidebar {
            width: 70px;
        }

        .sidebar-collapsed .admin-main {
            margin-right: 70px;
            width: calc(100% - 70px);
        }

        .sidebar-link {
            display: flex;
            align-items: center;
            padding: 0.75rem 1rem;
            color: #d1d5db;
            border-radius: 0.5rem;
            margin: 0.25rem 0.5rem;
            transition: all 0.2s;
        }

            .sidebar-link:hover, .sidebar-link.active {
                background-color: rgba(255, 255, 255, 0.1);
                color: white;
            }

            .sidebar-link i {
                width: 24px;
                text-align: center;
                flex-shrink: 0;
            }

            .sidebar-link span {
                margin-right: 0.75rem;
                white-space: nowrap;
                overflow: hidden;
                text-overflow: ellipsis;
            }

        .sidebar-collapsed .sidebar-link span {
            display: none;
        }

        .table-responsive {
            overflow-x: auto;
            -webkit-overflow-scrolling: touch;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
            min-width: 600px;
        }

            .table th, .table td {
                padding: 0.75rem 0.5rem;
                text-align: right;
                border-bottom: 1px solid #e5e7eb;
                font-size: 0.875rem;
            }

            .table th {
                background-color: #f9fafb;
                font-weight: 600;
                color: #374151;
                white-space: nowrap;
            }

            .table tbody tr:hover {
                background-color: #f9fafb;
            }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-label {
            display: block;
            margin-bottom: 0.5rem;
            font-weight: 500;
            color: #374151;
        }

        .form-control {
            display: block;
            width: 100%;
            padding: 0.5rem 0.75rem;
            border: 1px solid #d1d5db;
            border-radius: 0.5rem;
            box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
            transition: all 0.2s;
        }

            .form-control:focus {
                outline: none;
                box-shadow: 0 0 0 2px #3b82f6;
                border-color: #3b82f6;
            }

        .form-text {
            display: block;
            margin-top: 0.25rem;
            font-size: 0.875rem;
            color: #6b7280;
        }

        .user-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            object-fit: cover;
            flex-shrink: 0;
        }

        .status-dot {
            width: 8px;
            height: 8px;
            border-radius: 50%;
            display: inline-block;
            margin-left: 0.5rem;
        }

        .status-active {
            background-color: #10b981;
        }

        .status-inactive {
            background-color: #ef4444;
        }

        .status-pending {
            background-color: #f59e0b;
        }

        /* استایل‌های سفارشی برای صفحه مالی */
        .chart-container {
            position: relative;
            height: 300px;
            width: 100%;
        }

        .stat-card {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border-radius: 1rem;
            padding: 1.5rem;
            position: relative;
            overflow: hidden;
            min-height: 120px;
        }

            .stat-card::before {
                content: '';
                position: absolute;
                top: -50%;
                right: -50%;
                width: 200%;
                height: 200%;
                background: rgba(255, 255, 255, 0.1);
                transform: rotate(45deg);
            }

        .profit-positive {
            color: #059669;
            font-weight: 600;
        }

        .profit-negative {
            color: #dc2626;
            font-weight: 600;
        }

        /* استایل‌های مخصوص موبایل */
        .mobile-table-row {
            display: none;
        }

        .mobile-actions {
            display: none;
        }

        /* Responsive */
        @@media (max-width: 1024px) {
            .admin-sidebar {
                width: 70px;
            }

            .admin-main {
                margin-right: 70px;
                width: calc(100% - 70px);
            }

            .sidebar-link span {
                display: none;
            }

            .table th, .table td {
                padding: 0.5rem;
                font-size: 0.8125rem;
            }
        }

        @@media (max-width: 768px) {
            .admin-sidebar {
                position: fixed;
                right: -260px;
                z-index: 50;
                height: 100vh;
                width: 260px;
            }

            .admin-main {
                margin-right: 0;
                width: 100%;
            }

            .sidebar-mobile-open .admin-sidebar {
                right: 0;
            }

            .sidebar-link span {
                display: block;
            }
            /* مخفی کردن جدول اصلی در موبایل */
            .table {
                display: none;
            }
            /* نمایش نسخه موبایل */
            .mobile-table-row {
                display: block;
                border: 1px solid #e5e7eb;
                border-radius: 0.75rem;
                margin-bottom: 1rem;
                background: white;
                padding: 1rem;
            }

            .mobile-user-info {
                display: flex;
                align-items: center;
                margin-bottom: 1rem;
                padding-bottom: 1rem;
                border-bottom: 1px solid #f3f4f6;
            }

            .mobile-user-details {
                flex: 1;
                margin-right: 1rem;
            }

            .mobile-stats {
                display: grid;
                grid-template-columns: repeat(2, 1fr);
                gap: 0.75rem;
                margin-bottom: 1rem;
            }

            .mobile-stat-item {
                background: #f9fafb;
                padding: 0.75rem;
                border-radius: 0.5rem;
            }

            .mobile-stat-label {
                font-size: 0.75rem;
                color: #6b7280;
                margin-bottom: 0.25rem;
            }

            .mobile-stat-value {
                font-weight: 600;
                color: #374151;
                font-size: 0.875rem;
            }

            .mobile-actions {
                display: flex;
                justify-content: space-between;
                gap: 0.5rem;
            }

                .mobile-actions .btn {
                    flex: 1;
                    padding: 0.5rem;
                    font-size: 0.8125rem;
                }
            /* تنظیمات کارت‌های آماری */
            .grid-cols-1 {
                grid-template-columns: 1fr;
            }

            .stat-card {
                padding: 1rem;
            }

                .stat-card p.text-2xl {
                    font-size: 1.25rem;
                }
            /* تنظیمات هدر */
            .page-header-actions {
                flex-direction: column;
                gap: 0.75rem;
            }

                .page-header-actions .btn {
                    width: 100%;
                    justify-content: center;
                }
            /* تنظیمات فیلترها */
            .filter-container {
                flex-direction: column;
                gap: 0.75rem;
            }

                .filter-container .input,
                .filter-container select {
                    width: 100%;
                }
            /* تنظیمات مدال */
            #settlementModal > div {
                margin: 1rem;
                width: calc(100% - 2rem);
            }
        }

        @@media (max-width: 640px) {
            .stat-card {
                min-height: 100px;
                padding: 0.75rem;
            }

                .stat-card p.text-2xl {
                    font-size: 1.125rem;
                }

            .mobile-stats {
                grid-template-columns: 1fr;
            }

            .header-buttons {
                flex-direction: column;
                width: 100%;
                gap: 0.5rem;
            }

                .header-buttons .btn {
                    width: 100%;
                }
            /* متن کوچک‌تر برای موبایل */
            .text-sm-mobile {
                font-size: 0.75rem;
            }

            .text-lg-mobile {
                font-size: 1rem;
            }
        }

        @@media (max-width: 480px) {
            .admin-content {
                padding: 0.5rem;
            }

            .card {
                border-radius: 0.5rem;
            }

            .stat-card {
                border-radius: 0.75rem;
            }

            .mobile-user-info {
                flex-direction: column;
                align-items: flex-start;
            }

            .mobile-user-details {
                margin-right: 0;
                margin-bottom: 0.5rem;
                width: 100%;
            }
        }

        /* بهبود قابلیت لمس در موبایل */
        @@media (hover: none) and (pointer: coarse) {
            .btn {
                min-height: 44px;
            }

            .sidebar-link {
                min-height: 44px;
            }

            .table th, .table td {
                padding: 0.75rem 0.5rem;
            }

            input, select, textarea {
                font-size: 16px; /* جلوگیری از زوم در iOS */
            }
        }

        /* برای دستگاه‌های بسیار کوچک */
        @@media (max-width: 360px) {
            .stat-card p.text-2xl {
                font-size: 1rem;
            }

            .mobile-stat-item {
                padding: 0.5rem;
            }

            .btn-sm {
                padding: 0.25rem 0.5rem;
                font-size: 0.75rem;
            }
        }

        /* کلاس‌های کمکی */
        .text-truncate {
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }

        .flex-wrap-mobile {
            flex-wrap: wrap;
        }

        .w-full-mobile {
            width: 100%;
        }
    </style>
</head>
<body class="admin-layout">
    <!-- Header -->
    <header class="bg-white shadow-sm border-b border-gray-200 sticky top-0 z-40">
        <div class="max-w-full mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <!-- Logo and Toggle -->
                <div class="flex items-center">
                    <button id="sidebarToggle" class="p-2 rounded-lg text-gray-400 hover:text-gray-600 hover:bg-gray-100 transition-colors mr-2">
                        <i class="fas fa-bars"></i>
                    </button>
                    <a href="/">
                        <div class="flex items-center space-x-2 space-x-reverse">
                            <div class="w-8 h-8 bg-blue-600 rounded-lg flex items-center justify-center">
                                <span class="text-white font-bold text-lg">د</span>
                            </div>
                            <span class="text-xl font-bold text-gray-900 hidden sm:inline">پلتفرم دنگ</span>
                            <span class="text-xl font-bold text-gray-900 sm:hidden">دنگ</span>
                        </div>
                    </a>
                </div>

                <!-- User Actions -->
                <div class="flex items-center space-x-4 space-x-reverse">
                    <!-- Notifications -->
                    <a href="/Notifications" class="relative p-2 text-gray-400 hover:text-gray-600 transition-colors">
                        <i class="fas fa-bell"></i>
                        <span class="badge badge-danger absolute -top-1 -left-1 min-w-[1.25rem] h-5 flex items-center justify-center">
                            3
                        </span>
                    </a>

                    <!-- Profile Dropdown -->
                    <div class="relative">
                        <button onclick="toggleProfileDropdown()"
                                class="flex items-center space-x-2 space-x-reverse p-2 rounded-lg hover:bg-gray-100 transition-colors">
                            <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center">
                                <i class="fas fa-user text-blue-600"></i>
                            </div>
                            <span class="hidden sm:block font-medium text-gray-700">
                                ادمین
                            </span>
                        </button>

                        <!-- Dropdown Menu -->
                        <div id="profileDropdown" class="hidden absolute left-0 mt-2 w-48 bg-white rounded-lg shadow-lg border border-gray-200 py-1 z-50">
                            <a href="/Admin/Dashboard"
                               class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 transition-colors">
                                <i class="fas fa-tachometer-alt ml-3"></i>
                                داشبورد
                            </a>
                            <a href="/Profile"
                               class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 transition-colors">
                                <i class="fas fa-user ml-3"></i>
                                پروفایل
                            </a>
                            <form asp-page="/Logout" method="post" class="w-full">
                                <button type="submit"
                                        class="flex items-center w-full px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 transition-colors">
                                    <i class="fas fa-sign-out-alt ml-3"></i>
                                    خروج
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="flex">
        <!-- Sidebar -->
        <div class="admin-sidebar fixed h-full z-30">
            <div class="flex flex-col h-full">
                <!-- Sidebar Header -->
                <div class="p-4 border-b border-blue-700">
                    <div class="flex items-center justify-between">
                        <div class="flex items-center space-x-2 space-x-reverse">
                            <div class="w-8 h-8 bg-white rounded-lg flex items-center justify-center">
                                <span class="text-blue-600 font-bold text-sm">د</span>
                            </div>
                            <span class="text-white font-bold">پنل مدیریت</span>
                        </div>
                    </div>
                </div>

                <!-- Sidebar Menu -->
                <partial name="~/Pages/Shared/_adminSidebar.cshtml" />

            </div>
        </div>

        <!-- Main Content -->
        <div class="admin-main flex-1">
            <div class="admin-content">
                <!-- Page Header -->
                <div class="bg-white border-b border-gray-200">
                    <div class="max-w-full mx-auto px-4 sm:px-6 lg:px-8 py-4 sm:py-6">
                        <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
                            <div>
                                <h1 class="text-xl sm:text-2xl font-bold text-gray-900">مدیریت مالی و سود</h1>
                                <p class="mt-1 text-sm text-gray-600 text-sm-mobile">مدیریت سود کلی سایت و سود کاربران</p>
                            </div>
                            <div class="flex items-center space-x-3 space-x-reverse w-full sm:w-auto header-buttons">
                                <button onclick="exportFinancialReport()" class="btn btn-outline flex-1 sm:flex-none">
                                    <i class="fas fa-download ml-2"></i>
                                    <span class="hidden sm:inline">خروجی گزارش</span>
                                    <span class="sm:hidden">خروجی</span>
                                </button>
                                <button onclick="showSettlementModal()" class="btn btn-primary flex-1 sm:flex-none">
                                    <i class="fas fa-calculator ml-2"></i>
                                    <span>تسویه حساب</span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Main Content Area -->
                <div class="max-w-full mx-auto px-3 sm:px-4 lg:px-8 py-4 sm:py-6">
                    <!-- Statistics Cards -->
                    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 sm:gap-6 mb-6 sm:mb-8">
                        <div class="stat-card" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);">
                            <div class="relative z-10">
                                <p class="text-sm opacity-90">سود واریز شده برای کاربران</p>
                                <p class="text-lg sm:text-2xl font-bold mt-2">
                                    @(Model.ResultDto.Data.SelectMany(i => i.OrderDtos.SelectMany(x => x.OrderItems.Product.Paid)).SafeSum(i => i.ExpectedAmount).ToString("N0")) <span class="text-sm">ریال</span>
                                </p>
                            </div>
                        </div>

                        <div class="stat-card" style="background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);">
                            <div class="relative z-10">
                                <p class="text-sm opacity-90">تعداد تراکنش‌ها</p>
                                <p class="text-lg sm:text-2xl font-bold mt-2">
                                    @(Model.ResultDto.Data.SelectMany(i => i.OrderDtos).Count().ToString("N0")) <span class="text-sm">عدد</span>
                                </p>
                            </div>
                        </div>

                        <div class="stat-card" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);">
                            <div class="relative z-10">
                                <p class="text-sm opacity-90">سود واریز نشده برای کاربران</p>
                                <p class="text-lg sm:text-2xl font-bold mt-2">
                                    @(Model.ResultDto.Data.SelectMany(i => i.OrderDtos.SelectMany(x => x.OrderItems.Product.Unpaid)).SafeSum(i => i.ExpectedAmount).ToString("N0")) <span class="text-sm">ریال</span>
                                </p>
                            </div>
                        </div>

                        <div class="stat-card" style="background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);">
                            <div class="relative z-10">
                                <p class="text-sm opacity-90">کاربران فعال</p>
                                <p class="text-lg sm:text-2xl font-bold mt-2">@Model.UserPurchaseReportResult.Data.Count.ToString("N0")</p>
                            </div>
                        </div>
                    </div>

                    <!-- Financial Summary -->
                    <div class="grid grid-cols-1 lg:grid-cols-3 gap-4 sm:gap-6 mb-6 sm:mb-8">
                        <!-- User Profit Summary -->
