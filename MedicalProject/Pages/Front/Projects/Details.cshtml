@functions {
    public decimal ProfitCalculation(object? value, PaymentTime? paymentTime)
    {
        if (value == null || paymentTime == null) return 0;
        decimal profit = 0;

        if (decimal.TryParse(value.ToString(), out decimal result))
        {
            profit = paymentTime switch
            {
                PaymentTime.ماهانه => result,
                PaymentTime.سه_ماهه => result * 3,
                PaymentTime.شش_ماهه => result * 6,
                PaymentTime.سالانه => result * 12,
                _ => 0
            };
        }

        return profit;
    }
    public decimal CalculationOfAnnualProfit(object? value, PaymentTime? paymentTime)
    {
        if (value == null || paymentTime == null) return 0;
        decimal profit = 0;

        if (decimal.TryParse(value.ToString(), out decimal result))
        {
            profit = paymentTime switch
            {
                PaymentTime.ماهانه => result * 12,
                PaymentTime.سه_ماهه => result * 4,
                PaymentTime.شش_ماهه => result * 2,
                PaymentTime.سالانه => result,
                _ => 0
            };
        }

        return profit;
    }
    public decimal CalculationOfFiveAnnualProfit(object? value, PaymentTime? paymentTime)
    {
        if (value == null || paymentTime == null) return 0;
        decimal profit = 0;

        if (decimal.TryParse(value.ToString(), out decimal result))
