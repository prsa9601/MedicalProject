                                        <i class="fas fa-refresh ml-2"></i>
                                        بازنشانی
                                    </a>
                                </div>
                            </form>
                        </div>
                    </div>

                    <!-- جدول نوتیفیکیشن‌ها -->
                    <div class="card">
                        <div class="p-6">
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>عنوان</th>
                                            <th>توضیحات</th>
                                            <th>گیرندگان</th>
                                            <th>وضعیت</th>
                                            <th>تاریخ ایجاد</th>
                                            <th>عملیات</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model.Result.EntityCount == 0)
                                        {
                                            <tr>
                                                <td colspan="6" class="text-center py-8 text-gray-500">
                                                    <i class="fas fa-bell text-4xl mb-2"></i>
                                                    <p>هیچ نوتیفیکیشنی یافت نشد</p>
                                                </td>
                                            </tr>
                                        }
                                        else
                                        {
                                            foreach (var notification in Model.Result.Data)
                                            {
                                                <tr>
                                                    <td>
                                                        <div class="max-w-xs">
                                                            <div class="font-medium text-gray-900 truncate">@notification.Title</div>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <div class="text-sm text-gray-500 truncate">@notification.Description</div>
                                                    </td>
                                                    <td>
                                                        <span class="badge badge-secondary">
                                                            <i class="fas fa-user ml-1"></i>
                                                            @notification.Users.Count نفر
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <span class="badge badge-success">
                                                            <i class="fas fa-check ml-1"></i>
                                                            ارسال شده
                                                        </span>
                                                    </td>
                                                    <td>@notification.CreationDate.ToPersianDate()</td>
                                                    <td>
                                                        <div class="flex items-center space-x-2 space-x-reverse">
                                                            <button onclick="viewNotification('@notification.Id')"
                                                                    class="btn btn-outline btn-sm" title="مشاهده">
                                                                <i class="fas fa-eye"></i>
                                                            </button>
                                                            <a asp-page="/Admin/Notification/Edit" asp-route-id="@notification.Id"
                                                               class="btn btn-outline btn-sm" title="ویرایش">
                                                                <i class="fas fa-edit"></i>
                                                            </a>
                                                            <button onclick="deleteNotification('@notification.Id')"
                                                                    class="btn btn-danger btn-sm" title="حذف">
                                                                <i class="fas fa-trash"></i>
                                                            </button>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                            @Html.AntiForgeryToken()
                            <!-- صفحه‌بندی -->
                            @if (Model.Result.PageCount > 1)
                            {
                                <div class="flex justify-center mt-6">
                                    <nav class="flex items-center space-x-2 space-x-reverse">
                                        <!-- دکمه قبلی -->
                                        @if (Model.Result.CurrentPage > 1)
                                        {
                                            <a href="?pageid=@(Model.Result.CurrentPage - 1)&take=@Model.Result.Take@GetFilterQueryString()"
                                               class="px-3 py-1 rounded-lg bg-gray-100 text-gray-700 hover:bg-gray-200">
                                                <i class="fas fa-chevron-right"></i>
                                            </a>
                                        }

                                        <!-- صفحات اولیه -->
                                        @if (Model.Result.StartPage > 1)
                                        {
                                            <a href="?pageid=1&take=@Model.Result.Take@GetFilterQueryString()"
                                               class="px-3 py-1 rounded-lg bg-gray-100 text-gray-700 hover:bg-gray-200">
                                                1
                                            </a>
                                            @if (Model.Result.StartPage > 2)
                                            {
                                                <span class="px-2 text-gray-500">...</span>
                                            }
                                        }

                                        <!-- صفحات میانی -->
                                        @for (int i = Model.Result.StartPage; i <= Model.Result.EndPage; i++)
                                        {
                                            <a href="?pageid=@i&take=@Model.Result.Take@GetFilterQueryString()"
                                               class="px-3 py-1 rounded-lg @(i == Model.Result.CurrentPage ? "bg-blue-600 text-white" : "bg-gray-100 text-gray-700 hover:bg-gray-200")">
                                                @i
                                            </a>
                                        }

                                        <!-- صفحات انتهایی -->
                                        @if (Model.Result.EndPage < Model.Result.PageCount)
                                        {
                                            @if (Model.Result.EndPage < Model.Result.PageCount - 1)
                                            {
                                                <span class="px-2 text-gray-500">...</span>
                                            }
                                            <a href="?pageid=@Model.Result.PageCount&take=@Model.Result.Take@GetFilterQueryString()"
                                               class="px-3 py-1 rounded-lg bg-gray-100 text-gray-700 hover:bg-gray-200">
                                                @Model.Result.PageCount
                                            </a>
                                        }

                                        <!-- دکمه بعدی -->
                                        @if (Model.Result.CurrentPage < Model.Result.PageCount)
                                        {
                                            <a href="?pageid=@(Model.Result.CurrentPage + 1)&take=@Model.Result.Take@GetFilterQueryString()"
