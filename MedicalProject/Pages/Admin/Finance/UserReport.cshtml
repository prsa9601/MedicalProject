                alert('گواهی سرمایه‌گذاری برای ' + projectName + ' در حال دانلود است...');
            }

            // توابع گزارش‌گیری
            function printReport() {
                window.print();
            }

            function exportUserReport() {
                alert('گزارش کاربر در حال آماده‌سازی و دانلود است...');
