                      // تابع اصلی برای لود صفحه با Ajax
        async function loadPage(pageId) {
            try {
                showLoading();

                const take = document.getElementById('pageSizeSelect')?.value || @Model.Users.Take;
                const phoneNumber = document.getElementById('searchInput')?.value || '';
                const isActive = document.getElementById('statusFilter')?.value || '';

                const params = new URLSearchParams({
                    pageId: pageId,
                    take: take,
                    phoneNumber: phoneNumber,
                    isActive: isActive
                });

                // اضافه کردن پارامترها به URL بدون رفرش صفحه
                const newUrl = `${window.location.pathname}?${params.toString()}`;
                window.history.pushState({}, '', newUrl);

                const response = await fetch(`?${params.toString()}`, {
                    method: 'GET',
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest',
                        'Accept': 'text/html'
                    }
                });

                if (!response.ok) {
                    throw new Error('خطا در دریافت داده‌ها');
                }

                const html = await response.text();
                await updatePageContent(html);

            } catch (error) {
                console.error('Error:', error);
                await Swal.fire({
                    title: 'خطا!',
                    text: 'خطا در بارگذاری داده‌ها',
                    icon: 'error',
                    confirmButtonText: 'باشه'
                });
            } finally {
                hideLoading();
            }
        }

