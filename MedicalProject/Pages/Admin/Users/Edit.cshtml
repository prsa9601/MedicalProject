    <script>
        // توابع مدیریت پنل ادمین
        function toggleSidebar() {
            document.body.classList.toggle('sidebar-collapsed');
        }

        function toggleMobileSidebar() {
            document.body.classList.toggle('sidebar-mobile-open');
        }

        function toggleProfileDropdown() {
            const dropdown = document.getElementById('profileDropdown');
            dropdown.classList.toggle('hidden');
        }

        function switchTab(tabName) {
            // غیرفعال کردن همه تب‌ها
            document.querySelectorAll('.tab-button').forEach(btn => {
                btn.classList.remove('active');
            });
            document.querySelectorAll('.tab-content').forEach(content => {
                content.classList.remove('active');
            });

            // فعال کردن تب انتخاب شده
            document.querySelector(`.tab-button[onclick="switchTab('${tabName}')"]`).classList.add('active');
            document.getElementById(`${tabName}-tab`).classList.add('active');
        }

        function closeSuccessModal() {
            document.getElementById('successModal').classList.add('hidden');
        }

        function closeDeleteModal() {
            document.getElementById('deleteModal').classList.add('hidden');
        }

        function deleteUser() {
            document.getElementById('deleteModal').classList.remove('hidden');
        }

        function confirmDelete() {
            // شبیه‌سازی حذف کاربر
            setTimeout(() => {
                window.location.href = '/Admin/Users';
            }, 1000);
        }

        function resetPassword() {
            if (confirm('آیا از بازنشانی رمز عبور این کاربر اطمینان دارید؟')) {
                // شبیه‌سازی بازنشانی رمز عبور
                alert('رمز عبور با موفقیت بازنشانی شد. رمز جدید برای کاربر پیامک خواهد شد.');
            }
        }

        // مدیریت آپلود تصویر پروفایل
        function handleAvatarUpload(input) {
            if (input.files && input.files[0]) {
                const reader = new FileReader();

                reader.onload = function(e) {
                    document.getElementById('avatarPreview').src = e.target.result;
                };

                reader.readAsDataURL(input.files[0]);
            }
        }

        // مدیریت آپلود مدارک
        function handleDocumentUpload(input, previewId) {
            if (input.files && input.files[0]) {
                const reader = new FileReader();

                reader.onload = function(e) {
                    const preview = document.getElementById(previewId);
                    preview.innerHTML = `<img src="${e.target.result}" alt="پیش‌نمایش مدرک">`;
                };

                reader.readAsDataURL(input.files[0]);
            }
        }

        // مدیریت منوی سایدبار
        document.getElementById('sidebarToggle').addEventListener('click', function() {
            if (window.innerWidth < 768) {
                toggleMobileSidebar();
            } else {
                toggleSidebar();
            }
        });

        // بستن منوها هنگام کلیک خارج
        document.addEventListener('click', function(event) {
            const profileDropdown = document.getElementById('profileDropdown');
            const profileButton = event.target.closest('button[onclick="toggleProfileDropdown()"]');

            if (profileDropdown && !profileDropdown.contains(event.target) && !profileButton) {
                profileDropdown.classList.add('hidden');
            }

            // بستن سایدبار موبایل هنگام کلیک خارج
            if (window.innerWidth < 768 &&
                !event.target.closest('.admin-sidebar') &&
                !event.target.closest('#sidebarToggle')) {
                document.body.classList.remove('sidebar-mobile-open');
            }
        });

        // مدیریت ارسال فرم
        document.querySelector('form').addEventListener('submit', function(e) {
            e.preventDefault();

            // شبیه‌سازی ارسال موفق فرم
            setTimeout(() => {
                document.getElementById('successModal').classList.remove('hidden');
            }, 1000);
        });
    </script>
