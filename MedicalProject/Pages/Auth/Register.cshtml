@page
@model MedicalProject.Pages.Auth.RegisterModel
@{
    ViewData["Title"] = "ثبت‌نام در پلتفرم دنگ";
}

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        /* استایل‌های صفحه ثبت‌نام */
        .register-container {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 80vh;
            padding: 2rem 1rem;
            background: linear-gradient(135deg, #dbeafe 0%, white 50%, #dbeafe 100%);
        }

        .register-card {
            width: 100%;
            max-width: 500px;
            background: #fff;
            border-radius: 1rem;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
            padding: 2rem;
        }

        .register-title {
            font-size: 1.75rem;
            font-weight: 700;
            text-align: center;
            margin-bottom: 0.5rem;
            color: #1e40af;
        }

        .input-group {
            position: relative;
            margin-bottom: 1.5rem;
        }

            .input-group input {
                width: 100%;
                padding: 0.75rem 1rem;
                background: #f9fafb;
                border: 1px solid #d1d5db;
                outline: none;
                font-size: 1rem;
                color: #374151;
                font-weight: 500;
                border-radius: 0.5rem;
                transition: all 0.3s;
            }

                .input-group input:focus {
                    border-color: #3b82f6;
                    box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
                }

                .input-group input::placeholder {
                    color: #9ca3af;
                    font-weight: 400;
                }

        .input-icon {
            position: absolute;
            left: 1rem;
            top: 50%;
            transform: translateY(-50%);
            font-size: 1.125rem;
            color: #9ca3af;
        }

        .password-toggle {
            position: absolute;
            left: 2.5rem;
            top: 50%;
            transform: translateY(-50%);
            color: #9ca3af;
            cursor: pointer;
            transition: color 0.2s;
        }

            .password-toggle:hover {
                color: #6b7280;
            }

        .submit-btn {
            width: 100%;
            padding: 0.75rem;
            background: #3b82f6;
            border-radius: 0.5rem;
            margin: 1.5rem 0;
            box-shadow: 0 4px 6px rgba(59, 130, 246, 0.2);
            border: none;
            cursor: pointer;
            font-size: 1rem;
            color: #fff;
            font-weight: 600;
            transition: all 0.3s;
        }

            .submit-btn:hover {
                background: #2563eb;
                box-shadow: 0 6px 8px rgba(59, 130, 246, 0.3);
            }

        .back-to-login {
            text-align: center;
            margin-top: 1.5rem;
        }

            .back-to-login a {
                color: #3b82f6;
                text-decoration: none;
                font-weight: 500;
                transition: color 0.2s;
            }

                .back-to-login a:hover {
                    color: #1e40af;
                    text-decoration: underline;
                }

        .text-error {
            color: #dc2626;
            font-size: 0.875rem;
            margin-top: 0.25rem;
        }

        .alert-error {
            background-color: #fef2f2;
            border: 1px solid #fecaca;
            color: #dc2626;
            padding: 0.75rem;
            border-radius: 0.5rem;
            margin-bottom: 1rem;
        }

        .alert-success {
            background-color: #f0fdf4;
            border: 1px solid #bbf7d0;
            color: #166534;
            padding: 0.75rem;
            border-radius: 0.5rem;
            margin-bottom: 1rem;
        }

        /* حالت موبایل */
        @@media screen and (max-width: 600px) {
            .register-card {
                padding: 1.5rem;
                border-radius: 0.75rem;
            }

            .register-title {
                font-size: 1.5rem;
            }
        }
    </style>
}

<div class="register-container">
    <div class="register-card">
        <!-- Header -->
        <div class="text-center mb-8">
            <div class="flex justify-center mb-4">
                <div class="w-16 h-16 bg-blue-600 rounded-xl flex items-center justify-center">
                    <span class="text-white font-bold text-2xl">د</span>
                </div>
            </div>
            <h1 class="register-title">ثبت‌نام در پلتفرم دنگ</h1>
            <p class="text-gray-600 mt-2">
                حساب کاربری جدید ایجاد کنید
            </p>
        </div>

        <!-- Registration Form -->
        <form method="post" class="space-y-4">
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert-error">
                    <p>لطفا اطلاعات را به درستی وارد کنید</p>
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <p class="text-sm mt-1">@error.ErrorMessage</p>
                    }
                </div>
            }

            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div class="input-group">
                    <input type="text"
                           id="FirstName"
                           name="FirstName"
                           placeholder="نام"
                           value="@Model.FirstName"
                           required />
                    <i class="input-icon fa-solid fa-user"></i>
                    @if (ViewData.ModelState["FirstName"]?.Errors?.Count > 0)
                    {
                        <span class="text-error">@ViewData.ModelState["FirstName"].Errors[0].ErrorMessage</span>
                    }
                </div>

                <div class="input-group">
                    <input type="text"
                           id="LastName"
                           name="LastName"
                           placeholder="نام خانوادگی"
                           value="@Model.LastName"
                           required />
                    <i class="input-icon fa-solid fa-user"></i>
                    @if (ViewData.ModelState["LastName"]?.Errors?.Count > 0)
                    {
                        <span class="text-error">@ViewData.ModelState["LastName"].Errors[0].ErrorMessage</span>
                    }
                </div>
            </div>

            <div class="input-group">
                <input type="tel"
                       id="PhoneNumber"
                       name="PhoneNumber"
                       placeholder="شماره تماس"
                       value="@Model.PhoneNumber"
                       required />
                <i class="input-icon fa-solid fa-phone"></i>
                @if (ViewData.ModelState["PhoneNumber"]?.Errors?.Count > 0)
                {
                    <span class="text-error">@ViewData.ModelState["PhoneNumber"].Errors[0].ErrorMessage</span>
                }
            </div>

            <div class="input-group">
                <input type="password"
                       id="Password"
                       name="Password"
                       placeholder="رمز عبور"
                       required />
                <i class="input-icon fa-solid fa-lock"></i>
                <span class="password-toggle" onclick="togglePassword('Password')">
                    <i id="eyeIconPassword" class="fa-solid fa-eye hidden"></i>
                    <i id="eyeOffIconPassword" class="fa-solid fa-eye-slash"></i>
                </span>
                @if (ViewData.ModelState["Password"]?.Errors?.Count > 0)
                {
                    <span class="text-error">@ViewData.ModelState["Password"].Errors[0].ErrorMessage</span>
                }
            </div>

            <div class="input-group">
                <input type="password"
                       id="ConfirmPassword"
                       name="ConfirmPassword"
                       placeholder="تکرار رمز عبور"
                       required />
                <i class="input-icon fa-solid fa-lock"></i>
                <span class="password-toggle" onclick="togglePassword('ConfirmPassword')">
                    <i id="eyeIconConfirmPassword" class="fa-solid fa-eye hidden"></i>
                    <i id="eyeOffIconConfirmPassword" class="fa-solid fa-eye-slash"></i>
                </span>
                @if (ViewData.ModelState["ConfirmPassword"]?.Errors?.Count > 0)
                {
                    <span class="text-error">@ViewData.ModelState["ConfirmPassword"].Errors[0].ErrorMessage</span>
                }
            </div>

            <button type="submit" class="submit-btn">
                ایجاد حساب کاربری
            </button>
        </form>

        <!-- Additional Links -->
        <div class="text-center space-y-4">
            <div class="back-to-login">
                <p>
                    قبلاً حساب کاربری دارید؟
                    <a href="/Auth/Login" class="text-blue-600 hover:text-blue-500">وارد شوید</a>
                </p>
            </div>

            <div class="pt-4 border-t border-gray-200">
                <p class="text-sm text-gray-600">
                    با ثبت‌نام در سایت،
                    <a href="/Terms" class="text-blue-600 hover:text-blue-500 mr-1">شرایط استفاده</a>
                    و
                    <a href="/Privacy" class="text-blue-600 hover:text-blue-500 mr-1">حریم خصوصی</a>
                    را می‌پذیرید.
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // نمایش/مخفی کردن رمز عبور
        function togglePassword(fieldId) {
            const passwordInput = document.getElementById(fieldId);
            const eyeIcon = document.getElementById(`eyeIcon${fieldId}`);
            const eyeOffIcon = document.getElementById(`eyeOffIcon${fieldId}`);

            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                eyeIcon.classList.remove('hidden');
                eyeOffIcon.classList.add('hidden');
            } else {
                passwordInput.type = 'password';
                eyeIcon.classList.add('hidden');
                eyeOffIcon.classList.remove('hidden');
            }
        }

        // اعتبارسنجی فرم
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.querySelector('form');

            form.addEventListener('submit', function(event) {
                const firstName = document.getElementById('FirstName').value.trim();
                const lastName = document.getElementById('LastName').value.trim();
                const phoneNumber = document.getElementById('PhoneNumber').value.trim();
                const password = document.getElementById('Password').value.trim();
                const confirmPassword = document.getElementById('ConfirmPassword').value.trim();
                let isValid = true;

                // پاک کردن خطاهای قبلی
                document.querySelectorAll('.text-error').forEach(el => el.remove());

                if (!firstName) {
                    showFieldError('FirstName', 'لطفا نام خود را وارد کنید');
                    isValid = false;
                }

                if (!lastName) {
                    showFieldError('LastName', 'لطفا نام خانوادگی خود را وارد کنید');
                    isValid = false;
                }

                if (!phoneNumber) {
                    showFieldError('PhoneNumber', 'لطفا شماره تماس خود را وارد کنید');
                    isValid = false;
                }

                if (!password) {
                    showFieldError('Password', 'لطفا رمز عبور خود را وارد کنید');
                    isValid = false;
                }

                if (!confirmPassword) {
                    showFieldError('ConfirmPassword', 'لطفا تکرار رمز عبور را وارد کنید');
                    isValid = false;
                }

                if (password && confirmPassword && password !== confirmPassword) {
                    showFieldError('ConfirmPassword', 'تکرار رمزعبور و رمز عبور مطابقت ندارند');
                    isValid = false;
                }

                if (!isValid) {
                    event.preventDefault();
                }
            });

            function showFieldError(fieldId, message) {
                const field = document.getElementById(fieldId);
                const errorElement = document.createElement('span');
                errorElement.className = 'text-error';
                errorElement.textContent = message;
                field.parentElement.appendChild(errorElement);
            }

            // اعتبارسنجی همزمان تکرار رمز عبور
            const passwordInput = document.getElementById('Password');
            const confirmPasswordInput = document.getElementById('ConfirmPassword');

            confirmPasswordInput.addEventListener('input', function() {
                const password = passwordInput.value;
                const confirmPassword = this.value;

                // پاک کردن خطاهای قبلی
                const existingError = this.parentElement.querySelector('.text-error');
                if (existingError && existingError.textContent.includes('مطابقت')) {
                    existingError.remove();
                }

                if (password && confirmPassword && password !== confirmPassword) {
                    showFieldError('ConfirmPassword', 'تکرار رمزعبور و رمز عبور مطابقت ندارند');
                }
            });
        });
    </script>
}