@page
@using MedicalProject.Infrastructure
@using MedicalProject.Infrastructure.Extensions
@using MedicalProject.Infrastructure.Utils
@model MedicalProject.Pages.Admin.Users.IdentityVerificationModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>تایید هویت و اطلاعات بانکی - پلتفرم دنگ</title>

    <!-- فونت‌ها -->
    <link href="https://fonts.googleapis.com/css2?family=Vazir:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/gh/rastikerdar/vazir-font@v30.1.0/dist/font-face.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>

    <style>
        /* استایل‌های سفارشی */
        html {
            direction: rtl;
            font-family: 'Vazir', 'IRANSans', system-ui, sans-serif;
        }

        body {
            background-color: #f9fafb;
            color: #111827;
            font-family: 'Vazir', 'IRANSans', system-ui, sans-serif;
        }

        * {
            border-color: #e5e7eb;
        }

        input:focus, textarea:focus, select:focus {
            outline: none;
            ring: 2px;
            ring-color: #3b82f6;
            border-color: #3b82f6;
        }

        /* کامپوننت‌های سفارشی */
        .btn {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            padding: 0.5rem 1rem;
            border: 1px solid transparent;
            font-size: 0.875rem;
            font-weight: 500;
            border-radius: 0.5rem;
            box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
            transition: all 0.2s;
            cursor: pointer;
        }

            .btn:focus {
                outline: 2px solid transparent;
                outline-offset: 2px;
                ring: 2px;
                ring-offset: 2px;
            }

            .btn:disabled {
                opacity: 0.5;
                cursor: not-allowed;
            }

        .btn-primary {
            background-color: #2563eb;
            color: white;
        }

            .btn-primary:hover {
                background-color: #1d4ed8;
            }

        .btn-secondary {
            background-color: white;
            color: #374151;
            border: 1px solid #d1d5db;
        }

            .btn-secondary:hover {
                background-color: #f9fafb;
            }

        .btn-success {
            background-color: #059669;
            color: white;
        }

            .btn-success:hover {
                background-color: #047857;
            }

        .btn-danger {
            background-color: #dc2626;
            color: white;
        }

            .btn-danger:hover {
                background-color: #b91c1c;
            }

        .btn-outline {
            border: 1px solid #d1d5db;
            color: #374151;
            background-color: white;
        }

            .btn-outline:hover {
                background-color: #f9fafb;
            }

        .btn-warning {
            background-color: #d97706;
            color: white;
        }

            .btn-warning:hover {
                background-color: #b45309;
            }

        .card {
            background-color: white;
            border-radius: 0.75rem;
            box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
            border: 1px solid #f3f4f6;
            overflow: hidden;
        }

        .card-hover {
            transition: all 0.3s;
        }

            .card-hover:hover {
                box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
                transform: translateY(-0.25rem);
            }

        .input {
            display: block;
            width: 100%;
            padding: 0.5rem 0.75rem;
            border: 1px solid #d1d5db;
            border-radius: 0.5rem;
            box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
        }

            .input::placeholder {
                color: #9ca3af;
            }

            .input:focus {
                outline: none;
                ring: 2px;
                ring-color: #3b82f6;
                border-color: #3b82f6;
            }

        .label {
            display: block;
            font-size: 0.875rem;
            font-weight: 500;
            color: #374151;
            margin-bottom: 0.25rem;
        }

        .badge {
            display: inline-flex;
            align-items: center;
            padding: 0.25rem 0.625rem;
            border-radius: 9999px;
            font-size: 0.75rem;
            font-weight: 500;
        }

        .badge-primary {
            background-color: #dbeafe;
            color: #1e40af;
        }

        .badge-success {
            background-color: #d1fae5;
            color: #065f46;
        }

        .badge-warning {
            background-color: #fef3c7;
            color: #92400e;
        }

        .badge-danger {
            background-color: #fee2e2;
            color: #991b1b;
        }

        .badge-secondary {
            background-color: #f3f4f6;
            color: #6b7280;
        }

        .badge-info {
            background-color: #d1f5f9;
            color: #0e7490;
        }

        /* استایل‌های مخصوص پنل ادمین */
        .admin-sidebar {
            width: 260px;
            background: linear-gradient(180deg, #1e40af 0%, #1e3a8a 100%);
            color: white;
            transition: all 0.3s;
        }

        .admin-main {
            margin-right: 260px;
            transition: all 0.3s;
        }

        .admin-content {
            min-height: calc(100vh - 64px);
        }

        .sidebar-collapsed .admin-sidebar {
            width: 70px;
        }

        .sidebar-collapsed .admin-main {
            margin-right: 70px;
        }

        .sidebar-link {
            display: flex;
            align-items: center;
            padding: 0.75rem 1rem;
            color: #d1d5db;
            border-radius: 0.5rem;
            margin: 0.25rem 0.5rem;
            transition: all 0.2s;
        }

            .sidebar-link:hover, .sidebar-link.active {
                background-color: rgba(255, 255, 255, 0.1);
                color: white;
            }

            .sidebar-link i {
                width: 24px;
                text-align: center;
            }

            .sidebar-link span {
                margin-right: 0.75rem;
                white-space: nowrap;
                overflow: hidden;
                text-overflow: ellipsis;
            }

        .sidebar-collapsed .sidebar-link span {
            display: none;
        }

        .table-responsive {
            overflow-x: auto;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
        }

            .table th, .table td {
                padding: 0.75rem 1rem;
                text-align: right;
                border-bottom: 1px solid #e5e7eb;
            }

            .table th {
                background-color: #f9fafb;
                font-weight: 600;
                color: #374151;
            }

            .table tbody tr:hover {
                background-color: #f9fafb;
            }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-label {
            display: block;
            margin-bottom: 0.5rem;
            font-weight: 500;
            color: #374151;
        }

        .form-control {
            display: block;
            width: 100%;
            padding: 0.5rem 0.75rem;
            border: 1px solid #d1d5db;
            border-radius: 0.5rem;
            box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
            transition: all 0.2s;
        }

            .form-control:focus {
                outline: none;
                box-shadow: 0 0 0 2px #3b82f6;
                border-color: #3b82f6;
            }

        .form-text {
            display: block;
            margin-top: 0.25rem;
            font-size: 0.875rem;
            color: #6b7280;
        }

        .user-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            object-fit: cover;
        }

        .status-dot {
            width: 8px;
            height: 8px;
            border-radius: 50%;
            display: inline-block;
            margin-left: 0.5rem;
        }

        .status-active {
            background-color: #10b981;
        }

        .status-inactive {
            background-color: #ef4444;
        }

        .status-pending {
            background-color: #f59e0b;
        }

        /* استایل‌های سفارشی برای صفحه تایید هویت */
        .document-image {
            width: 100%;
            height: 200px;
            object-fit: cover;
            border-radius: 0.5rem;
            border: 2px solid #e5e7eb;
            cursor: pointer;
            transition: all 0.3s;
        }

            .document-image:hover {
                border-color: #3b82f6;
                transform: scale(1.02);
            }

        .image-modal {
            display: none;
            position: fixed;
            z-index: 1000;
            padding-top: 100px;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0,0,0,0.9);
        }

        .modal-content {
            margin: auto;
            display: block;
            width: 80%;
            max-width: 700px;
        }

        .close-modal {
            position: absolute;
            top: 15px;
            right: 35px;
            color: #f1f1f1;
            font-size: 40px;
            font-weight: bold;
            cursor: pointer;
        }

        .verification-section {
            border-left: 4px solid #3b82f6;
            padding-right: 1rem;
        }

            .verification-section.success {
                border-left-color: #10b981;
            }

            .verification-section.warning {
                border-left-color: #f59e0b;
            }

            .verification-section.danger {
                border-left-color: #ef4444;
            }

        .info-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 1rem;
        }

        .info-item {
            background-color: #f9fafb;
            padding: 1rem;
            border-radius: 0.5rem;
            border: 1px solid #e5e7eb;
        }

        .copy-btn {
            background: none;
            border: none;
            color: #3b82f6;
            cursor: pointer;
            padding: 0.25rem 0.5rem;
            border-radius: 0.25rem;
            transition: all 0.2s;
        }

            .copy-btn:hover {
                background-color: #eff6ff;
            }

        /* Responsive */
        @@media (max-width: 1024px) {
            .admin-sidebar {
                width: 70px;
            }

            .admin-main {
                margin-right: 70px;
            }

            .sidebar-link span {
                display: none;
            }
        }

        @@media (max-width: 768px) {
            .admin-sidebar {
                position: fixed;
                right: -260px;
                z-index: 50;
                height: 100vh;
            }

            .admin-main {
                margin-right: 0;
            }

            .sidebar-mobile-open .admin-sidebar {
                right: 0;
            }

            .sidebar-link span {
                display: block;
            }

            .info-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body class="admin-layout">
    <!-- Header -->
    <header class="bg-white shadow-sm border-b border-gray-200 sticky top-0 z-40">
        <div class="max-w-full mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <!-- Logo and Toggle -->
                <div class="flex items-center">
                    <button id="sidebarToggle" class="p-2 rounded-lg text-gray-400 hover:text-gray-600 hover:bg-gray-100 transition-colors mr-2">
                        <i class="fas fa-bars"></i>
                    </button>
                    <a href="/">
                        <div class="flex items-center space-x-2 space-x-reverse">
                            <div class="w-8 h-8 bg-blue-600 rounded-lg flex items-center justify-center">
                                <span class="text-white font-bold text-lg">د</span>
                            </div>
                            <span class="text-xl font-bold text-gray-900">پلتفرم دنگ</span>
                        </div>
                    </a>
                </div>

                <!-- User Actions -->
                <div class="flex items-center space-x-4 space-x-reverse">
                    <!-- Notifications -->
                    <a href="/Notifications" class="relative p-2 text-gray-400 hover:text-gray-600 transition-colors">
                        <i class="fas fa-bell"></i>
                        <span class="badge badge-danger absolute -top-1 -left-1 min-w-[1.25rem] h-5 flex items-center justify-center">
                            3
                        </span>
                    </a>

                    <!-- Profile Dropdown -->
                    <div class="relative">
                        <button onclick="toggleProfileDropdown()"
                                class="flex items-center space-x-2 space-x-reverse p-2 rounded-lg hover:bg-gray-100 transition-colors">
                            <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center">
                                <i class="fas fa-user text-blue-600"></i>
                            </div>
                            <span class="hidden sm:block font-medium text-gray-700">
                                ادمین
                            </span>
                        </button>

                        <!-- Dropdown Menu -->
                        <div id="profileDropdown" class="hidden absolute left-0 mt-2 w-48 bg-white rounded-lg shadow-lg border border-gray-200 py-1 z-50">
                            <a href="/Admin/Dashboard"
                               class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 transition-colors">
                                <i class="fas fa-tachometer-alt ml-3"></i>
                                داشبورد
                            </a>
                            <a href="/Profile"
                               class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 transition-colors">
                                <i class="fas fa-user ml-3"></i>
                                پروفایل
                            </a>
                            <form asp-page="/Logout" method="post" class="w-full">
                                <button type="submit"
                                        class="flex items-center w-full px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 transition-colors">
                                    <i class="fas fa-sign-out-alt ml-3"></i>
                                    خروج
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="flex">
        <!-- Sidebar -->
        <div class="admin-sidebar fixed h-full z-30">
            <div class="flex flex-col h-full">
                <!-- Sidebar Header -->
                <div class="p-4 border-b border-blue-700">
                    <div class="flex items-center justify-between">
                        <div class="flex items-center space-x-2 space-x-reverse">
                            <div class="w-8 h-8 bg-white rounded-lg flex items-center justify-center">
                                <span class="text-blue-600 font-bold text-sm">د</span>
                            </div>
                            <span class="text-white font-bold">پنل مدیریت</span>
                        </div>
                    </div>
                </div>

                <!-- Sidebar Menu -->
                <partial name="~/Pages/Shared/_adminSidebar.cshtml" />

            </div>
        </div>

        <!-- Main Content -->
        <div class="admin-main flex-1">
            <div class="admin-content">
                <!-- Page Header -->
                <div class="bg-white border-b border-gray-200">
                    <div class="max-w-full mx-auto px-4 sm:px-6 lg:px-8 py-6">
                        <div class="flex justify-between items-center">
                            <div class="flex items-center space-x-4 space-x-reverse">
                                <a href="/Admin/Users/Index" class="btn btn-outline">
                                    <i class="fas fa-arrow-right ml-2"></i>
                                    بازگشت
                                </a>
                                <div>
                                    <h1 class="text-2xl font-bold text-gray-900">تایید هویت و اطلاعات بانکی</h1>
                                    <p class="mt-1 text-sm text-gray-600">بررسی مدارک هویتی و اطلاعات بانکی کاربران</p>
                                </div>
                            </div>
                            <div class="flex items-center space-x-3 space-x-reverse">
                                <button onclick="exportVerificationReport()" class="btn btn-outline">
                                    <i class="fas fa-download ml-2"></i>
                                    خروجی گزارش
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Main Content Area -->
                <div class="max-w-full mx-auto px-4 sm:px-6 lg:px-8 py-6">
                    <!-- User Profile Header -->
                    <div class="card mb-8">
                        <div class="p-6">
                            <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between">
                                <div class="flex items-center space-x-4 space-x-reverse mb-4 lg:mb-0">
                                    <img src="@Directories.GetUserImageAccountPath(Model.UserId.ToString())"
                                         alt="@Model.UserProfile.FirstName @Model.UserProfile.LastName"
                                         class="user-avatar"
                                         onerror="this.src='https://ui-avatars.com/api/?name=@Model.UserProfile.FirstName+@Model.UserProfile.LastName&background=3B82F6&color=fff&size=128'">
                                    <div>
                                        <h2 class="text-xl font-bold text-gray-900">@Model.UserProfile.FirstName @Model.UserProfile.LastName</h2>
                                        <p class="text-gray-600">شناسه کاربر: @Model.UserId.ToString().Substring(0, 8)</p>
                                        <div class="flex items-center mt-2 space-x-4 space-x-reverse">
                                            <span class="text-sm text-gray-500">
                                                <i class="fas fa-phone ml-1"></i>
                                                @Model.UserProfile.PhoneNumber
                                            </span>
                                            <span class="text-sm text-gray-500">
                                                <i class="fas fa-calendar ml-1"></i>
                                                عضو از @Model.UserProfile.CreationDate.ToPersianDate()
                                            </span>
                                            <span class="badge @(Model.OverallStatus == "تایید شده" ? "badge-success" : Model.OverallStatus == "در انتظار تایید" ? "badge-warning" : "badge-danger")">
                                                @Model.OverallStatus
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="flex items-center space-x-3 space-x-reverse">
                                    <button onclick="verifyAll()" class="btn btn-success" @(Model.OverallStatus == "تایید شده" ? "disabled" : "")>
                                        <i class="fas fa-check-double ml-2"></i>
                                        تایید همه
                                    </button>
                                    <button onclick="contactUser()" class="btn btn-outline">
                                        <i class="fas fa-envelope ml-2"></i>
                                        تماس با کاربر
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Identity Verification Section -->
                    <div class="card mb-8">
                        <div class="p-6 border-b border-gray-200">
                            <div class="flex justify-between items-center">
                                <h3 class="text-lg font-semibold text-gray-900">مدارک هویتی</h3>
                                <span class="badge @(Model.IdentityStatus == "تایید شده" ? "badge-success" : Model.IdentityStatus == "در انتظار تایید" ? "badge-warning" : "badge-danger")">
                                    @Model.IdentityStatus
                                </span>
                            </div>
                        </div>
                        <div class="p-6">
                            <!-- Personal Information -->
                            <div class="mb-6">
                                <h4 class="text-md font-semibold text-gray-900 mb-4">اطلاعات شخصی</h4>
                                <div class="info-grid">
                                    <div class="info-item">
                                        <label class="form-label">نام و نام خانوادگی</label>
                                        <div class="flex items-center space-x-2 space-x-reverse">
                                            <p class="text-gray-900">@Model.UserProfile.FirstName @Model.UserProfile.LastName</p>
                                            <button onclick="copyToClipboard('@Model.UserProfile.FirstName @Model.UserProfile.LastName')" class="copy-btn" title="کپی نام">
                                                <i class="fas fa-copy"></i>
                                            </button>
                                        </div>
                                    </div>
                                    <div class="info-item">
                                        <label class="form-label">کد ملی</label>
                                        <div class="flex items-center space-x-2 space-x-reverse">
                                            <p class="text-gray-900">@Model.NationalCode</p>
                                            <button onclick="copyToClipboard('@Model.NationalCode')" class="copy-btn" title="کپی کد ملی">
                                                <i class="fas fa-copy"></i>
                                            </button>
                                        </div>
                                    </div>
                                    <div class="info-item">
                                        <label class="form-label">تاریخ تولد</label>
                                        <p class="text-gray-900">@Model.BirthDate.ToPersianDate()</p>
                                    </div>
                                    <div class="info-item">
                                        <label class="form-label">شماره تلفن</label>
                                        <div class="flex items-center space-x-2 space-x-reverse">
                                            <p class="text-gray-900">@Model.UserProfile.PhoneNumber</p>
                                            <button onclick="copyToClipboard('@Model.UserProfile.PhoneNumber')" class="copy-btn" title="کپی شماره تلفن">
                                                <i class="fas fa-copy"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Identity Documents -->
                            <div>
                                <h4 class="text-md font-semibold text-gray-900 mb-4">مدارک هویتی آپلود شده</h4>
                                <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                                    <!-- کارت ملی -->
                                    <div class="text-center">
                                        <div class="relative">
                                            <img src="@Model.NationalCardImage"
                                                 alt="کارت ملی"
                                                 class="document-image"
                                                 onclick="openModal('@Model.NationalCardImage', 'کارت ملی')">
                                            <div class="absolute top-2 left-2">
                                                <span class="badge @(Model.NationalCardVerified ? "badge-success" : "badge-warning")">
                                                    @(Model.NationalCardVerified ? "تایید شده" : "در انتظار")
                                                </span>
                                            </div>
                                        </div>
                                        <p class="text-sm text-gray-600 mt-2">کارت ملی</p>
                                        <div class="flex justify-center space-x-2 space-x-reverse mt-2">
                                            <button onclick="verifyDocument('nationalCard')" class="btn btn-success btn-sm" @(Model.NationalCardVerified ? "disabled" : "")>
                                                <i class="fas fa-check ml-1"></i>
                                                تایید
                                            </button>
                                            <button onclick="rejectDocument('nationalCard')" class="btn btn-danger btn-sm">
                                                <i class="fas fa-times ml-1"></i>
                                                رد
                                            </button>
                                        </div>
                                    </div>

                                    <!-- شناسنامه -->
                                    <div class="text-center">
                                        <div class="relative">
                                            <img src="@Model.BirthCertificateImage"
                                                 alt="شناسنامه"
                                                 class="document-image"
                                                 onclick="openModal('@Model.BirthCertificateImage', 'شناسنامه')">
                                            <div class="absolute top-2 left-2">
                                                <span class="badge @(Model.BirthCertificateVerified ? "badge-success" : "badge-warning")">
                                                    @(Model.BirthCertificateVerified ? "تایید شده" : "در انتظار")
                                                </span>
                                            </div>
                                        </div>
                                        <p class="text-sm text-gray-600 mt-2">شناسنامه</p>
                                        <div class="flex justify-center space-x-2 space-x-reverse mt-2">
                                            <button onclick="verifyDocument('birthCertificate')" class="btn btn-success btn-sm" @(Model.BirthCertificateVerified ? "disabled" : "")>
                                                <i class="fas fa-check ml-1"></i>
                                                تایید
                                            </button>
                                            <button onclick="rejectDocument('birthCertificate')" class="btn btn-danger btn-sm">
                                                <i class="fas fa-times ml-1"></i>
                                                رد
                                            </button>
                                        </div>
                                    </div>

                                    <!-- سلفی با کارت ملی -->
                                    <div class="text-center">
                                        <div class="relative">
                                            <img src="@Model.SelfieWithNationalCard"
                                                 alt="سلفی با کارت ملی"
                                                 class="document-image"
                                                 onclick="openModal('@Model.SelfieWithNationalCard', 'سلفی با کارت ملی')">
                                            <div class="absolute top-2 left-2">
                                                <span class="badge @(Model.SelfieVerified ? "badge-success" : "badge-warning")">
                                                    @(Model.SelfieVerified ? "تایید شده" : "در انتظار")
                                                </span>
                                            </div>
                                        </div>
                                        <p class="text-sm text-gray-600 mt-2">سلفی با کارت ملی</p>
                                        <div class="flex justify-center space-x-2 space-x-reverse mt-2">
                                            <button onclick="verifyDocument('selfie')" class="btn btn-success btn-sm" @(Model.SelfieVerified ? "disabled" : "")>
                                                <i class="fas fa-check ml-1"></i>
                                                تایید
                                            </button>
                                            <button onclick="rejectDocument('selfie')" class="btn btn-danger btn-sm">
                                                <i class="fas fa-times ml-1"></i>
                                                رد
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Identity Verification Actions -->
                            <div class="flex justify-end space-x-3 space-x-reverse mt-6 pt-6 border-t border-gray-200">
                                <button onclick="verifyIdentity()" class="btn btn-success" @(Model.IdentityStatus == "تایید شده" ? "disabled" : "")>
                                    <i class="fas fa-check ml-2"></i>
                                    تایید هویت
                                </button>
                                <button onclick="rejectIdentity()" class="btn btn-danger" @(Model.IdentityStatus == "رد شده" ? "disabled" : "")>
                                    <i class="fas fa-times ml-2"></i>
                                    رد هویت
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Bank Information Section -->
                    <div class="card">
                        <div class="p-6 border-b border-gray-200">
                            <div class="flex justify-between items-center">
                                <h3 class="text-lg font-semibold text-gray-900">اطلاعات بانکی</h3>
                                <span class="badge @(Model.BankStatus == "تایید شده" ? "badge-success" : Model.BankStatus == "در انتظار تایید" ? "badge-warning" : "badge-danger")">
                                    @Model.BankStatus
                                </span>
                            </div>
                        </div>
                        <div class="p-6">
                            <!-- Bank Details -->
                            <div class="mb-6">
                                <h4 class="text-md font-semibold text-gray-900 mb-4">اطلاعات حساب بانکی</h4>
                                <div class="info-grid">
                                    <div class="info-item">
                                        <label class="form-label">نام بانک</label>
                                        <p class="text-gray-900">@Model.BankName</p>
                                    </div>
                                    <div class="info-item">
                                        <label class="form-label">شماره شبا</label>
                                        <div class="flex items-center space-x-2 space-x-reverse">
                                            <p class="text-gray-900">@Model.ShebaNumber</p>
                                            <button onclick="copyToClipboard('@Model.ShebaNumber')" class="copy-btn" title="کپی شماره شبا">
                                                <i class="fas fa-copy"></i>
                                            </button>
                                        </div>
                                    </div>
                                    <div class="info-item">
                                        <label class="form-label">شماره حساب</label>
                                        <div class="flex items-center space-x-2 space-x-reverse">
                                            <p class="text-gray-900">@Model.AccountNumber</p>
                                            <button onclick="copyToClipboard('@Model.AccountNumber')" class="copy-btn" title="کپی شماره حساب">
                                                <i class="fas fa-copy"></i>
                                            </button>
                                        </div>
                                    </div>
                                    <div class="info-item">
                                        <label class="form-label">نام صاحب حساب</label>
                                        <div class="flex items-center space-x-2 space-x-reverse">
                                            <p class="text-gray-900">@Model.AccountHolderName</p>
                                            <button onclick="copyToClipboard('@Model.AccountHolderName')" class="copy-btn" title="کپی نام صاحب حساب">
                                                <i class="fas fa-copy"></i>
                                            </button>
                                        </div>
                                    </div>
                                    <div class="info-item">
                                        <label class="form-label">شماره کارت</label>
                                        <div class="flex items-center space-x-2 space-x-reverse">
                                            <p class="text-gray-900">@Model.CardNumber</p>
                                            <button onclick="copyToClipboard('@Model.CardNumber')" class="copy-btn" title="کپی شماره کارت">
                                                <i class="fas fa-copy"></i>
                                            </button>
                                        </div>
                                    </div>
                                    <div class="info-item">
                                        <label class="form-label">تاریخ ثبت</label>
                                        <p class="text-gray-900">@Model.BankInfoRegistrationDate.ToPersianDate()</p>
                                    </div>
                                </div>
                            </div>

                            <!-- Bank Verification Actions -->
                            <div class="flex justify-end space-x-3 space-x-reverse mt-6 pt-6 border-t border-gray-200">
                                <button onclick="verifyBankInfo()" class="btn btn-success" @(Model.BankStatus == "تایید شده" ? "disabled" : "")>
                                    <i class="fas fa-check ml-2"></i>
                                    تایید اطلاعات بانکی
                                </button>
                                <button onclick="rejectBankInfo()" class="btn btn-danger" @(Model.BankStatus == "رد شده" ? "disabled" : "")>
                                    <i class="fas fa-times ml-2"></i>
                                    رد اطلاعات بانکی
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Image Modal -->
    <div id="imageModal" class="image-modal">
        <span class="close-modal" onclick="closeModal()">&times;</span>
        <img class="modal-content" id="modalImage">
        <div id="modalCaption" class="text-white text-center mt-4 text-lg"></div>
    </div>

    <!-- Verification Modal -->
    <div id="verificationModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50 hidden">
        <div class="relative top-20 mx-auto p-5 border w-full max-w-md shadow-lg rounded-lg bg-white">
            <div class="flex justify-between items-center pb-3 border-b">
                <h3 class="text-xl font-semibold text-gray-900" id="modalTitle">تایید مدرک</h3>
                <button onclick="closeVerificationModal()" class="text-gray-400 hover:text-gray-600">
                    <i class="fas fa-times"></i>
                </button>
            </div>

            <div class="mt-4">
                <form id="verificationForm">
                    <div class="space-y-4">
                        <div>
                            <label class="form-label">نوع اقدام</label>
                            <select id="actionType" class="input" required>
                                <option value="verify">تایید</option>
                                <option value="reject">رد</option>
                            </select>
                        </div>

                        <div>
                            <label class="form-label">توضیحات</label>
                            <textarea id="verificationDescription" class="input" rows="4" placeholder="علت تایید/رد را شرح دهید..." required></textarea>
                        </div>
                    </div>

                    <div class="flex justify-end space-x-3 space-x-reverse mt-6">
                        <button type="button" onclick="closeVerificationModal()" class="btn btn-outline">
                            لغو
                        </button>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-check ml-2"></i>
                            تایید اقدام
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        // توابع مدیریت پنل ادمین
        function toggleSidebar() {
            document.body.classList.toggle('sidebar-collapsed');
        }

        function toggleMobileSidebar() {
            document.body.classList.toggle('sidebar-mobile-open');
        }

        function toggleProfileDropdown() {
            const dropdown = document.getElementById('profileDropdown');
            dropdown.classList.toggle('hidden');
        }

        // توابع مدیریت تصاویر
        function openModal(imageSrc, caption) {
            document.getElementById('modalImage').src = imageSrc;
            document.getElementById('modalCaption').innerHTML = caption;
            document.getElementById('imageModal').style.display = 'block';
        }

        function closeModal() {
            document.getElementById('imageModal').style.display = 'none';
        }

        // بستن مدال با کلیک خارج
        window.onclick = function(event) {
            const modal = document.getElementById('imageModal');
            if (event.target == modal) {
                closeModal();
            }
        }

        // توابع کپی کردن
        function copyToClipboard(text) {
            navigator.clipboard.writeText(text).then(function() {
                alert('متن با موفقیت کپی شد: ' + text);
            }).catch(function(err) {
                console.error('خطا در کپی کردن متن: ', err);
                alert('خطا در کپی کردن متن');
            });
        }

        // توابع تایید/رد
        let currentDocument = '';

        function verifyDocument(documentType) {
            currentDocument = documentType;
            document.getElementById('modalTitle').textContent = 'تایید مدرک';
            document.getElementById('actionType').value = 'verify';
            document.getElementById('verificationModal').classList.remove('hidden');
        }

        function rejectDocument(documentType) {
            currentDocument = documentType;
            document.getElementById('modalTitle').textContent = 'رد مدرک';
            document.getElementById('actionType').value = 'reject';
            document.getElementById('verificationModal').classList.remove('hidden');
        }

        function verifyIdentity() {
            if (confirm('آیا از تایید هویت این کاربر اطمینان دارید؟')) {
                // ارسال درخواست به سرور
                console.log('تایید هویت کاربر');
                alert('هویت کاربر با موفقیت تایید شد');
                location.reload();
            }
        }

        function rejectIdentity() {
            if (confirm('آیا از رد هویت این کاربر اطمینان دارید؟')) {
                // ارسال درخواست به سرور
                console.log('رد هویت کاربر');
                alert('هویت کاربر رد شد');
                location.reload();
            }
        }

        function verifyBankInfo() {
            if (confirm('آیا از تایید اطلاعات بانکی این کاربر اطمینان دارید؟')) {
                // ارسال درخواست به سرور
                console.log('تایید اطلاعات بانکی کاربر');
                alert('اطلاعات بانکی کاربر با موفقیت تایید شد');
                location.reload();
            }
        }

        function rejectBankInfo() {
            if (confirm('آیا از رد اطلاعات بانکی این کاربر اطمینان دارید؟')) {
                // ارسال درخواست به سرور
                console.log('رد اطلاعات بانکی کاربر');
                alert('اطلاعات بانکی کاربر رد شد');
                location.reload();
            }
        }

        function verifyAll() {
            if (confirm('آیا از تایید تمامی اطلاعات این کاربر اطمینان دارید؟')) {
                // ارسال درخواست به سرور
                console.log('تایید تمامی اطلاعات کاربر');
                alert('تمامی اطلاعات کاربر با موفقیت تایید شد');
                location.reload();
            }
        }

        function closeVerificationModal() {
            document.getElementById('verificationModal').classList.add('hidden');
        }

        function exportVerificationReport() {
            alert('گزارش تایید هویت در حال آماده‌سازی و دانلود است...');
        }

        function contactUser() {
            if (confirm('آیا مایل به برقراری تماس با کاربر هستید؟')) {
                alert('در حال برقراری تماس با کاربر...');
            }
        }

        // مدیریت فرم تایید
        document.getElementById('verificationForm').addEventListener('submit', function(e) {
            e.preventDefault();
            const actionType = document.getElementById('actionType').value;
            const description = document.getElementById('verificationDescription').value;

            let message = actionType === 'verify' ?
                'آیا از تایید این مدرک اطمینان دارید؟' :
                'آیا از رد این مدرک اطمینان دارید؟';

            if (confirm(message)) {
                // ارسال درخواست به سرور
                console.log('اقدام روی مدرک:', {
                    document: currentDocument,
                    actionType,
                    description
                });

                alert('عملیات با موفقیت انجام شد');
                closeVerificationModal();

                // رفرش صفحه
                setTimeout(() => {
                    location.reload();
                }, 1000);
            }
        });

        // مدیریت منوی سایدبار
        document.getElementById('sidebarToggle').addEventListener('click', function() {
            if (window.innerWidth < 768) {
                toggleMobileSidebar();
            } else {
                toggleSidebar();
            }
        });

        // بستن منوها هنگام کلیک خارج
        document.addEventListener('click', function(event) {
            const profileDropdown = document.getElementById('profileDropdown');
            const profileButton = event.target.closest('button[onclick="toggleProfileDropdown()"]');

            if (profileDropdown && !profileDropdown.contains(event.target) && !profileButton) {
                profileDropdown.classList.add('hidden');
            }

            // بستن سایدبار موبایل هنگام کلیک خارج
            if (window.innerWidth < 768 &&
                !event.target.closest('.admin-sidebar') &&
                !event.target.closest('#sidebarToggle')) {
                document.body.classList.remove('sidebar-mobile-open');
            }
        });
    </script>
</body>
</html>