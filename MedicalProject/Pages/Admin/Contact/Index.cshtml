                                                class="btn btn-outline btn-sm p-1 md:p-2 @(Model.Result.CurrentPage <= 1 ? "opacity-50 cursor-not-allowed" : "")"
                                                @(Model.Result.CurrentPage <= 1 ? "disabled" : "")>
                                            <i class="fas fa-chevron-right text-xs"></i>
