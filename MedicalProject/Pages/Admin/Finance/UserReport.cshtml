            // توابع فیلتر
            function applyInvestmentFilters() {
                const statusFilter = document.getElementById('statusFilter').value;
                console.log('اعمال فیلتر سرمایه‌گذاری:', { status: statusFilter });
                alert('فیلتر وضعیت اعمال شد');
            }

            // توابع ارتباط با کاربر
            function contactUser() {
                if (confirm('آیا مایل به برقراری تماس با کاربر هستید؟')) {
                    alert('در حال برقراری تماس با کاربر...');
                }
            }

            // مدیریت فرم تسویه حساب
            document.getElementById('settlementForm').addEventListener('submit', function(e) {
                e.preventDefault();
                const amount = document.getElementById('settlementAmount').value;
                const paymentMethod = document.getElementById('paymentMethod').value;
                const description = document.getElementById('settlementDescription').value;

                if (confirm(`آیا از تسویه حساب به مبلغ ${parseInt(amount).toLocaleString()} ریال با روش ${paymentMethod} اطمینان دارید؟`)) {
                    console.log('تسویه حساب:', { amount, paymentMethod, description });
                    alert('تسویه حساب با موفقیت انجام شد');
                    closeSettlementModal();
                }
            });

            // مدیریت منوی سایدبار
            document.getElementById('sidebarToggle').addEventListener('click', function() {
                if (window.innerWidth < 768) {
                    toggleMobileSidebar();
                } else {
                    toggleSidebar();
                }
            });

            // بستن منوها هنگام کلیک خارج
            document.addEventListener('click', function(event) {
                const profileDropdown = document.getElementById('profileDropdown');
                const profileButton = event.target.closest('button[onclick="toggleProfileDropdown()"]');

                if (profileDropdown && !profileDropdown.contains(event.target) && !profileButton) {
                    profileDropdown.classList.add('hidden');
                }

                // بستن سایدبار موبایل هنگام کلیک خارج
                if (window.innerWidth < 768 &&
                    !event.target.closest('.admin-sidebar') &&
                    !event.target.closest('#sidebarToggle')) {
                    document.body.classList.remove('sidebar-mobile-open');
                }
            });

            // استایل‌های چاپ
            const printStyle = document.createElement('style');
            printStyle.textContent = `
                @@media print {
                    .btn, #sidebarToggle, .admin-sidebar, footer {
                        display: none !important;
                    }
                    .admin-main {
                        margin-right: 0 !important;
                    }
                    .card {
                        box-shadow: none !important;
                        border: 1px solid #ddd !important;
                    }
                    .stat-card {
                        break-inside: avoid;
                    }
                }
            `;
            document.head.appendChild(printStyle);
        </script>
        <script>
            // نمایش خودکار پیام‌های TempData
            function showTempDataMessages() {
            // موفقیت
            @if (TempData["Success"] != null)
            {
                    <text>
                        Alert.success(decodePersianText('@TempData["Success"]'));
                    </text>
            }

            // خطا
            @if (TempData["Error"] != null)
            {
                    <text>
                        const errorMsg = decodePersianText('@TempData["Error"]');
                        if (errorMsg.includes('404') || errorMsg.includes('یافت نشد')) {
                        Alert.notFound(errorMsg);
                        } else if (errorMsg.includes('500') || errorMsg.includes('سرور')) {
                        Alert.serverError(errorMsg);
                        } else if (errorMsg.includes('400') || errorMsg.includes('نامعتبر')) {
                        Alert.badRequest(errorMsg);
                        } else if (errorMsg.includes('401') || errorMsg.includes('دسترسی')) {
                        Alert.unauthorized(errorMsg);
                        } else {
                        Alert.error(errorMsg);
                        }
                    </text>
            }

            // هشدار
            @if (TempData["Warning"] != null)
            {
                    <text>
                        const warningMsg = decodePersianText('@TempData["Warning"]');
                        if (warningMsg.includes('اعتبارسنجی') || warningMsg.includes('بررسی')) {
                        Alert.validationWarning(warningMsg);
                        } else if (warningMsg.includes('مالی') || warningMsg.includes('موجودی')) {
                        Alert.financialWarning(warningMsg);
                        } else if (warningMsg.includes('امنیتی') || warningMsg.includes('غیرامن')) {
                        Alert.securityWarning(warningMsg);
                        } else {
                        Alert.warning(warningMsg);
                        }
                    </text>
            }

            // اطلاعیه
            @if (TempData["Info"] != null)
            {
                    <text>
                        const infoMsg = decodePersianText('@TempData["Info"]');
                        if (infoMsg.includes('سیستم') || infoMsg.includes('بروزرسانی')) {
                        Alert.systemInfo(infoMsg);
                        } else if (infoMsg.includes('مالی') || infoMsg.includes('تراکنش')) {
                        Alert.financialInfo(infoMsg);
                        } else {
                        Alert.info(infoMsg);
                        }
                    </text>
            }
            }
        </script>
        <script src="~/Alert.js"></script>
</body>
