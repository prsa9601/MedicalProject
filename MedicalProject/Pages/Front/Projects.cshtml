@model MedicalProject.Pages.Front.ProjectsModel
@{
    ViewData["Title"] = "پروژه‌های سرمایه‌گذاری";
}


@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>

        /* استایل‌های آیکون‌ها */
        .stat-item i {
            width: 1rem;
            text-align: center;
            color: #6b7280;
            font-style: normal;
        }

        .view-btn i {
            font-style: normal;
        }

        .page-btn i {
            font-style: normal;
        }

        .btn-icon i {
            font-style: normal;
        }

        /* اطمینان از لود فونت */
        .fas, .far, .fab {
            font-family: 'Font Awesome 6 Free', 'Font Awesome 6 Brands' !important;
            font-weight: 900;
        }

        /* استایل‌های سفارشی برای صفحه پروژه‌ها */
        .projects-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
            gap: 1.5rem;
        }

        .project-card {
            background: white;
            border-radius: 1rem;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
            border: 1px solid #e5e7eb;
            transition: all 0.3s ease;
            overflow: hidden;
        }

            .project-card:hover {
                transform: translateY(-4px);
                box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
            }

        .project-image {
            position: relative;
            height: 200px;
            overflow: hidden;
        }

            .project-image img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                transition: transform 0.3s ease;
            }

        .project-card:hover .project-image img {
            transform: scale(1.05);
        }

        .project-badges {
            position: absolute;
            top: 0.75rem;
            left: 0.75rem;
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
        }

        .project-content {
            padding: 1.25rem;
        }

        .project-title {
            font-size: 1.125rem;
            font-weight: 600;
            color: #111827;
            margin-bottom: 0.5rem;
            line-height: 1.4;
        }

        .project-description {
            color: #6b7280;
            font-size: 0.875rem;
            line-height: 1.5;
            margin-bottom: 1rem;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        .project-stats {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 0.75rem;
            margin-bottom: 1rem;
        }

        .stat-item {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 0.875rem;
            color: #4b5563;
        }

            .stat-item i {
                width: 1rem;
                text-align: center;
                color: #6b7280;
            }

        .progress-bar {
            width: 100%;
            height: 6px;
            background-color: #e5e7eb;
            border-radius: 3px;
            overflow: hidden;
            margin-bottom: 0.5rem;
        }

        .progress-fill {
            height: 100%;
            background: linear-gradient(90deg, #3b82f6, #2563eb);
            border-radius: 3px;
            transition: width 0.5s ease;
        }

        .progress-info {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1rem;
        }

        .progress-percentage {
            font-weight: 600;
            color: #2563eb;
        }

        .progress-text {
            font-size: 0.75rem;
            color: #6b7280;
        }

        .project-pricing {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding-top: 1rem;
            border-top: 1px solid #f3f4f6;
        }

        .price-item {
            display: flex;
            flex-direction: column;
        }

        .price-label {
            font-size: 0.75rem;
            color: #6b7280;
            margin-bottom: 0.25rem;
        }

        .price-value {
            font-weight: 600;
            color: #111827;
        }

            .price-value.primary {
                color: #2563eb;
            }

        /* حالت‌های نمایش */
        .view-toggle {
            display: flex;
            gap: 0.5rem;
            background: white;
            border: 1px solid #e5e7eb;
            border-radius: 0.5rem;
            padding: 0.25rem;
        }

        .view-btn {
            padding: 0.5rem;
            border-radius: 0.375rem;
            border: none;
            background: transparent;
            color: #6b7280;
            cursor: pointer;
            transition: all 0.2s ease;
        }

            .view-btn:hover {
                background: #f3f4f6;
                color: #374151;
            }

            .view-btn.active {
                background: #3b82f6;
                color: white;
            }

        /* حالت لیست */
        .projects-grid.list-view {
            grid-template-columns: 1fr;
        }

            .projects-grid.list-view .project-card {
                display: flex;
                height: 200px;
            }

            .projects-grid.list-view .project-image {
                width: 300px;
                height: 100%;
                flex-shrink: 0;
            }

            .projects-grid.list-view .project-content {
                flex: 1;
                display: flex;
                flex-direction: column;
                justify-content: space-between;
            }

        /* صفحه‌بندی */
        .pagination {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 0.5rem;
            margin-top: 2rem;
        }

        .page-btn {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 2.5rem;
            height: 2.5rem;
            border: 1px solid #d1d5db;
            border-radius: 0.5rem;
            background: white;
            color: #374151;
            font-size: 0.875rem;
            cursor: pointer;
            transition: all 0.2s ease;
        }

            .page-btn:hover:not(.disabled) {
                background: #f3f4f6;
                border-color: #9ca3af;
            }

            .page-btn.active {
                background: #3b82f6;
                border-color: #3b82f6;
                color: white;
            }

            .page-btn.disabled {
                opacity: 0.5;
                cursor: not-allowed;
            }

        /* اسکلت لودینگ */
        .skeleton {
            background: linear-gradient(90deg, #f3f4f6 25%, #e5e7eb 50%, #f3f4f6 75%);
            background-size: 200% 100%;
            animation: loading 1.5s infinite;
            border-radius: 0.375rem;
        }

        .skeleton-image {
            height: 200px;
            width: 100%;
        }

        .skeleton-text {
            height: 1rem;
            margin-bottom: 0.5rem;
        }

            .skeleton-text.short {
                width: 60%;
            }

            .skeleton-text.medium {
                width: 80%;
            }

        @@keyframes loading {
            0% {
                background-position: 200% 0;
            }

            100% {
                background-position: -200% 0;
            }
        }

        /* رسپانسیو */
        @@media (max-width: 1024px) {
            .projects-grid {
                grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            }
        }

        @@media (max-width: 768px) {
            .projects-grid {
                grid-template-columns: 1fr;
            }

                .projects-grid.list-view .project-card {
                    flex-direction: column;
                    height: auto;
                }

                .projects-grid.list-view .project-image {
                    width: 100%;
                    height: 200px;
                }

            .project-stats {
                grid-template-columns: 1fr;
            }
        }

        /* انیمیشن‌های سفارشی */
        .fade-in {
            animation: fadeIn 0.5s ease-in;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .slide-in {
            animation: slideIn 0.3s ease-out;
        }

        @@keyframes slideIn {
            from {
                opacity: 0;
                transform: translateX(-20px);
            }

            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        /* استایل‌های خاص برای محتوای فارسی */
        .persian-numbers {
            font-family: 'Vazir', 'IRANSans', system-ui, sans-serif;
        }

        .text-lead {
            line-height: 1.7;
            text-align: justify;
        }

        /* دکمه‌های اکشن */
        .action-buttons {
            display: flex;
            gap: 0.75rem;
            margin-top: 1rem;
        }

        .btn-icon {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 2.5rem;
            height: 2.5rem;
            border-radius: 0.5rem;
            border: 1px solid #e5e7eb;
            background: white;
            color: #6b7280;
            cursor: pointer;
            transition: all 0.2s ease;
        }

            .btn-icon:hover {
                background: #f3f4f6;
                color: #374151;
            }

            .btn-icon.primary {
                background: #3b82f6;
                border-color: #3b82f6;
                color: white;
            }

                .btn-icon.primary:hover {
                    background: #2563eb;
                }
    </style>
}

<div class="min-h-screen bg-gray-50">
    <!-- هدر صفحه -->
    <div class="bg-white shadow-sm border-b border-gray-200">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
            <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-6">
                <div class="flex-1">
                    <h1 class="text-3xl font-bold text-gray-900 mb-2">پروژه‌های سرمایه‌گذاری</h1>
                    <p class="text-gray-600 text-lg">فرصت‌های سرمایه‌گذاری مطمئن در تجهیزات پزشکی و صنعتی</p>
                </div>

                <div class="flex items-center gap-4">
                </div>
            </div>
        </div>
    </div>

    <!-- محتوای اصلی -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="flex flex-col">
            <!-- اطلاعات آماری -->
            <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-6">
                <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                    <div class="text-center">
                        <div class="text-2xl font-bold text-blue-600">@(ProductNumber(Model.Result))</div>
                        <div class="text-sm text-gray-600">پروژه فعال</div>
                    </div>
                    <div class="text-center">
                        <div class="text-2xl font-bold text-green-600">@(InvestmentPrice(Model.Result))M </div>
                        <div class="text-sm text-gray-600">تومان سرمایه‌گذاری</div>
                    </div>
                    <div class="text-center">
                        <div class="text-2xl font-bold text-purple-600">@(InvestmentNumber(Model.Result).ToString("N0"))</div>
                        <div class="text-sm text-gray-600">سرمایه‌گذار</div>
                    </div>
                    <div class="text-center">
                        <div class="text-2xl font-bold text-orange-600">@AverageProfit(Model.Result)%</div>
                        <div class="text-sm text-gray-600">میانگین سود</div>
                    </div>
                </div>
            </div>
            @functions
            {
                private decimal InvestmentNumber(ProductFilterForIndexPageResult model)
                {

                    int res = 0;
                    foreach (var item in model.Data)
                    {
                        res += item.PurchaseReportDto.Count();
                    }
                    return res;

                }
                private string InvestmentPrice(ProductFilterForIndexPageResult model)
                {
                    decimal res = 0;
                    foreach (var item in model.Data)
                    {
                        var sum = item.PurchaseReportDto.Sum(i => decimal.Parse(i.TotalPrice));
                        res += sum;
                    }
                    return (res / 1000000).ToString("F2");
                }

                private int ProductNumber(ProductFilterForIndexPageResult model)
                {
                    return model.Data.Where(i => i.Status != Models.Product.ProductStatus.NotActive).Count();
                }

                private int AverageProfit(ProductFilterForIndexPageResult model)
                {
                    var profit = (model.Data.Sum(i => decimal.Parse(i.InventoryDto.Profit)) * 100);
                    var price = ((model.Data.Sum(i => decimal.Parse(i.InventoryDto.TotalPrice))));
                    var average = profit / price;

                    return Convert.ToInt32(average);
                }

            }
            <!-- گرید پروژه‌ها -->
            <div id="projectsContainer">
                <div class="projects-grid" id="projectsGrid">
                    @{
                        foreach (var item in Model.Result.Data)
                        {
                            <div class="project-card fade-in">
                                <div class="project-image">
                                    <img src="@Directories.GetProductImagePathPath(item.ImageName)" alt="@item.Title" loading="lazy">
                                    <div class="project-badges">
                                        <span class="badge @(item.Status == Models.Product.ProductStatus.IsActive ? "active" :
                                                                                                                                                                                                                                                                                                                                  item.Status == Models.Product.ProductStatus.NotActive ? "deactive" :
                                                                                                                                                                                                                                                                                                                                  item.Status == Models.Product.ProductStatus.IsDone ? "isdone" : "") badge-success">
                                            @(item.Status == Models.Product.ProductStatus.IsActive ? "فعال" :
                                                                                item.Status == Models.Product.ProductStatus.NotActive ? "غیرفعال" :
                                                                                item.Status == Models.Product.ProductStatus.IsDone ? "تکمیل شده" :
                                                                                "نامشخص")
                                </span>
                            </div>
                        </div>
                        <div class="project-content">
                            <h3 class="project-title">@item.Title</h3>
                            <p class="project-description">@item.Description</p>

                                    <div class="progress-bar">
                                        <div class="progress-fill" style="width:
                                                                @(CalculateProgress(item.PurchaseReportDto.Sum(i => i.PurchaseDang)).ToString("F2"))%"></div>
                                    </div>
                                    <div class="progress-info">
                                        <span class="progress-percentage">@(CalculateProgress(item.PurchaseReportDto.Sum(i => i.PurchaseDang)).ToString("F2"))%</span>
                                        <span class="progress-text">پیشرفت تأمین مالی</span>
                                    </div>

                                    <div class="project-stats">
                                        <div class="stat-item">
                                            <i class="fas fa-chart-line"></i>
                                            <span>@($"{item.InventoryDto?.Profit} سود هر دانگ" ?? "ثبت نشده است")</span>
                                        </div>
                                        <div class="stat-item">
                                            <i class="fas fa-clock"></i>
                                            <span>@($"تاریخ سوددهی {item.InventoryDto?.ProfitableTime}" ?? "ثبت نشده است")</span>
                                        </div>
                                        <div class="stat-item">
                                            <i class="fas fa-map-marker-alt"></i>
                                            <span></span>
                                        </div>
                                        <div class="stat-item">
                                            <i class="fas fa-users"></i>
                                            <span>@(item.InventoryDto?.Dong ?? 6) سهم</span>
                                        </div>
                                    </div>

                                    <div class="project-pricing">
                                        <div class="price-item">
                                            <span class="price-label">قیمت هر سهم</span>
                                            <span class="price-value persian-numbers">
                                                @(item.InventoryDto?.PricePerDong != null ? $"{item.InventoryDto.PricePerDong:N0} ریال" : "قیمت ثبت نشده")
                                            </span>
                                        </div>
                                        <div class="price-item">
                                            <span class="price-label">حداقل سرمایه</span>
                                            <span class="price-value primary persian-numbers">
                                                @((ConvertToDecimal(item.InventoryDto?.PricePerDong) / 2)?.ToString("N0") ?? "0") ریال
                                            </span>
                                        </div>
                                    </div>

                                    <div class="action-buttons">
                                        <a href="/Front/Projects/Details?slug=@item.Slug" class="flex-1 bg-blue-600 text-white py-2 px-4 rounded-lg hover:bg-blue-700 transition-colors text-center font-medium">
                                            مشاهده جزئیات
                                        </a>
                                    </div>
                                </div>
                            </div>
                                        }
                    }
                    <!-- پروژه‌ها اینجا رندر می‌شوند -->

                </div>

                <!-- صفحه‌بندی -->
                <!-- صفحه‌بندی -->
                @if (Model.Result?.Data?.Any() == true && Model.Result.PageCount > 1)
                {
                    <div class="pagination">
                        <!-- دکمه قبلی -->
                        @if (Model.Result.FilterParams.PageId > 1)
                        {
                            <a href="?pageId=@(Model.Result.FilterParams.PageId - 1)&take=@Model.Result.FilterParams.Take"
                               class="page-btn">
                                <i class="fas fa-chevron-right"></i>
                            </a>
                        }
                        else
                        {
                            <span class="page-btn disabled">
                                <i class="fas fa-chevron-right"></i>
                            </span>
                        }

                        <!-- صفحات -->
                        @{
                            var currentPage = Model.Result.FilterParams.PageId;
                            var totalPages = Model.Result.PageCount;
                            var startPage = Math.Max(1, currentPage - 2);
                            var endPage = Math.Min(totalPages, currentPage + 2);
                        }

                        @if (startPage > 1)
                        {
                            <a href="?pageId=1&take=@Model.Result.FilterParams.Take" class="page-btn">1</a>
                            @if (startPage > 2)
                            {
                                <span class="px-2 text-gray-500">...</span>
                            }
                        }

                        @for (int i = startPage; i <= endPage; i++)
                        {
                            if (i == currentPage)
                            {
                                <span class="page-btn active">@i</span>
                            }
                            else
                            {
                                <a href="?pageId=@i&take=@Model.Result.FilterParams.Take" class="page-btn">@i</a>
                            }
                        }

                        @if (endPage < totalPages)
                        {
                            @if (endPage < totalPages - 1)
                            {
                                <span class="px-2 text-gray-500">...</span>
                            }
                            <a href="?pageId=@totalPages&take=@Model.Result.FilterParams.Take" class="page-btn">@totalPages</a>
                        }

                        <!-- دکمه بعدی -->
                        @if (Model.Result.FilterParams.PageId < Model.Result.PageCount)
                        {
                            <a href="?pageId=@(Model.Result.FilterParams.PageId + 1)&take=@Model.Result.FilterParams.Take"
                               class="page-btn">
                                <i class="fas fa-chevron-left"></i>
                            </a>
                        }
                        else
                        {
                            <span class="page-btn disabled">
                                <i class="fas fa-chevron-left"></i>
                            </span>
                        }
                    </div>
                }

                @*  <div class="pagination">
                    <button class="page-btn disabled">
                        <i class="fas fa-chevron-right"></i>
                    </button>
                    <button class="page-btn active">1</button>
                    <button class="page-btn">2</button>
                    <button class="page-btn">3</button>
                    <span class="px-2 text-gray-500">...</span>
                    <button class="page-btn">8</button>
                    <button class="page-btn">
                        <i class="fas fa-chevron-left"></i>
                    </button>
                </div> *@
            </div>
        </div>
    </div>
</div>
@functions {
    public decimal? ConvertToDecimal(object value)
    {
        if (value == null) return null;
        return decimal.TryParse(value.ToString(), out decimal result) ? result : null;
    }
}
@functions {
    private double CalculateProgress(double sum)
    {
        if (sum == 0 || sum == null) return 0;
        return (sum * 100) / 6;
    }
}

