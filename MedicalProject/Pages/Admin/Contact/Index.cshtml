            document.body.classList.toggle('sidebar-collapsed');
        }

        function toggleMobileSidebar() {
            document.body.classList.toggle('sidebar-mobile-open');
        }

        function toggleProfileDropdown() {
            const dropdown = document.getElementById('profileDropdown');
            dropdown.classList.toggle('hidden');
        }

        // مدیریت منوی سایدبار
        document.getElementById('sidebarToggle').addEventListener('click', function() {
            if (window.innerWidth < 768) {
                toggleMobileSidebar();
            } else {
                toggleSidebar();
            }
        });

        // تابع نمایش/بستن متن کامل
        function toggleFullText(element, fullText) {
            if (element.classList.contains('truncate-text-expanded')) {
                element.classList.remove('truncate-text-expanded');
                element.textContent = fullText.length > 30 ? fullText.substring(0, 30) + '...' : fullText;
            } else {
                element.classList.add('truncate-text-expanded');
                element.textContent = fullText;
            }
        }

        // توابع مخصوص مدیریت تماس‌ها
        let currentContactId = null;

        // تابع نمایش جزئیات تماس
        async function showContactDetails(contactId) {
            currentContactId = contactId;

            // شبیه‌سازی دریافت اطلاعات از سرور
            try {
                // در حالت واقعی باید از API استفاده شود
                const formData = new FormData();
                formData.append('id', contactId);

                const response = await fetch('?handler=ContactDetails', {
                    method: 'Post',
                    body: formData,
                    headers: {
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    }
                });

                if (response.ok) {
                    const data = await response.json();
                    // پر کردن اطلاعات در مودال
                    document.getElementById('contactFullName').textContent = data.fullName || '-';
                    document.getElementById('contactPhoneNumber').textContent = data.phoneNumber || '-';
                    document.getElementById('contactEmail').textContent = data.email || '-';
                    document.getElementById('contactTitle').textContent = data.title || '-';
                    document.getElementById('contactDescription').textContent = data.description || '-';
                    document.getElementById('contactDate').textContent = data.creationDate ? new Date(data.creationDate).toLocaleDateString('fa-IR') : '-';
                    document.getElementById('contactTime').textContent = data.creationDate ? new Date(data.creationDate).toLocaleTimeString('fa-IR') : '-';
                    document.getElementById('contactId').textContent = contactId;

                    // تنظیم وضعیت
                    const statusElement = document.getElementById('contactStatus');
                    const markBtn = document.getElementById('markAsAnsweredBtn');

                    if (data.status === 'New') {
                        statusElement.innerHTML = '<span class="badge badge-new"><i class="fas fa-clock ml-1"></i> جدید</span>';
                        markBtn.style.display = 'inline-flex';
                    } else if (data.status === 'Answered') {
                        statusElement.innerHTML = '<span class="badge badge-answered"><i class="fas fa-check ml-1"></i> پاسخ داده شده</span>';
                        markBtn.style.display = 'none';
                    }

                } else {
                    // اگر API موجود نبود، از اطلاعات جدول استفاده کن
                    const row = document.querySelector(`input[value="${contactId}"]`)?.closest('tr');
                    if (row) {
                        const cells = row.querySelectorAll('td');

                        document.getElementById('contactFullName').textContent = cells[2]?.querySelector('.truncate-text')?.textContent || '-';
                        document.getElementById('contactPhoneNumber').textContent = cells[3]?.querySelector('.truncate-text')?.textContent || '-';
                        document.getElementById('contactEmail').textContent = cells[4]?.querySelector('.truncate-text')?.textContent || '-';
                        document.getElementById('contactTitle').textContent = cells[5]?.querySelector('.truncate-text')?.textContent || '-';
                        document.getElementById('contactDescription').textContent = cells[6]?.querySelector('.truncate-text')?.textContent || '-';

                        const dateCell = cells[8];
                        const dateParts = dateCell.textContent.trim().split('\n');
                        document.getElementById('contactDate').textContent = dateParts[0]?.trim() || '-';
                        document.getElementById('contactTime').textContent = dateParts[1]?.trim() || '-';

                        document.getElementById('contactId').textContent = contactId;

                        // تنظیم وضعیت
                        const statusBadge = cells[7]?.querySelector('.badge');
                        const markBtn = document.getElementById('markAsAnsweredBtn');

                        if (statusBadge) {
                            document.getElementById('contactStatus').innerHTML = statusBadge.outerHTML;
                            if (statusBadge.classList.contains('badge-new')) {
                                markBtn.style.display = 'inline-flex';
                            } else {
                                markBtn.style.display = 'none';
                            }
                        }
                    }
                }
            } catch (error) {
                console.error('Error fetching contact details:', error);
                // Fallback به اطلاعات جدول
                const row = document.querySelector(`input[value="${contactId}"]`)?.closest('tr');
                if (row) {
                    const cells = row.querySelectorAll('td');
                    // ... همان کد fallback بالا
                }
            }

            document.getElementById('contactDetailsModal').classList.remove('hidden');
            document.body.style.overflow = 'hidden';
        }

        function closeContactDetailsModal() {
            document.getElementById('contactDetailsModal').classList.add('hidden');
            document.body.style.overflow = 'auto';
            currentContactId = null;
        }

        // علامت گذاری به عنوان پاسخ داده شده
