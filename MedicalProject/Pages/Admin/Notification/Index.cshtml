    <style>
        /* استایل‌های مخصوص پنل ادمین */
        .admin-sidebar {
            width: 260px;
            background: linear-gradient(180deg, #1e40af 0%, #1e3a8a 100%);
            color: white;
            transition: all 0.3s ease-in-out;
            height: 100vh;
            overflow-y: auto;
            z-index: 40;
        }

        .admin-main {
            margin-right: 260px;
            transition: all 0.3s ease-in-out;
            width: 100%;
        }

        .admin-content {
            min-height: calc(100vh - 64px);
        }

        .sidebar-collapsed .admin-sidebar {
            width: 70px;
        }

        .sidebar-collapsed .admin-main {
            margin-right: 70px;
        }

        /* افزودن overlay برای موبایل */
        .sidebar-overlay {
            display: none;
            position: fixed;
            top: 0;
            right: 0;
            bottom: 0;
            left: 0;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 35;
            transition: opacity 0.3s ease-in-out;
        }

        .sidebar-mobile-open .sidebar-overlay {
            display: block;
            animation: fadeIn 0.3s ease-in-out;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
            }

            to {
                opacity: 1;
            }
        }

        /* Responsive برای تبلت‌ها */
        @@media (max-width: 1024px) {
            .admin-sidebar {
                width: 70px;
                position: fixed;
                right: 0;
                top: 0;
            }

            .admin-main {
                margin-right: 70px;
            }

            .sidebar-link span {
                display: none;
            }
        }

        /* Responsive برای موبایل‌ها */
        @@media (max-width: 768px) {
            .admin-sidebar {
                position: fixed;
                right: -260px;
                z-index: 40;
                height: 100vh;
                width: 260px;
                transition: right 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            }

            .admin-main {
                margin-right: 0;
                width: 100%;
                transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            }

            .sidebar-mobile-open .admin-sidebar {
                right: 0;
                box-shadow: -2px 0 15px rgba(0, 0, 0, 0.1);
            }

            .sidebar-mobile-open .admin-main {
                transform: translateX(-260px);
            }

            .sidebar-link span {
                display: block !important;
            }
            /* جلوگیری از اسکرول بدنه هنگام باز بودن سایدبار */
            body.sidebar-mobile-open {
                overflow: hidden;
            }
        }

        /* برای موبایل‌های کوچکتر */
        @@media (max-width: 480px) {
            .admin-sidebar {
                width: 240px;
                right: -240px;
            }

            .sidebar-mobile-open .admin-main {
                transform: translateX(-240px);
            }
        }
    </style>
    <script>
                // توابع مدیریت پنل ادمین
        function toggleSidebar() {
            document.body.classList.toggle('sidebar-collapsed');
        }

        function toggleMobileSidebar() {
            const body = document.body;
            body.classList.toggle('sidebar-mobile-open');

            // جلوگیری از اسکرول بدنه هنگام باز بودن سایدبار
            if (body.classList.contains('sidebar-mobile-open')) {
                document.body.style.overflow = 'hidden';
            } else {
                document.body.style.overflow = 'auto';
            }
        }

        function closeMobileSidebar() {
            document.body.classList.remove('sidebar-mobile-open');
            document.body.style.overflow = 'auto';
        }

        function toggleProfileDropdown() {
            const dropdown = document.getElementById('profileDropdown');
            dropdown.classList.toggle('hidden');
        }

        // مدیریت منوی سایدبار
        document.getElementById('sidebarToggle').addEventListener('click', function(e) {
            e.stopPropagation();
            if (window.innerWidth < 768) {
                toggleMobileSidebar();
            } else {
                toggleSidebar();
            }
        });

        // بستن سایدبار هنگام کلیک روی overlay
        document.getElementById('sidebarOverlay')?.addEventListener('click', function(e) {
            e.stopPropagation();
            closeMobileSidebar();
        });

        // بستن سایدبار هنگام کلیک روی لینک‌های سایدبار در موبایل (اصلاح شده)
        document.querySelectorAll('.sidebar-link').forEach(link => {
            link.addEventListener('click', function(e) {
                // بررسی می‌کنیم آیا این یک لینک واقعی است یا دکمه/عنصر دیگر
                const href = this.getAttribute('href');
                const tagName = this.tagName.toLowerCase();

                if (window.innerWidth < 768) {
                    // اگر یک لینک واقعی نیست (مثلاً button یا span) یا لینک خاصی نیست
                    if (tagName !== 'a' || !href || href === '#' || href === 'javascript:void(0)') {
                        e.stopPropagation();
                        e.preventDefault();
                        closeMobileSidebar();
                    } else {
                        // اگر لینک واقعی است، سایدبار را با تأخیر ببندید تا کاربر بتواند کلیک کند
                        setTimeout(() => {
                            closeMobileSidebar();
                        }, 300);
                    }
                }
            });
        });

        // بستن سایدبار موبایل هنگام تغییر سایز صفحه به بزرگتر از 768px
        window.addEventListener('resize', function() {
            if (window.innerWidth >= 768) {
                closeMobileSidebar();
                document.body.style.overflow = 'auto';
            }
        });

        // جلوگیری از بستن سایدبار هنگام کلیک روی خود سایدبار
        document.querySelector('.admin-sidebar')?.addEventListener('click', function(e) {
            e.stopPropagation();
        });

        // بستن منوها هنگام کلیک خارج
        document.addEventListener('click', function(event) {
            const profileDropdown = document.getElementById('profileDropdown');
            const profileButton = event.target.closest('button[onclick="toggleProfileDropdown()"]');

            if (profileDropdown && !profileDropdown.contains(event.target) && !profileButton) {
                profileDropdown.classList.add('hidden');
            }
        });
    </script>
