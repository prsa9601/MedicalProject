@page
@using MedicalProject.Infrastructure
@using MedicalProject.Infrastructure.Extensions
@using MedicalProject.Infrastructure.ProfitUtil
@using MedicalProject.Infrastructure.Utils
@using MedicalProject.Models.PurchaseReport
@model MedicalProject.Pages.Account.ProductReportModel
@{
    ViewData["Title"] = "وضعیت سودهای من - پلتفرم دنگ";

    // مقادیر پیش‌فرض برای جلوگیری از خطاهای نال
    var totalInvestment = Model.Result.InvestmentCount;
    var totalPaidProfit = Model.UserProfitSummary?.TotalPaidProfit ?? 0;
    var totalUnpaidProfit = Model.UserProfitSummary?.TotalUnpaidProfit ?? 0;
    var totalExpectedProfit = Model.UserProfitSummary?.TotalExpectedProfit ?? 0;
    var isDebtor = Model.UserProfitSummary?.IsDebtor ?? false;
    var unpaidPeriodsCount = Model.UserProfitSummary?.UnpaidPeriodsCount ?? 0;
    var paidPeriodsCount = Model.UserProfitSummary?.PaidPeriodsCount ?? 0;
    var orders = Model.UserProfitSummary?.Orders ?? new List<OrderProfitSummary>();
    var paidProfits = Model.PaidProfits ?? new List<ProfitPurchaseReportDto>();
    // var unpaidPeriods = Model.Result. ?? new List<UnpaidProfit>();
    var userName = $"{Model.Result.FirstName} {Model.Result.Lastame}" ?? "کاربر";
    var phoneNumber = Model.Result.PhoneNumber ?? "";
}

<div class="header">
    <div class="container">
        <div class="header-content">
            <div class="header-title">
                <h1>وضعیت سودهای من</h1>
                <p>پیگیری و مدیریت سودهای پرداختی و پرداخت نشده</p>
            </div>
            <div class="header-actions">
                <a href="/Account/Investment" class="btn btn-secondary">
                    <i class="fas fa-arrow-right"></i>
                    بازگشت به سرمایه‌گذاری‌ها
                </a>
                <a href="/Account/Profile" class="btn btn-outline">
                    <i class="fas fa-user"></i>
                    پروفایل
                </a>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <!-- Summary Cards -->
    <div class="stats-grid">
        <div class="stat-card">
            <div class="stat-value">@Model.Result.InvestmentCount.ToString("N0") ریال</div>
            <div class="stat-label">کل سرمایه‌گذاری</div>
        </div>
        <div class="stat-card">
            <div class="stat-value">@totalPaidProfit.ToString("N0") ریال</div>
            <div class="stat-label">سود پرداخت شده</div>
        </div>
        <div class="stat-card">
            <div class="stat-value">@totalUnpaidProfit.ToString("N0") ریال</div>
            <div class="stat-label">سود پرداخت نشده</div>
        </div>
        <div class="stat-card">
            <div class="stat-value">
                @if (isDebtor)
                {
                    <span class="status-danger">
                        <i class="fas fa-exclamation-circle"></i>
                        بدهکار
                    </span>
                }
                else
                {
                    <span class="status-success">
                        <i class="fas fa-check-circle"></i>
                        بی‌حساب
                    </span>
                }
            </div>
            <div class="stat-label">وضعیت تسویه</div>
        </div>
    </div>

    <!-- Tabs -->
    <div class="tabs-container">
        <div class="tabs">
            <input type="radio" id="tab-unpaid" name="profit-tabs" class="tab-radio" checked>
            <label for="tab-unpaid" class="tab-label" onclick="showTab('unpaid')">
                <i class="fas fa-clock"></i>
                وضعیت سودها
                @if (unpaidPeriodsCount > 0)
                {
                    <span class="badge badge-danger">@unpaidPeriodsCount</span>
                }
            </label>

            <input type="radio" id="tab-paid" name="profit-tabs" class="tab-radio">
           

            <input type="radio" id="tab-summary" name="profit-tabs" class="tab-radio">
            <label for="tab-summary" class="tab-label" onclick="showTab('summary')">
                <i class="fas fa-chart-pie"></i>
                خلاصه وضعیت
            </label>
        </div>
    </div>

    <!-- Unpaid Profits Tab -->
    <div id="unpaid-tab" class="tab-content">
        @if (unpaidPeriodsCount == 0)
        {
            <div class="empty-state">
                <div class="empty-icon">
                    <i class="fas fa-check-circle"></i>
                </div>
                <h3>هیچ سود پرداخت نشده‌ای وجود ندارد</h3>
                <p>شما تمام سودهای خود را دریافت کرده‌اید.</p>
            </div>
        }
        else
        {
            <div class="section-header">
                <h2>سودهای پرداخت نشده</h2>
                <div class="section-summary">
                    <span class="total-amount">@totalUnpaidProfit.ToString("N0") ریال</span>
                    <span class="total-count">@unpaidPeriodsCount دوره</span>
                </div>
            </div>

            @if (Model.Result.OrderDtos != null)
            {
                foreach (var item in Model.Result.OrderDtos)
                {
                    <div class="order-card">
                        <div class="order-header">
                            <div class="order-info">
                                <h3>سفارش شماره: @(item.Id != Guid.Empty ? item.Id.ToString().Substring(0, 8) : "---")...</h3>
                                <div class="order-meta">
                                    <span class="order-date">
                                        <i class="fas fa-calendar"></i>
                                        @(item.DateOfPurchase != default ? item.DateOfPurchase.ToPersianDate() : "---")
                                    </span>
                                    <span class="order-amount">
                                        <i class="fas fa-wallet"></i>
                                        @item.OrderItems.TotalPrice.ToString("N0") ریال
                                    </span>
                                </div>
                            </div>
                            <div class="order-total">
                                <span class="amount-label">سود پرداخت نشده این سفارش:</span>
                                <span class="amount-value">@item.OrderItems.Product.Unpaid.SafeSum(i => i.ExpectedAmount).ToString("N0") ریال</span>
                            </div>
                        </div>

                        @if (Model.Result.OrderDtos != null)
                        {
                            <div class="products-grid">
                               @*  @foreach (var item2 in Model.Result.OrderDtos)
                                { *@
                                    <div class="product-card">
                                        <div class="product-header">
                                            <div class="product-info">
                                                <h4>@(!string.IsNullOrEmpty(item.OrderItems.Product.Title) ? item.OrderItems.Product.Title : "محصول ناشناس")</h4>
                                                <div class="product-details">
                                                    <span class="detail-item">
                                                        <i class="fas fa-layer-group"></i>
                                                        @item.OrderItems.DongAmount دنگ
                                                    </span>
                                                    <span class="detail-item">
                                                        <i class="fas fa-money-bill-wave"></i>
                                                        @item.OrderItems.TotalPrice.ToString("N0") ریال
                                                    </span>
                                                </div>
                                            </div>
                                            <div class="product-status">
                                                <span class="status-badge status-warning">
                                                    <i class="fas fa-clock"></i>
                                                    در انتظار پرداخت
                                                </span>
                                            </div>
                                        </div>

                                        <div class="profit-details">
                                            <div class="detail-row">
                                                <span>سود پرداخت شده:</span>
                                                <span class="amount paid">@item.OrderItems.Product.Paid.SafeSum(i => i.ExpectedAmount).ToString("N0") ریال</span>
                                            </div>
                                            <div class="detail-row">
                                                <span>سود پرداخت نشده:</span>
                                                <span class="amount unpaid">@item.OrderItems.Product.Unpaid.SafeSum(i => i.ExpectedAmount).ToString("N0") ریال</span>
                                            </div>
                                            <div class="detail-row">
                                                <span>دوره‌های پرداخت شده:</span>
                                                <span>@item.OrderItems.Product.Paid.Count() از @(@item.OrderItems.Product.Paid.Count()+@item.OrderItems.Product.Unpaid.Count())</span>
                                            </div>
                                        </div>

                                        @if (@item.OrderItems.Product.Unpaid != null)
                                        {
                                           @*  var relatedPeriods = unpaidPeriods
                                            .Where(p => p != null && p.ProductId == product.ProductId && p.OrderId == order.OrderId)
                                            .ToList();

                                            @if (relatedPeriods.Any())
                                            { *@
                                                <div class="unpaid-periods">
                                                    <h5>دوره‌های پرداخت نشده:</h5>
                                                    <div class="periods-list">
                                                        @foreach (var period in @item.OrderItems.Product.Unpaid)
                                                        {
                                                            <div class="period-item">
                                                                <div class="period-info">
                                                                    <span class="period-number">دوره @period.PeriodNumber</span>
                                                                    <span class="period-date">
                                                                        <i class="fas fa-calendar-alt"></i>
                                                                        موعد پرداخت: @(period.Date != default ? period.Date.ToPersianDate() : "---")
                                                                    </span>
                                                                </div>
                                                                <div class="period-amount">
                                                                    @period.ExpectedAmount.ToString("N0") ریال
                                                                </div>
                                                            </div>
                                                        }
                                                    </div>
                                                </div>
                                            @* } *@
                                        }
                                    </div>
                                @* } *@
                            </div>
                        }
                    </div>
                }
            }
        }
    </div>

    <!-- Paid Profits Tab -->
    <div id="paid-tab" class="tab-content" style="display: none;">
        @if (paidPeriodsCount == 0)
        {
            <div class="empty-state">
                <div class="empty-icon">
                    <i class="fas fa-money-bill-wave"></i>
                </div>
                <h3>هنوز سودی پرداخت نشده است</h3>
                <p>پس از شروع دوره پرداخت سود، لیست پرداخت‌ها در اینجا نمایش داده می‌شود.</p>
            </div>
        }
        else
        {
            <div class="section-header">
                <h2>تاریخچه پرداخت سودها</h2>
                <div class="section-summary">
                    <span class="total-amount">@totalPaidProfit.ToString("N0") ریال</span>
                    <span class="total-count">@paidPeriodsCount دوره</span>
                </div>
            </div>

            <div class="timeline">
                @if (paidProfits != null)
                {
                    foreach (var profit in paidProfits.Where(p => p != null).OrderByDescending(p => p.ForWhatTime))
                    {
                        <div class="timeline-item">
                            <div class="timeline-marker">
                                <i class="fas fa-check-circle"></i>
                            </div>
                            <div class="timeline-content">
                                <div class="timeline-header">
                                    <h4>سود دوره @profit.ForWhatPeriod</h4>
                                    <span class="timeline-date">@(profit.ForWhatTime != default ? profit.ForWhatTime.ToPersianDate() : "---")</span>
                                </div>
                                <div class="timeline-body">
                                    <div class="product-info">
                                        <strong>محصول:</strong> @(!string.IsNullOrEmpty(profit.ProductName) ? profit.ProductName : "نامشخص")
                                    </div>
                                    <div class="amount-info">
                                        <strong>مبلغ پرداخت شده:</strong>
                                        <span class="amount-success">@profit.AmountPaid.ToString("N0") ریال</span>
                                    </div>
                                    <div class="period-info">
                                        <strong>بازه پرداخت:</strong>
                                        <span>@profit.ProfitableTime.ToString()</span>
                                    </div>
                                    @if (!string.IsNullOrEmpty(profit.ImageName))
                                    {
                                        <div class="receipt-info">
                                            <a href="@Directories.GetProductImagePathPath(profit.ImageName)"
                                               target="_blank"
                                               class="btn-link">
                                                <i class="fas fa-receipt"></i>
                                                مشاهده فیش پرداخت
                                            </a>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        }
    </div>

    <!-- Summary Tab -->
    <div id="summary-tab" class="tab-content" style="display: none;">
        <div class="summary-container">
            <div class="summary-card">
                <h2>خلاصه وضعیت مالی</h2>
                <div class="summary-details">
                    <div class="summary-item">
                        <span class="label">وضعیت کلی:</span>
                        @if (isDebtor)
                        {
                            <span class="value status-danger">
                                <i class="fas fa-exclamation-triangle"></i>
                                بدهکار - نیاز به پیگیری
                            </span>
                        }
                        else
                        {
                            <span class="value status-success">
                                <i class="fas fa-check-circle"></i>
                                بی‌حساب - تسویه کامل
                            </span>
                        }
                    </div>
                    <div class="summary-item">
                        <span class="label">کل سرمایه‌گذاری:</span>
                        <span class="value">@totalInvestment.ToString("N0") ریال</span>
                    </div>
                    <div class="summary-item">
                        <span class="label">سود کل مورد انتظار:</span>
                        <span class="value">@totalExpectedProfit.ToString("N0") ریال</span>
                    </div>
                    <div class="summary-item">
                        <span class="label">سود پرداخت شده:</span>
                        <span class="value amount-success">@totalPaidProfit.ToString("N0") ریال</span>
                    </div>
                    <div class="summary-item">
                        <span class="label">سود پرداخت نشده:</span>
                        <span class="value amount-danger">@totalUnpaidProfit.ToString("N0") ریال</span>
                    </div>
                    <div class="summary-item">
                        <span class="label">درصد تحقق سود:</span>
                        @{
                            var percentage = totalExpectedProfit > 0
                            ? (totalPaidProfit / totalExpectedProfit * 100)
                            : 0;
                        }
                        <div class="progress-container">
                            <div class="progress-bar">
                                <div class="progress-fill" style="width: @Math.Min(percentage, 100)%"></div>
                            </div>
                            <span class="percentage">@percentage.ToString("F1")%</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Order Summaries -->
            <div class="orders-summary">
                <h3>خلاصه سفارشات</h3>
                @if (orders != null && orders.Any())
                {
                    foreach (var order in orders.Where(o => o != null))
                    {
                        <div class="order-summary-card">
                            <div class="order-summary-header">
                                <h4>سفارش @(order.OrderDate != default ? order.OrderDate.ToPersianDate() : "---")</h4>
                                <span class="order-id">#@(order.OrderId != Guid.Empty ? order.OrderId.ToString().Substring(0, 8) : "---")...</span>
                            </div>
                            <div class="order-summary-stats">
                                <div class="stat">
                                    <span class="stat-label">سرمایه‌گذاری</span>
                                    <span class="stat-value">@order.TotalAmount.ToString("N0") ریال</span>
                                </div>
                                <div class="stat">
                                    <span class="stat-label">سود پرداخت شده</span>
                                    <span class="stat-value amount-success">@order.TotalPaidProfit.ToString("N0") ریال</span>
                                </div>
                                <div class="stat">
                                    <span class="stat-label">سود پرداخت نشده</span>
                                    <span class="stat-value amount-danger">@order.TotalUnpaidProfit.ToString("N0") ریال</span>
                                </div>
                                <div class="stat">
                                    <span class="stat-label">وضعیت</span>
                                    @if (order.TotalUnpaidProfit > 0)
                                    {
                                        <span class="stat-value status-warning">در انتظار</span>
                                    }
                                    else
                                    {
                                        <span class="stat-value status-success">تسویه شده</span>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="empty-state mini">
                        <div class="empty-icon">
                            <i class="fas fa-box-open"></i>
                        </div>
                        <p>هنوز هیچ سفارشی ثبت نشده است.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    /* Reset and Base */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Vazirmatn', 'Vazir', 'Segoe UI', sans-serif;
        background-color: #f8fafc;
        color: #334155;
        line-height: 1.6;
        direction: rtl;
    }

    .container {
        width: 100%;
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px;
    }

    /* Header */
    .header {
        background: linear-gradient(135deg, #059669 0%, #047857 100%);
        color: white;
        padding: 2rem 0;
        margin-bottom: 2rem;
    }

    .header-content {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    @@media (min-width: 768px) {
        .header-content {
            flex-direction: row;
            justify-content: space-between;
            align-items: center;
        }
    }

    .header-title h1 {
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
    }

    .header-title p {
        font-size: 1rem;
        opacity: 0.9;
    }

    /* Buttons */
    .btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 0.75rem 1.5rem;
        border: none;
        border-radius: 0.5rem;
        font-size: 0.875rem;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        gap: 0.5rem;
    }

    .btn-secondary {
        background-color: white;
        color: #059669;
        border: 2px solid #059669;
    }

        .btn-secondary:hover {
            background-color: #059669;
            color: white;
        }

    .btn-outline {
        background-color: transparent;
        color: white;
        border: 2px solid white;
    }

        .btn-outline:hover {
            background-color: white;
            color: #059669;
        }

    .btn-link {
        background: none;
        color: #3b82f6;
        border: none;
        padding: 0;
        font-size: 0.875rem;
        cursor: pointer;
        text-decoration: none;
    }

        .btn-link:hover {
            text-decoration: underline;
        }

    /* Stats Grid */
    .stats-grid {
        display: grid;
        grid-template-columns: repeat(1, 1fr);
        gap: 1.5rem;
        margin-bottom: 3rem;
    }

    @@media (min-width: 640px) {
        .stats-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @@media (min-width: 1024px) {
        .stats-grid {
            grid-template-columns: repeat(4, 1fr);
        }
    }

    .stat-card {
        background: white;
        border-radius: 1rem;
        padding: 1.5rem;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
        position: relative;
        overflow: hidden;
    }

        .stat-card:hover {
            transform: translateY(-5px);
        }

        .stat-card::before {
            content: '';
            position: absolute;
            top: 0;
            right: 0;
            width: 100%;
            height: 4px;
            background: linear-gradient(90deg, #059669 0%, #10b981 100%);
        }

    .stat-value {
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
        color: #1e293b;
    }

    .stat-label {
        font-size: 0.875rem;
        color: #64748b;
    }

    /* Status Spans */
    .status-success {
        background-color: #d1fae5;
        color: #059669;
        padding: 0.25rem 0.75rem;
        border-radius: 9999px;
        font-size: 0.875rem;
        font-weight: 500;
        display: inline-flex;
        align-items: center;
        gap: 0.375rem;
    }

    .status-danger {
        background-color: #fee2e2;
        color: #dc2626;
        padding: 0.25rem 0.75rem;
        border-radius: 9999px;
        font-size: 0.875rem;
        font-weight: 500;
        display: inline-flex;
        align-items: center;
        gap: 0.375rem;
    }

    /* Tabs */
    .tabs-container {
        background: white;
        border-radius: 1rem;
        padding: 1.5rem;
        margin-bottom: 2rem;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    }

    .tabs {
        display: flex;
        gap: 1rem;
        overflow-x: auto;
        padding-bottom: 1rem;
    }

    .tab-radio {
        display: none;
    }

    .tab-label {
        padding: 0.75rem 1.5rem;
        border-radius: 0.5rem;
        cursor: pointer;
        transition: all 0.3s ease;
        white-space: nowrap;
        color: #64748b;
        font-weight: 500;
        border: 2px solid transparent;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        position: relative;
    }

        .tab-label:hover {
            background-color: #f1f5f9;
            color: #059669;
        }

    .tab-radio:checked + .tab-label {
        background-color: #059669;
        color: white;
        border-color: #059669;
    }

    .badge {
        padding: 0.25rem 0.625rem;
        border-radius: 9999px;
        font-size: 0.75rem;
        font-weight: 500;
        margin-right: 0.25rem;
    }

    .badge-danger {
        background-color: #fee2e2;
        color: #dc2626;
    }

    .badge-success {
        background-color: #d1fae5;
        color: #059669;
    }

    /* Tab Content */
    .tab-content {
        display: block;
        animation: fadeIn 0.3s ease;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Section Header */
    .section-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
        padding-bottom: 1rem;
        border-bottom: 2px solid #e2e8f0;
    }

        .section-header h2 {
            font-size: 1.5rem;
            font-weight: 600;
            color: #1e293b;
        }

    .section-summary {
        display: flex;
        align-items: center;
        gap: 1.5rem;
    }

    .total-amount {
        font-size: 1.25rem;
        font-weight: 700;
        color: #1e293b;
    }

    .total-count {
        font-size: 0.875rem;
        color: #64748b;
        background-color: #f1f5f9;
        padding: 0.25rem 0.75rem;
        border-radius: 9999px;
    }

    /* Order Card */
    .order-card {
        background: white;
        border-radius: 1rem;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        margin-bottom: 2rem;
        overflow: hidden;
        border: 1px solid #e2e8f0;
    }

    .order-header {
        padding: 1.5rem;
        background: linear-gradient(90deg, #f8fafc 0%, white 100%);
        border-bottom: 1px solid #e2e8f0;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .order-info h3 {
        font-size: 1.125rem;
        font-weight: 600;
        color: #1e293b;
        margin-bottom: 0.5rem;
    }

    .order-meta {
