        @@media (max-width: 1200px) and (min-width: 992px) {
            .admin-sidebar {
                width: var(--sidebar-collapsed);
            }

            .admin-main {
                margin-right: var(--sidebar-collapsed);
            }

            .sidebar-link span {
                display: none;
            }

            .sidebar-link {
                justify-content: center;
                padding: 0.75rem;
            }
        }

        /* انیمیشن‌ها */
