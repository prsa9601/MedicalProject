                                            </div>
                                        </div>

                                        <div class="flex items-center justify-between mt-3">
                                            <span class="text-xs text-gray-500">
                                                1 روز پیش
                                            </span>

                                            <a href="#page1" class="btn btn-outline btn-sm mark-read-btn">
                                                <i class="fas fa-check-circle w-3 h-3 ml-1"></i>
                                                خوانده شد
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Page 2 -->
                <div id="page2" class="page">
                    <div class="space-y-4">
                        <!-- خوانده شده‌ها -->
