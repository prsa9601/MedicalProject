                                                                    <i class="fas fa-envelope text-gray-400 ml-2 text-sm"></i>
                                                                    <span class="truncate-text" onclick="toggleFullText(this, '@contact?.Email')">
                                                                        @contact?.Email
                                                                    </span>
                                                                </div>
                                                            }
                                                            else
                                                            {
                                                                <span class="text-gray-400 text-sm">---</span>
                                                            }
                                                        </td>
