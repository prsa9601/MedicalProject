    <script>

                // توابع مدیریت پنل ادمین
        function toggleSidebar() {
            document.body.classList.toggle('sidebar-collapsed');
        }

        function toggleMobileSidebar() {
            const body = document.body;
            body.classList.toggle('sidebar-mobile-open');

            // جلوگیری از اسکرول بدنه هنگام باز بودن سایدبار
            if (body.classList.contains('sidebar-mobile-open')) {
                document.body.style.overflow = 'hidden';
            } else {
                document.body.style.overflow = 'auto';
            }
        }

        function closeMobileSidebar() {
            document.body.classList.remove('sidebar-mobile-open');
            document.body.style.overflow = 'auto';
        }

        function toggleProfileDropdown() {
            const dropdown = document.getElementById('profileDropdown');
            dropdown.classList.toggle('hidden');
        }

        // مدیریت منوی سایدبار
        document.getElementById('sidebarToggle').addEventListener('click', function(e) {
            e.stopPropagation();
            if (window.innerWidth < 768) {
                toggleMobileSidebar();
            } else {
                toggleSidebar();
            }
        });

        // بستن سایدبار هنگام کلیک روی overlay
        document.getElementById('sidebarOverlay')?.addEventListener('click', function(e) {
            e.stopPropagation();
            closeMobileSidebar();
        });

        // بستن سایدبار هنگام کلیک روی لینک‌های سایدبار در موبایل
        document.querySelectorAll('.sidebar-link').forEach(link => {
            link.addEventListener('click', function(e) {
                if (window.innerWidth < 768) {
                    closeMobileSidebar();
                }
            });
        });

        // بستن سایدبار موبایل هنگام تغییر سایز صفحه به بزرگتر از 768px
        window.addEventListener('resize', function() {
            if (window.innerWidth >= 768) {
                closeMobileSidebar();
            }
        });

        // جلوگیری از بستن سایدبار هنگام کلیک روی خود سایدبار
        document.querySelector('.admin-sidebar')?.addEventListener('click', function(e) {
            e.stopPropagation();
        });

        // بستن منوها هنگام کلیک خارج
        document.addEventListener('click', function(event) {
            const profileDropdown = document.getElementById('profileDropdown');
            const profileButton = event.target.closest('button[onclick="toggleProfileDropdown()"]');

            if (profileDropdown && !profileDropdown.contains(event.target) && !profileButton) {
                profileDropdown.classList.add('hidden');
            }
        });

        // بقیه کدهای JavaScript بدون تغییر باقی می‌مانند...
    </script>
