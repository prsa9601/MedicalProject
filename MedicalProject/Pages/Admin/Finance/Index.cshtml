    <script>
        // توابع مدیریت پنل ادمین
        function toggleSidebar() {
            document.body.classList.toggle('sidebar-collapsed');
            localStorage.setItem('sidebarCollapsed', document.body.classList.contains('sidebar-collapsed'));
        }

        function toggleMobileSidebar() {
            document.body.classList.toggle('sidebar-mobile-open');
        }

        function toggleProfileDropdown() {
            const dropdown = document.getElementById('profileDropdown');
            dropdown.classList.toggle('hidden');
        }

        // توابع مدال‌ها
        function showSettlementModal(userId = '') {
            if (userId) {
                document.getElementById('userSelect').value = userId;
            }
            document.getElementById('settlementModal').classList.remove('hidden');
            document.body.style.overflow = 'hidden';
        }

        function closeSettlementModal() {
            document.getElementById('settlementModal').classList.add('hidden');
            document.body.style.overflow = 'auto';
        }

        function showitemDetails(userId) {
            window.location.href = 'Finance/UserReport/' + userId;
        }

        function generateUserReport(userId) {
            alert('گزارش کاربر: ' + userId);
        }

        function exportFinancialReport() {
            Swal.fire({
                title: 'در حال آماده‌سازی گزارش',
                text: 'لطفاً چند لحظه صبر کنید...',
                icon: 'info',
                showConfirmButton: false,
                timer: 2000
            });
        }

        function generateFinancialReport() {
            Swal.fire({
                title: 'تولید گزارش مالی',
                text: 'گزارش مالی جامع در حال تولید است...',
                icon: 'info',
                showConfirmButton: false,
                timer: 1500
            });
        }

        function showCommissionSettings() {
            alert('تنظیمات کارمزد باز می‌شود...');
        }

        function showProfitAnalysis() {
            alert('تحلیل سودآوری باز می‌شود...');
        }

        function applyProfitFilters() {
            const search = document.getElementById('searchInput').value;
            const filter = document.getElementById('profitFilter').value;

            Swal.fire({
                title: 'اعمال فیلترها',
                text: 'در حال اعمال فیلترهای انتخاب شده...',
                icon: 'info',
                showConfirmButton: false,
                timer: 1000
            });

            // شبیه‌سازی اعمال فیلتر
            setTimeout(() => {
                const rows = document.querySelectorAll('.mobile-table-row, .table tbody tr');
                rows.forEach(row => {
                    if (search || filter) {
                        row.style.display = 'none';
                    } else {
                        row.style.display = '';
                    }
                });
            }, 1000);
        }



        // مدیریت فرم تسویه حساب
        document.getElementById('settlementForm').addEventListener('submit', function(e) {
            e.preventDefault();
            const userId = document.getElementById('userSelect').value;
            const amount = document.getElementById('settlementAmount').value;
            const description = document.getElementById('settlementDescription').value;

            if (!userId || !amount) {
                Swal.fire({
                    title: 'خطا',
                    text: 'لطفاً همه فیلدهای ضروری را پر کنید',
                    icon: 'error',
                    confirmButtonText: 'باشه'
                });
                return;
            }

            Swal.fire({
                title: 'آیا مطمئن هستید؟',
                text: `تسویه حساب به مبلغ ${amount} ریال انجام شود؟`,
                icon: 'question',
                showCancelButton: true,
                confirmButtonText: 'بله، انجام شود',
                cancelButtonText: 'لغو'
            }).then((result) => {
                if (result.isConfirmed) {
                    // Implementation for settlement submission
                    console.log('تسویه حساب:', { userId, amount, description });

                    Swal.fire({
                        title: 'موفق',
                        text: 'تسویه حساب با موفقیت انجام شد',
                        icon: 'success',
                        confirmButtonText: 'باشه',
                        timer: 2000
                    });

                    closeSettlementModal();

                    // ریست فرم
                    document.getElementById('settlementForm').reset();
                }
            });
        });

        // مدیریت منوی سایدبار
        document.getElementById('sidebarToggle').addEventListener('click', function() {
            if (window.innerWidth < 768) {
                toggleMobileSidebar();
            } else {
                toggleSidebar();
            }
        });

        // بارگذاری وضعیت سایدبار
        if (localStorage.getItem('sidebarCollapsed') === 'true') {
            document.body.classList.add('sidebar-collapsed');
        }

        // بستن منوها هنگام کلیک خارج
        document.addEventListener('click', function(event) {
            const profileDropdown = document.getElementById('profileDropdown');
            const profileButton = event.target.closest('button[onclick="toggleProfileDropdown()"]');

            if (profileDropdown && !profileDropdown.contains(event.target) && !profileButton) {
                profileDropdown.classList.add('hidden');
            }

            // بستن سایدبار موبایل هنگام کلیک خارج
            if (window.innerWidth < 768 &&
                !event.target.closest('.admin-sidebar') &&
                !event.target.closest('#sidebarToggle')) {
                document.body.classList.remove('sidebar-mobile-open');
            }
        });

        // جستجوی لحظه‌ای
        let searchTimeout;
        document.getElementById('searchInput').addEventListener('input', function() {
            clearTimeout(searchTimeout);
            const searchTerm = this.value.toLowerCase();

            searchTimeout = setTimeout(() => {
                if (searchTerm.length >= 2 || searchTerm.length === 0) {
                    // شبیه‌سازی جستجوی لحظه‌ای
                    const rows = document.querySelectorAll('.mobile-table-row, .table tbody tr');
                    rows.forEach(row => {
                        const text = row.textContent.toLowerCase();
                        row.style.display = text.includes(searchTerm) ? '' : 'none';
                    });
                }
            }, 300);
        });

        // تطبیق با صفحه‌نمایش
        function handleResize() {
            if (window.innerWidth >= 768 && document.body.classList.contains('sidebar-mobile-open')) {
                document.body.classList.remove('sidebar-mobile-open');
            }
        }

        window.addEventListener('resize', handleResize);
        handleResize(); // اجرای اولیه

        // بهبود قابلیت لمس در موبایل
        document.querySelectorAll('.btn, .sidebar-link').forEach(element => {
            element.addEventListener('touchstart', function() {
                this.classList.add('active');
            });

            element.addEventListener('touchend', function() {
                this.classList.remove('active');
            });
        });
    </script>

