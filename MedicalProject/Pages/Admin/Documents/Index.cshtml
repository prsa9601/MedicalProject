@page
@using MedicalProject.Infrastructure
@using MedicalProject.Infrastructure.EnumUtil
@using MedicalProject.Models.User.Enum
@model MedicalProject.Pages.Admin.Documents.IndexModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>مدیریت مدارک کاربران - پلتفرم دنگ</title>

    <!-- فونت‌ها -->
    <link href="https://fonts.googleapis.com/css2?family=Vazir:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/gh/rastikerdar/vazir-font@v30.1.0/dist/font-face.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>

    <style>
        /* استایل‌های سفارشی */
        html {
            direction: rtl;
            font-family: 'Vazir', 'IRANSans', system-ui, sans-serif;
        }

        body {
            background-color: #f9fafb;
            color: #111827;
            font-family: 'Vazir', 'IRANSans', system-ui, sans-serif;
        }

        * {
            border-color: #e5e7eb;
        }

        input:focus, textarea:focus, select:focus {
            outline: none;
            ring: 2px;
            ring-color: #3b82f6;
            border-color: #3b82f6;
        }

        /* کامپوننت‌های سفارشی */
        .btn {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            padding: 0.5rem 1rem;
            border: 1px solid transparent;
            font-size: 0.875rem;
            font-weight: 500;
            border-radius: 0.5rem;
            box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
            transition: all 0.2s;
            cursor: pointer;
        }

            .btn:focus {
                outline: 2px solid transparent;
                outline-offset: 2px;
                ring: 2px;
                ring-offset: 2px;
            }

            .btn:disabled {
                opacity: 0.5;
                cursor: not-allowed;
            }

        .btn-primary {
            background-color: #2563eb;
            color: white;
        }

            .btn-primary:hover {
                background-color: #1d4ed8;
            }

        .btn-secondary {
            background-color: white;
            color: #374151;
            border: 1px solid #d1d5db;
        }

            .btn-secondary:hover {
                background-color: #f9fafb;
            }

        .btn-success {
            background-color: #059669;
            color: white;
        }

            .btn-success:hover {
                background-color: #047857;
            }

        .btn-danger {
            background-color: #dc2626;
            color: white;
        }

            .btn-danger:hover {
                background-color: #b91c1c;
            }

        .btn-outline {
            border: 1px solid #d1d5db;
            color: #374151;
            background-color: white;
        }

            .btn-outline:hover {
                background-color: #f9fafb;
            }

        .btn-warning {
            background-color: #d97706;
            color: white;
        }

            .btn-warning:hover {
                background-color: #b45309;
            }

        .card {
            background-color: white;
            border-radius: 0.75rem;
            box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
            border: 1px solid #f3f4f6;
            overflow: hidden;
        }

        .card-hover {
            transition: all 0.3s;
        }

            .card-hover:hover {
                box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
                transform: translateY(-0.25rem);
            }

        .input {
            display: block;
            width: 100%;
            padding: 0.5rem 0.75rem;
            border: 1px solid #d1d5db;
            border-radius: 0.5rem;
            box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
        }

            .input::placeholder {
                color: #9ca3af;
            }

            .input:focus {
                outline: none;
                ring: 2px;
                ring-color: #3b82f6;
                border-color: #3b82f6;
            }

        .label {
            display: block;
            font-size: 0.875rem;
            font-weight: 500;
            color: #374151;
            margin-bottom: 0.25rem;
        }

        .badge {
            display: inline-flex;
            align-items: center;
            padding: 0.25rem 0.625rem;
            border-radius: 9999px;
            font-size: 0.75rem;
            font-weight: 500;
        }

        .btn-info {
            background-color: #0ea5e9;
            color: white;
        }

            .btn-info:hover {
                background-color: #0284c7;
            }

        .badge-primary {
            background-color: #dbeafe;
            color: #1e40af;
        }

        .badge-success {
            background-color: #d1fae5;
            color: #065f46;
        }

        .badge-warning {
            background-color: #fef3c7;
            color: #92400e;
        }

        .badge-danger {
            background-color: #fee2e2;
            color: #991b1b;
        }

        .badge-secondary {
            background-color: #f3f4f6;
            color: #6b7280;
        }

        .badge-info {
            background-color: #d1f5f9;
            color: #0e7490;
        }

        .text-gradient {
            background: linear-gradient(to right, #2563eb, #1e40af);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        /* استایل‌های مخصوص پنل ادمین */
        .admin-sidebar {
            width: 260px;
            background: linear-gradient(180deg, #1e40af 0%, #1e3a8a 100%);
            color: white;
            transition: all 0.3s;
        }

        .admin-main {
            margin-right: 260px;
            transition: all 0.3s;
        }

        .admin-content {
            min-height: calc(100vh - 64px);
        }

        .sidebar-collapsed .admin-sidebar {
            width: 70px;
        }

        .sidebar-collapsed .admin-main {
            margin-right: 70px;
        }

        .sidebar-link {
            display: flex;
            align-items: center;
            padding: 0.75rem 1rem;
            color: #d1d5db;
            border-radius: 0.5rem;
            margin: 0.25rem 0.5rem;
            transition: all 0.2s;
        }

            .sidebar-link:hover, .sidebar-link.active {
                background-color: rgba(255, 255, 255, 0.1);
                color: white;
            }

            .sidebar-link i {
                width: 24px;
                text-align: center;
            }

            .sidebar-link span {
                margin-right: 0.75rem;
                white-space: nowrap;
                overflow: hidden;
                text-overflow: ellipsis;
            }

        .sidebar-collapsed .sidebar-link span {
            display: none;
        }

        .table-responsive {
            overflow-x: auto;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
        }

            .table th, .table td {
                padding: 0.75rem 1rem;
                text-align: right;
                border-bottom: 1px solid #e5e7eb;
            }

            .table th {
                background-color: #f9fafb;
                font-weight: 600;
                color: #374151;
            }

            .table tbody tr:hover {
                background-color: #f9fafb;
            }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-label {
            display: block;
            margin-bottom: 0.5rem;
            font-weight: 500;
            color: #374151;
        }

        .form-control {
            display: block;
            width: 100%;
            padding: 0.5rem 0.75rem;
            border: 1px solid #d1d5db;
            border-radius: 0.5rem;
            box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
            transition: all 0.2s;
        }

            .form-control:focus {
                outline: none;
                box-shadow: 0 0 0 2px #3b82f6;
                border-color: #3b82f6;
            }

        .form-text {
            display: block;
            margin-top: 0.25rem;
            font-size: 0.875rem;
            color: #6b7280;
        }

        .user-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            object-fit: cover;
        }

        .status-dot {
            width: 8px;
            height: 8px;
            border-radius: 50%;
            display: inline-block;
            margin-left: 0.5rem;
        }

        .status-active {
            background-color: #10b981;
        }

        .status-inactive {
            background-color: #ef4444;
        }

        .status-pending {
            background-color: #f59e0b;
        }

        /* استایل‌های مخصوص مدارک */
        .document-preview {
            width: 80px;
            height: 80px;
            border-radius: 0.5rem;
            object-fit: cover;
            border: 1px solid #e5e7eb;
            cursor: pointer;
            transition: all 0.2s;
        }

            .document-preview:hover {
                transform: scale(1.05);
                box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
            }

        .document-type-badge {
            display: inline-flex;
            align-items: center;
            padding: 0.25rem 0.5rem;
            border-radius: 0.375rem;
            font-size: 0.75rem;
            font-weight: 500;
        }

        .document-type-identity {
            background-color: #dbeafe;
            color: #1e40af;
        }

        .document-type-license {
            background-color: #d1fae5;
            color: #065f46;
        }

        .document-type-certificate {
            background-color: #fef3c7;
            color: #92400e;
        }

        .document-type-other {
            background-color: #f3f4f6;
            color: #6b7280;
        }

        /* Responsive */
        @@media (max-width: 1024px) {
            .admin-sidebar {
                width: 70px;
            }

            .admin-main {
                margin-right: 70px;
            }

            .sidebar-link span {
                display: none;
            }
        }

        @@media (max-width: 768px) {
            .admin-sidebar {
                position: fixed;
                right: -260px;
                z-index: 50;
                height: 100vh;
            }

            .admin-main {
                margin-right: 0;
            }

            .sidebar-mobile-open .admin-sidebar {
                right: 0;
            }

            .sidebar-link span {
                display: block;
            }
        }
    </style>
</head>
<body class="admin-layout">
    <!-- Header -->
    <header class="bg-white shadow-sm border-b border-gray-200 sticky top-0 z-40">
        <div class="max-w-full mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <!-- Logo and Toggle -->
                <div class="flex items-center">
                    <button id="sidebarToggle" class="p-2 rounded-lg text-gray-400 hover:text-gray-600 hover:bg-gray-100 transition-colors mr-2">
                        <i class="fas fa-bars"></i>
                    </button>
                    <a href="/">
                        <div class="flex items-center space-x-2 space-x-reverse">
                            <div class="w-8 h-8 bg-blue-600 rounded-lg flex items-center justify-center">
                                <span class="text-white font-bold text-lg">د</span>
                            </div>
                            <span class="text-xl font-bold text-gray-900">پلتفرم دنگ</span>
                        </div>
                    </a>
                </div>

                <!-- User Actions -->
                <div class="flex items-center space-x-4 space-x-reverse">
                    <!-- Notifications -->
                    <a href="/Notifications" class="relative p-2 text-gray-400 hover:text-gray-600 transition-colors">
                        <i class="fas fa-bell"></i>
                        <span class="badge badge-danger absolute -top-1 -left-1 min-w-[1.25rem] h-5 flex items-center justify-center">
                            3
                        </span>
                    </a>

                    <!-- Profile Dropdown -->
                    <div class="relative">
                        <button onclick="toggleProfileDropdown()"
                                class="flex items-center space-x-2 space-x-reverse p-2 rounded-lg hover:bg-gray-100 transition-colors">
                            <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center">
                                <i class="fas fa-user text-blue-600"></i>
                            </div>
                            <span class="hidden sm:block font-medium text-gray-700">
                                ادمین
                            </span>
                        </button>

                        <!-- Dropdown Menu -->
                        <div id="profileDropdown" class="hidden absolute left-0 mt-2 w-48 bg-white rounded-lg shadow-lg border border-gray-200 py-1 z-50">
                            <a href="/Admin/Dashboard"
                               class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 transition-colors">
                                <i class="fas fa-tachometer-alt ml-3"></i>
                                داشبورد
                            </a>
                            <a href="/Profile"
                               class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 transition-colors">
                                <i class="fas fa-user ml-3"></i>
                                پروفایل
                            </a>
                            <form asp-page="/Logout" method="post" class="w-full">
                                <button type="submit"
                                        class="flex items-center w-full px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 transition-colors">
                                    <i class="fas fa-sign-out-alt ml-3"></i>
                                    خروج
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="flex">
        <!-- Sidebar -->
        <div class="admin-sidebar fixed h-full z-30">
            <div class="flex flex-col h-full">
                <!-- Sidebar Header -->
                <div class="p-4 border-b border-blue-700">
                    <div class="flex items-center justify-between">
                        <div class="flex items-center space-x-2 space-x-reverse">
                            <div class="w-8 h-8 bg-white rounded-lg flex items-center justify-center">
                                <span class="text-blue-600 font-bold text-sm">د</span>
                            </div>
                            <span class="text-white font-bold">پنل مدیریت</span>
                        </div>
                    </div>
                </div>

                <!-- Sidebar Menu -->
                <partial name="~/Pages/Shared/_adminSidebar.cshtml" />

            </div>
        </div>

        <!-- Main Content -->
        <div class="admin-main flex-1">
            <div class="admin-content">
                <!-- Page Header -->
                <div class="bg-white border-b border-gray-200">
                    <div class="max-w-full mx-auto px-4 sm:px-6 lg:px-8 py-6">
                        <div class="flex justify-between items-center">
                            <div>
                                <h1 class="text-2xl font-bold text-gray-900">مدیریت مدارک کاربران</h1>
                                <p class="mt-1 text-sm text-gray-600">بررسی و تایید مدارک ارسال شده توسط کاربران</p>
                            </div>
                           @*  <div class="flex items-center space-x-3 space-x-reverse">
                                <button onclick="exportResult()" class="btn btn-outline">
                                    <i class="fas fa-download ml-2"></i>
                                    خروجی Excel
                                </button>
                                <button onclick="showBulkActions()" class="btn btn-primary">
                                    <i class="fas fa-tasks ml-2"></i>
                                    عملیات گروهی
                                </button>
                            </div> *@
                        </div>
                    </div>
                </div>

                <!-- Main Content Area -->
                <div class="max-w-full mx-auto px-4 sm:px-6 lg:px-8 py-6">
                    <!-- Result List -->
                    <div class="card">
                        <div class="p-6">
                            <form method="get">
                                <div class="flex flex-col lg:flex-row lg:justify-between lg:items-center mb-6 space-y-4 lg:space-y-0">
                                    <h2 class="text-lg font-semibold text-gray-900">لیست مدارک ارسال شده</h2>

                                    <!-- Search and Filters -->
                                    <div class="flex flex-col sm:flex-row items-start sm:items-center space-y-3 sm:space-y-0 sm:space-x-3 space-x-reverse">
                                        <div class="relative w-full sm:w-64">
                                            <input type="text"
                                                   id="searchInput"
                                                   asp-for="@Model.FilterParams.PhoneNumber"
                                                   placeholder="جستجو بر اساس شماره تماس کاربر..."
                                                   class="input pl-10">
                                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                                <i class="fas fa-search text-gray-400"></i>
                                            </div>
                                        </div>

                                        <select id="statusFilter" asp-for="@Model.FilterParams.UserStatus" class="input w-full sm:w-auto">
                                            <option value="">همه وضعیت‌ها</option>
                                            <option value="@UserDocumentStatus.AwaitingConfirmation">در انتظار بررسی</option>
                                            <option value="@UserDocumentStatus.IsConfirmed">تایید شده</option>
                                            <option value="@UserDocumentStatus.WrongInformation">رد شده</option>
                                        </select>

                                        @*  <select id="typeFilter" asp-for="@Model.FilterParams.DocumentType" class="input w-full sm:w-auto">
                                            <option value="">همه انواع</option>
                                            <option value="Identity">کارت ملی</option>
                                            <option value="License">گواهی نامه</option>
                                            <option value="Certificate">مدرک تحصیلی</option>
                                            <option value="Other">سایر</option>
                                        </select> *@

                                        <button class="btn btn-primary w-full sm:w-auto">
                                            <i class="fas fa-filter ml-2"></i>
                                            اعمال فیلتر
                                        </button>
                                    </div>
                                </div>
                            </form>

                            <!-- Statistics Cards -->
                            <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
                                <div class="card card-hover">
                                    <div class="p-4">
                                        <div class="flex items-center justify-between">
                                            <div>
                                                <p class="text-sm font-medium text-gray-600">کل مدارک</p>
                                                <p class="text-2xl font-bold text-gray-900">@(Model?.Result?.EntityCount ?? 0)</p>
                                            </div>
                                            <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
                                                <i class="fas fa-file-alt text-blue-600"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="card card-hover">
                                    <div class="p-4">
                                        <div class="flex items-center justify-between">
                                            <div>
                                                <p class="text-sm font-medium text-gray-600">در انتظار بررسی</p>
                                                <p class="text-2xl font-bold text-gray-900">
                                                    @{
                                                        int awaitingCount = Model?.Result?.Data?.Count(doc => doc?.UserDocument?.Status == UserDocumentStatus.AwaitingConfirmation) ?? 0;
                                                    }
                                                    @(awaitingCount)
                                                </p>
                                            </div>
                                            <div class="w-12 h-12 bg-yellow-100 rounded-lg flex items-center justify-center">
                                                <i class="fas fa-clock text-yellow-600"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="card card-hover">
                                    <div class="p-4">
                                        <div class="flex items-center justify-between">
                                            <div>
                                                <p class="text-sm font-medium text-gray-600">تایید شده</p>
                                                <p class="text-2xl font-bold text-gray-900">
                                                    @{
                                                        int isConfirmedCount = Model?.Result?.Data?.Count(doc => doc?.UserDocument?.Status == UserDocumentStatus.IsConfirmed) ?? 0;
                                                    }
                                                    @(isConfirmedCount)
                                                </p>
                                            </div>
                                            <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
                                                <i class="fas fa-check-circle text-green-600"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="card card-hover">
                                    <div class="p-4">
                                        <div class="flex items-center justify-between">
                                            <div>
                                                <p class="text-sm font-medium text-gray-600">رد شده</p>
                                                <p class="text-2xl font-bold text-gray-900">
                                                    @{
                                                        int wrongInformationCount = Model?.Result?.Data?.Count(doc => doc?.UserDocument?.Status == UserDocumentStatus.WrongInformation) ?? 0;
                                                    }
                                                    @(wrongInformationCount)
                                                </p>
                                            </div>
                                            <div class="w-12 h-12 bg-red-100 rounded-lg flex items-center justify-center">
                                                <i class="fas fa-times-circle text-red-600"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Result Table -->
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>
                                                <input type="checkbox" id="selectAll" onchange="toggleSelectAll(this)">
                                            </th>
                                            <th>#</th>
                                            <th>کاربر</th>
                                            @* <th>نوع مدرک</th> *@
                                            @* <th>مدرک</th> *@
                                            @* <th>توضیحات</th> *@
                                            <th>وضعیت</th>
                                            <th>تاریخ ارسال</th>
                                            <th>عملیات</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            if (Model?.Result?.Data == null || !Model.Result.Data.Any())
                                            {
                                                <tr>
                                                    <td colspan="8" class="text-center py-4 text-gray-500">
                                                        <i class="fas fa-inbox text-4xl mb-2"></i>
                                                        <div>دیتایی یافت نشد</div>
                                                    </td>
                                                </tr>
                                            }
                                            else
                                            {
                                                int number = 1;
                                                foreach (var item in Model.Result.Data)
                                                {
                                                    <tr>
                                                        <td>
                                                            <input type="checkbox" class="document-checkbox" value="@item?.Id">
                                                        </td>
                                                        <td>@(number++)</td>
                                                        <td>
                                                            <div class="flex items-center space-x-3 space-x-reverse">
                                                                @if (!string.IsNullOrEmpty(item?.ImageName))
                                                                {
                                                                    <img src="@Directories.GetUserImageAccountPath(item.ImageName)"
                                                                         alt="@item?.FirstName @item?.LastName"
                                                                         class="user-avatar">
                                                                }
                                                                else
                                                                {
                                                                    <div class="user-avatar bg-gray-200 flex items-center justify-center">
                                                                        <i class="fas fa-user text-gray-400"></i>
                                                                    </div>
                                                                }
                                                                <div>
                                                                    <div class="font-medium text-gray-900">@item?.FirstName @item?.LastName</div>
                                                                    <div class="text-sm text-gray-500">@item?.PhoneNumber</div>
                                                                </div>
                                                            </div>
                                                        </td>
                                                        <td>
                                                            @if (item?.UserDocument?.Status == UserDocumentStatus.AwaitingConfirmation)
                                                            {
                                                                <span class="badge badge-warning">در انتظار بررسی</span>
                                                            }
                                                            else if (item?.UserDocument?.Status == UserDocumentStatus.IsConfirmed)
                                                            {
                                                                <span class="badge badge-success">تایید شده</span>
                                                            }
                                                            else if (item?.UserDocument?.Status == UserDocumentStatus.WrongInformation)
                                                            {
                                                                <span class="badge badge-danger">رد شده</span>
                                                            }
                                                            else
                                                            {
