<div class="min-h-screen bg-gray-50">
    <!-- Product Header -->
    <section class="bg-white border-b border-gray-200">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
            <nav class="flex items-center space-x-4 space-x-reverse text-sm text-gray-500 mb-4">
                <a href="/" class="hover:text-blue-600 transition-colors">خانه</a>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
                <a href="/Front/Projects" class="hover:text-blue-600 transition-colors">پروژه‌ها</a>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
                <span class="text-gray-900 font-medium">@Model.Product?.Title</span>
            </nav>

            <h1 class="text-3xl font-bold text-gray-900">@Model.Product?.Title</h1>
            @if (Model.Product?.Status != null)
            {
                <div class="flex items-center space-x-4 space-x-reverse mt-2">
                    <span class="badge @GetStatusBadgeClass(Model.Product.Status)">
                        @GetStatusText(@Model.Product.Status)
                    </span>
                    <span class="text-sm text-gray-500">
                        آخرین بروزرسانی: @DateTime.Now.ToPersianDate()
                    </span>
                </div>
            }
        </div>
    </section>

    <!-- Main Product Content -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Left Column - Product Image & Actions -->
            <div class="lg:col-span-2 space-y-6">
                <!-- Product Image -->
                <div class="bg-white rounded-2xl shadow-sm border border-gray-200 p-6">
                    <div class="aspect-w-16 aspect-h-9 bg-gray-100 rounded-lg overflow-hidden">
                        @if (!string.IsNullOrEmpty(Model.Product?.ImageName))
                        {
                            <img src="@Directories.GetProductImagePathPath(@Model.Product.ImageName)"
                                 alt="@Model.Product.Title"
                                 class="w-full h-80 object-cover rounded-lg" />
                        }
                        else
                        {
                            <div class="w-full h-80 bg-gradient-to-br from-blue-50 to-gray-100 rounded-lg flex items-center justify-center">
                                <svg class="w-24 h-24 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                </svg>
                            </div>
                        }
                    </div>
                </div>

                <!-- Product Description -->
                <div class="bg-white rounded-2xl shadow-sm border border-gray-200 p-6">
                    <h2 class="text-xl font-bold text-gray-900 mb-4">توضیحات محصول</h2>
                    <div class="prose prose-lg max-w-none text-gray-600 leading-relaxed">
                        @Html.Raw(Model.Product?.Description ?? "توضیحاتی برای این محصول موجود نیست.")
                    </div>
                </div>

                <!-- Product Specifications -->
                @if (Model.Product?.InventoryDto != null)
                {
                    <div class="bg-white rounded-2xl shadow-sm border border-gray-200 p-6">
                        <h2 class="text-xl font-bold text-gray-900 mb-4">مشخصات فنی</h2>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div class="space-y-3">
                                <div class="flex justify-between items-center py-2 border-b border-gray-100">
                                    <span class="text-gray-600">وضعیت موجودی</span>
                                    <span class="font-medium @(Model.Product.InventoryDto.Dong > 0 ? "text-green-600" : "text-red-600")">
                                        @((Model.Product.InventoryDto.Dong - Model.Product.PurchaseReportDto?.Sum(i => i.PurchaseDang)) > 0 ? "موجود" : "ناموجود")
                                    </span>
                                </div>
                                <div class="flex justify-between items-center py-2 border-b border-gray-100">
                                    <span class="text-gray-600">تعداد دانگ موجود</span>
                                    <span class="font-medium text-gray-900">
                                        @(FormatNumber(Model.Product.InventoryDto.Dong - Model.Product.PurchaseReportDto.Sum(i => i.PurchaseDang))) عدد
                                    </span>
                                </div>
                            </div>
                            <div class="space-y-3">
                                <div class="flex justify-between items-center py-2 border-b border-gray-100">
                                    <span class="text-gray-600">حداقل سرمایه‌گذاری</span>
                                    <span class="font-medium text-gray-900">نیم دانگ</span>
                                </div>
                                <div class="flex justify-between items-center py-2 border-b border-gray-100">
                                    <span class="text-gray-600">قیمت هر دانگ</span>
                                    <span class="font-medium text-green-600">@Model.Product.InventoryDto.PricePerDong ریال</span>
                                </div>
                            </div>
                            <div class="space-y-3">
                                <div class="flex justify-between items-center py-2 border-b border-gray-100">
                                    <span class="text-gray-600">دوره واریزی سود</span>
                                    <span class="font-medium text-gray-900">@Model.Product.InventoryDto.ProfitableTime.ToString().Replace("-", " ")</span>
                                </div>
                                @* <div class="flex justify-between items-center py-2 border-b border-gray-100">
                                    <span class="text-gray-600">قیمت هر دانگ</span>
                                    <span class="font-medium text-green-600">@Model.Product.InventoryDto.PricePerDong ریال</span>
                                </div> *@
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="bg-white rounded-2xl shadow-sm border border-gray-200 p-6">
                        <h2 class="text-xl font-bold text-gray-900 mb-4">مشخصات فنی</h2>
                        <div class="text-center text-gray-500 py-4">
                            اطلاعات موجودی در دسترس نیست
                        </div>
                    </div>
                }
            </div>

            <!-- Right Column - Investment Panel -->
            <div class="space-y-6">
                <!-- Investment Card -->
                <div class="bg-white rounded-2xl shadow-lg border border-gray-200 p-6 sticky top-24">
                    <div class="space-y-6">
                        <!-- Price & Stats -->
                        <div class="space-y-4">
                            <div class="text-center">
                                <span class="text-2xl font-bold text-gray-900">سرمایه‌گذاری در @Model.Product?.Title</span>
                            </div>

                            <!-- Progress Bar -->
                            <div class="space-y-2">
                                <div class="flex justify-between text-sm">
                                    <span class="text-gray-600">پیشرفت تأمین سرمایه</span>
                                    <span class="font-medium text-gray-900">@CalculateProgress(Model.Product.PurchaseReportDto.Sum(i => i.PurchaseDang)).ToString("F2")٪</span>
                                </div>
                                <div class="w-full bg-gray-200 rounded-full h-3">
                                    <div class="bg-gradient-to-r from-green-500 to-green-600 h-3 rounded-full transition-all duration-300"
                                         style="width: @CalculateProgress(Model.Product.PurchaseReportDto.Sum(i => i.PurchaseDang))%"></div>
                                </div>
                                <div class="flex justify-between text-sm text-gray-500">
                                    <span>@Model.Product.PurchaseReportDto.Sum(i => i.PurchaseDang) دانگ</span>
                                    <span>از ۶ دانگ</span>
                                </div>
                            </div>

                            <!-- Investment Stats -->
                            <div class="grid grid-cols-1 gap-4 pt-4 border-t border-gray-100">
                                <div class="text-center">
                                    <div class="text-2xl font-bold text-gray-900">@FormatNumber(Model.Product.PurchaseReportDto.Count())</div>
                                    <div class="text-sm text-gray-600">سرمایه‌گذار</div>
                                </div>
                            </div>
                        </div>

                        <!-- Investment Form -->
                        <div class="space-y-4">
                                        <form method="post" asp-page-handler="SetProject" id="investmentForm">

                            <div>
                                <label class="label">تعداد دانگ مورد نظر</label>
                                <div class="select-container">
                                    <select id="dongAmount" name="dongAmount" class="dong-select input w-full text-right">
                                        <option value="0.5">نیم دانگ</option>
                                        <option value="1">یک دانگ</option>
                                        <option value="1.5">یک و نیم دانگ</option>
                                        <option value="2">دو دانگ</option>
                                        <option value="2.5">دو و نیم دانگ</option>
                                        <option value="3">سه دانگ</option>
                                        <option value="3.5">سه و نیم دانگ</option>
                                        <option value="4">چهار دانگ</option>
                                        <option value="4.5">چهار و نیم دانگ</option>
                                        <option value="5">پنج دانگ</option>
                                        <option value="5.5">پنج و نیم دانگ</option>
                                        <option value="6">شش دانگ</option>
                                    </select>
                                    <div class="select-arrow">
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                                        </svg>
                                    </div>
                                </div>
                            </div>

                            <!-- Quick Dong Options -->
                            <div class="grid grid-cols-3 gap-2">
                                <button type="button" class="quick-dong-btn dong-option btn btn-outline py-2 text-sm" data-dong="0.5">نیم</button>
                                <button type="button" class="quick-dong-btn dong-option btn btn-outline py-2 text-sm" data-dong="1">یک</button>
                                <button type="button" class="quick-dong-btn dong-option btn btn-outline py-2 text-sm" data-dong="1.5">یک و نیم</button>
                            </div>

                            <!-- Investment Summary -->
                            <div class="bg-blue-50 rounded-lg p-4 space-y-3">
                                <div class="flex justify-between text-sm profit-item">
                                    <span class="text-gray-600">سود ماهیانه</span>
                                    <span class="font-medium text-green-600">
                                        <span id="monthlyProfit">0</span> ریال
                                    </span>
                                </div>
                                <div class="flex justify-between text-sm profit-item">
                                    <span class="text-gray-600">سود تخمینی سالانه</span>
                                    <span class="font-medium text-green-600">
                                        <span id="annualProfit">0</span> ریال
                                    </span>
                                </div>
                                <div class="flex justify-between text-sm font-bold profit-item">
                                    <span class="text-gray-700">کل بازدهی ۵ ساله</span>
                                    <span class="text-green-600">
                                        <span id="totalProfit">0</span> ریال
                                    </span>
                                </div>
                            </div>

                            <!-- Action Buttons -->
                            <div class="space-y-3">
                                @if (User.Identity.IsAuthenticated)
                                {

                                    if (Model.UserDto.UserDocument == null)
                                    {
                                        <button onclick="window.location.href='/Account/Profile'" class="btn btn-primary w-full py-3 text-lg font-semibold" disabled="@(Model.Product.Status == ProductStatus.IsDone || Model.Product.Status == ProductStatus.NotActive)">
                                            برای سرمایه گزاری ابتدا باید اطلاعات خود را وارد کنید
                                        </button>
                                    }
                                    else if (!(Model.UserDto.UserDocument.Status == Models.User.Enum.UserDocumentStatus.IsConfirmed))
                                    {
                                        <button onclick="window.location.href='/Account/Profile'" class="btn btn-primary w-full py-3 text-lg font-semibold" disabled="@(Model.Product.Status == ProductStatus.IsDone || Model.Product.Status == ProductStatus.NotActive)">
                                            برای سرمایه گزاری ابتدا باید اطلاعات توسط کارشناسان مربوطه تایید شود
                                        </button>
                                    }
                                    else if (Model.UserDto.BankAccount.IsConfirmed == false)
                                    {
                                        <button onclick="window.location.href='/Account/BankInformation'" class="btn btn-primary w-full py-3 text-lg font-semibold" disabled="@(Model.Product.Status == ProductStatus.IsDone || Model.Product.Status == ProductStatus.NotActive)">
                                            برای سرمایه گزاری ابتدا باید اطلاعات بانکی شما توسط کارشناسان مربوطه تایید شود
                                        </button>
                                    }
                                    else if (Model.UserDto.BankAccount == null)
                                    {
                                        <button onclick="window.location.href='/Account/BankInformation'" class="btn btn-primary w-full py-3 text-lg font-semibold" disabled="@(Model.Product.Status == ProductStatus.IsDone || Model.Product.Status == ProductStatus.NotActive)">
                                            برای سرمایه گزاری ابتدا باید اطلاعات بانکی خود را وارد کنید
                                        </button>
                                    }
                                    else
                                    {
                                            <!-- فیلد مخفی برای مقدار دانگ -->
                                            @* <input type="hidden" id="dongAmountInput" name="dongAmount"  value="0.5"  /> *@
                                            <input type="hidden" name="slug" value="@Model.Product.Slug" />
                                            <button type="submit"
                                                    class="btn btn-primary w-full py-3 text-lg font-semibold"
                                                    id="investButton"
                                                    disabled="@(Model.Product.Status == ProductStatus.IsDone || Model.Product.Status == ProductStatus.NotActive)">
                                                سرمایه‌گذاری می‌کنم
                                            </button>
                                    }
                                }
                                else
                                {
                                    <a href="/Auth/VerificationPhoneNumber?action=Login&path=@($"{Request.Path}{Request.QueryString}")"
                                       class="btn btn-primary w-full py-3 text-lg font-semibold">
                                        ورود و سرمایه‌گذاری
                                    </a>
                                    <p class="text-center text-sm text-gray-500">
                                        برای سرمایه‌گذاری باید وارد حساب کاربری خود شوید
                                    </p>
                                }
                            </div>
                                        </form>
                        </div>

                        <!-- Trust Indicators -->
                        <div class="border-t border-gray-200 pt-4 space-y-3">
                            <div class="flex items-center justify-center space-x-4 space-x-reverse text-sm text-gray-600">
                                <div class="flex items-center">
                                    <svg class="w-4 h-4 text-green-500 ml-1" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                                    </svg>
                                    تضمین بازگشت سرمایه
                                </div>
                                <div class="flex items-center">
                                    <svg class="w-4 h-4 text-green-500 ml-1" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                                    </svg>
                                    مجوز رسمی
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Contact Support -->
                <div class="bg-blue-50 rounded-2xl border border-blue-200 p-6">
                    <div class="text-center space-y-3">
                        <svg class="w-12 h-12 text-blue-600 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z" />
                        </svg>
                        <h3 class="text-lg font-semibold text-gray-900">سوالی دارید؟</h3>
                        <p class="text-gray-600 text-sm">کارشناسان ما آماده پاسخگویی به شما هستند</p>
                        <button class="btn btn-outline w-full mt-2">
                            تماس با پشتیبانی
                        </button>
                    </div>
                </div>
            </div>
        </div>

