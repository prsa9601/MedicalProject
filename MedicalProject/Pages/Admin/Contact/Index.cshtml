                            icon: 'success',
                            confirmButtonText: 'باشه',
                            customClass: {
                                container: 'rtl',
                                title: 'text-right',
                                htmlContainer: 'text-right'
                            }
                        });
                        location.reload();
                    } else {
                        throw new Error('خطا در بروزرسانی وضعیت تماس');
