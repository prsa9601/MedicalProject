            box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
            transition: all 0.2s;
            cursor: pointer;
        }

        .btn-primary {
            background-color: #2563eb;
            color: white;
        }

        .btn-primary:hover {
            background-color: #1d4ed8;
        }

        .btn-outline {
            border: 1px solid #d1d5db;
            color: #374151;
            background-color: white;
        }

        .btn-outline:hover {
            background-color: #f9fafb;
        }

        .btn-sm {
            padding: 0.375rem 0.75rem;
            font-size: 0.75rem;
        }

        /* Progress Bar */
        .progress-bar {
            width: 100%;
            height: 0.5rem;
            background-color: #e5e7eb;
            border-radius: 0.25rem;
            overflow: hidden;
        }

        .progress-fill {
            height: 100%;
            background-color: #10b981;
            transition: width 0.3s ease;
        }

        /* Tabs */
        .tabs {
            display: flex;
            border-bottom: 1px solid #e5e7eb;
            margin-bottom: 1.5rem;
        }

        .tab {
            padding: 0.75rem 1.5rem;
            border-bottom: 2px solid transparent;
            cursor: pointer;
            transition: all 0.2s;
        }

        .tab.active {
            border-bottom-color: #2563eb;
            color: #2563eb;
            font-weight: 500;
        }

        .tab:hover {
            color: #2563eb;
        }

        /* Table */
        .table {
            width: 100%;
            border-collapse: collapse;
        }

        .table th,
        .table td {
            padding: 0.75rem 1rem;
            text-align: right;
            border-bottom: 1px solid #e5e7eb;
        }

        .table th {
            background-color: #f9fafb;
            font-weight: 500;
            color: #374151;
        }

        .table tbody tr:hover {
            background-color: #f9fafb;
        }

        /* Stats Cards */
        .stat-card {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border-radius: 0.75rem;
            padding: 1.5rem;
        }

        .stat-card .value {
            font-size: 2rem;
            font-weight: bold;
            margin-bottom: 0.5rem;
        }

        .stat-card .label {
            font-size: 0.875rem;
            opacity: 0.9;
        }

        /* Investment Cards */
        .investment-card {
            transition: transform 0.2s, box-shadow 0.2s;
            cursor: pointer;
        }

        .investment-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px -3px rgba(0, 0, 0, 0.1);
        }

        /* Responsive */
        @@media (min-width: 768px) {
            .md-flex-row {
                flex-direction: row;
            }
            
            .md-items-center {
                align-items: center;
            }
        }

        @@media (min-width: 1024px) {
            .lg-col-span-2 {
                grid-column: span 2 / span 2;
            }
        }
    </style>
</head>
<body>
    <div id="app">
        <!-- Loading State -->
        <div id="loading-section" class="min-h-screen bg-gray-50 flex items-center justify-center">
            <div class="text-center">
                <h2 class="text-2xl font-bold text-gray-900 mb-4">در حال بارگذاری...</h2>
            </div>
        </div>

        <!-- Main Content -->
        <div id="content-section" style="display: none;">
            <!-- Header -->
            <div class="bg-white shadow-sm border-b border-gray-200">
                <div class="max-w-7xl mx-auto px-4 py-8">
                    <div class="flex flex-col md-flex-row justify-between items-start md-items-center space-y-4 md-space-y-0">
                        <div>
                            <h1 class="text-3xl font-bold text-gray-900">سرمایه‌گذاری‌های من</h1>
                            <p class="text-gray-600 mt-2">
                                مدیریت و پیگیری سرمایه‌گذاری‌های شما
                            </p>
                        </div>
                        <div class="flex space-x-3 space-x-reverse">
                            <button
                                onclick="window.location.href = '/projects'"
                                class="btn btn-primary">
                                <i class="fas fa-plus ml-2"></i>
                                سرمایه‌گذاری جدید
                            </button>
                            <button
                                onclick="window.location.href = '/Account/Profile'"
                                class="btn btn-outline">
                                <i class="fas fa-arrow-right ml-2"></i>
                                بازگشت به پروفایل
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="max-w-7xl mx-auto px-4 py-8">
                <!-- Statistics -->
                <div class="grid grid-cols-1 md-grid-cols-2 lg-grid-cols-4 gap-6 mb-8">
                    <div class="stat-card">
                        <div class="value" id="total-investments">۰ ریال</div>
                        <div class="label">کل سرمایه‌گذاری</div>
                    </div>
                    <div class="stat-card" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);">
                        <div class="value" id="total-profit">۰ ریال</div>
                        <div class="label">سود کل</div>
                    </div>
                    <div class="stat-card" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);">
                        <div class="value" id="active-investments">۰</div>
                        <div class="label">سرمایه‌گذاری فعال</div>
                    </div>
                    <div class="stat-card" style="background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);">
                        <div class="value" id="avg-return">۰٪</div>
                        <div class="label">میانگین بازدهی</div>
                    </div>
                </div>

                <!-- Tabs -->
                <div class="tabs">
                    <div class="tab active" data-tab="all">همه سرمایه‌گذاری‌ها</div>
                    <div class="tab" data-tab="active">فعال</div>
                    <div class="tab" data-tab="completed">تکمیل شده</div>
                    <div class="tab" data-tab="pending">در انتظار</div>
                </div>

                <!-- Investments Grid -->
                <div class="grid grid-cols-1 lg-grid-cols-2 gap-6" id="investments-container">
                    <!-- Investment cards will be loaded here -->
                </div>

                <!-- Empty State -->
                <div id="empty-state" class="text-center py-12" style="display: none;">
                    <div class="w-24 h-24 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
                        <i class="fas fa-chart-line text-gray-400 text-2xl"></i>
                    </div>
                    <h3 class="text-xl font-semibold text-gray-900 mb-2">سرمایه‌گذاری‌ای یافت نشد</h3>
                    <p class="text-gray-600 mb-6">شما هنوز در هیچ پروژه‌ای سرمایه‌گذاری نکرده‌اید.</p>
                    <button
                        onclick="window.location.href = '/projects'"
                        class="btn btn-primary">
                        <i class="fas fa-plus ml-2"></i>
                        مشاهده پروژه‌ها
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script>
        // داده‌های فیک برای سرمایه‌گذاری‌ها
        const sampleInvestments = [
            {
                id: 1,
                project_name: "تجهیزات پزشکی بیمارستان امام",
                project_type: "تجهیزات پزشکی",
                invested_amount: 150000000,
                current_value: 172500000,
                profit: 22500000,
                return_rate: 15,
                status: "active",
                start_date: "2023-11-01",
                end_date: "2024-05-01",
                progress: 65,
                category: "medical_equipment"
            },
            {
                id: 2,
                project_name: "کلینیک تخصصی قلب",
                project_type: "مرکز درمانی",
                invested_amount: 250000000,
                current_value: 287500000,
                profit: 37500000,
                return_rate: 15,
                status: "active",
                start_date: "2023-10-15",
                end_date: "2024-04-15",
                progress: 80,
                category: "clinic"
            },
            {
                id: 3,
                project_name: "آزمایشگاه تشخیص طبی",
                project_type: "آزمایشگاه",
                invested_amount: 75000000,
                current_value: 82500000,
                profit: 7500000,
                return_rate: 10,
                status: "completed",
                start_date: "2023-08-01",
                end_date: "2024-02-01",
                progress: 100,
                category: "laboratory"
            },
            {
                id: 4,
                project_name: "مرکز تصویربرداری",
                project_type: "تصویربرداری",
                invested_amount: 120000000,
                current_value: 120000000,
                profit: 0,
                return_rate: 0,
                status: "pending",
                start_date: "2024-01-15",
                end_date: "2024-07-15",
                progress: 0,
                category: "imaging"
            }
        ];

        // وضعیت برنامه
        let state = {
            loading: true,
            investments: [],
            filteredInvestments: [],
            activeTab: 'all'
        };

        // تابع فرمت ارز
        function formatCurrency(amount) {
            return new Intl.NumberFormat('fa-IR').format(amount) + ' ریال';
        }

        // تابع فرمت تاریخ
        function formatDate(dateString) {
            const date = new Date(dateString);
            return date.toLocaleDateString('fa-IR');
        }

        // تابع وضعیت سرمایه‌گذاری
        function getInvestmentStatusBadge(status) {
            const statusMap = {
                active: { variant: 'success', text: 'فعال', icon: 'fa-play-circle' },
                completed: { variant: 'info', text: 'تکمیل شده', icon: 'fa-check-circle' },
                pending: { variant: 'warning', text: 'در انتظار', icon: 'fa-clock' },
                cancelled: { variant: 'danger', text: 'لغو شده', icon: 'fa-times-circle' }
            };
            return statusMap[status] || { variant: 'secondary', text: status, icon: 'fa-question-circle' };
        }

        // تابع آیکون دسته‌بندی
        function getCategoryIcon(category) {
            const iconMap = {
                medical_equipment: 'fa-medkit',
                clinic: 'fa-hospital',
                laboratory: 'fa-flask',
                imaging: 'fa-x-ray',
                pharmacy: 'fa-pills',
                surgery: 'fa-syringe'
            };
            return iconMap[category] || 'fa-folder';
        }

        // تابع بارگذاری داده‌ها
        function loadInvestmentsData() {
            state.loading = true;
            updateUI();
            
            // شبیه‌سازی بارگذاری از API
            setTimeout(() => {
                state.investments = sampleInvestments;
                state.filteredInvestments = sampleInvestments;
                state.loading = false;
                updateUI();
                updateStatistics();
                renderInvestments();
            }, 1000);
        }

        // تابع به‌روزرسانی آمار
        function updateStatistics() {
            const totalInvested = state.investments.reduce((sum, inv) => sum + inv.invested_amount, 0);
            const totalProfit = state.investments.reduce((sum, inv) => sum + inv.profit, 0);
            const activeCount = state.investments.filter(inv => inv.status === 'active').length;
            const avgReturn = state.investments.length > 0 
                ? state.investments.reduce((sum, inv) => sum + inv.return_rate, 0) / state.investments.length 
                : 0;

            document.getElementById('total-investments').textContent = formatCurrency(totalInvested);
            document.getElementById('total-profit').textContent = formatCurrency(totalProfit);
            document.getElementById('active-investments').textContent = activeCount;
            document.getElementById('avg-return').textContent = avgReturn.toFixed(1) + '%';
        }

        // تابع رندر سرمایه‌گذاری‌ها
        function renderInvestments() {
            const container = document.getElementById('investments-container');
            const emptyState = document.getElementById('empty-state');
            
            if (state.filteredInvestments.length === 0) {
                container.style.display = 'none';
                emptyState.style.display = 'block';
                return;
            }
            
            container.style.display = 'grid';
            emptyState.style.display = 'none';
            
            container.innerHTML = state.filteredInvestments.map(investment => `
                <div class="card investment-card" onclick="viewInvestmentDetails(${investment.id})">
                    <div class="p-6">
                        <div class="flex items-start justify-between mb-4">
                            <div class="flex items-center">
                                <div class="w-12 h-12 bg-primary-50 rounded-lg flex items-center justify-center mr-3">
                                    <i class="fas ${getCategoryIcon(investment.category)} text-primary-600"></i>
                                </div>
                                <div>
                                    <h3 class="font-semibold text-gray-900">${investment.project_name}</h3>
                                    <p class="text-sm text-gray-600">${investment.project_type}</p>
                                </div>
                            </div>
                            ${getStatusBadgeHTML(investment.status)}
                        </div>
                        
                        <div class="space-y-3">
                            <div class="flex justify-between items-center">
                                <span class="text-sm text-gray-600">مبلغ سرمایه‌گذاری</span>
                                <span class="font-semibold">${formatCurrency(investment.invested_amount)}</span>
                            </div>
                            
                            <div class="flex justify-between items-center">
                                <span class="text-sm text-gray-600">ارزش فعلی</span>
                                <span class="font-semibold text-green-600">${formatCurrency(investment.current_value)}</span>
                            </div>
                            
                            <div class="flex justify-between items-center">
                                <span class="text-sm text-gray-600">سود</span>
                                <span class="font-semibold text-green-600">${formatCurrency(investment.profit)}</span>
                            </div>
                            
                            <div class="flex justify-between items-center">
                                <span class="text-sm text-gray-600">نرخ بازدهی</span>
                                <span class="font-semibold ${investment.return_rate > 0 ? 'text-green-600' : 'text-red-600'}">
                                    ${investment.return_rate}%
                                </span>
                            </div>
                        </div>
                        
                        ${investment.status === 'active' ? `
                            <div class="mt-4">
                                <div class="flex justify-between text-sm text-gray-600 mb-2">
                                    <span>پیشرفت پروژه</span>
                                    <span>${investment.progress}%</span>
                                </div>
                                <div class="progress-bar">
                                    <div class="progress-fill" style="width: ${investment.progress}%"></div>
                                </div>
                            </div>
                        ` : ''}
                        
                        <div class="flex justify-between items-center mt-4 pt-4 border-t border-gray-200">
                            <div class="text-xs text-gray-500">
                                شروع: ${formatDate(investment.start_date)}
                            </div>
                            <div class="text-xs text-gray-500">
                                پایان: ${formatDate(investment.end_date)}
                            </div>
                        </div>
                    </div>
                </div>
            `).join('');
        }

        // تابع تولید HTML برای وضعیت
        function getStatusBadgeHTML(status) {
            const statusInfo = getInvestmentStatusBadge(status);
            return `
                <span class="badge badge-${statusInfo.variant}">
                    <i class="fas ${statusInfo.icon} ml-1"></i>
                    ${statusInfo.text}
                </span>
            `;
        }

        // تابع فیلتر سرمایه‌گذاری‌ها
        function filterInvestments(tab) {
            state.activeTab = tab;
            
            if (tab === 'all') {
                state.filteredInvestments = state.investments;
            } else {
                state.filteredInvestments = state.investments.filter(inv => inv.status === tab);
            }
            
            renderInvestments();
            updateTabStyles();
        }

        // تابع به‌روزرسانی استایل تب‌ها
        function updateTabStyles() {
            document.querySelectorAll('.tab').forEach(tab => {
                if (tab.dataset.tab === state.activeTab) {
                    tab.classList.add('active');
                } else {
                    tab.classList.remove('active');
                }
            });
        }

        // تابع مشاهده جزئیات سرمایه‌گذاری
        function viewInvestmentDetails(investmentId) {
            // در اینجا می‌توانید کاربر را به صفحه جزئیات هدایت کنید
            Swal.fire({
                title: 'جزئیات سرمایه‌گذاری',
                text: `صفحه جزئیات سرمایه‌گذاری ${investmentId} به زودی اضافه خواهد شد`,
                icon: 'info',
                confirmButtonText: 'متوجه شدم'
            });
        }

        // تابع به‌روزرسانی UI
        function updateUI() {
            const loadingSection = document.getElementById('loading-section');
            const contentSection = document.getElementById('content-section');
            
            if (state.loading) {
                loadingSection.style.display = 'flex';
                contentSection.style.display = 'none';
            } else {
                loadingSection.style.display = 'none';
                contentSection.style.display = 'block';
            }
        }

        // مقداردهی اولیه
        document.addEventListener('DOMContentLoaded', function() {
            loadInvestmentsData();
            
            // رویدادهای تب‌ها
            document.querySelectorAll('.tab').forEach(tab => {
                tab.addEventListener('click', function() {
                    filterInvestments(this.dataset.tab);
                });
            });
        });
    </script>
