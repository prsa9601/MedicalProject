                                    <button type="submit"
                                            class="flex items-center w-full px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 transition-colors">
                                        <svg class="h-4 w-4 ml-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                                        </svg>
                                        خروج
                                    </button>
                                </form>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="flex items-center space-x-3 space-x-reverse">
                            <a asp-page="/Auth/VerificationPhoneNumber" asp-route-action="@ForAuthAction.Login"
                               asp-route-path="@($"{Context.Request.Path}{Context.Request.QueryString}")" class="btn btn-outline">
                                ورود
                            </a>
                            <a asp-page="/Auth/VerificationPhoneNumber" asp-route-action="@ForAuthAction.Register"
                               asp-route-path="@($"{Context.Request.Path}{Context.Request.QueryString}")" class="btn btn-primary">
                                ثبت‌نام
                            </a>
                        </div>
                    }

                    <!-- Mobile Menu Button -->
                    <button onclick="toggleMobileMenu()"
                            class="md:hidden p-2 rounded-lg text-gray-400 hover:text-gray-600 hover:bg-gray-100 transition-colors">
