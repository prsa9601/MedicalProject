    <!-- محتوای اصلی -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="flex flex-col">
            <!-- اطلاعات آماری -->
            <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-6">
                <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                    <div class="text-center">
                        <div class="text-2xl font-bold text-blue-600">@(Model.Result != null || Model.Result.EntityCount > 0 ? ProductNumber(Model.Result) : 0)</div>
                        <div class="text-sm text-gray-600">پروژه فعال</div>
                    </div>
                    <div class="text-center">
                        <div class="text-2xl font-bold text-green-600">@(Model.Result != null || Model.Result.EntityCount > 0 ? InvestmentPrice(Model.Result) : 0)M </div>
                        <div class="text-sm text-gray-600">تومان سرمایه‌گذاری</div>
                    </div>
                    <div class="text-center">
                        <div class="text-2xl font-bold text-purple-600">@(Model.Result != null || Model.Result.EntityCount > 0 ? InvestmentNumber(Model.Result).ToString("N0") : 0)</div>
                        <div class="text-sm text-gray-600">سرمایه‌گذار</div>
                    </div>
                    <div class="text-center">
                        <div class="text-2xl font-bold text-orange-600">
                            @(Model.Result != null || Model.Result.EntityCount > 0 ? AverageProfit(Model.Result) : 0) %</ div >
                            <div class="text-sm text-gray-600">میانگین سود</div>
                        </div>
                    </div>
                </div>
                @functions
                {
                    private decimal InvestmentNumber(ProductFilterForIndexPageResult model)
                    {
                        if (model.Data.Count == 0)
                        {
                            return 0;
                        }
                        int res = 0;
                        foreach (var item in model.Data)
                        {
                            res += item.PurchaseReportDto.Count();
                        }
                        return res;

                    }
                    private string InvestmentPrice(ProductFilterForIndexPageResult model)
                    {
                        if (model.Data.Count == 0)
                        {
                            return "0";
                        }
                        decimal res = 0;
                        foreach (var item in model.Data)
                        {
                            var sum = item.PurchaseReportDto.Sum(i => decimal.Parse(i.TotalPrice));
                            res += sum;
                        }
                        return (res / 1000000).ToString("F2");
                    }

                    private int ProductNumber(ProductFilterForIndexPageResult model)
                    {
                        if (model.Data.Count == 0)
                        {
                            return 0;
                        }
                        return model.Data.Where(i => i.Status != Models.Product.ProductStatus.NotActive).Count();
                    }

                    private int AverageProfit(ProductFilterForIndexPageResult model)
                    {
                        if (model.Data.Count == 0)
                        {
                            return 0;
                        }
                        var profit = (model.Data.Sum(i => decimal.Parse(i.InventoryDto.Profit)) * 100);
                        var price = ((model.Data.Sum(i => decimal.Parse(i.InventoryDto.TotalPrice))));
                        var average = profit / price;

                        return Convert.ToInt32(average);
                    }

                }
