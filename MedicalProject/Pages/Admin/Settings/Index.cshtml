    <script>
        // مدیریت سایدبار ریسپانسیو
        document.addEventListener('DOMContentLoaded', function() {
            const mobileMenuBtn = document.getElementById('mobileMenuToggle');
            const sidebarToggle = document.getElementById('sidebarToggle');
            const mobileOverlay = document.getElementById('mobileOverlay');
            const body = document.body;

            // تابع toggle برای دسکتاپ
            function toggleDesktopSidebar() {
                body.classList.toggle('sidebar-collapsed');
                localStorage.setItem('sidebarCollapsed', body.classList.contains('sidebar-collapsed'));
            }

            // تابع toggle برای موبایل
            function toggleMobileSidebar() {
                body.classList.toggle('sidebar-open');
                if (body.classList.contains('sidebar-open')) {
                    document.body.style.overflow = 'hidden';
                } else {
                    document.body.style.overflow = '';
                }
            }

            // تابع بستن سایدبار موبایل
            function closeMobileSidebar() {
                body.classList.remove('sidebar-open');
                document.body.style.overflow = '';
            }

            // رویدادها
            if (mobileMenuBtn) {
                mobileMenuBtn.addEventListener('click', toggleMobileSidebar);
            }

            if (sidebarToggle) {
                sidebarToggle.addEventListener('click', function() {
                    if (window.innerWidth >= 992) {
                        toggleDesktopSidebar();
                    } else {
                        toggleMobileSidebar();
                    }
                });
            }

            if (mobileOverlay) {
                mobileOverlay.addEventListener('click', closeMobileSidebar);
            }

            // بارگذاری وضعیت ذخیره شده
            const savedState = localStorage.getItem('sidebarCollapsed');
            if (savedState === 'true' && window.innerWidth >= 992) {
                body.classList.add('sidebar-collapsed');
            }

            // تنظیم اولیه برای تبلت
            if (window.innerWidth < 1200 && window.innerWidth >= 992) {
                body.classList.add('sidebar-collapsed');
            }

            // مدیریت ریسایز
            window.addEventListener('resize', function() {
                if (window.innerWidth >= 992) {
                    // بستن منوی موبایل در دسکتاپ
                    closeMobileSidebar();
                    // نمایش دکمه دسکتاپ
                    document.querySelector('.desktop-toggle-btn').style.display = 'flex';
                    document.querySelector('.mobile-menu-btn').style.display = 'none';
                } else {
                    // نمایش دکمه موبایل
                    document.querySelector('.desktop-toggle-btn').style.display = 'none';
                    document.querySelector('.mobile-menu-btn').style.display = 'flex';
                    // باز کردن سایدبار اگر قبلاً جمع شده بود
                    body.classList.remove('sidebar-collapsed');
                }

                // تنظیم برای تبلت
                if (window.innerWidth < 1200 && window.innerWidth >= 992) {
                    body.classList.add('sidebar-collapsed');
                }
            });

            // تنظیم اولیه نمایش دکمه‌ها
            if (window.innerWidth >= 992) {
                document.querySelector('.desktop-toggle-btn').style.display = 'flex';
                document.querySelector('.mobile-menu-btn').style.display = 'none';
            } else {
                document.querySelector('.desktop-toggle-btn').style.display = 'none';
                document.querySelector('.mobile-menu-btn').style.display = 'flex';
            }

            // بستن سایدبار با کلیک روی لینک‌ها در موبایل
            document.querySelectorAll('.sidebar-link').forEach(link => {
                link.addEventListener('click', function() {
                    if (window.innerWidth < 992) {
                        closeMobileSidebar();
                    }
                });
            });
        });
    </script>
</head>
