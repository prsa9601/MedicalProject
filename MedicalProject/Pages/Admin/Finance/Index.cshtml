                        </a>

                        <a asp-page="/Admin/Users/Index" class="sidebar-link">
                            <i class="fas fa-users"></i>
                            <span>کاربران</span>
                        </a>

                        <a asp-page="/Admin/Documents/Index" class="sidebar-link">
                            <i class="fas fa-file-alt"></i>
                            <span>مدارک کاربران</span>
                        </a>

                        <a asp-page="/Admin/Product/Index" class="sidebar-link">
                            <i class="fas fa-project-diagram"></i>
                            <span>پروژه‌ها</span>
                        </a>

                        <a asp-page="/Admin/Orders/Index" class="sidebar-link">
                            <i class="fas fa-shopping-cart"></i>
                            <span>سرمایه گزاری ها</span>
                        </a>

                        <a asp-page="/Admin/Finance/Index" class="sidebar-link active">
                            <i class="fas fa-chart-line"></i>
                            <span>مدیریت مالی</span>
                        </a>

                        <a asp-page="/Admin/Settings/Index" class="sidebar-link">
                            <i class="fas fa-cog"></i>
                            <span>تنظیمات</span>
                        </a>
                    </nav>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="admin-main flex-1">
            <div class="admin-content">
                <!-- Page Header -->
                <div class="bg-white border-b border-gray-200">
                    <div class="max-w-full mx-auto px-4 sm:px-6 lg:px-8 py-6">
                        <div class="flex justify-between items-center">
                            <div>
                                <h1 class="text-2xl font-bold text-gray-900">مدیریت مالی و سود</h1>
                                <p class="mt-1 text-sm text-gray-600">مدیریت سود کلی سایت و سود کاربران</p>
                            </div>
                            <div class="flex items-center space-x-3 space-x-reverse">
                                <button onclick="exportFinancialReport()" class="btn btn-outline">
                                    <i class="fas fa-download ml-2"></i>
                                    خروجی گزارش
                                </button>
                                <button onclick="showSettlementModal()" class="btn btn-primary">
                                    <i class="fas fa-calculator ml-2"></i>
                                    تسویه حساب
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Main Content Area -->
                <div class="max-w-full mx-auto px-4 sm:px-6 lg:px-8 py-6">
                    <!-- Statistics Cards -->
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
                        <div class="stat-card" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);">
                            <div class="relative z-10">
                                <p class="text-sm opacity-90">سود کاربران</p>
                                <p class="text-2xl font-bold mt-2">
                                    @Model.Result.Data.SafeSum(i => i.TotalPrice).ToString("N0")
                                    <span class="text-sm">ریال</span>
                                </p>
                                <div class="flex items-center mt-2">
                                    <i class="fas fa-arrow-up ml-1 text-green-300"></i>
                                    <span class="text-green-300 text-sm">۸٪ رشد</span>
                                </div>
                            </div>
                        </div>

                        <div class="stat-card" style="background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);">
                            <div class="relative z-10">
                                <p class="text-sm opacity-90">تعداد تراکنش‌ها</p>
                                <p class="text-2xl font-bold mt-2">@Model.Result.EntityCount.ToString("N0")</p>
                                <div class="flex items-center mt-2">
                                    <i class="fas fa-arrow-up ml-1 text-green-300"></i>
                                    <span class="text-green-300 text-sm">۱۵٪ رشد</span>
                                </div>
                            </div>
                        </div>

                        <!-- اضافه کردن کارت‌های آماری دیگر -->
                        <div class="stat-card" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);">
                            <div class="relative z-10">
                                <p class="text-sm opacity-90">میانگین سود</p>
                                <p class="text-2xl font-bold mt-2">
                                    @(Model.Result.EntityCount > 0 ? (Model.Result.Data.SafeSum(i => i.TotalPrice) / Model.Result.EntityCount).ToString("N0") : "0")
                                    <span class="text-sm">ریال</span>
                                </p>
                                <div class="flex items-center mt-2">
                                    <i class="fas fa-chart-line ml-1 text-green-300"></i>
                                    <span class="text-green-300 text-sm">پایدار</span>
                                </div>
                            </div>
                        </div>

                        <div class="stat-card" style="background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);">
                            <div class="relative z-10">
                                <p class="text-sm opacity-90">کاربران فعال</p>
                                <p class="text-2xl font-bold mt-2">@Model.UserPurchaseReportResult.Data.Count.ToString("N0")</p>
                                <div class="flex items-center mt-2">
                                    <i class="fas fa-users ml-1 text-green-300"></i>
                                    <span class="text-green-300 text-sm">۱۰٪ رشد</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Financial Summary -->
                    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-8">
                        <!-- Platform Summary -->
