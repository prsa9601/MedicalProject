    <style>
        :root {
            --sidebar-width: 260px;
            --sidebar-collapsed: 70px;
        }

        html {
            direction: rtl;
            font-family: 'Vazir', 'IRANSans', system-ui, sans-serif;
        }

        body {
            margin: 0;
            padding: 0;
            overflow-x: hidden;
        }

        /* سایدبار دسکتاپ */
        .admin-sidebar {
            width: var(--sidebar-width);
            background: linear-gradient(180deg, #1e40af 0%, #1e3a8a 100%);
            color: white;
            transition: all 0.3s ease;
            height: 100vh;
            position: fixed;
            right: 0;
            top: 0;
            z-index: 100;
            overflow-y: auto;
            box-shadow: 2px 0 10px rgba(0, 0, 0, 0.1);
        }

        .admin-main {
            margin-right: var(--sidebar-width);
            transition: all 0.3s ease;
            min-height: 100vh;
        }

        /* حالت جمع شده در دسکتاپ */
        .sidebar-collapsed .admin-sidebar {
            width: var(--sidebar-collapsed);
        }

        .sidebar-collapsed .admin-main {
            margin-right: var(--sidebar-collapsed);
        }

        /* لینک‌های سایدبار */
        .sidebar-link {
            display: flex;
            align-items: center;
            padding: 0.75rem 1rem;
            color: rgba(209, 213, 219, 0.9);
            border-radius: 0.5rem;
            margin: 0.25rem 0.5rem;
            transition: all 0.2s;
            white-space: nowrap;
            overflow: hidden;
            position: relative;
            text-decoration: none;
            cursor: pointer;
        }

            .sidebar-link:hover {
                background-color: rgba(255, 255, 255, 0.1);
                color: white;
            }

            .sidebar-link.active {
                background-color: rgba(37, 99, 235, 0.2);
                color: white;
                border-right: 3px solid #3b82f6;
            }

            .sidebar-link i {
                min-width: 20px;
                text-align: center;
                font-size: 1.125rem;
            }

            .sidebar-link span {
                margin-right: 0.75rem;
                transition: all 0.3s;
                font-size: 0.875rem;
            }

        /* حالت جمع شده */
        .sidebar-collapsed .sidebar-link span {
            opacity: 0;
            width: 0;
            margin: 0;
        }

        .sidebar-collapsed .sidebar-link {
            justify-content: center;
            padding: 0.75rem;
        }

        /* Overlay برای موبایل */
        .mobile-overlay {
            display: none;
            position: fixed;
            top: 0;
            right: 0;
            left: 0;
            bottom: 0;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 90;
        }

        /* تبلت و موبایل (کمتر از 992px) */
        @@media (max-width: 992px) {
            .admin-sidebar {
                transform: translateX(100%);
                width: 280px;
                transition: transform 0.3s ease;
            }

            .admin-main {
                margin-right: 0 !important;
            }

            .mobile-menu-btn {
                display: block !important;
            }

            .desktop-toggle-btn {
                display: none !important;
            }
            /* حالت باز در موبایل */
            .sidebar-open .admin-sidebar {
                transform: translateX(0);
                box-shadow: -2px 0 20px rgba(0, 0, 0, 0.25);
            }

            .sidebar-open .mobile-overlay {
                display: block;
                animation: fadeIn 0.3s ease;
            }
        }

        /* دسکتاپ متوسط (1200px-992px) */
        @@media (max-width: 1200px) and (min-width: 992px) {
            .admin-sidebar {
                width: var(--sidebar-collapsed);
            }

            .admin-main {
                margin-right: var(--sidebar-collapsed);
            }

            .sidebar-link span {
                display: none;
            }

            .sidebar-link {
                justify-content: center;
                padding: 0.75rem;
            }
        }

        /* انیمیشن‌ها */
        @@keyframes fadeIn {
            from {
                opacity: 0;
            }

            to {
                opacity: 1;
            }
        }

        /* استایل‌های دکمه‌ها */
        .btn {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            padding: 0.5rem 1rem;
            border-radius: 0.5rem;
            cursor: pointer;
            transition: all 0.2s;
            border: none;
            background: none;
        }

        /* هدر */
        header {
            background-color: white;
            box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
            border-bottom: 1px solid #e5e7eb;
            position: sticky;
            top: 0;
            z-index: 50;
        }

        /* اسکرول بار سفارشی */
        .admin-sidebar::-webkit-scrollbar {
            width: 4px;
        }

        .admin-sidebar::-webkit-scrollbar-track {
            background: rgba(255, 255, 255, 0.1);
        }

        .admin-sidebar::-webkit-scrollbar-thumb {
            background: rgba(255, 255, 255, 0.3);
            border-radius: 2px;
        }
    </style>
    <script>
        // مدیریت سایدبار ریسپانسیو
        document.addEventListener('DOMContentLoaded', function() {
            const mobileMenuBtn = document.getElementById('mobileMenuToggle');
            const sidebarToggle = document.getElementById('sidebarToggle');
            const mobileOverlay = document.getElementById('mobileOverlay');
            const body = document.body;

            // تابع toggle برای دسکتاپ
            function toggleDesktopSidebar() {
                body.classList.toggle('sidebar-collapsed');
                localStorage.setItem('sidebarCollapsed', body.classList.contains('sidebar-collapsed'));
            }

            // تابع toggle برای موبایل
            function toggleMobileSidebar() {
                body.classList.toggle('sidebar-open');
                if (body.classList.contains('sidebar-open')) {
                    document.body.style.overflow = 'hidden';
                } else {
                    document.body.style.overflow = '';
                }
            }

            // تابع بستن سایدبار موبایل
            function closeMobileSidebar() {
                body.classList.remove('sidebar-open');
                document.body.style.overflow = '';
            }

            // رویدادها
            if (mobileMenuBtn) {
                mobileMenuBtn.addEventListener('click', toggleMobileSidebar);
            }

            if (sidebarToggle) {
                sidebarToggle.addEventListener('click', function() {
                    if (window.innerWidth >= 992) {
                        toggleDesktopSidebar();
                    } else {
                        toggleMobileSidebar();
                    }
                });
            }

            if (mobileOverlay) {
                mobileOverlay.addEventListener('click', closeMobileSidebar);
            }

            // بارگذاری وضعیت ذخیره شده
            const savedState = localStorage.getItem('sidebarCollapsed');
            if (savedState === 'true' && window.innerWidth >= 992) {
                body.classList.add('sidebar-collapsed');
            }

            // تنظیم اولیه برای تبلت
            if (window.innerWidth < 1200 && window.innerWidth >= 992) {
                body.classList.add('sidebar-collapsed');
            }

            // مدیریت ریسایز
            window.addEventListener('resize', function() {
                if (window.innerWidth >= 992) {
                    // بستن منوی موبایل در دسکتاپ
                    closeMobileSidebar();
                    // نمایش دکمه دسکتاپ
                    document.querySelector('.desktop-toggle-btn').style.display = 'flex';
                    document.querySelector('.mobile-menu-btn').style.display = 'none';
                } else {
                    // نمایش دکمه موبایل
                    document.querySelector('.desktop-toggle-btn').style.display = 'none';
                    document.querySelector('.mobile-menu-btn').style.display = 'flex';
                    // باز کردن سایدبار اگر قبلاً جمع شده بود
                    body.classList.remove('sidebar-collapsed');
                }

                // تنظیم برای تبلت
                if (window.innerWidth < 1200 && window.innerWidth >= 992) {
                    body.classList.add('sidebar-collapsed');
                }
            });

            // تنظیم اولیه نمایش دکمه‌ها
            if (window.innerWidth >= 992) {
                document.querySelector('.desktop-toggle-btn').style.display = 'flex';
                document.querySelector('.mobile-menu-btn').style.display = 'none';
            } else {
                document.querySelector('.desktop-toggle-btn').style.display = 'none';
                document.querySelector('.mobile-menu-btn').style.display = 'flex';
            }

            // بستن سایدبار با کلیک روی لینک‌ها در موبایل
            document.querySelectorAll('.sidebar-link').forEach(link => {
                link.addEventListener('click', function() {
                    if (window.innerWidth < 992) {
                        closeMobileSidebar();
                    }
                });
            });
        });
    </script>
</head>
