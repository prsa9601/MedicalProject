@page
@model MedicalProject.Pages.Auth.RegisterModel
@{
    ViewData["Title"] = "ثبت‌نام در پلتفرم دنگ";
}

<div class="min-h-screen bg-gradient-to-br from-blue-50 via-white to-green-50 flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-4xl w-full space-y-8">
        <!-- Header -->
        <div class="text-center">
            <div class="flex justify-center">
                <div class="w-16 h-16 bg-blue-600 rounded-xl flex items-center justify-center">
                    <span class="text-white font-bold text-2xl">د</span>
                </div>
            </div>
            <h1 class="mt-6 text-4xl font-bold text-gray-900">
                ثبت‌نام در پلتفرم دنگ
            </h1>
            <p class="mt-4 text-lg text-gray-600 max-w-2xl mx-auto">
                برای ثبت‌نام و شروع سرمایه‌گذاری در پروژه‌های صنعتی و پزشکی، 
                لطفاً با تیم ما تماس بگیرید
            </p>
        </div>

        <!-- Main Content -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
            <!-- Contact Information -->
            <div class="card">
                <div class="p-8">
                    <div class="flex items-center mb-6">
                        <div class="p-3 bg-blue-100 rounded-full">
                            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                            </svg>
                        </div>
                        <h2 class="text-2xl font-bold text-gray-900 mr-4">تماس با ما</h2>
                    </div>
                    
                    <div class="space-y-6">
                        <div class="flex items-start space-x-4 space-x-reverse">
                            <div class="p-2 bg-green-100 rounded-lg">
                                <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                                </svg>
                            </div>
                            <div>
                                <h3 class="font-semibold text-gray-900">شماره تماس</h3>
                                <p class="text-gray-600">021-12345678</p>
                                <p class="text-sm text-gray-500">شنبه تا پنج‌شنبه، 9 صبح تا 6 عصر</p>
                            </div>
                        </div>

                        <div class="flex items-start space-x-4 space-x-reverse">
                            <div class="p-2 bg-blue-100 rounded-lg">
                                <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                                </svg>
                            </div>
                            <div>
                                <h3 class="font-semibold text-gray-900">ایمیل</h3>
                                <p class="text-gray-600">info@dang-platform.ir</p>
                                <p class="text-sm text-gray-500">پاسخ در کمتر از 24 ساعت</p>
                            </div>
                        </div>

                        <div class="flex items-start space-x-4 space-x-reverse">
                            <div class="p-2 bg-purple-100 rounded-lg">
                                <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
                                </svg>
                            </div>
                            <div>
                                <h3 class="font-semibold text-gray-900">واتساپ</h3>
                                <p class="text-gray-600">09123456789</p>
                                <p class="text-sm text-gray-500">پاسخ فوری</p>
                            </div>
                        </div>

                        <div class="flex items-start space-x-4 space-x-reverse">
                            <div class="p-2 bg-orange-100 rounded-lg">
                                <svg class="w-5 h-5 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9v-9m0-9v9m0 9c-5 0-9-4-9-9s4-9 9-9"/>
                                </svg>
                            </div>
                            <div>
                                <h3 class="font-semibold text-gray-900">وب‌سایت</h3>
                                <p class="text-gray-600">www.dang-platform.ir</p>
                                <p class="text-sm text-gray-500">اطلاعات بیشتر</p>
                            </div>
                        </div>
                    </div>

                    <div class="mt-8 p-4 bg-blue-50 rounded-lg">
                        <div class="flex items-center">
                            <svg class="w-5 h-5 text-blue-600 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                            <p class="text-sm text-blue-800">
                                <strong>ساعات کاری:</strong> شنبه تا پنج‌شنبه، 9:00 تا 18:00
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Registration Process -->
            <div class="card">
                <div class="p-8">
                    <div class="flex items-center mb-6">
                        <div class="p-3 bg-green-100 rounded-full">
                            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"/>
                            </svg>
                        </div>
                        <h2 class="text-2xl font-bold text-gray-900 mr-4">فرآیند ثبت‌نام</h2>
                    </div>

                    <div class="space-y-6">
                        <div class="flex items-start space-x-4 space-x-reverse">
                            <div class="flex-shrink-0 w-8 h-8 bg-blue-500 text-white rounded-full flex items-center justify-center text-sm font-bold">
                                1
                            </div>
                            <div>
                                <h3 class="font-semibold text-gray-900">تماس اولیه</h3>
                                <p class="text-gray-600 text-sm">
                                    با ما تماس بگیرید و درخواست ثبت‌نام خود را اعلام کنید
                                </p>
                            </div>
                        </div>

                        <div class="flex items-start space-x-4 space-x-reverse">
                            <div class="flex-shrink-0 w-8 h-8 bg-blue-500 text-white rounded-full flex items-center justify-center text-sm font-bold">
                                2
                            </div>
                            <div>
                                <h3 class="font-semibold text-gray-900">ارسال مدارک</h3>
                                <p class="text-gray-600 text-sm">
                                    مدارک هویتی و اطلاعات مورد نیاز را ارسال کنید
                                </p>
                            </div>
                        </div>

                        <div class="flex items-start space-x-4 space-x-reverse">
                            <div class="flex-shrink-0 w-8 h-8 bg-blue-500 text-white rounded-full flex items-center justify-center text-sm font-bold">
                                3
                            </div>
                            <div>
                                <h3 class="font-semibold text-gray-900">احراز هویت</h3>
                                <p class="text-gray-600 text-sm">
                                    تیم ما مدارک شما را بررسی و تأیید می‌کند
                                </p>
                            </div>
                        </div>

                        <div class="flex items-start space-x-4 space-x-reverse">
                            <div class="flex-shrink-0 w-8 h-8 bg-blue-500 text-white rounded-full flex items-center justify-center text-sm font-bold">
                                4
                            </div>
                            <div>
                                <h3 class="font-semibold text-gray-900">فعال‌سازی حساب</h3>
                                <p class="text-gray-600 text-sm">
                                    حساب کاربری شما فعال شده و می‌توانید شروع کنید
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="mt-8 p-4 bg-green-50 rounded-lg">
                        <div class="flex items-center">
                            <svg class="w-5 h-5 text-green-600 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                            <p class="text-sm text-green-800">
                                <strong>زمان فرآیند:</strong> 1-2 روز کاری
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Features -->
        <div class="card">
            <div class="p-8">
                <h2 class="text-2xl font-bold text-gray-900 text-center mb-8">
                    چرا با ما سرمایه‌گذاری کنید؟
                </h2>
                
                <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                    <div class="text-center">
                        <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
                            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                            </svg>
                        </div>
                        <h3 class="font-semibold text-gray-900 mb-2">امنیت بالا</h3>
                        <p class="text-gray-600 text-sm">
                            تمام سرمایه‌گذاری‌ها تحت نظارت و تضمین بانکی
                        </p>
                    </div>

                    <div class="text-center">
                        <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
                            <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                            </svg>
                        </div>
                        <h3 class="font-semibold text-gray-900 mb-2">پروژه‌های معتبر</h3>
                        <p class="text-gray-600 text-sm">
                            فقط پروژه‌های تأیید شده و سودآور
                        </p>
                    </div>

                    <div class="text-center">
                        <div class="w-16 h-16 bg-yellow-100 rounded-full flex items-center justify-center mx-auto mb-4">
                            <svg class="w-8 h-8 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                        </div>
                        <h3 class="font-semibold text-gray-900 mb-2">شفافیت کامل</h3>
                        <p class="text-gray-600 text-sm">
                            گزارش‌گیری دقیق و شفاف از عملکرد پروژه‌ها
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <button
                onclick="window.open('tel:02112345678')"
                class="btn btn-primary text-lg px-8 py-4 flex items-center justify-center"
            >
                <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                </svg>
                تماس تلفنی
            </button>
            
            <button
                onclick="window.open('mailto:info@dang-platform.ir')"
                class="btn btn-outline text-lg px-8 py-4 flex items-center justify-center"
            >
                <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
                ارسال ایمیل
            </button>
            
            <button
                onclick="window.open('https://wa.me/989123456789')"
                class="btn btn-outline text-lg px-8 py-4 flex items-center justify-center"
            >
                <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
                </svg>
                واتساپ
            </button>
        </div>

        <!-- Back to Login -->
        <div class="text-center">
            <a
                href="/Login"
                class="inline-flex items-center text-sm font-medium text-blue-600 hover:text-blue-500 transition-colors"
            >
                <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                </svg>
                بازگشت به ورود
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            console.log('صفحه ثبت‌نام بارگذاری شد');
            
            // اضافه کردن انیمیشن‌های جزئی برای کارت‌ها
            const cards = document.querySelectorAll('.card');
            cards.forEach((card, index) => {
                card.style.opacity = '0';
                card.style.transform = 'translateY(20px)';
                
                setTimeout(() => {
                    card.style.transition = 'all 0.5s ease';
                    card.style.opacity = '1';
                    card.style.transform = 'translateY(0)';
                }, index * 200);
            });
        });
    </script>
}