@page
@model MedicalProject.Pages.Auth.VerificationPhoneNumberModel

@{
    ViewData["Title"] = "تایید رمز عبور";
}

@section Styles
{
    <meta name="robots" content="noindex, nofollow">

}

<div class="min-h-screen bg-gradient-to-br from-white via-blue-50 to-blue-100 flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full">
        <div class="bg-white rounded-2xl shadow-xl overflow-hidden">
            <div class="p-8">
                <!-- هدر صفحه -->
                <div class="text-center mb-8">
                    <div class="w-20 h-20 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
                        <svg class="w-10 h-10 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                        </svg>
                    </div>
                    <h2 class="text-2xl font-bold text-gray-900">تایید رمز عبور</h2>
                    <p class="text-gray-600 mt-2">شماره تلفن خود را وارد کنید</p>
                </div>

                <!-- فرم بازیابی -->
                <form method="post" class="space-y-6" id="forgotPasswordForm">
                    <div>
                        <label for="PhoneNumber" class="block text-sm font-medium text-gray-700 mb-2">شماره تلفن همراه</label>
                        <div class="mt-1 relative">
                            <div class="absolute left-3 top-1/2 transform -translate-y-1/2 flex items-center">
                                <span class="text-gray-700 text-sm font-medium bg-gray-100 px-2 py-1 rounded border border-gray-300">98+</span>
                            </div>
                            <input type="tel"
                                   asp-for="PhoneNumber"
                                   class="w-full pr-3 pl-16 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200"
                                   placeholder="912 345 6789"
                                   maxlength="11"
                                   required
                                   dir="ltr">
                        </div>
                        <span asp-validation-for="PhoneNumber" class="text-red-600 text-sm mt-1"></span>
                        <p class="text-sm text-gray-500 mt-2">کد تأیید برای این شماره ارسال خواهد شد</p>
                    </div>

                    <div>
                        <button type="submit" id="submitButton" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-3 px-4 rounded-lg transition-colors duration-200 disabled:opacity-50 disabled:cursor-not-allowed">
                            ارسال کد تأیید
                        </button>
                    </div>
                </form>

                <!-- روش‌های جایگزین -->
                <div class="mt-6">
                    <div class="relative">
                        <div class="absolute inset-0 flex items-center">
                            <div class="w-full border-t border-gray-300"></div>
                        </div>
                        <div class="relative flex justify-center text-sm">
                            <span class="px-2 bg-white text-gray-500">یا</span>
                        </div>
                    </div>

                    <div class="mt-4 grid grid-cols-1 gap-3">
                        <a href="/Auth/RegisterAndLogin" class="w-full inline-flex justify-center items-center py-2 px-4 border border-gray-300 rounded-lg shadow-sm bg-white text-sm font-medium text-gray-500 hover:bg-gray-50 transition-colors duration-200">
                            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                            </svg>
                            بازگشت به صفحه ورود
                        </a>
                    </div>
                </div>

                <!-- اطلاعات امنیتی -->
                <div class="mt-6 p-4 bg-blue-50 rounded-lg">
                    <div class="flex items-start space-x-3 space-x-reverse">
                        <svg class="w-5 h-5 text-blue-600 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        <div class="text-sm text-blue-700">
                            <p class="font-medium">نکات امنیتی:</p>
                            <ul class="mt-1 space-y-1 mr-4">
                                <li>• کد تأیید فقط ۳ دقیقه معتبر است</li>
                                <li>• از اشتراک‌گذاری کد خودداری کنید</li>
                                <li>• در صورت مشکل با پشتیبانی تماس بگیرید</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const phoneInput = document.getElementById('PhoneNumber');
        const submitButton = document.getElementById('submitButton');
        const form = document.getElementById('forgotPasswordForm');

        // فرمت خودکار شماره تلفن
        phoneInput.addEventListener('input', function(e) {
            let value = e.target.value.replace(/\D/g, '');

            // اگر با 9 شروع شد (فرمت ایرانی)
            if (value.startsWith('9')) {
                value = value.substring(0, 10);
                if (value.length >= 4) {
                    value = value.replace(/(\d{3})(\d{3})(\d{4})/, '$1 $2 $3');
                } else if (value.length >= 3) {
                    value = value.replace(/(\d{3})(\d{1})/, '$1 $2');
                }
            }

            e.target.value = value;
            validatePhoneNumber();
        });

        // ولیدیشن شماره تلفن
        function validatePhoneNumber() {
            const value = phoneInput.value.replace(/\s/g, '');
            const isValid = /^9[0-9]{9}$/.test(value);

            if (value.length === 0) {
                submitButton.disabled = true;
                return false;
            }

            if (!isValid) {
                submitButton.disabled = true;
            } else {
                submitButton.disabled = false;
            }

            return isValid;
        }

        // مدیریت ارسال فرم
        form.addEventListener('submit', function(e) {
            if (!validatePhoneNumber()) {
                e.preventDefault();
                return false;
            }

            // نمایش حالت loading
            submitButton.disabled = true;
            submitButton.classList.add('opacity-50', 'cursor-not-allowed');
            const originalText = submitButton.innerHTML;
            submitButton.innerHTML = `
                <svg class="animate-spin -ml-1 mr-3 h-5 w-5 text-white inline" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
                در حال ارسال...
            `;

            // فرم به صورت طبیعی ارسال می‌شود
            return true;
        });

        // ولیدیشن هنگام تغییر مقدار
        phoneInput.addEventListener('blur', validatePhoneNumber);
        phoneInput.addEventListener('input', validatePhoneNumber);

        // جلوگیری از ورود کاراکترهای غیر عددی
        phoneInput.addEventListener('keydown', function(e) {
            if (!/[\d\s]/.test(e.key) &&
                !['Backspace', 'Delete', 'ArrowLeft', 'ArrowRight', 'Tab'].includes(e.key)) {
                e.preventDefault();
            }
        });

        // فوکوس خودکار روی input
        window.addEventListener('load', function() {
            phoneInput.focus();
        });
    </script>
}