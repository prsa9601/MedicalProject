@page
@model MedicalProject.Pages.Auth.ResetPasswordModel
@{
    ViewData["Title"] = "تنظیم رمز عبور جدید";
}

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        /* استایل‌های صفحه تنظیم رمز عبور جدید */
        .reset-password-container {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 80vh;
            padding: 2rem 1rem;
            background: linear-gradient(135deg, #dbeafe 0%, white 50%, #dbeafe 100%);
        }

        .reset-password-card {
            width: 100%;
            max-width: 450px;
            background: #fff;
            border-radius: 1rem;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
            padding: 2rem;
        }

        .reset-password-title {
            font-size: 1.75rem;
            font-weight: 700;
            text-align: center;
            margin-bottom: 0.5rem;
            color: #1e40af;
        }

        .reset-password-description {
            text-align: center;
            color: #6b7280;
            margin-bottom: 2rem;
            line-height: 1.6;
        }

        .phone-number-display {
            background: #f3f4f6;
            border: 1px solid #e5e7eb;
            border-radius: 0.5rem;
            padding: 1rem;
            text-align: center;
            margin-bottom: 1.5rem;
        }

        .phone-number {
            font-weight: 600;
            color: #374151;
        }

        .input-group {
            position: relative;
            margin-bottom: 1.5rem;
        }

            .input-group input {
                width: 100%;
                padding: 0.75rem 1rem;
                background: #f9fafb;
                border: 1px solid #d1d5db;
                outline: none;
                font-size: 1rem;
                color: #374151;
                font-weight: 500;
                border-radius: 0.5rem;
                transition: all 0.3s;
            }

                .input-group input:focus {
                    border-color: #3b82f6;
                    box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
                }

                .input-group input::placeholder {
                    color: #9ca3af;
                    font-weight: 400;
                }

        .input-icon {
            position: absolute;
            left: 1rem;
            top: 50%;
            transform: translateY(-50%);
            font-size: 1.125rem;
            color: #9ca3af;
        }

        .password-toggle {
            position: absolute;
            left: 2.5rem;
            top: 50%;
            transform: translateY(-50%);
            color: #9ca3af;
            cursor: pointer;
            transition: color 0.2s;
        }

            .password-toggle:hover {
                color: #6b7280;
            }

        .submit-btn {
            width: 100%;
            padding: 0.75rem;
            background: #3b82f6;
            border-radius: 0.5rem;
            margin: 1.5rem 0;
            box-shadow: 0 4px 6px rgba(59, 130, 246, 0.2);
            border: none;
            cursor: pointer;
            font-size: 1rem;
            color: #fff;
            font-weight: 600;
            transition: all 0.3s;
        }

            .submit-btn:hover {
                background: #2563eb;
                box-shadow: 0 6px 8px rgba(59, 130, 246, 0.3);
            }

            .submit-btn:disabled {
                background: #9ca3af;
                cursor: not-allowed;
                box-shadow: none;
            }

        .back-to-login {
            text-align: center;
            margin-top: 1.5rem;
        }

            .back-to-login a {
                color: #3b82f6;
                text-decoration: none;
                font-weight: 500;
                transition: color 0.2s;
            }

                .back-to-login a:hover {
                    color: #1e40af;
                    text-decoration: underline;
                }

        .text-error {
            color: #dc2626;
            font-size: 0.875rem;
            margin-top: 0.25rem;
        }

        .alert-error {
            background-color: #fef2f2;
            border: 1px solid #fecaca;
            color: #dc2626;
            padding: 0.75rem;
            border-radius: 0.5rem;
            margin-bottom: 1rem;
        }

        .alert-success {
            background-color: #f0fdf4;
            border: 1px solid #bbf7d0;
            color: #166534;
            padding: 0.75rem;
            border-radius: 0.5rem;
            margin-bottom: 1rem;
        }

        .process-steps {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
            position: relative;
        }

            .process-steps::before {
                content: '';
                position: absolute;
                top: 50%;
                left: 0;
                right: 0;
                height: 2px;
                background: #e5e7eb;
                transform: translateY(-50%);
                z-index: 1;
            }

        .step {
            display: flex;
            flex-direction: column;
            align-items: center;
            position: relative;
            z-index: 2;
        }

        .step-number {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: #f3f4f6;
            border: 2px solid #e5e7eb;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 600;
            color: #9ca3af;
            margin-bottom: 0.5rem;
            transition: all 0.3s;
        }

        .step.active .step-number {
            background: #3b82f6;
            border-color: #3b82f6;
            color: white;
        }

        .step.completed .step-number {
            background: #10b981;
            border-color: #10b981;
            color: white;
        }

        .step-text {
            font-size: 0.75rem;
            color: #9ca3af;
            text-align: center;
        }

        .step.active .step-text {
            color: #3b82f6;
            font-weight: 500;
        }

        .step.completed .step-text {
            color: #10b981;
        }

        /* حالت موبایل */
        @@media screen and (max-width: 600px) {
            .reset-password-card {
                padding: 1.5rem;
                border-radius: 0.75rem;
            }

            .reset-password-title {
                font-size: 1.5rem;
            }

            .process-steps {
                flex-direction: column;
                gap: 1rem;
            }

                .process-steps::before {
                    display: none;
                }

            .step {
                flex-direction: row;
                gap: 0.5rem;
            }

            .step-text {
                font-size: 0.875rem;
            }
        }
    </style>
}

<div class="reset-password-container">
    <div class="reset-password-card">
        <!-- Header -->
        <div class="text-center mb-8">
            <div class="flex justify-center mb-4">
                <div class="w-16 h-16 bg-blue-600 rounded-xl flex items-center justify-center">
                    <span class="text-white font-bold text-2xl">د</span>
                </div>
            </div>
            <h1 class="reset-password-title">تنظیم رمز عبور جدید</h1>
            <p class="reset-password-description">
                لطفا کد تأیید و رمز عبور جدید خود را وارد کنید
            </p>
        </div>

        <!-- Process Steps -->
        <div class="process-steps">
            <div class="step completed">
                <div class="step-number">
                    <i class="fa-solid fa-check text-xs"></i>
                </div>
                <div class="step-text">ورود شماره تماس</div>
            </div>
            <div class="step completed">
                <div class="step-number">
                    <i class="fa-solid fa-check text-xs"></i>
                </div>
                <div class="step-text">دریافت کد</div>
            </div>
            <div class="step active">
                <div class="step-number">3</div>
                <div class="step-text">رمز جدید</div>
            </div>
        </div>

        <!-- Phone Number Display -->
        @if (!string.IsNullOrEmpty(Model.PhoneNumber))
        {
            <div class="phone-number-display">
                <div class="flex items-center justify-center space-x-2 space-x-reverse">
                    <i class="fa-solid fa-mobile-screen text-gray-500"></i>
                    <span class="text-sm text-gray-600">شماره تماس:</span>
                    <span class="phone-number">@Model.PhoneNumber</span>
                </div>
            </div>
        }

        <!-- Reset Password Form -->
        <form method="post" class="space-y-4">
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert-error">
                    <p>لطفا اطلاعات را به درستی وارد کنید</p>
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <p class="text-sm mt-1">@error.ErrorMessage</p>
                    }
                </div>
            }

            <div class="input-group">
                <input type="text"
                       id="VerificationCode"
                       name="VerificationCode"
                       placeholder="کد تأیید ارسال شده"
                       value="@Model.VerificationCode"
                       required
                       maxlength="6" />
                <i class="input-icon fa-solid fa-shield-check"></i>
                @if (ViewData.ModelState["VerificationCode"]?.Errors?.Count > 0)
                {
                    <span class="text-error">@ViewData.ModelState["VerificationCode"].Errors[0].ErrorMessage</span>
                }
            </div>

            <div class="input-group">
                <input type="password"
                       id="NewPassword"
                       name="NewPassword"
                       placeholder="رمز عبور جدید"
                       required
                       minlength="6" />
                <i class="input-icon fa-solid fa-lock"></i>
                <span class="password-toggle" onclick="togglePassword('NewPassword')">
                    <i id="eyeIconNewPassword" class="fa-solid fa-eye hidden"></i>
                    <i id="eyeOffIconNewPassword" class="fa-solid fa-eye-slash"></i>
                </span>
                @if (ViewData.ModelState["NewPassword"]?.Errors?.Count > 0)
                {
                    <span class="text-error">@ViewData.ModelState["NewPassword"].Errors[0].ErrorMessage</span>
                }
            </div>

            <div class="input-group">
                <input type="password"
                       id="ConfirmPassword"
                       name="ConfirmPassword"
                       placeholder="تکرار رمز عبور جدید"
                       required />
                <i class="input-icon fa-solid fa-lock"></i>
                <span class="password-toggle" onclick="togglePassword('ConfirmPassword')">
                    <i id="eyeIconConfirmPassword" class="fa-solid fa-eye hidden"></i>
                    <i id="eyeOffIconConfirmPassword" class="fa-solid fa-eye-slash"></i>
                </span>
                @if (ViewData.ModelState["ConfirmPassword"]?.Errors?.Count > 0)
                {
                    <span class="text-error">@ViewData.ModelState["ConfirmPassword"].Errors[0].ErrorMessage</span>
                }
            </div>

            <button type="submit" class="submit-btn" id="submitBtn">
                تغییر رمز عبور
            </button>
        </form>

        <!-- Additional Information -->
        <div class="mt-6 p-4 bg-blue-50 rounded-lg">
            <div class="flex items-start space-x-3 space-x-reverse">
                <i class="fa-solid fa-key text-blue-600 mt-0.5"></i>
                <div>
                    <p class="text-sm text-blue-800 font-medium">نکات امنیتی:</p>
                    <ul class="text-sm text-blue-700 mt-2 space-y-1 list-disc pr-4">
                        <li>رمز عبور باید حداقل 6 کاراکتر باشد</li>
                        <li>از ترکیب حروف، اعداد و علائم استفاده کنید</li>
                        <li>از رمزهای عبور قبلی خود استفاده نکنید</li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Additional Links -->
        <div class="text-center space-y-4 mt-6">
            <div class="back-to-login">
                <p>
                    <a href="/Auth/Login" class="text-blue-600 hover:text-blue-500">
                        بازگشت به صفحه ورود
                    </a>
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // نمایش/مخفی کردن رمز عبور
        function togglePassword(fieldId) {
            const passwordInput = document.getElementById(fieldId);
            const eyeIcon = document.getElementById(`eyeIcon${fieldId}`);
            const eyeOffIcon = document.getElementById(`eyeOffIcon${fieldId}`);

            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                eyeIcon.classList.remove('hidden');
                eyeOffIcon.classList.add('hidden');
            } else {
                passwordInput.type = 'password';
                eyeIcon.classList.add('hidden');
                eyeOffIcon.classList.remove('hidden');
            }
        }

        // اعتبارسنجی فرم
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.querySelector('form');
            const submitBtn = document.getElementById('submitBtn');
            const verificationCodeInput = document.getElementById('VerificationCode');
            const newPasswordInput = document.getElementById('NewPassword');
            const confirmPasswordInput = document.getElementById('ConfirmPassword');

            form.addEventListener('submit', function(event) {
                const verificationCode = verificationCodeInput.value.trim();
                const newPassword = newPasswordInput.value.trim();
                const confirmPassword = confirmPasswordInput.value.trim();
                let isValid = true;

                // پاک کردن خطاهای قبلی
                document.querySelectorAll('.text-error').forEach(el => el.remove());

                if (!verificationCode) {
                    showFieldError('VerificationCode', 'لطفا کد تأیید را وارد کنید');
                    isValid = false;
                } else if (verificationCode.length < 4) {
                    showFieldError('VerificationCode', 'کد تأیید باید حداقل 4 کاراکتر باشد');
                    isValid = false;
                }

                if (!newPassword) {
                    showFieldError('NewPassword', 'لطفا رمز عبور جدید را وارد کنید');
                    isValid = false;
                } else if (newPassword.length < 6) {
                    showFieldError('NewPassword', 'رمز عبور باید حداقل 6 کاراکتر باشد');
                    isValid = false;
                }

                if (!confirmPassword) {
                    showFieldError('ConfirmPassword', 'لطفا تکرار رمز عبور را وارد کنید');
                    isValid = false;
                } else if (newPassword !== confirmPassword) {
                    showFieldError('ConfirmPassword', 'رمز عبور و تکرار آن مطابقت ندارند');
                    isValid = false;
                }

                if (!isValid) {
                    event.preventDefault();
                } else {
                    // نمایش حالت لودینگ
                    submitBtn.disabled = true;
                    submitBtn.innerHTML = '<i class="fa-solid fa-spinner fa-spin ml-2"></i> در حال تغییر رمز...';
                }
            });

            function showFieldError(fieldId, message) {
                const field = document.getElementById(fieldId);
                const errorElement = document.createElement('span');
                errorElement.className = 'text-error';
                errorElement.textContent = message;
                field.parentElement.appendChild(errorElement);
            }

            // اعتبارسنجی همزمان تکرار رمز عبور
            confirmPasswordInput.addEventListener('input', function() {
                const newPassword = newPasswordInput.value;
                const confirmPassword = this.value;

                // پاک کردن خطاهای قبلی
                const existingError = this.parentElement.querySelector('.text-error');
                if (existingError && existingError.textContent.includes('مطابقت')) {
                    existingError.remove();
                }

                if (newPassword && confirmPassword && newPassword !== confirmPassword) {
                    showFieldError('ConfirmPassword', 'رمز عبور و تکرار آن مطابقت ندارند');
                }
            });

            // محدود کردن کد تأیید به اعداد
            verificationCodeInput.addEventListener('input', function() {
                this.value = this.value.replace(/[^0-9]/g, '');
            });
        });
    </script>
}