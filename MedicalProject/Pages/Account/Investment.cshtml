@page
@using System.Security.Claims
@using MedicalProject.Infrastructure
@using MedicalProject.Infrastructure.Extensions
@using MedicalProject.Infrastructure.ProfitUtil
@using MedicalProject.Infrastructure.Utils
@model MedicalProject.Pages.Account.InvestmentModel
@{
    ViewData["Title"] = "سرمایه‌گذاری‌های من - پلتفرم دنگ";
}

@section Styles {
    <style>
        /* استایل‌های اختصاصی صفحه سرمایه‌گذاری */
        .header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 2rem 0;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
            margin-bottom: 2rem;
        }

        .header-content {
            display: flex;
            flex-direction: column;
            gap: 1.5rem;
        }

        @@media (min-width: 768px) {
            .header-content {
                flex-direction: row;
                justify-content: space-between;
                align-items: center;
            }
        }

        .header-title h1 {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
        }

        .header-title p {
            font-size: 1rem;
            opacity: 0.9;
        }

        .header-actions {
            display: flex;
            gap: 1rem;
            flex-wrap: wrap;
        }

        /* Buttons */
        .btn-custom {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            padding: 0.75rem 1.5rem;
            border: none;
            border-radius: 0.5rem;
            font-size: 0.875rem;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            gap: 0.5rem;
        }

        .btn-primary-custom {
            background-color: #3b82f6;
            color: white;
        }

            .btn-primary-custom:hover {
                background-color: #2563eb;
                transform: translateY(-2px);
                box-shadow: 0 10px 15px -3px rgba(59, 130, 246, 0.3);
            }

        .btn-secondary-custom {
            background-color: white;
            color: #64748b;
            border: 1px solid #e2e8f0;
        }

            .btn-secondary-custom:hover {
                background-color: #f8fafc;
                border-color: #cbd5e1;
            }

        /* Stats Grid */
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(1, 1fr);
            gap: 1.5rem;
            margin-bottom: 3rem;
        }

        @@media (min-width: 640px) {
            .stats-grid {
                grid-template-columns: repeat(2, 1fr);
            }
        }

        @@media (min-width: 1024px) {
            .stats-grid {
                grid-template-columns: repeat(4, 1fr);
            }
        }

        .stat-card {
            background: white;
            border-radius: 1rem;
            padding: 1.5rem;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
            position: relative;
            overflow: hidden;
        }

            .stat-card:hover {
                transform: translateY(-5px);
            }

            .stat-card::before {
                content: '';
                position: absolute;
                top: 0;
                right: 0;
                width: 100%;
                height: 4px;
            }

            .stat-card:nth-child(1)::before {
                background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
            }

            .stat-card:nth-child(2)::before {
                background: linear-gradient(90deg, #f093fb 0%, #f5576c 100%);
            }

            .stat-card:nth-child(3)::before {
                background: linear-gradient(90deg, #4facfe 0%, #00f2fe 100%);
            }

            .stat-card:nth-child(4)::before {
                background: linear-gradient(90deg, #43e97b 0%, #38f9d7 100%);
            }

        .stat-value {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
            color: #1e293b;
        }

        .stat-label {
            font-size: 0.875rem;
            color: #64748b;
        }

        /* Tabs */
        .tabs-container {
            background: white;
            border-radius: 1rem;
            padding: 1.5rem;
            margin-bottom: 2rem;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        }

        .tabs {
            display: flex;
            gap: 1rem;
            overflow-x: auto;
            padding-bottom: 1rem;
            border-bottom: 2px solid #e2e8f0;
        }

        .tab-radio {
            display: none;
        }

        .tab-label {
            padding: 0.75rem 1.5rem;
            border-radius: 0.5rem;
            cursor: pointer;
            transition: all 0.3s ease;
            white-space: nowrap;
            color: #64748b;
            font-weight: 500;
            border: 2px solid transparent;
        }

            .tab-label:hover {
                background-color: #f1f5f9;
                color: #3b82f6;
            }

        .tab-radio:checked + .tab-label {
            background-color: #3b82f6;
            color: white;
            border-color: #3b82f6;
        }

        /* Investments Grid */
        .investments-grid {
            display: grid;
            grid-template-columns: repeat(1, 1fr);
            gap: 1.5rem;
            margin-bottom: 3rem;
        }

        @@media (min-width: 768px) {
            .investments-grid {
                grid-template-columns: repeat(2, 1fr);
            }
        }

        .investment-card {
            background: white;
            border-radius: 1rem;
            overflow: hidden;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
            border: 1px solid #e2e8f0;
        }

            .investment-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
            }

        .investment-header {
            padding: 1.5rem;
            border-bottom: 1px solid #e2e8f0;
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
        }

        .investment-info {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .investment-icon {
            width: 3rem;
            height: 3rem;
            border-radius: 0.75rem;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.25rem;
        }

            .investment-icon img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                border-radius: 0.75rem;
            }

        .investment-title h3 {
            font-size: 1.125rem;
            font-weight: 600;
            color: #1e293b;
            margin-bottom: 0.25rem;
        }

        .investment-title p {
            font-size: 0.875rem;
            color: #64748b;
        }

        /* Status Badges */
        .status-badge {
            padding: 0.25rem 0.75rem;
            border-radius: 9999px;
            font-size: 0.75rem;
            font-weight: 500;
            display: inline-flex;
            align-items: center;
            gap: 0.25rem;
        }

        .status-active {
            background-color: #dcfce7;
            color: #166534;
        }

        .status-completed {
            background-color: #dbeafe;
            color: #1e40af;
        }

        .status-pending {
            background-color: #fef3c7;
            color: #92400e;
        }

        .status-paid {
            background-color: #dcfce7;
            color: #166534;
        }

        .status-unpaid {
            background-color: #fee2e2;
            color: #991b1b;
        }

        /* Investment Details */
        .investment-details {
            padding: 1.5rem;
        }

        .detail-row {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0.75rem 0;
            border-bottom: 1px solid #f1f5f9;
        }

            .detail-row:last-child {
                border-bottom: none;
            }

        .detail-label {
            font-size: 0.875rem;
            color: #64748b;
        }

        .detail-value {
            font-weight: 600;
            color: #1e293b;
        }

            .detail-value.positive {
                color: #059669;
            }

            .detail-value.negative {
                color: #dc2626;
            }

        /* Investment Footer */
        .investment-footer {
            padding: 1.5rem;
            border-top: 1px solid #e2e8f0;
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #f8fafc;
        }

        .date-info {
            font-size: 0.875rem;
            color: #64748b;
            display: flex;
            flex-direction: column;
            gap: 0.25rem;
        }

        .investment-actions {
            display: flex;
            gap: 0.5rem;
        }

        .action-btn {
            padding: 0.5rem 1rem;
            border-radius: 0.375rem;
            font-size: 0.875rem;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.2s ease;
            border: 1px solid #e2e8f0;
            background: white;
            color: #64748b;
        }

            .action-btn:hover {
                background-color: #f1f5f9;
                color: #3b82f6;
                border-color: #3b82f6;
            }

        /* Empty State */
        .empty-state {
            text-align: center;
            padding: 4rem 1rem;
            background: white;
            border-radius: 1rem;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
            margin: 2rem 0;
        }

        .empty-icon {
            width: 6rem;
            height: 6rem;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1.5rem;
            color: white;
            font-size: 2rem;
        }

        .empty-state h3 {
            font-size: 1.5rem;
            font-weight: 600;
            color: #1e293b;
            margin-bottom: 0.5rem;
        }

        .empty-state p {
            color: #64748b;
            margin-bottom: 1.5rem;
        }

        /* Progress Bar */
        .progress-container {
            margin-top: 1rem;
        }

        .progress-label {
            display: flex;
            justify-content: space-between;
            font-size: 0.875rem;
            color: #64748b;
            margin-bottom: 0.5rem;
        }

        .progress-bar {
            height: 0.5rem;
            background-color: #e2e8f0;
            border-radius: 9999px;
            overflow: hidden;
        }

        .progress-fill {
            height: 100%;
            background: linear-gradient(90deg, #3b82f6 0%, #8b5cf6 100%);
            border-radius: 9999px;
            transition: width 0.3s ease;
        }

        /* Responsive Adjustments */
        @@media (max-width: 640px) {
            .header-actions {
                flex-direction: column;
                width: 100%;
            }

            .btn-custom {
                width: 100%;
                justify-content: center;
            }

            .investment-header {
                flex-direction: column;
                gap: 1rem;
            }

            .investment-footer {
                flex-direction: column;
                gap: 1rem;
                text-align: center;
            }

            .tabs {
                flex-wrap: wrap;
            }
        }

        /* Animations */
        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .investment-card {
            animation: fadeIn 0.5s ease-out;
        }
    </style>
}

<div class="header">
    <div class="container">
        <div class="header-content">
            <div class="header-title">
                <h1>سرمایه‌گذاری‌های من</h1>
                <p>مدیریت و پیگیری سرمایه‌گذاری‌های شما</p>
            </div>
            <div class="header-actions">
                <a href="/Front/Projects" class="btn-custom btn-primary-custom">
                    <i class="fas fa-plus"></i>
                    سرمایه‌گذاری جدید
                </a>
                <a href="/Account/Profile" class="btn-custom btn-secondary-custom">
                    <i class="fas fa-arrow-right"></i>
                    بازگشت به پروفایل
                </a>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <!-- Statistics Section -->
    <div class="stats-grid">
        <div class="stat-card">
            <div class="stat-value">@((Model.UserDto == null ? "0" : Model.UserDto.OrderDtos.Where(i => i.status == Models.Order.OrderStatus.paid).SafeSum(i => i.OrderItems.TotalPrice).ToString("N0"))) ریال</div>
            <div class="stat-label">کل سرمایه‌گذاری</div>
        </div>
        <div class="stat-card">
            <div class="stat-value">@((Model.UserDto == null ? "0" : Model.ReportDto.OrderDtos.SelectMany(i => i.OrderItems.Product.Paid).SafeSum(i => i.ExpectedAmount).ToString("N0"))) ریال</div>
            <div class="stat-label">سود کل</div>
        </div>
        <div class="stat-card">
            <div class="stat-value">@((Model.UserDto == null ? 0 : Model.UserDto.OrderDtos.Count))</div>
            <div class="stat-label">سرمایه‌گذاری فعال</div>
        </div>
        <div class="stat-card">
            <div class="stat-value">@((Model.UserDto == null ? "سرمایه گزاری یافت نشد" : ProfitDepositStatus.CheckStatus(Model.UserDto) ? "پرداخت شده ✅" : "پرداخت نشده ⚠️"))</div>
            <div class="stat-label">وضعیت پرداخت سود</div>
        </div>
    </div>

    <!-- Tabs Section -->
    <div class="tabs-container">
        <div class="tabs">
            <input type="radio" id="tab-all" name="investment-tabs" class="tab-radio" disabled checked>
            <label for="tab-all" class="tab-label">
                <i class="fas fa-layer-group"></i>
                همه سرمایه‌گذاری‌ها
            </label>

            @*   <input type="radio" id="tab-active" name="investment-tabs" class="tab-radio">
            <label for="tab-active" class="tab-label">
                <i class="fas fa-play-circle"></i>
                فعال
            </label>

            <input type="radio" id="tab-completed" name="investment-tabs" class="tab-radio">
            <label for="tab-completed" class="tab-label">
                <i class="fas fa-check-circle"></i>
                تکمیل شده
            </label>

            <input type="radio" id="tab-pending" name="investment-tabs" class="tab-radio">
            <label for="tab-pending" class="tab-label">
                <i class="fas fa-clock"></i>
                در انتظار
            </label> *@
        </div>
    </div>

    <!-- Investments Section -->
    <div class="investments-grid">
        @if (Model.ReportDto == null || Model.Result?.EntityCount == 0 || Model.UserDto == null || Model.Result == null)
        {
            <div class="empty-state">
                <div class="empty-icon">
                    <i class="fas fa-chart-line"></i>
                </div>
                <h3>سرمایه‌گذاری‌ای یافت نشد</h3>
                <p>شما هنوز در هیچ پروژه‌ای سرمایه‌گذاری نکرده‌اید.</p>
                <a href="/Front/Projects" class="btn-custom btn-primary-custom">
                    <i class="fas fa-plus"></i>
                    مشاهده پروژه‌ها
                </a>
            </div>
        }
        else
        {
            foreach (var item in Model.ReportDto.OrderDtos)
            {
                var product = Model.UserDto.ProductPurchase.FirstOrDefault(i => i.Id.Equals(item.OrderItems.Product.Id));
                var inventory = product?.InventoryDto;

                if (product != null)
                {
                    var currentValue = item.OrderItems.TotalPrice.ToString("N0") ?? "0";
                    var profitPerPeriod = (decimal.Parse(item.OrderItems.Product.InventoryDto.Profit) * item.OrderItems.DongAmount).ToString("N0") ?? "0";
                    var totalProfit = decimal.Parse(item.OrderItems.Product.InventoryDto.Profit).ToString("N0") ?? "0";
                    var status = item.status.ToString().ToLower();
                    var paymentStatus = item.OrderItems.Product.Unpaid.Count() > 0 ? false : true;

                    <div class="investment-card" data-status="@status">
                        <div class="investment-header">
                            <div class="investment-info">
                                <div class="investment-icon">
                                    @if (!string.IsNullOrEmpty(product.ImageName))
                                    {
                                        <img src="@Directories.GetProductImagePathPath(product.ImageName)" alt="@product.Title">
                                    }
                                    else
                                    {
                                        <i class="fas fa-briefcase-medical"></i>
                                    }
                                </div>
                                <div class="investment-title">
                                    <h3>@product.Title</h3>
                                </div>
                            </div>
                            <span class="status-badge @(paymentStatus ? "status-paid" : "status-unpaid")">
                                <i class="fas @(paymentStatus ? "fa-check-circle" : "fa-exclamation-circle")"></i>
                                @(paymentStatus ? "پرداخت شده" : "پرداخت نشده")
                            </span>
                        </div>

                        <div class="investment-details">
                            <div class="detail-row">
                                <span class="detail-label">ارزش فعلی سهم شما</span>
                                <span class="detail-value positive">@currentValue ریال</span>
                            </div>
                            <div class="detail-row">
                                <span class="detail-label">تعداد دانگ خریداری شده</span>
                                <span class="detail-value">@item.OrderItems.DongAmount.ToString("F1") عدد</span>
                            </div>
                            <div class="detail-row">
                                <span class="detail-label">سود شما در هر دوره</span>
                                <span class="detail-value positive">@profitPerPeriod ریال</span>
                            </div>
                            <div class="detail-row">
                                <span class="detail-label">سود هر دانگ</span>
                                <span class="detail-value positive">@totalProfit ریال</span>
                            </div>
                        </div>

                        <div class="investment-footer">
                            <div class="date-info">
                                <span>شروع: @item.CreationDate.ToPersianDate()</span>
                            </div>
                            <div class="investment-actions">
                                <button onclick="location.href='/Account/ProductReport'" class="action-btn">
                                    <i class="fas fa-file-invoice-dollar"></i>
                                    گزارش سود
                                </button>
                            </div>
                        </div>
                    </div>
                }
            }
        }
    </div>

    <!-- Loading State (hidden by default) -->
    <div id="loadingState" class="empty-state" style="display: none;">
        <div class="empty-icon">
            <i class="fas fa-spinner fa-spin"></i>
        </div>
        <h3>در حال بارگذاری...</h3>
        <p>لطفاً کمی صبر کنید</p>
    </div>
</div>

@section Scripts {
    <script>
        // Tab Filtering Functionality
        document.addEventListener('DOMContentLoaded', function () {
            const tabRadios = document.querySelectorAll('.tab-radio');
            const investmentCards = document.querySelectorAll('.investment-card');

            // Store all cards initially
            const allCards = Array.from(investmentCards);

            // Show all cards by default
            allCards.forEach(card => card.style.display = 'block');

            // Add event listeners to tabs
            tabRadios.forEach(radio => {
                radio.addEventListener('change', function () {
                    const selectedTab = this.id;

                    // Hide all cards
                    allCards.forEach(card => {
                        card.style.display = 'none';
                    });

                    // Show cards based on selected tab
                    if (selectedTab === 'tab-all') {
                        allCards.forEach(card => {
                            card.style.display = 'block';
                        });
                    } else {
                        const statusMap = {
                            'tab-active': 'active',
                            'tab-completed': 'completed',
                            'tab-pending': 'pending'
                        };

                        const selectedStatus = statusMap[selectedTab];
                        const filteredCards = allCards.filter(card =>
                            card.getAttribute('data-status') === selectedStatus
                        );

                        filteredCards.forEach(card => {
                            card.style.display = 'block';
                        });
                    }

                    // Show empty state if no cards visible
                    const visibleCards = Array.from(document.querySelectorAll('.investment-card[style*="display: block"]'));
                    const emptyState = document.querySelector('.empty-state');

                    if (visibleCards.length === 0) {
                        const emptyStateClone = emptyState.cloneNode(true);
                        emptyStateClone.querySelector('h3').textContent = 'سرمایه‌گذاری‌ای با این فیلتر یافت نشد';
                        emptyStateClone.querySelector('p').textContent = 'هیچ سرمایه‌گذاری با وضعیت انتخابی وجود ندارد.';

                        const investmentsGrid = document.querySelector('.investments-grid');
                        investmentsGrid.innerHTML = '';
                        investmentsGrid.appendChild(emptyStateClone);
                    }
                });
            });

            // Add hover effects
            investmentCards.forEach(card => {
                card.addEventListener('mouseenter', function () {
                    this.style.transform = 'translateY(-5px)';
                });

                card.addEventListener('mouseleave', function () {
                    this.style.transform = 'translateY(0)';
                });
            });

            // Simulate loading state (remove in production)
            setTimeout(() => {
                const loadingState = document.getElementById('loadingState');
                if (loadingState) {
                    loadingState.style.display = 'none';
                }
            }, 500);
        });

        // Format currency function
        function formatCurrency(amount) {
            return new Intl.NumberFormat('fa-IR').format(amount) + ' ریال';
        }

        // Progress bar animation
        function animateProgressBars() {
            const progressBars = document.querySelectorAll('.progress-fill');
            progressBars.forEach(bar => {
                const width = bar.style.width;
                bar.style.width = '0';
                setTimeout(() => {
                    bar.style.width = width;
                }, 100);
            });
        }

        // Call animation on page load
        window.addEventListener('load', animateProgressBars);

        // Responsive adjustments
        function handleResize() {
            const tabs = document.querySelector('.tabs');
            if (window.innerWidth < 768) {
                tabs.style.flexWrap = 'wrap';
            } else {
                tabs.style.flexWrap = 'nowrap';
            }
        }

        window.addEventListener('resize', handleResize);
        handleResize(); // Initial call
    </script>
}