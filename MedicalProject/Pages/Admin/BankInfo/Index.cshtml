            }

            .sidebar-link i {
                min-width: 20px;
                text-align: center;
                font-size: 1.125rem;
            }

            .sidebar-link span {
                margin-right: 0.75rem;
                transition: all 0.3s;
                font-size: 0.875rem;
            }

        /* حالت جمع شده */
        .sidebar-collapsed .sidebar-link span {
            opacity: 0;
            width: 0;
            margin: 0;
        }

        .sidebar-collapsed .sidebar-link {
            justify-content: center;
            padding: 0.75rem;
        }

        /* Overlay برای موبایل */
        .mobile-overlay {
            display: none;
            position: fixed;
            top: 0;
            right: 0;
            left: 0;
            bottom: 0;
            background-color: rgba(0, 0, 0, 0.5);
