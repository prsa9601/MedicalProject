    <script>
        // داده‌های فیک برای چت
        const sampleUser = {
            username: "user123",
            first_name: "محمد",
            last_name: "رضایی"
        };

        const sampleRoom = {
            id: 1,
            name: "گفتگوی پروژه سی تی اسکن",
            description: "گفتگوی رسمی سرمایه‌گذاران پروژه سی تی اسکن",
            room_type: "project",
            is_public: false
        };

        const sampleMessages = [
            {
                id: 1,
                content: "سلام به همه سرمایه‌گذاران پروژه!",
                user: { username: "admin", first_name: "مدیر", last_name: "سیستم" },
                created_at: new Date(Date.now() - 3600000).toISOString()
            },
            {
                id: 2,
                content: "سلام! وضعیت پیشرفت پروژه چطوره؟",
                user: { username: "user123", first_name: "محمد", last_name: "رضایی" },
                created_at: new Date(Date.now() - 1800000).toISOString()
            },
            {
                id: 3,
                content: "پروژه طبق برنامه در حال پیشروی هست. تا پایان هفته به ۸۰٪ می‌رسیم.",
                user: { username: "manager", first_name: "احمد", last_name: "محمدی" },
                created_at: new Date(Date.now() - 1200000).toISOString()
            },
            {
                id: 4,
                content: "عالیه! منتظر اخبار خوب هستیم.",
                user: { username: "user456", first_name: "فاطمه", last_name: "کریمی" },
                created_at: new Date(Date.now() - 600000).toISOString()
            },
            {
                id: 5,
                content: "سود ماهانه کی واریز میشه؟",
                user: { username: "user123", first_name: "محمد", last_name: "رضایی" },
                created_at: new Date(Date.now() - 300000).toISOString()
            }
        ];

        const sampleOnlineUsers = [
            { id: 1, name: "محمد رضایی" },
            { id: 2, name: "احمد محمدی" },
            { id: 3, name: "فاطمه کریمی" }
        ];

        // وضعیت برنامه
        let state = {
            loading: true,
            room: null,
            messages: [],
            onlineUsers: [],
            user: sampleUser,
            sending: false
        };

        // تابع فرمت زمان
        function formatTime(dateString) {
            const date = new Date(dateString);
            return date.toLocaleTimeString('fa-IR', { 
                hour: '2-digit', 
                minute: '2-digit' 
            });
        }

        // تابع فرمت تاریخ
        function formatDate(dateString) {
            const date = new Date(dateString);
            const today = new Date();
            const yesterday = new Date(today);
            yesterday.setDate(yesterday.getDate() - 1);
            
            if (date.toDateString() === today.toDateString()) {
                return 'امروز';
            } else if (date.toDateString() === yesterday.toDateString()) {
                return 'دیروز';
            } else {
                return date.toLocaleDateString('fa-IR');
            }
        }

        // تابع بارگذاری داده‌های چت
        function loadChatData() {
            state.loading = true;
            updateUI();
            
            // شبیه‌سازی بارگذاری از API
            setTimeout(() => {
                state.room = sampleRoom;
                state.messages = sampleMessages;
                state.onlineUsers = sampleOnlineUsers;
                state.loading = false;
                updateUI();
            }, 1500);
        }

        // تابع ارسال پیام
        function sendMessage() {
            const messageInput = document.getElementById('message-input');
            const message = messageInput.value.trim();
            
            if (!message) return;

            state.sending = true;
            updateSendButton();

            // شبیه‌سازی ارسال پیام
            setTimeout(() => {
                const newMessage = {
                    id: state.messages.length + 1,
                    content: message,
                    user: state.user,
                    created_at: new Date().toISOString()
                };
                
                state.messages.push(newMessage);
                messageInput.value = '';
                state.sending = false;
                
                updateMessages();
                updateSendButton();
                scrollToBottom();
            }, 500);
        }

        // تابع به‌روزرسانی دکمه ارسال
        function updateSendButton() {
            const sendButton = document.getElementById('send-button');
            const messageInput = document.getElementById('message-input');
            const message = messageInput.value.trim();
            
            if (state.sending) {
                sendButton.innerHTML = '<i class="fas fa-spinner animate-spin"></i>';
                sendButton.disabled = true;
            } else {
                sendButton.innerHTML = '<i class="fas fa-paper-plane"></i>';
                sendButton.disabled = !message;
            }
        }

        // تابع اسکرول به پایین
        function scrollToBottom() {
            const messagesArea = document.getElementById('messages-area');
            messagesArea.scrollTop = messagesArea.scrollHeight;
        }

        // تابع رندر پیام‌ها
        function renderMessages() {
            const container = document.getElementById('messages-area');
            
            if (state.messages.length === 0) {
                container.innerHTML = `
                    <div class="text-center py-8">
                        <div class="text-4xl mb-4">💬</div>
                        <h3 class="text-lg font-medium text-gray-900 mb-2">
                            شروع گفتگو
                        </h3>
                        <p class="text-gray-600">
                            اولین پیام را در این چت ارسال کنید
                        </p>
                    </div>
                `;
                return;
            }
            
            container.innerHTML = '';
            
            state.messages.forEach((message, index) => {
                const isOwn = message.user.username === state.user.username;
                const showDate = index === 0 || 
                    formatDate(state.messages[index - 1].created_at) !== formatDate(message.created_at);
                
                const messageElement = document.createElement('div');
                
                if (showDate) {
                    const dateElement = document.createElement('div');
                    dateElement.className = 'text-center py-2';
                    dateElement.innerHTML = `
                        <span class="badge badge-secondary badge-sm">
                            ${formatDate(message.created_at)}
                        </span>
                    `;
                    container.appendChild(dateElement);
                }
                
                messageElement.className = `flex ${isOwn ? 'justify-end' : 'justify-start'}`;
                messageElement.innerHTML = `
                    <div class="max-w-xs lg:max-w-md px-4 py-2 rounded-lg ${
                        isOwn 
                            ? 'bg-primary-500 text-white' 
                            : 'bg-gray-100 text-gray-900'
                    }">
                        <p class="text-sm">${message.content}</p>
                        <p class="text-xs mt-1 ${
                            isOwn ? 'text-primary-100' : 'text-gray-500'
                        }">
                            ${formatTime(message.created_at)}
                        </p>
                    </div>
                `;
                
                container.appendChild(messageElement);
            });
            
            scrollToBottom();
        }

        // تابع به‌روزرسانی پیام‌ها
        function updateMessages() {
            renderMessages();
        }

        // تابع به‌روزرسانی اطلاعات اتاق
        function updateRoomInfo() {
            if (!state.room) return;
            
            document.getElementById('room-name').textContent = state.room.name;
            document.getElementById('info-name').textContent = state.room.name;
            document.getElementById('info-type').textContent = state.room.room_type === 'project' ? 'پروژه' : 'عمومی';
            
            // آیکون اتاق
            const roomIcon = document.getElementById('room-icon');
            roomIcon.className = state.room.room_type === 'project' 
                ? 'fas fa-hashtag text-primary-600' 
                : 'fas fa-users text-primary-600';
            
            // وضعیت عمومی/خصوصی
            const roomBadge = document.getElementById('room-badge');
            if (state.room.is_public) {
                roomBadge.className = 'badge badge-success badge-sm';
                roomBadge.textContent = 'عمومی';
            } else {
                roomBadge.className = 'badge badge-warning badge-sm';
                roomBadge.innerHTML = '<i class="fas fa-lock ml-1"></i> خصوصی';
            }
            
            // توضیحات
            if (state.room.description) {
                document.getElementById('info-description-container').style.display = 'block';
                document.getElementById('info-description').textContent = state.room.description;
            }
        }

        // تابع به‌روزرسانی کاربران آنلاین
        function updateOnlineUsers() {
            const container = document.getElementById('online-users-list');
            
            if (state.onlineUsers.length === 0) {
                container.innerHTML = '<p class="text-sm text-gray-500">هیچ کس آنلاین نیست</p>';
                return;
            }
            
            container.innerHTML = '';
            state.onlineUsers.forEach(user => {
                const userElement = document.createElement('div');
                userElement.className = 'flex items-center space-x-2 space-x-reverse';
                userElement.innerHTML = `
                    <div class="w-2 h-2 bg-green-500 rounded-full"></div>
                    <span class="text-sm text-gray-700">${user.name}</span>
                `;
                container.appendChild(userElement);
            });
            
            // به‌روزرسانی تعداد آنلاین
            document.getElementById('online-count').textContent = `${state.onlineUsers.length} نفر آنلاین`;
        }

        // تابع به‌روزرسانی UI
        function updateUI() {
            const loadingSection = document.getElementById('loading-section');
            const notFoundSection = document.getElementById('not-found-section');
            const chatSection = document.getElementById('chat-section');
            
            if (state.loading) {
                loadingSection.style.display = 'flex';
                notFoundSection.style.display = 'none';
                chatSection.style.display = 'none';
            } else if (!state.room) {
                loadingSection.style.display = 'none';
                notFoundSection.style.display = 'flex';
                chatSection.style.display = 'none';
            } else {
                loadingSection.style.display = 'none';
                notFoundSection.style.display = 'none';
                chatSection.style.display = 'block';
                
                updateRoomInfo();
                updateMessages();
                updateOnlineUsers();
            }
        }

        // مقداردهی اولیه
        document.addEventListener('DOMContentLoaded', function() {
            loadChatData();
            
            // رویدادهای ورود پیام
            const messageInput = document.getElementById('message-input');
            const sendButton = document.getElementById('send-button');
            
            messageInput.addEventListener('input', updateSendButton);
            messageInput.addEventListener('keypress', function(e) {
                if (e.key === 'Enter' && !e.shiftKey) {
                    e.preventDefault();
                    sendMessage();
                }
            });
            
            sendButton.addEventListener('click', sendMessage);
            
            // تنظیم ارتفاع خودکار برای textarea
            messageInput.addEventListener('input', function() {
                this.style.height = 'auto';
                this.style.height = (this.scrollHeight) + 'px';
            });
        });
    </script>
</body>
