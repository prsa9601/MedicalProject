                                        <div class="relative flex-1">
                                            <input type="text"
                                                   name="Title"
                                                   value="@Model.FilterParams.Title"
                                                   placeholder="جستجو..."
                                                   class="input pl-9 sm:pl-10 text-sm">
                                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                                <i class="fas fa-search text-gray-400 text-sm"></i>
                                            </div>
                                        </div>

                                        <select name="Status" class="input text-sm min-w-[120px]">
                                            <option value="">همه وضعیت‌ها</option>
                                            <option value="IsActive" selected="@(Model.FilterParams.Status?.ToString() == "Active")">فعال</option>
                                            <option value="NotActive" selected="@(Model.FilterParams.Status?.ToString() == "Inactive")">غیرفعال</option>
                                            <option value="IsDone" selected="@(Model.FilterParams.Status?.ToString() == "Draft")">تکمیل شده</option>
                                        </select>

                                        <button type="submit" class="btn btn-primary text-sm whitespace-nowrap">
                                            <i class="fas fa-filter ml-2"></i>
                                            فیلتر
                                        </button>
                                    </div>
                                </form>
                            </div>

                            <!-- Products Table -->
                            <div class="table-container">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>عنوان</th>
                                            <th class="hidden md:table-cell">توضیحات</th>
                                            <th class="hidden sm:table-cell">اسلاگ</th>
                                            <th>وضعیت</th>
                                            <th class="hidden lg:table-cell">اطلاعات مالی</th>
                                            <th class="hidden md:table-cell">تاریخ ایجاد</th>
                                            <th>عملیات</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model.Result?.Data != null && Model.Result.Data.Any())
                                        {
                                            int number = 0;
                                            foreach (var item in Model.Result.Data)
                                            {
                                                <tr>
                                                    <td class="font-medium">@(number += 1)</td>
                                                    <td>
                                                        <div class="product-info flex items-center gap-2 sm:gap-3">
                                                            @if (!string.IsNullOrEmpty(item.ImageName))
                                                            {
                                                                <div class="w-8 h-8 sm:w-10 sm:h-10 bg-blue-100 rounded-lg flex items-center justify-center flex-shrink-0">
                                                                    <img src="@Directories.GetProductImagePathPath(item.ImageName)"
                                                                         alt="@item.Title"
                                                                         class="w-full h-full object-cover rounded-lg">
                                                                </div>
                                                            }
                                                            else
                                                            {
                                                                <div class="w-8 h-8 sm:w-10 sm:h-10 bg-blue-100 rounded-lg flex items-center justify-center flex-shrink-0">
                                                                    <i class="fas fa-box text-blue-600 text-sm sm:text-base"></i>
                                                                </div>
                                                            }
                                                            <div class="min-w-0">
                                                                <div class="font-medium text-gray-900 truncate-text max-w-[120px] sm:max-w-[200px]">
                                                                    @item.Title
                                                                </div>
                                                                <div class="text-xs text-gray-500 truncate-text">
                                                                    ID: @item.Id.ToString().Substring(0, Math.Min(8, item.Id.ToString().Length))...
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td class="hidden md:table-cell">
                                                        <div class="truncate-text max-w-[200px]" title="@item.Description">
                                                            @item.Description
                                                        </div>
                                                    </td>
                                                    <td class="hidden sm:table-cell">
                                                        <code class="text-xs bg-gray-100 px-2 py-1 rounded truncate-text inline-block max-w-[100px]">
                                                            @item.Slug
                                                        </code>
                                                    </td>
                                                    <td>
                                                        @switch (item.Status)
                                                        {
                                                            case ProductStatus.IsActive:
                                                                <span class="badge badge-success">فعال</span>
                                                                break;
                                                            case ProductStatus.NotActive:
                                                                <span class="badge badge-secondary">غیرفعال</span>
                                                                break;
                                                            case ProductStatus.IsDone:
                                                                <span class="badge badge-warning">تکمیل شده</span>
                                                                break;
                                                            default:
                                                                <span class="badge badge-secondary">@item.Status</span>
                                                                break;
                                                        }
                                                    </td>
                                                    <td class="hidden lg:table-cell">
                                                        @if (item.InventoryDto != null)
                                                        {
                                                            <div class="text-xs space-y-1">
                                                                <div class="truncate-text">قیمت: @item.InventoryDto.TotalPrice ریال</div>
                                                                <div class="truncate-text">دانگ: @item.InventoryDto.Dong</div>
                                                                <div class="truncate-text">قیمت/دانگ: @item.InventoryDto.PricePerDong ریال</div>
                                                            </div>
                                                        }
                                                        else
                                                        {
                                                            <span class="text-gray-400 text-xs">بدون اطلاعات</span>
                                                        }
                                                    </td>
                                                    <td class="hidden md:table-cell">
                                                        <div class="text-sm">@item.CreationDate.ToPersianDate()</div>
                                                    </td>
                                                    <td>
                                                        <div class="product-actions flex items-center gap-1 sm:gap-2">
                                                            <a asp-page="Edit" asp-route-productId="@item.Id"
                                                               class="btn btn-outline btn-sm" title="ویرایش">
                                                                <i class="fas fa-edit text-xs sm:text-sm"></i>
                                                            </a>
                                                            <a asp-page="Details" asp-route-productId="@item.Id"
                                                               class="btn btn-outline btn-sm" title="جزئیات">
                                                                <i class="fas fa-eye text-xs sm:text-sm"></i>
                                                            </a>
                                                            <form method="post" asp-page-handler="Delete" asp-route-productId="@item.Id" class="inline">
                                                                <button type="button" class="btn btn-danger btn-sm delete-btn"
                                                                        data-product-id="@item.Id"
                                                                        data-product-title="@item.Title"
                                                                        title="حذف">
                                                                    <i class="fas fa-trash text-xs sm:text-sm"></i>
                                                                </button>
                                                            </form>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                        else
                                        {
                                            <tr>
                                                <td colspan="8" class="text-center py-8 text-gray-500">
                                                    <i class="fas fa-box-open text-3xl sm:text-4xl mb-4 text-gray-300"></i>
                                                    <p class="text-sm sm:text-base">محصولی یافت نشد</p>
                                                    <a asp-page="Add" class="btn btn-primary mt-4 text-sm sm:text-base">
                                                        <i class="fas fa-plus ml-2"></i>
                                                        افزودن اولین محصول
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>

                            <!-- Pagination -->
                            @if (Model.Result?.Data != null && Model.Result.Data.Any())
                            {
                                <div class="pagination-container flex flex-col sm:flex-row items-center justify-between gap-4 mt-6">
                                    <div class="text-xs sm:text-sm text-gray-700 text-center sm:text-right">
                                        نمایش @((Model.Result.CurrentPage - 1) * Model.Result.Take + 1) تا
                                        @Math.Min(Model.Result.CurrentPage * Model.Result.Take, Model.Result.EntityCount)
                                        از @Model.Result.EntityCount محصول
                                    </div>
                                    <div class="pagination-buttons flex items-center gap-1 sm:gap-2">
                                        @if (Model.Result.CurrentPage > 1)
                                        {
                                            <a href="?PageId=@(Model.Result.CurrentPage - 1)&Title=@Model.FilterParams.Title&Status=@Model.FilterParams.Status"
                                               class="btn btn-outline btn-sm">
                                                <i class="fas fa-chevron-right"></i>
                                            </a>
                                        }
                                        else
                                        {
                                            <button class="btn btn-outline btn-sm" disabled>
                                                <i class="fas fa-chevron-right"></i>
                                            </button>
                                        }

                                        @{
                                            int startPage = Math.Max(1, Model.Result.CurrentPage - 2);
                                            int endPage = Math.Min(Model.Result.PageCount, Model.Result.CurrentPage + 2);
                                        }

                                        @for (int i = startPage; i <= endPage; i++)
                                        {
                                            if (i == Model.Result.CurrentPage)
                                            {
                                                <span class="btn btn-primary btn-sm">@i</span>
                                            }
                                            else
                                            {
                                                <a href="?PageId=@i&Title=@Model.FilterParams.Title&Status=@Model.FilterParams.Status"
                                                   class="btn btn-outline btn-sm">@i</a>
                                            }
                                        }

                                        @if (Model.Result.CurrentPage < Model.Result.PageCount)
                                        {
                                            <a href="?PageId=@(Model.Result.CurrentPage + 1)&Title=@Model.FilterParams.Title&Status=@Model.FilterParams.Status"
                                               class="btn btn-outline btn-sm">
                                                <i class="fas fa-chevron-left"></i>
                                            </a>
                                        }
                                        else
                                        {
                                            <button class="btn btn-outline btn-sm" disabled>
                                                <i class="fas fa-chevron-left"></i>
                                            </button>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
       

        // بستن منوها هنگام کلیک خارج
        document.addEventListener('click', function(event) {
            const profileDropdown = document.getElementById('profileDropdown');
            const profileButton = event.target.closest('button[onclick="toggleProfileDropdown()"]');

            if (profileDropdown && !profileDropdown.contains(event.target) && !profileButton) {
                profileDropdown.classList.add('hidden');
            }
        });

        // مدیریت حذف محصول
        document.querySelectorAll('.delete-btn').forEach(button => {
            button.addEventListener('click', function(e) {
                e.preventDefault();
                const productId = this.getAttribute('data-product-id');
                const productTitle = this.getAttribute('data-product-title');

                Swal.fire({
                    title: 'آیا از حذف محصول اطمینان دارید؟',
                    text: `محصول "${productTitle}" حذف خواهد شد`,
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#dc2626',
                    cancelButtonColor: '#6b7280',
                    confirmButtonText: 'حذف',
                    cancelButtonText: 'لغو',
                    reverseButtons: true,
                    customClass: {
                        container: 'swal-rtl'
                    }
                }).then((result) => {
                    if (result.isConfirmed) {
                        const form = this.closest('form');
                        if (form) {
                            form.submit();
                        }
                    }
                });
            });
        });

      

        // بهبود UX برای موبایل
        document.querySelectorAll('a, button').forEach(element => {
            if (!element.classList.contains('touch-friendly')) {
                element.classList.add('touch-friendly');
            }
        });
    </script>

    <script src="~/Alert.js"></script>

    <script>
        // نمایش خودکار پیام‌های TempData
        document.addEventListener('DOMContentLoaded', function() {
            // پیام‌های موفقیت
            @if (TempData["Success"] != null)
            {
                    <text>
                    setTimeout(() => {
                        Alert.success('@Html.Raw(TempData["Success"])');
                    }, 300);
                    </text>
            }

            // پیام‌های خطا
            @if (TempData["Error"] != null)
            {
                    <text>
                    setTimeout(() => {
                        Alert.error('@Html.Raw(TempData["Error"])');
                    }, 500);
                    </text>
            }

            // پیام‌های هشدار
            @if (TempData["Warning"] != null)
            {
                    <text>
                    setTimeout(() => {
                        Alert.warning('@Html.Raw(TempData["Warning"])');
                    }, 700);
                    </text>
            }

            // پیام‌های اطلاعات
            @if (TempData["Info"] != null)
            {
                    <text>
                    setTimeout(() => {
                        Alert.info('@Html.Raw(TempData["Info"])');
                    }, 900);
                    </text>
            }
        });
    </script>

</body>
</html>