@functions {
    protected string GetFilterQueryString()
    {
        var queryParams = new List<string>();

        if (!string.IsNullOrEmpty(Model.FilterParams.Title))
            queryParams.Add($"Title={Uri.EscapeDataString(Model.FilterParams.Title)}");

        if (!string.IsNullOrEmpty(Model.FilterParams.Description))
            queryParams.Add($"Description={Uri.EscapeDataString(Model.FilterParams.Description)}");

        return queryParams.Any() ? "&" + string.Join("&", queryParams) : "";
    }
}