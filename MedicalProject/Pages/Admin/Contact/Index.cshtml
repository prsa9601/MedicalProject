        // انتخاب همه/عدم انتخاب همه
        function toggleSelectAll(checkbox) {
            const checkboxes = document.querySelectorAll('.contact-checkbox');
            checkboxes.forEach(cb => {
                if (cb) {
                    cb.checked = checkbox.checked;
                }
            });
        }

        // نمایش مودال عملیات گروهی
        function showBulkActions() {
            const selectedCount = document.querySelectorAll('.contact-checkbox:checked').length;
            if (selectedCount === 0) {
                Swal.fire({
                    title: 'هشدار!',
                    text: 'لطفاً حداقل یک تماس را انتخاب کنید.',
                    icon: 'warning',
                    confirmButtonText: 'باشه',
                    customClass: {
                        container: 'rtl',
                        title: 'text-right',
                        htmlContainer: 'text-right'
                    }
                });
                return;
            }
            document.getElementById('bulkActionsModal').classList.remove('hidden');
        }

        function closeBulkActionsModal() {
            document.getElementById('bulkActionsModal').classList.add('hidden');
        }

        // عملیات گروهی
        function getSelectedContactIds() {
            const checkboxes = document.querySelectorAll('.contact-checkbox:checked');
            return Array.from(checkboxes).map(cb => cb.value).filter(id => id);
        }

        async function bulkMarkAsAnswered() {
            const selectedIds = getSelectedContactIds();
            if (selectedIds.length === 0) return;

            const result = await Swal.fire({
                title: 'علامت گذاری گروهی',
