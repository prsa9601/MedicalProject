                            @if (Model?.Result != null)
                            {
                                <div class="flex flex-col sm:flex-row items-center justify-between mt-6 space-y-4 sm:space-y-0">
                                    <div class="text-xs md:text-sm text-gray-700">
                                        نمایش
                                        <span id="currentRange">@((Model.Result.CurrentPage - 1) * Model.Result.Take + 1) - @Math.Min(Model.Result.CurrentPage * Model.Result.Take, Model.Result.EntityCount)</span>
                                        از
                                        <span id="totalCount">@Model.Result.EntityCount</span>
