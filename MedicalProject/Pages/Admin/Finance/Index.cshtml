                                        <span class="font-semibold text-purple-600">@Model.Result.Data.SafeSum(i => i.TotalPrice).ToString("P1")</span>
                                    </div>
                                </div>
                            </div>
                        </div> *@

                        <!-- User Profit Summary -->
                        <div class="card">
                            <div class="p-6 border-b border-gray-200">
                                <h3 class="text-lg font-semibold text-gray-900">سود کاربران</h3>
                            </div>
                            <div class="p-6">
                                <div class="space-y-4">
                                    <div class="flex justify-between items-center">
                                        <span class="text-gray-600">میانگین سرمایه گزاری کاربران:</span>
                                        <span class="font-semibold text-green-600">@Model.Result.Data.SafeSum(i => i.TotalPrice).ToString("N0") ریال</span>
                                    </div>
                                    <div class="flex justify-between items-center">
                                        <span class="text-gray-600">بیشترین سرمایه گزاری:</span>
                                        <span class="font-semibold text-blue-600">
                                            @{
                                                // اگر TotalPrice از نوع decimal? (nullable) است:
                                                var maxInvestment = Model.UserPurchaseReportResult.Data?
                                                .OrderByDescending(d => d.PurchaseReport != null && d.PurchaseReport.Any()
                                                ? d.PurchaseReport.Max(p => p.TotalPrice ?? "0")
                                                : "0")
                                                .FirstOrDefault();
                                                string formattedProfit = decimal.Parse(maxInvestment?.PurchaseReport.FirstOrDefault().TotalPrice).ToString("N0")??"0";
                                            }
                                            @formattedProfit ریال
                                        </span>
                                    </div>
                                    <div class="flex justify-between items-center">
                                        <span class="text-gray-600">کمترین سرمایه گزاری:</span>
                                        <span class="font-semibold text-orange-600">@Model.Result.Data.SafeSum(i => i.TotalPrice).ToString("N0") ریال</span>
                                    </div>
                                    <div class="flex justify-between items-center">
                                        <span class="text-gray-600">کاربرانی که باید سود برایشان واریز بشود:</span>
                                        <span class="font-semibold text-purple-600">@Model.Result.Data.SafeSum(i => i.TotalPrice).ToString("N0") نفر</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Quick Actions -->
                        @*  <div class="card">
                            <div class="p-6 border-b border-gray-200">
                                <h3 class="text-lg font-semibold text-gray-900">عملیات سریع</h3>
                            </div>
                            <div class="p-6">
