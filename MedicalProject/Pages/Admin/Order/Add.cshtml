@page
@using MedicalProject.Infrastructure
@using MedicalProject.Infrastructure.Extensions
@using MedicalProject.Models.Product.DTOs
@model MedicalProject.Pages.Admin.Order.AddModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>خرید دنگی - پلتفرم دنگ</title>

    <!-- فونت‌ها -->
    <link href="https://fonts.googleapis.com/css2?family=Vazir:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/gh/rastikerdar/vazir-font@v30.1.0/dist/font-face.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>

    <style>
        /* استایل‌های سفارشی مشابه قالب ادمین */
        html {
            direction: rtl;
            font-family: 'Vazir', 'IRANSans', system-ui, sans-serif;
        }

        body {
            background-color: #f9fafb;
            color: #111827;
            font-family: 'Vazir', 'IRANSans', system-ui, sans-serif;
            overflow-x: hidden;
        }

        * {
            border-color: #e5e7eb;
        }

        input:focus, textarea:focus, select:focus {
            outline: none;
            ring: 2px;
            ring-color: #3b82f6;
            border-color: #3b82f6;
        }

        /* کامپوننت‌های سفارشی */
        .btn {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            padding: 0.5rem 1rem;
            border: 1px solid transparent;
            font-size: 0.875rem;
            font-weight: 500;
            border-radius: 0.5rem;
            box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
            transition: all 0.2s;
            cursor: pointer;
            white-space: nowrap;
        }

            .btn:focus {
                outline: 2px solid transparent;
                outline-offset: 2px;
                ring: 2px;
                ring-offset: 2px;
            }

            .btn:disabled {
                opacity: 0.5;
                cursor: not-allowed;
            }

        .btn-primary {
            background-color: #2563eb;
            color: white;
        }

            .btn-primary:hover {
                background-color: #1d4ed8;
            }

        .btn-secondary {
            background-color: white;
            color: #374151;
            border: 1px solid #d1d5db;
        }

            .btn-secondary:hover {
                background-color: #f9fafb;
            }

        .btn-success {
            background-color: #059669;
            color: white;
        }

            .btn-success:hover {
                background-color: #047857;
            }

        .btn-danger {
            background-color: #dc2626;
            color: white;
        }

            .btn-danger:hover {
                background-color: #b91c1c;
            }

        .btn-outline {
            border: 1px solid #d1d5db;
            color: #374151;
            background-color: white;
        }

            .btn-outline:hover {
                background-color: #f9fafb;
            }

        .btn-warning {
            background-color: #d97706;
            color: white;
        }

            .btn-warning:hover {
                background-color: #b45309;
            }

        .card {
            background-color: white;
            border-radius: 0.75rem;
            box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
            border: 1px solid #f3f4f6;
            overflow: hidden;
        }

        .card-hover {
            transition: all 0.3s;
        }

            .card-hover:hover {
                box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
                transform: translateY(-0.25rem);
            }

        .input {
            display: block;
            width: 100%;
            padding: 0.5rem 0.75rem;
            border: 1px solid #d1d5db;
            border-radius: 0.5rem;
            box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
        }

            .input::placeholder {
                color: #9ca3af;
            }

            .input:focus {
                outline: none;
                ring: 2px;
                ring-color: #3b82f6;
                border-color: #3b82f6;
            }

        .label {
            display: block;
            font-size: 0.875rem;
            font-weight: 500;
            color: #374151;
            margin-bottom: 0.25rem;
        }

        .badge {
            display: inline-flex;
            align-items: center;
            padding: 0.25rem 0.625rem;
            border-radius: 9999px;
            font-size: 0.75rem;
            font-weight: 500;
            white-space: nowrap;
        }

        .badge-primary {
            background-color: #dbeafe;
            color: #1e40af;
        }

        .badge-success {
            background-color: #d1fae5;
            color: #065f46;
        }

        .badge-warning {
            background-color: #fef3c7;
            color: #92400e;
        }

        .badge-danger {
            background-color: #fee2e2;
            color: #991b1b;
        }

        .badge-info {
            background-color: #d1f5f9;
            color: #0e7490;
        }

        /* استایل‌های مخصوص پنل ادمین */
        .admin-sidebar {
            width: 260px;
            background: linear-gradient(180deg, #1e40af 0%, #1e3a8a 100%);
            color: white;
            transition: all 0.3s;
            z-index: 40;
        }

        .admin-main {
            margin-right: 260px;
            transition: all 0.3s;
            width: calc(100% - 260px);
        }

        .admin-content {
            min-height: calc(100vh - 64px);
        }

        .sidebar-collapsed .admin-sidebar {
            width: 70px;
        }

        .sidebar-collapsed .admin-main {
            margin-right: 70px;
            width: calc(100% - 70px);
        }

        .sidebar-link {
            display: flex;
            align-items: center;
            padding: 0.75rem 1rem;
            color: #d1d5db;
            border-radius: 0.5rem;
            margin: 0.25rem 0.5rem;
            transition: all 0.2s;
        }

            .sidebar-link:hover, .sidebar-link.active {
                background-color: rgba(255, 255, 255, 0.1);
                color: white;
            }

            .sidebar-link i {
                width: 24px;
                text-align: center;
                flex-shrink: 0;
            }

            .sidebar-link span {
                margin-right: 0.75rem;
                white-space: nowrap;
                overflow: hidden;
                text-overflow: ellipsis;
            }

        .sidebar-collapsed .sidebar-link span {
            display: none;
        }

        /* استایل‌های مخصوص صفحه خرید */
        .quantity-input {
            width: 60px;
            text-align: center;
        }

        .counter-btn {
            width: 36px;
            height: 36px;
            display: flex;
            align-items: center;
            justify-content: center;
            border: 1px solid #d1d5db;
            background-color: white;
            border-radius: 0.375rem;
            cursor: pointer;
            transition: all 0.2s;
        }

            .counter-btn:hover {
                background-color: #f9fafb;
                border-color: #9ca3af;
            }

            .counter-btn:disabled {
                opacity: 0.5;
                cursor: not-allowed;
            }

        .modal-overlay {
            position: fixed;
            inset: 0;
            background-color: rgba(0, 0, 0, 0.5);
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 50;
            padding: 1rem;
        }

        .modal-content {
            background-color: white;
            border-radius: 0.5rem;
            max-width: 500px;
            width: 100%;
            max-height: 90vh;
            overflow-y: auto;
        }

        .dang-selection {
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
            margin-top: 1rem;
        }

        .dang-option {
            display: flex;
            align-items: center;
            padding: 0.75rem;
            border: 2px solid #e5e7eb;
            border-radius: 0.5rem;
            cursor: pointer;
            transition: all 0.2s;
        }

            .dang-option:hover {
                border-color: #3b82f6;
                background-color: #eff6ff;
            }

            .dang-option.selected {
                border-color: #3b82f6;
                background-color: #eff6ff;
            }

            .dang-option input {
                margin-left: 0.5rem;
            }

            .dang-option label {
                flex: 1;
                cursor: pointer;
            }

        .dang-price {
            font-weight: 600;
            color: #059669;
        }

        /* استایل‌های برای موبایل */
        .mobile-product-card {
            display: none;
        }

        .mobile-summary {
            display: none;
        }

        /* Responsive */
        @@media (max-width: 1024px) {
            .admin-sidebar {
                width: 70px;
            }

            .admin-main {
                margin-right: 70px;
                width: calc(100% - 70px);
            }

            .sidebar-link span {
                display: none;
            }
        }

        @@media (max-width: 768px) {
            .admin-sidebar {
                position: fixed;
                right: -260px;
                z-index: 50;
                height: 100vh;
                width: 260px;
            }

            .admin-main {
                margin-right: 0;
                width: 100%;
            }

            .sidebar-mobile-open .admin-sidebar {
                right: 0;
            }

            .sidebar-link span {
                display: block;
            }
            /* مخفی کردن کارت‌های دسکتاپ در موبایل */
            .desktop-product-card {
                display: none;
            }

            .mobile-product-card {
                display: block;
            }
            /* شبکه‌بندی محصولات */
            .grid-cols-3 {
                grid-template-columns: 1fr;
            }
            /* مدال در موبایل */
            .modal-content {
                margin: 1rem;
                max-width: calc(100% - 2rem);
            }
            /* خلاصه خرید در موبایل */
            .desktop-summary {
                display: none;
            }

            .mobile-summary {
                display: block;
                position: fixed;
                bottom: 0;
                left: 0;
                right: 0;
                z-index: 40;
            }
        }

        @@media (max-width: 640px) {
            .admin-content {
                padding: 0.5rem;
            }

            .card {
                border-radius: 0.5rem;
            }

            .quantity-input {
                width: 50px;
            }

            .counter-btn {
                width: 32px;
                height: 32px;
            }
        }

        @@media (max-width: 480px) {
            .dang-option {
                padding: 0.5rem;
            }

            .btn {
                width: 100%;
                justify-content: center;
            }

            .mobile-summary .btn {
                flex: 1;
            }
        }

        /* بهبود قابلیت لمس در موبایل */
        @@media (hover: none) and (pointer: coarse) {
            .btn {
                min-height: 44px;
            }

            .sidebar-link {
                min-height: 44px;
            }

            .counter-btn {
                min-width: 44px;
                min-height: 44px;
            }

            input, select, textarea {
                font-size: 16px;
            }
        }

        /* کلاس‌های کمکی */
        .text-truncate {
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }

        .flex-wrap-mobile {
            flex-wrap: wrap;
        }

        .w-full-mobile {
            width: 100%;
        }
    </style>
</head>
<body class="admin-layout">
    <!-- Header -->
    <header class="bg-white shadow-sm border-b border-gray-200 sticky top-0 z-40">
        <div class="max-w-full mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <!-- Logo and Toggle -->
                <div class="flex items-center">
                    <button id="sidebarToggle" class="p-2 rounded-lg text-gray-400 hover:text-gray-600 hover:bg-gray-100 transition-colors mr-2">
                        <i class="fas fa-bars"></i>
                    </button>
                    <a href="/">
                        <div class="flex items-center space-x-2 space-x-reverse">
                            <div class="w-8 h-8 bg-blue-600 rounded-lg flex items-center justify-center">
                                <span class="text-white font-bold text-lg">د</span>
                            </div>
                            <span class="text-xl font-bold text-gray-900 hidden sm:inline">پلتفرم دنگ</span>
                            <span class="text-xl font-bold text-gray-900 sm:hidden">دنگ</span>
                        </div>
                    </a>
                </div>

                <!-- User Actions -->
                <div class="flex items-center space-x-4 space-x-reverse">
                    <!-- Notifications -->
                    <a href="/Notifications" class="relative p-2 text-gray-400 hover:text-gray-600 transition-colors">
                        <i class="fas fa-bell"></i>
                        <span class="badge badge-danger absolute -top-1 -left-1 min-w-[1.25rem] h-5 flex items-center justify-center">
                            3
                        </span>
                    </a>

                    <!-- Profile Dropdown -->
                    <div class="relative">
                        <button onclick="toggleProfileDropdown()"
                                class="flex items-center space-x-2 space-x-reverse p-2 rounded-lg hover:bg-gray-100 transition-colors">
                            <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center">
                                <i class="fas fa-user text-blue-600"></i>
                            </div>
                            <span class="hidden sm:block font-medium text-gray-700">
                                ادمین
                            </span>
                        </button>

                        <!-- Dropdown Menu -->
                        <div id="profileDropdown" class="hidden absolute left-0 mt-2 w-48 bg-white rounded-lg shadow-lg border border-gray-200 py-1 z-50">
                            <a href="/Admin/Dashboard"
                               class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 transition-colors">
                                <i class="fas fa-tachometer-alt ml-3"></i>
                                داشبورد
                            </a>
                            <a href="/Profile"
                               class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 transition-colors">
                                <i class="fas fa-user ml-3"></i>
                                پروفایل
                            </a>
                            <form asp-page="/Logout" method="post" class="w-full">
                                <button type="submit"
                                        class="flex items-center w-full px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 transition-colors">
                                    <i class="fas fa-sign-out-alt ml-3"></i>
                                    خروج
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="flex">
        <!-- Sidebar -->
        <div class="admin-sidebar fixed h-full z-30">
            <div class="flex flex-col h-full">
                <!-- Sidebar Header -->
                <div class="p-4 border-b border-blue-700">
                    <div class="flex items-center justify-between">
                        <div class="flex items-center space-x-2 space-x-reverse">
                            <div class="w-8 h-8 bg-white rounded-lg flex items-center justify-center">
                                <span class="text-blue-600 font-bold text-sm">د</span>
                            </div>
                            <span class="text-white font-bold">پنل مدیریت</span>
                        </div>
                    </div>
                </div>

                <!-- Sidebar Menu -->
                <partial name="~/Pages/Shared/_adminSidebar.cshtml" />

            </div>
        </div>

        <!-- Main Content -->
        <div class="admin-main flex-1">
            <div class="admin-content">
                <!-- Main Content Area -->
                <div class="max-w-full mx-auto px-3 sm:px-4 lg:px-8 py-4 sm:py-6">
                    <!-- Page Header -->
                    <div class="card mb-6">
                        <div class="p-4 sm:p-6">
                            <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
                                <div>
                                    <h1 class="text-xl sm:text-2xl font-bold text-gray-900">خرید دنگی</h1>
                                    <p class="mt-1 text-sm text-gray-600">انتخاب محصول و تعداد دانگ مورد نظر برای خرید</p>
                                </div>
                                <div class="flex flex-col sm:flex-row items-start sm:items-center space-y-3 sm:space-y-0 sm:space-x-3 space-x-reverse w-full sm:w-auto">
                                    <div class="bg-gray-50 p-3 rounded-lg w-full sm:w-auto">
                                        <div class="flex items-center space-x-3 space-x-reverse">
                                            <div class="w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center">
                                                <i class="fas fa-user text-blue-600"></i>
                                            </div>
                                            <div>
                                                <div class="font-medium text-gray-900">@Model.User?.FirstName @Model.User?.LastName</div>
                                                <div class="text-sm text-gray-500">@Model.User?.PhoneNumber</div>
                                            </div>
                                        </div>
                                    </div>
                                    <button onclick="location.href='/Admin/Order'"
                                            class="btn btn-outline w-full sm:w-auto">
                                        <i class="fas fa-arrow-right ml-2"></i>
                                        بازگشت به سفارشات
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Products Grid -->
                    <div id="productsContainer">
                        <!-- Products will be loaded here -->
                        <div class="text-center py-12">
                            <div class="inline-block animate-spin rounded-full h-12 w-12 border-b-2 border-blue-600"></div>
                            <p class="mt-4 text-gray-500">در حال بارگذاری محصولات...</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Selected Product Summary (Desktop) -->
        <div id="selectedProductSummary" class="fixed bottom-0 left-0 right-0 bg-white border-t border-gray-200 shadow-lg z-40 p-4 hidden desktop-summary">
            <div class="max-w-full mx-auto px-4 sm:px-6 lg:px-8">
                <div class="flex flex-col sm:flex-row items-center justify-between space-y-3 sm:space-y-0">
                    <div class="flex items-center space-x-4 space-x-reverse">
                        <img id="selectedProductImage" src="" alt="" class="w-12 h-12 object-cover rounded-lg">
                        <div>
                            <div class="font-semibold text-gray-900" id="selectedProductName"></div>
                            <div class="text-sm text-gray-500">
                                <span id="selectedProductDang">0</span> دانگ انتخاب شده
                            </div>
                        </div>
                        <div class="text-lg font-bold text-blue-600" id="selectedProductTotal"></div>
                    </div>
                    <div class="flex items-center space-x-3 space-x-reverse">
                        <button onclick="clearSelection()" class="btn btn-outline">
                            <i class="fas fa-times ml-2"></i>
                            لغو انتخاب
                        </button>
                        <button onclick="submitDangPurchase()" class="btn btn-success">
                            <i class="fas fa-check ml-2"></i>
                            خرید دانگ‌ها
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Selected Product Summary (Mobile) -->
        <div id="selectedProductSummaryMobile" class="mobile-summary hidden">
            <div class="bg-white border-t border-gray-200 shadow-lg p-3">
                <div class="flex items-center justify-between mb-2">
                    <div class="flex items-center space-x-3 space-x-reverse">
                        <img id="selectedProductImageMobile" src="" alt="" class="w-10 h-10 object-cover rounded">
                        <div>
                            <div class="font-semibold text-gray-900 text-sm" id="selectedProductNameMobile"></div>
                            <div class="text-xs text-gray-500">
                                <span id="selectedProductDangMobile">0</span> دانگ
                            </div>
                        </div>
                    </div>
                    <div class="font-bold text-blue-600 text-sm" id="selectedProductTotalMobile"></div>
                </div>
                <div class="flex space-x-2 space-x-reverse">
                    <button onclick="clearSelection()" class="btn btn-outline flex-1 py-2">
                        <i class="fas fa-times ml-1 text-xs"></i>
                        لغو
                    </button>
                    <button onclick="submitDangPurchase()" class="btn btn-success flex-1 py-2">
                        <i class="fas fa-check ml-1 text-xs"></i>
                        خرید
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Dang Selection Modal -->
    <div id="dangModal" class="modal-overlay hidden">
        <div class="modal-content">
            <div class="p-4 sm:p-6">
                <div class="flex justify-between items-center mb-4 sm:mb-6">
                    <h3 class="text-lg sm:text-xl font-semibold text-gray-900">انتخاب تعداد دانگ</h3>
                    <button onclick="hideDangModal()" class="text-gray-400 hover:text-gray-600 p-1">
                        <i class="fas fa-times"></i>
                    </button>
                </div>

                <div class="flex items-center space-x-4 space-x-reverse mb-4 sm:mb-6 p-3 sm:p-4 bg-gray-50 rounded-lg">
                    <img id="modalProductImage" src="" alt="" class="w-16 h-16 sm:w-20 sm:h-20 object-cover rounded">
                    <div class="flex-1">
                        <h4 id="modalProductName" class="font-semibold text-gray-900 text-sm sm:text-base"></h4>
                        <div class="text-xs sm:text-sm text-gray-500">
                            قیمت هر دانگ: <span id="modalProductPrice" class="font-semibold"></span> ریال
                        </div>
                    </div>
                </div>

                <!-- Dang Counter -->
                <div class="mb-4 sm:mb-6">
                    <label class="block text-sm font-medium text-gray-700 mb-2">تعداد دانگ:</label>
                    <div class="flex items-center justify-center space-x-4 space-x-reverse">
                        <button onclick="decreaseDangCount()" class="counter-btn">
                            <i class="fas fa-minus"></i>
                        </button>
                        <input type="number"
                               id="dangCount"
                               min="0"
                               max="12"
                               value="0"
                               class="quantity-input text-center text-xl sm:text-2xl font-bold">
                        <button onclick="increaseDangCount()" class="counter-btn">
                            <i class="fas fa-plus"></i>
                        </button>
                    </div>
                    <div class="text-center mt-2 text-xs sm:text-sm text-gray-500">
                        هر محصول شامل ۱۲ دانگ می‌باشد
                    </div>
                </div>

                <!-- Dang Options -->
                <div class="dang-selection">
                    <div class="dang-option" onclick="selectDangOption(1)">
                        <input type="radio" name="dangOption" id="dang1" value="1">
                        <label for="dang1" class="text-sm sm:text-base">۱ دانگ <span class="dang-price">(یک دوازدهم)</span></label>
                    </div>
                    <div class="dang-option" onclick="selectDangOption(2)">
                        <input type="radio" name="dangOption" id="dang2" value="2">
                        <label for="dang2" class="text-sm sm:text-base">۲ دانگ <span class="dang-price">(یک ششم)</span></label>
                    </div>
                    <div class="dang-option" onclick="selectDangOption(3)">
                        <input type="radio" name="dangOption" id="dang3" value="3">
                        <label for="dang3" class="text-sm sm:text-base">۳ دانگ <span class="dang-price">(یک چهارم)</span></label>
                    </div>
                    <div class="dang-option" onclick="selectDangOption(6)">
                        <input type="radio" name="dangOption" id="dang6" value="6">
                        <label for="dang6" class="text-sm sm:text-base">۶ دانگ <span class="dang-price">(نیم)</span></label>
                    </div>
                    <div class="dang-option" onclick="selectDangOption(12)">
                        <input type="radio" name="dangOption" id="dang12" value="12">
                        <label for="dang12" class="text-sm sm:text-base">۱۲ دانگ <span class="dang-price">(یک عدد کامل)</span></label>
                    </div>
                </div>

                <!-- Summary -->
                <div class="mt-4 sm:mt-6 p-3 sm:p-4 bg-blue-50 rounded-lg">
                    <div class="flex flex-col sm:flex-row justify-between items-center">
                        <div class="mb-3 sm:mb-0 text-center sm:text-right">
                            <div class="text-sm text-gray-600">جمع کل:</div>
                            <div class="text-xl sm:text-2xl font-bold text-blue-600" id="modalTotalPrice">۰ ریال</div>
                        </div>
                        <button onclick="addDangToCart()" class="btn btn-success w-full sm:w-auto">
                            <i class="fas fa-shopping-cart ml-2"></i>
                            تأیید و ادامه
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // متغیرهای سراسری
        let products = [];
        let selectedProduct = null;
        let dangCount = 0;
        const MAX_DANG = 12;

        // تابع بارگذاری محصولات
        function loadProducts() {
            // داده‌های نمونه - باید با API واقعی جایگزین شود
            products = [
                {
                    id: 1,
                    name: "کرم ضد آفتاب SPF 50",
                    description: "کرم ضد آفتاب با SPF 50+ برای محافظت کامل از پوست در برابر اشعه‌های مضر آفتاب",
                    price: 240000,
                    image: "https://via.placeholder.com/400x300/3b82f6/ffffff?text=کرم+ضد+آفتاب",
                    category: "زیبایی",
                    stock: 8
                },
                {
                    id: 2,
                    name: "مکمل ویتامین C 1000mg",
                    description: "قرص جوشان ویتامین C با طعم پرتقال برای تقویت سیستم ایمنی بدن",
                    price: 96000,
                    image: "https://via.placeholder.com/400x300/10b981/ffffff?text=ویتامین+C",
                    category: "سلامت",
                    stock: 15
                },
                {
                    id: 3,
                    name: "دستگاه فشارسنج دیجیتال",
                    description: "دستگاه فشارسنج بازویی با نمایشگر دیجیتال و حافظه داخلی",
                    price: 420000,
                    image: "https://via.placeholder.com/400x300/ef4444/ffffff?text=فشارسنج",
                    category: "پزشکی",
                    stock: 3
                },
                {
                    id: 4,
                    name: "شامپو ضد شوره سر",
                    description: "شامپو مخصوص درمان شوره سر و تقویت ریشه مو",
                    price: 78000,
                    image: "https://via.placeholder.com/400x300/8b5cf6/ffffff?text=شامپو",
                    category: "زیبایی",
                    stock: 20
                },
                {
                    id: 5,
                    name: "قرص مسکن قوی",
                    description: "قرص مسکن برای تسکین سریع دردهای عضلانی و سردرد",
                    price: 30000,
                    image: "https://via.placeholder.com/400x300/f59e0b/ffffff?text=مسکن",
                    category: "پزشکی",
                    stock: 50
                },
                {
                    id: 6,
                    name: "ماسک صورت هیدرودرم",
                    description: "ماسک صورت مرطوب کننده و جوان کننده پوست برای انواع پوست",
                    price: 48000,
                    image: "https://via.placeholder.com/400x300/ec4899/ffffff?text=ماسک",
                    category: "زیبایی",
                    stock: 25
                }
            ];

            displayProducts();
        }

        // تابع نمایش محصولات
        function displayProducts() {
            const container = document.getElementById('productsContainer');

            let html = '<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-6">';

            products.forEach(product => {
                const dangPrice = Math.round(product.price / 12);

                // Desktop Version
                html += `
                    <div class="card card-hover desktop-product-card">
                        <div class="p-4 sm:p-6">
                            <img src="${product.image}"
                                 alt="${product.name}"
                                 class="w-full h-48 object-cover rounded-lg mb-4">

                            <div class="mb-4">
                                <span class="inline-block px-3 py-1 text-xs font-semibold rounded-full bg-blue-100 text-blue-800">
                                    ${product.category}
                                </span>
                            </div>

                            <h3 class="text-lg font-semibold text-gray-900 mb-2">${product.name}</h3>
                            <p class="text-sm text-gray-500 mb-4 line-clamp-2">${product.description}</p>

                            <div class="flex justify-between items-center mb-4">
                                <div>
                                    <div class="text-lg font-bold text-blue-600">
                                        ${product.price.toLocaleString()} ریال
                                    </div>
                                    <div class="text-sm text-gray-500">
                                        قیمت هر دانگ: ${dangPrice.toLocaleString()} ریال
                                    </div>
                                </div>
                                <div class="text-sm text-gray-500">
                                    <i class="fas fa-box ml-1"></i>
                                    ${product.stock} عدد
                                </div>
                            </div>

                            <button onclick="selectProduct(${product.id})"
                                    class="btn btn-primary w-full">
                                <i class="fas fa-shopping-basket ml-2"></i>
                                انتخاب برای خرید دنگی
                            </button>
                        </div>
                    </div>

                    <!-- Mobile Version -->
                    <div class="card mobile-product-card">
                        <div class="p-4">
                            <div class="flex items-start space-x-4 space-x-reverse">
                                <img src="${product.image}"
                                     alt="${product.name}"
                                     class="w-20 h-20 object-cover rounded-lg flex-shrink-0">

                                <div class="flex-1 min-w-0">
                                    <div class="mb-2">
                                        <span class="inline-block px-2 py-1 text-xs font-semibold rounded-full bg-blue-100 text-blue-800">
                                            ${product.category}
                                        </span>
                                    </div>

                                    <h3 class="font-semibold text-gray-900 mb-1 text-sm">${product.name}</h3>
                                    <p class="text-xs text-gray-500 mb-2 line-clamp-2">${product.description}</p>

                                    <div class="flex justify-between items-center">
                                        <div>
                                            <div class="font-bold text-blue-600 text-sm">
                                                ${product.price.toLocaleString()} ریال
                                            </div>
                                            <div class="text-xs text-gray-500">
                                                هر دانگ: ${dangPrice.toLocaleString()} ریال
                                            </div>
                                        </div>
                                        <div class="text-xs text-gray-500">
                                            <i class="fas fa-box ml-1"></i>
                                            ${product.stock}
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <button onclick="selectProduct(${product.id})"
                                    class="btn btn-primary w-full mt-3 py-2">
                                <i class="fas fa-shopping-basket ml-2"></i>
                                خرید دنگی
                            </button>
                        </div>
                    </div>
                `;
            });

            html += '</div>';
            container.innerHTML = html;
        }

        // انتخاب محصول برای خرید دنگی
        function selectProduct(productId) {
            selectedProduct = products.find(p => p.id === productId);
            if (!selectedProduct) return;

            // نمایش مدال انتخاب دانگ
            showDangModal();
        }

        // نمایش مدال انتخاب دانگ
        function showDangModal() {
            if (!selectedProduct) return;

            document.getElementById('modalProductImage').src = selectedProduct.image;
            document.getElementById('modalProductName').textContent = selectedProduct.name;
            document.getElementById('modalProductPrice').textContent = Math.round(selectedProduct.price / 12).toLocaleString();

            // بازنشانی شمارش‌گر
            dangCount = 0;
            document.getElementById('dangCount').value = dangCount;
            updateDangSummary();

            // بازنشانی انتخاب‌ها
            document.querySelectorAll('input[name="dangOption"]').forEach(input => {
                input.checked = false;
            });
            document.querySelectorAll('.dang-option').forEach(option => {
                option.classList.remove('selected');
            });

            document.getElementById('dangModal').classList.remove('hidden');
            document.body.style.overflow = 'hidden';
        }

        function hideDangModal() {
            document.getElementById('dangModal').classList.add('hidden');
            document.body.style.overflow = 'auto';
        }

        // مدیریت شمارش‌گر دانگ
        function increaseDangCount() {
            if (dangCount < MAX_DANG) {
                dangCount++;
                document.getElementById('dangCount').value = dangCount;
                updateDangSummary();
            }
        }

        function decreaseDangCount() {
            if (dangCount > 0) {
                dangCount--;
                document.getElementById('dangCount').value = dangCount;
                updateDangSummary();
            }
        }

        // انتخاب گزینه‌های آماده دانگ
        function selectDangOption(count) {
            dangCount = parseInt(count);
            document.getElementById('dangCount').value = dangCount;
            updateDangSummary();

            // برجسته کردن گزینه انتخاب شده
            document.querySelectorAll('.dang-option').forEach(option => {
                option.classList.remove('selected');
            });
            event.currentTarget.classList.add('selected');
        }

        // آپدیت خلاصه قیمت
        function updateDangSummary() {
            if (!selectedProduct) return;

            const dangPrice = Math.round(selectedProduct.price / 12);
            const totalPrice = dangPrice * dangCount;

            document.getElementById('modalTotalPrice').textContent = totalPrice.toLocaleString() + ' ریال';
        }

        // اضافه کردن دانگ‌های انتخاب شده
        function addDangToCart() {
            if (!selectedProduct || dangCount === 0) {
                showAlert('warning', 'لطفاً تعداد دانگ را انتخاب کنید');
                return;
            }

            if (dangCount > selectedProduct.stock) {
                showAlert('warning', 'تعداد دانگ انتخابی بیشتر از موجودی محصول است');
                return;
            }

            // ذخیره انتخاب
            selectedProduct.selectedDang = dangCount;

            // نمایش خلاصه انتخاب
            showSelectedProductSummary();

            // بستن مدال
            hideDangModal();

            showAlert('success', `${dangCount} دانگ از محصول "${selectedProduct.name}" انتخاب شد`);
        }

        // نمایش خلاصه محصول انتخاب شده
        function showSelectedProductSummary() {
            if (!selectedProduct || !selectedProduct.selectedDang) return;

            const dangPrice = Math.round(selectedProduct.price / 12);
            const totalPrice = dangPrice * selectedProduct.selectedDang;

            // Desktop
            document.getElementById('selectedProductImage').src = selectedProduct.image;
            document.getElementById('selectedProductName').textContent = selectedProduct.name;
            document.getElementById('selectedProductDang').textContent = selectedProduct.selectedDang;
            document.getElementById('selectedProductTotal').textContent = totalPrice.toLocaleString() + ' ریال';
            document.getElementById('selectedProductSummary').classList.remove('hidden');

            // Mobile
            document.getElementById('selectedProductImageMobile').src = selectedProduct.image;
            document.getElementById('selectedProductNameMobile').textContent = selectedProduct.name;
            document.getElementById('selectedProductDangMobile').textContent = selectedProduct.selectedDang;
            document.getElementById('selectedProductTotalMobile').textContent = totalPrice.toLocaleString() + ' ریال';
            document.getElementById('selectedProductSummaryMobile').classList.remove('hidden');

            // اسکرول به پایین صفحه در دسکتاپ
            if (window.innerWidth >= 768) {
                window.scrollTo({ top: document.body.scrollHeight, behavior: 'smooth' });
            }
        }

        // پاک کردن انتخاب
        function clearSelection() {
            if (selectedProduct) {
                selectedProduct.selectedDang = 0;
            }
            document.getElementById('selectedProductSummary').classList.add('hidden');
            document.getElementById('selectedProductSummaryMobile').classList.add('hidden');
        }

        // ثبت نهایی خرید دانگ
        function submitDangPurchase() {
            if (!selectedProduct || !selectedProduct.selectedDang) {
                showAlert('warning', 'لطفاً ابتدا محصولی را انتخاب کنید');
                return;
            }

            const dangPrice = Math.round(selectedProduct.price / 12);
            const totalPrice = dangPrice * selectedProduct.selectedDang;

            Swal.fire({
                title: 'تأیید خرید دنگی',
                html: `
                    <div class="text-right">
                        <p>آیا از خرید دنگی محصول زیر مطمئن هستید؟</p>
                        <div class="mt-4 p-4 bg-gray-50 rounded-lg">
                            <div class="flex items-center space-x-3 space-x-reverse mb-3">
                                <img src="${selectedProduct.image}" alt="${selectedProduct.name}"
                                     class="w-12 h-12 object-cover rounded">
                                <div>
                                    <div class="font-semibold">${selectedProduct.name}</div>
                                    <div class="text-sm text-gray-500">${selectedProduct.selectedDang} دانگ</div>
                                </div>
                            </div>
                            <div class="space-y-2">
                                <div class="flex justify-between">
                                    <span>قیمت هر دانگ:</span>
                                    <span>${dangPrice.toLocaleString()} ریال</span>
                                </div>
                                <div class="flex justify-between">
                                    <span>تعداد دانگ:</span>
                                    <span>${selectedProduct.selectedDang} عدد</span>
                                </div>
                                <div class="flex justify-between text-lg font-bold">
                                    <span>مبلغ قابل پرداخت:</span>
                                    <span class="text-blue-600">${totalPrice.toLocaleString()} ریال</span>
                                </div>
                            </div>
                        </div>
                        <div class="mt-4 text-sm text-gray-500">
                            خرید برای: <strong>@Model.User?.FirstName @Model.User?.LastName</strong>
                        </div>
                    </div>
                `,
                icon: 'question',
                showCancelButton: true,
                confirmButtonText: 'بله، ثبت خرید',
                cancelButtonText: 'لغو',
                reverseButtons: true,
                customClass: {
                    container: 'z-50'
                }
            }).then(async (result) => {
                if (result.isConfirmed) {
                    try {
                        // اینجا کد ارسال به API قرار می‌گیرد
                        const orderData = {
                            userId: '@Model.User?.Id',
                            productId: selectedProduct.id,
                            dangCount: selectedProduct.selectedDang,
                            unitPrice: dangPrice,
                            totalPrice: totalPrice,
                            purchaseDate: new Date().toISOString()
                        };

                        console.log('خرید دنگی ثبت شد:', orderData);

                        // شبیه‌سازی موفقیت
                        Swal.fire({
                            title: 'موفقیت‌آمیز!',
                            text: 'خرید دنگی با موفقیت ثبت شد',
                            icon: 'success',
                            confirmButtonText: 'باشه',
                            timer: 2000
                        }).then(() => {
                            // بازگشت به صفحه سفارشات
                            window.location.href = '/Admin/Order';
                        });

                    } catch (error) {
                        console.error('خطا:', error);
                        showAlert('error', 'خطا در ثبت خرید');
                    }
                }
            });
        }

        // تابع نمایش آلرت
        function showAlert(type, message) {
            Swal.fire({
                title: type === 'success' ? 'موفقیت' : type === 'error' ? 'خطا' : 'هشدار',
                text: message,
                icon: type,
                confirmButtonText: 'باشه',
                timer: type === 'success' ? 3000 : undefined
            });
        }

        // توابع مدیریت پنل ادمین
        function toggleSidebar() {
            document.body.classList.toggle('sidebar-collapsed');
            localStorage.setItem('sidebarCollapsed', document.body.classList.contains('sidebar-collapsed'));
        }

        function toggleMobileSidebar() {
            document.body.classList.toggle('sidebar-mobile-open');
        }

        function toggleProfileDropdown() {
            const dropdown = document.getElementById('profileDropdown');
            dropdown.classList.toggle('hidden');
        }

        // اجرای اولیه
        document.addEventListener('DOMContentLoaded', function() {
            loadProducts();

            // بارگذاری وضعیت سایدبار
            if (localStorage.getItem('sidebarCollapsed') === 'true') {
                document.body.classList.add('sidebar-collapsed');
            }

            // رویدادهای input شمارش‌گر
            document.getElementById('dangCount').addEventListener('input', function() {
                let value = parseInt(this.value);
                if (isNaN(value) || value < 0) value = 0;
                if (value > MAX_DANG) value = MAX_DANG;

                dangCount = value;
                this.value = dangCount;
                updateDangSummary();
            });

            // بستن مدال با کلیک خارج
            document.addEventListener('click', function(event) {
                const modal = document.getElementById('dangModal');
                if (modal && !modal.classList.contains('hidden')) {
                    if (!event.target.closest('.modal-content') &&
                        !event.target.closest('[onclick*="selectProduct"]')) {
                        hideDangModal();
                    }
                }

                // بستن منوی پروفایل
                const profileDropdown = document.getElementById('profileDropdown');
                const profileButton = event.target.closest('button[onclick="toggleProfileDropdown()"]');
                if (profileDropdown && !profileDropdown.contains(event.target) && !profileButton) {
                    profileDropdown.classList.add('hidden');
                }

                // بستن سایدبار موبایل
                if (window.innerWidth < 768 &&
                    !event.target.closest('.admin-sidebar') &&
                    !event.target.closest('#sidebarToggle')) {
                    document.body.classList.remove('sidebar-mobile-open');
                }
            });

            // بستن مدال با کلید Escape
            document.addEventListener('keydown', function(event) {
                if (event.key === 'Escape') {
                    hideDangModal();
                }
            });

            // مدیریت منوی سایدبار
            document.getElementById('sidebarToggle').addEventListener('click', function() {
                if (window.innerWidth < 768) {
                    toggleMobileSidebar();
                } else {
                    toggleSidebar();
                }
            });

            // تطبیق با صفحه‌نمایش
            function handleResize() {
                if (window.innerWidth >= 768 && document.body.classList.contains('sidebar-mobile-open')) {
                    document.body.classList.remove('sidebar-mobile-open');
                }
            }

            window.addEventListener('resize', handleResize);
            handleResize();
        });
    </script>
