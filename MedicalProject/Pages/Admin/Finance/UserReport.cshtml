@using MedicalProject.Infrastructure.Extensions
@using MedicalProject.Infrastructure.ProfitUtil
@using MedicalProject.Infrastructure.Utils
@using MedicalProject.Models.PurchaseReport
@model MedicalProject.Pages.Admin.Finance.UserReportModel
@{
    Layout = null;

    // تعریف متغیرهای ایمن
    var result = Model?.Result;
    var profitPurchases = result?.ProfitPurchases ?? new List<ProfitPurchaseReportDto>();
    var purchaseReport = result?.PurchaseReport ?? new List<PurchaseReportDto>();
    var productPurchases = result?.ProductPurchase ?? new List<ProductPurchaseReportDto>();

    // محاسبات ایمن
    var totalProfit = ((Model.ReportDto.OrderDtos.SelectMany(x => x.OrderItems.Product.Paid).SafeSum(i => i.ExpectedAmount)) + (Model.ReportDto.OrderDtos.SelectMany(x => x.OrderItems.Product.Unpaid).SafeSum(i => i.ExpectedAmount))).ToString("N0");

    var totalInvestment = purchaseReport.SafeSum(i => i?.TotalPrice ?? "0");
    var totalDang = purchaseReport.SafeSum(i => i?.TotalDang ?? "0");
    var avgProfit = (((Model.ReportDto.OrderDtos.SelectMany(x => x.OrderItems.Product.Paid).SafeSum(i => i.ExpectedAmount)) + (Model.ReportDto.OrderDtos.SelectMany(x => x.OrderItems.Product.Unpaid).SafeSum(i => i.ExpectedAmount))) / Model.ReportDto.OrderDtos.Count());

    // محاسبه سود ماهانه و سالانه
    var monthlyProfit = purchaseReport
        .Where(i => i?.CreationDate.AddDays(30) >= DateTime.Now)
        .SafeSum(i => i?.TotalPrice ?? "0");

    var yearlyProfit = purchaseReport
        .Where(i => i?.CreationDate.AddDays(365) >= DateTime.Now)
        .SafeSum(i => i?.TotalPrice ?? "0");

    // اولین سرمایه‌گذاری
    var firstInvestment = purchaseReport.OrderBy(i => i?.CreationDate).FirstOrDefault();
    var monthsSinceFirst = firstInvestment != null ? (DateTime.Now - firstInvestment.CreationDate).TotalDays / 30 : 0;

    // مدت عضویت
    var membershipMonths = result != null ? (DateTime.Now - result.CreationDate).TotalDays / 30 : 0;
}
