                                                <td colspan="7" class="text-center py-8 text-gray-500">
                                                    <i class="fas fa-check-circle text-4xl mb-2 text-green-500"></i>
                                                    <p>هیچ دوره پرداخت نشده‌ای وجود ندارد</p>
                                                </td>
                                            </tr>
                                        }
                                        else
                                        {
                                            int unpaidNumber = 1;
                                            foreach (var unpaid in Model.ReportDto.OrderDtos.SelectMany(i => i.OrderItems.Product.Unpaid))
                                            {
                                                <tr>
                                                    <td>@(unpaidNumber++)</td>
                                                    <td class="text-truncate">@(unpaid.ProductName ?? "نامشخص")</td>
                                                    <td>دوره @unpaid.PeriodNumber</td>
                                                    <td class="text-nowrap">@(unpaid.Date.ToPersianDate() ?? "نامشخص")</td>
                                                    <td class="profit-pending text-nowrap">@(unpaid.ExpectedAmount.ToString("N0") ?? "0") ریال</td>
                                                    <td>
                                                        @if (unpaid.Date < DateTime.Now)
                                                        {
                                                            <span class="badge badge-danger">پرداخت نشده</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge badge-warning">در انتظار</span>
                                                        }
                                                    </td>
                                                    <td>
                                                        <form method="post" asp-page-handler="ProfitPayed" class="inline">
                                                            <input asp-for="@Model.orderId" value="@unpaid.OrderId" hidden />
                                                            <input asp-for="@Model.userId" value="@Model.ReportDto.Id" hidden />
                                                            <input asp-for="@Model.productId" value="@unpaid.ProductId" hidden />
                                                            <input type="hidden" name="forWhaeTime" value="@unpaid.Date" />
                                                            <input asp-for="@Model.forWhatPeriod" value="@unpaid.PeriodNumber" hidden />
                                                            <button class="btn btn-sm btn-primary" type="submit">
                                                                درخواست پرداخت
                                                            </button>
                                                        </form>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>

                            <!-- Mobile List -->
                            <div class="sm:hidden">
                                @if (!Model.ReportDto.OrderDtos.SelectMany(i => i.OrderItems.Product.Unpaid).Any())
                                {
                                    <div class="text-center py-8 text-gray-500">
                                        <i class="fas fa-check-circle text-4xl mb-2 text-green-500"></i>
                                        <p>هیچ دوره پرداخت نشده‌ای وجود ندارد</p>
                                    </div>
                                }
                                else
                                {
                                    int unpaidNumber = 1;
                                    foreach (var unpaid in Model.ReportDto.OrderDtos.SelectMany(i => i.OrderItems.Product.Unpaid))
                                    {
                                        <div class="mobile-table-row">
                                            <div class="flex justify-between items-center mb-2">
                                                <span class="font-medium">#@(unpaidNumber++)</span>
                                                @if (unpaid.Date < DateTime.Now)
                                                {
                                                    <span class="badge badge-danger">پرداخت نشده</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-warning">در انتظار</span>
                                                }
                                            </div>
                                            <div class="space-y-2 mb-3">
                                                <div class="flex justify-between">
                                                    <span class="text-gray-600">محصول:</span>
                                                    <span class="text-truncate max-w-[150px]">@(unpaid.ProductName ?? "نامشخص")</span>
                                                </div>
                                                <div class="flex justify-between">
                                                    <span class="text-gray-600">دوره:</span>
                                                    <span>دوره @unpaid.PeriodNumber</span>
                                                </div>
                                                <div class="flex justify-between">
                                                    <span class="text-gray-600">سررسید:</span>
                                                    <span>@(unpaid.Date.ToPersianDate() ?? "نامشخص")</span>
                                                </div>
                                                <div class="flex justify-between">
                                                    <span class="text-gray-600">مبلغ:</span>
                                                    <span class="font-semibold profit-pending">@(unpaid.ExpectedAmount.ToString("N0") ?? "0") ریال</span>
                                                </div>
                                            </div>
                                            <form method="post" asp-page-handler="ProfitPayed" class="w-full">
                                                <input asp-for="@Model.orderId" value="@unpaid.OrderId" hidden />
                                                <input asp-for="@Model.userId" value="@Model.ReportDto.Id" hidden />
                                                <input asp-for="@Model.productId" value="@unpaid.ProductId" hidden />
                                                <input type="hidden" name="forWhaeTime" value="@unpaid.Date" />
                                                <input asp-for="@Model.forWhatPeriod" value="@unpaid.PeriodNumber" hidden />
                                                <button class="btn btn-primary w-full" type="submit">
                                                    <i class="fas fa-money-bill-wave ml-2"></i>
                                                    درخواست پرداخت
                                                </button>
                                            </form>
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Settlement Modal -->
    <div id="settlementModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50 hidden">
        <div class="relative top-4 sm:top-20 mx-auto p-4 sm:p-5 border w-full max-w-md sm:max-w-lg shadow-lg rounded-lg bg-white m-2 sm:m-auto">
            <div class="flex justify-between items-center pb-3 border-b">
                <h3 class="text-lg sm:text-xl font-semibold text-gray-900">تسویه حساب با کاربر</h3>
                <button onclick="closeSettlementModal()" class="text-gray-400 hover:text-gray-600 p-1">
                    <i class="fas fa-times"></i>
                </button>
            </div>

            <div class="mt-4">
                <form id="settlementForm">
                    <div class="space-y-4">
                        <div class="bg-gray-50 p-3 sm:p-4 rounded-lg">
                            <div class="flex justify-between items-center">
                                <span class="text-gray-600 text-sm-mobile">سود قابل تسویه:</span>
                                <span class="font-semibold text-green-600 text-sm-mobile">@totalProfit ریال</span>
                            </div>
                        </div>

                        <div>
                            <label class="form-label text-sm-mobile">مبلغ تسویه (ریال)</label>
                            <input type="number"
                                   id="settlementAmount"
                                   class="input text-sm-mobile"
                                   placeholder="مبلغ را وارد کنید"
                                   max="@totalProfit"
                                   value="@totalProfit"
                                   required>
                            <p class="text-xs text-gray-500 mt-1">حداکثر مبلغ قابل تسویه: @totalProfit ریال</p>
                        </div>

                        <div>
                            <label class="form-label text-sm-mobile">روش پرداخت</label>
                            <select id="paymentMethod" class="input text-sm-mobile" required>
                                <option value="">انتخاب روش پرداخت</option>
                                <option value="bank">واریز بانکی</option>
                                <option value="wallet">کیف پول</option>
                                <option value="crypto">ارز دیجیتال</option>
                            </select>
                        </div>

                        <div>
                            <label class="form-label text-sm-mobile">توضیحات</label>
                            <textarea id="settlementDescription" class="input text-sm-mobile" rows="3" placeholder="توضیحات تسویه حساب"></textarea>
                        </div>
                    </div>

                    <div class="flex flex-col sm:flex-row justify-end space-y-3 sm:space-y-0 sm:space-x-3 space-x-reverse mt-6">
                        <button type="button" onclick="closeSettlementModal()" class="btn btn-outline order-2 sm:order-1">
                            لغو
                        </button>
                        <button type="submit" class="btn btn-primary order-1 sm:order-2">
                            <i class="fas fa-check ml-2"></i>
                            تایید تسویه
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        // توابع مدیریت پنل ادمین
        function toggleSidebar() {
            document.body.classList.toggle('sidebar-collapsed');
            localStorage.setItem('sidebarCollapsed', document.body.classList.contains('sidebar-collapsed'));
        }

        function toggleMobileSidebar() {
            document.body.classList.toggle('sidebar-mobile-open');
        }

        function toggleProfileDropdown() {
            const dropdown = document.getElementById('profileDropdown');
            dropdown.classList.toggle('hidden');
        }

        // توابع مدال‌ها
        function showSettlementModal() {
            document.getElementById('settlementModal').classList.remove('hidden');
            document.body.style.overflow = 'hidden';
        }

        function closeSettlementModal() {
            document.getElementById('settlementModal').classList.add('hidden');
            document.body.style.overflow = 'auto';
        }

        function showInvestmentDetails(projectId) {
            Swal.fire({
                title: 'جزئیات سرمایه‌گذاری',
                text: 'در حال بارگذاری اطلاعات...',
                icon: 'info',
                showConfirmButton: false,
                timer: 1500
            });
        }

        function showDebugInfo(userId) {
            Swal.fire({
                title: 'وضعیت مالی کاربر',
                text: 'کاربر: ' + userId,
                icon: 'info',
                confirmButtonText: 'باشه'
            });
        }

        // توابع گزارش‌گیری
        function printReport() {
            window.print();
        }

        function exportUserReport() {
            Swal.fire({
                title: 'در حال آماده‌سازی گزارش',
                text: 'گزارش کاربر در حال دانلود است...',
                icon: 'info',
                showConfirmButton: false,
                timer: 2000
            });
        }

        function showPaymentHistory() {
            Swal.fire({
                title: 'تاریخچه پرداخت',
                text: 'نمایش کامل تاریخچه پرداخت‌های کاربر',
                icon: 'info',
                confirmButtonText: 'باشه'
            });
        }

        // توابع فیلتر
        function applyInvestmentFilters() {
            const statusFilter = document.getElementById('statusFilter').value;

            Swal.fire({
                title: 'اعمال فیلتر',
                text: 'در حال اعمال فیلتر وضعیت...',
                icon: 'info',
                showConfirmButton: false,
                timer: 1000
            });
        }

        // توابع ارتباط با کاربر
        function contactUser() {
            Swal.fire({
                title: 'تماس با کاربر',
                text: 'آیا مایل به برقراری تماس با کاربر هستید؟',
                icon: 'question',
                showCancelButton: true,
                confirmButtonText: 'بله',
                cancelButtonText: 'خیر'
            }).then((result) => {
                if (result.isConfirmed) {
                    Swal.fire({
                        title: 'در حال برقراری تماس',
                        text: 'در حال اتصال به کاربر...',
                        icon: 'info',
                        showConfirmButton: false,
                        timer: 1500
                    });
                }
            });
        }

        // مدیریت فرم تسویه حساب
        document.getElementById('settlementForm').addEventListener('submit', function(e) {
            e.preventDefault();
            const amount = document.getElementById('settlementAmount').value;
            const paymentMethod = document.getElementById('paymentMethod').value;
            const description = document.getElementById('settlementDescription').value;

            if (!paymentMethod) {
                Swal.fire({
                    title: 'خطا',
                    text: 'لطفاً روش پرداخت را انتخاب کنید',
                    icon: 'error',
                    confirmButtonText: 'باشه'
                });
                return;
            }

            Swal.fire({
                title: 'آیا مطمئن هستید؟',
                text: `آیا از تسویه حساب به مبلغ ${parseInt(amount).toLocaleString()} ریال با روش ${paymentMethod} اطمینان دارید؟`,
                icon: 'question',
                showCancelButton: true,
                confirmButtonText: 'بله، تسویه شود',
                cancelButtonText: 'لغو'
            }).then((result) => {
                if (result.isConfirmed) {
                    console.log('تسویه حساب:', { amount, paymentMethod, description });

                    Swal.fire({
                        title: 'موفق',
                        text: 'تسویه حساب با موفقیت انجام شد',
                        icon: 'success',
                        confirmButtonText: 'باشه',
                        timer: 2000
                    });

                    closeSettlementModal();

                    // ریست فرم
                    document.getElementById('settlementForm').reset();
                }
            });
        });

        // مدیریت منوی سایدبار
        document.getElementById('sidebarToggle').addEventListener('click', function() {
            if (window.innerWidth < 768) {
                toggleMobileSidebar();
            } else {
                toggleSidebar();
            }
        });

        // بارگذاری وضعیت سایدبار
        if (localStorage.getItem('sidebarCollapsed') === 'true') {
            document.body.classList.add('sidebar-collapsed');
        }

        // بستن منوها هنگام کلیک خارج
        document.addEventListener('click', function(event) {
            const profileDropdown = document.getElementById('profileDropdown');
            const profileButton = event.target.closest('button[onclick="toggleProfileDropdown()"]');

            if (profileDropdown && !profileDropdown.contains(event.target) && !profileButton) {
                profileDropdown.classList.add('hidden');
            }

            // بستن سایدبار موبایل هنگام کلیک خارج
            if (window.innerWidth < 768 &&
                !event.target.closest('.admin-sidebar') &&
                !event.target.closest('#sidebarToggle')) {
                document.body.classList.remove('sidebar-mobile-open');
            }
        });

        // تطبیق با صفحه‌نمایش
        function handleResize() {
            if (window.innerWidth >= 768 && document.body.classList.contains('sidebar-mobile-open')) {
                document.body.classList.remove('sidebar-mobile-open');
            }
        }

        window.addEventListener('resize', handleResize);
        handleResize(); // اجرای اولیه

        // بهبود قابلیت لمس در موبایل
        document.querySelectorAll('.btn, .sidebar-link').forEach(element => {
            element.addEventListener('touchstart', function() {
                this.classList.add('active');
            });

            element.addEventListener('touchend', function() {
                this.classList.remove('active');
            });
        });

        // استایل‌های چاپ
        const printStyle = document.createElement('style');
        printStyle.textContent = `
            @@media print {
                .btn, #sidebarToggle, .admin-sidebar, footer,
                .mobile-action-buttons, .mobile-table-row,
                .mobile-investment-card {
                    display: none !important;
                }
                .admin-main {
                    margin-right: 0 !important;
                    width: 100% !important;
                }
                .card {
                    box-shadow: none !important;
                    border: 1px solid #ddd !important;
                }
                .stat-card {
                    break-inside: avoid;
                    color: #000 !important;
                    background: #f5f5f5 !important;
                }
                .table-responsive {
                    display: block !important;
                    overflow: visible !important;
                }
                .table {
                    min-width: 100% !important;
                }
            }
        `;
        document.head.appendChild(printStyle);
    </script>

    <script>
        // نمایش خودکار پیام‌های TempData
        function showTempDataMessages() {
            // موفقیت
            @if (TempData["Success"] != null)
            {
                    <text>
                        setTimeout(() => {
                            Swal.fire({
                                title: 'موفقیت',
                                text: decodePersianText('@TempData["Success"]'),
                                icon: 'success',
                                confirmButtonText: 'باشه',
                                timer: 3000
                            });
                        }, 500);
                    </text>
            }

            // خطا
            @if (TempData["Error"] != null)
            {
                    <text>
                        setTimeout(() => {
                            const errorMsg = decodePersianText('@TempData["Error"]');
                            Swal.fire({
                                title: 'خطا',
                                text: errorMsg,
                                icon: 'error',
                                confirmButtonText: 'باشه'
                            });
                        }, 500);
                    </text>
            }

            // هشدار
            @if (TempData["Warning"] != null)
            {
                    <text>
                        setTimeout(() => {
                            const warningMsg = decodePersianText('@TempData["Warning"]');
                            Swal.fire({
                                title: 'هشدار',
                                text: warningMsg,
                                icon: 'warning',
                                confirmButtonText: 'باشه',
                                timer: 4000
                            });
                        }, 500);
                    </text>
            }

            // اطلاعیه
            @if (TempData["Info"] != null)
            {
                    <text>
                        setTimeout(() => {
                            const infoMsg = decodePersianText('@TempData["Info"]');
                            Swal.fire({
                                title: 'اطلاعیه',
                                text: infoMsg,
                                icon: 'info',
                                confirmButtonText: 'باشه',
                                timer: 3000
                            });
                        }, 500);
                    </text>
            }
        }

        // تابع decode برای فارسی
        function decodePersianText(text) {
            return text.replace(/&#x([0-9A-F]+);/gi, function(match, hex) {
                return String.fromCharCode(parseInt(hex, 16));
            });
        }

        // اجرا هنگام لود صفحه
        document.addEventListener('DOMContentLoaded', function() {
            showTempDataMessages();
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/Alert.js"></script>
</body>
