                                </text>
            }

            // هشدار
            @if (TempData["Warning"] != null)
            {
                                <text>
                                    setTimeout(() => {
                                        const warningMsg = decodePersianText('@TempData["Warning"]');
                                        Swal.fire({
                                            title: 'هشدار',
                                            text: warningMsg,
                                            icon: 'warning',
                                            confirmButtonText: 'باشه',
                                            timer: 4000
                                        });
                                    }, 500);
                                </text>
            }

            // اطلاعیه
            @if (TempData["Info"] != null)
            {
                                <text>
                                    setTimeout(() => {
                                        const infoMsg = decodePersianText('@TempData["Info"]');
                                        Swal.fire({
                                            title: 'اطلاعیه',
                                            text: infoMsg,
                                            icon: 'info',
                                            confirmButtonText: 'باشه',
                                            timer: 3000
                                        });
                                    }, 500);
                                </text>
            }
        }

        // تابع decode برای فارسی
        function decodePersianText(text) {
            return text.replace(/&#x([0-9A-F]+);/gi, function(match, hex) {
                return String.fromCharCode(parseInt(hex, 16));
            });
        }

        // اجرا هنگام لود صفحه
        document.addEventListener('DOMContentLoaded', function() {
            showTempDataMessages();

            // اضافه کردن padding-bottom برای موبایل
            if (window.innerWidth < 768) {
                document.body.style.paddingBottom = '60px';
            }
        });
    </script>
</body>
</html>