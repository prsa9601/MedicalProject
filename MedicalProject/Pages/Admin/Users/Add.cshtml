                                                </label>
                                                <input type="password"
                                                       id="confirmPassword"
                                                       name="confirmPassword"
                                                       class="form-control"
                                                       placeholder="تکرار رمز عبور"
                                                       required
                                                       oninput="checkPasswordMatch()">
                                                <div id="passwordMatch" class="form-text"></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Documents Section -->
                                <div class="card mt-6">
                                    <div class="p-6">
                                        <h3 class="text-lg font-semibold text-gray-900 mb-4">مدارک کاربر</h3>
                                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                            <!-- National Card Photo -->
                                            <div class="form-group">
                                                <label class="form-label">تصویر کارت ملی</label>
                                                <div class="space-y-3">
                                                    <div class="document-preview" id="nationalCardPreview">
                                                        <i class="fas fa-id-card text-gray-300 text-3xl"></i>
                                                    </div>
                                                    <div>
