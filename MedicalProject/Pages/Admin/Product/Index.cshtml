@page
@using MedicalProject.Infrastructure.Utils
@using MedicalProject.Models.Product
@using MedicalProject.Models.Product.DTOs
@model MedicalProject.Pages.Admin.Product.IndexModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>مدیریت محصولات - پلتفرم دنگ</title>

    <!-- فونت‌ها -->
    <link href="https://fonts.googleapis.com/css2?family=Vazir:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/gh/rastikerdar/vazir-font@v30.1.0/dist/font-face.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">

    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>

    <style>
        /* استایل‌های سفارشی */
        html {
            direction: rtl;
            font-family: 'Vazir', 'IRANSans', system-ui, sans-serif;
        }

        body {
            background-color: #f9fafb;
            color: #111827;
            font-family: 'Vazir', 'IRANSans', system-ui, sans-serif;
        }

        * {
            border-color: #e5e7eb;
        }

        input:focus, textarea:focus, select:focus {
            outline: none;
            ring: 2px;
            ring-color: #3b82f6;
            border-color: #3b82f6;
        }

        /* کامپوننت‌های سفارشی */
        .btn {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            padding: 0.5rem 1rem;
            border: 1px solid transparent;
            font-size: 0.875rem;
            font-weight: 500;
            border-radius: 0.5rem;
            box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
            transition: all 0.2s;
            cursor: pointer;
        }

            .btn:focus {
                outline: 2px solid transparent;
                outline-offset: 2px;
                ring: 2px;
                ring-offset: 2px;
            }

            .btn:disabled {
                opacity: 0.5;
                cursor: not-allowed;
            }

        .btn-primary {
            background-color: #2563eb;
            color: white;
        }

            .btn-primary:hover {
                background-color: #1d4ed8;
            }

        .btn-secondary {
            background-color: white;
            color: #374151;
            border: 1px solid #d1d5db;
        }

            .btn-secondary:hover {
                background-color: #f9fafb;
            }

        .btn-success {
            background-color: #059669;
            color: white;
        }

            .btn-success:hover {
                background-color: #047857;
            }

        .btn-danger {
            background-color: #dc2626;
            color: white;
        }

            .btn-danger:hover {
                background-color: #b91c1c;
            }

        .btn-outline {
            border: 1px solid #d1d5db;
            color: #374151;
            background-color: white;
        }

            .btn-outline:hover {
                background-color: #f9fafb;
            }

        .card {
            background-color: white;
            border-radius: 0.75rem;
            box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
            border: 1px solid #f3f4f6;
            overflow: hidden;
        }

        .card-hover {
            transition: all 0.3s;
        }

            .card-hover:hover {
                box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
                transform: translateY(-0.25rem);
            }

        .input {
            display: block;
            width: 100%;
            padding: 0.5rem 0.75rem;
            border: 1px solid #d1d5db;
            border-radius: 0.5rem;
            box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
        }

            .input::placeholder {
                color: #9ca3af;
            }

            .input:focus {
                outline: none;
                ring: 2px;
                ring-color: #3b82f6;
                border-color: #3b82f6;
            }

        .label {
            display: block;
            font-size: 0.875rem;
            font-weight: 500;
            color: #374151;
            margin-bottom: 0.25rem;
        }

        .badge {
            display: inline-flex;
            align-items: center;
            padding: 0.25rem 0.625rem;
            border-radius: 9999px;
            font-size: 0.75rem;
            font-weight: 500;
        }

        .badge-primary {
            background-color: #dbeafe;
            color: #1e40af;
        }

        .badge-success {
            background-color: #d1fae5;
            color: #065f46;
        }

        .badge-warning {
            background-color: #fef3c7;
            color: #92400e;
        }

        .badge-danger {
            background-color: #fee2e2;
            color: #991b1b;
        }

        .badge-secondary {
            background-color: #f3f4f6;
            color: #6b7280;
        }

        .text-gradient {
            background: linear-gradient(to right, #2563eb, #1e40af);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        /* استایل‌های مخصوص پنل ادمین */
        .admin-sidebar {
            width: 260px;
            background: linear-gradient(180deg, #1e40af 0%, #1e3a8a 100%);
            color: white;
            transition: all 0.3s;
        }

        .admin-main {
            margin-right: 260px;
            transition: all 0.3s;
        }

        .admin-content {
            min-height: calc(100vh - 64px);
        }

        .sidebar-collapsed .admin-sidebar {
            width: 70px;
        }

        .sidebar-collapsed .admin-main {
            margin-right: 70px;
        }

        .sidebar-link {
            display: flex;
            align-items: center;
            padding: 0.75rem 1rem;
            color: #d1d5db;
            border-radius: 0.5rem;
            margin: 0.25rem 0.5rem;
            transition: all 0.2s;
        }

            .sidebar-link:hover, .sidebar-link.active {
                background-color: rgba(255, 255, 255, 0.1);
                color: white;
            }

            .sidebar-link i {
                width: 24px;
                text-align: center;
            }

            .sidebar-link span {
                margin-right: 0.75rem;
                white-space: nowrap;
                overflow: hidden;
                text-overflow: ellipsis;
            }

        .sidebar-collapsed .sidebar-link span {
            display: none;
        }

        .table-responsive {
            overflow-x: auto;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
        }

            .table th, .table td {
                padding: 0.75rem 1rem;
                text-align: right;
                border-bottom: 1px solid #e5e7eb;
            }

            .table th {
                background-color: #f9fafb;
                font-weight: 600;
                color: #374151;
            }

            .table tbody tr:hover {
                background-color: #f9fafb;
            }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-label {
            display: block;
            margin-bottom: 0.5rem;
            font-weight: 500;
            color: #374151;
        }

        .form-control {
            display: block;
            width: 100%;
            padding: 0.5rem 0.75rem;
            border: 1px solid #d1d5db;
            border-radius: 0.5rem;
            box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
            transition: all 0.2s;
        }

            .form-control:focus {
                outline: none;
                box-shadow: 0 0 0 2px #3b82f6;
                border-color: #3b82f6;
            }

        .form-text {
            display: block;
            margin-top: 0.25rem;
            font-size: 0.875rem;
            color: #6b7280;
        }

        /* Responsive */
        @@media (max-width: 1024px) {
            .admin-sidebar {
                width: 70px;
            }

            .admin-main {
                margin-right: 70px;
            }

            .sidebar-link span {
                display: none;
            }
        }

        @@media (max-width: 768px) {
            .admin-sidebar {
                position: fixed;
                right: -260px;
                z-index: 50;
                height: 100vh;
            }

            .admin-main {
                margin-right: 0;
            }

            .sidebar-mobile-open .admin-sidebar {
                right: 0;
            }

            .sidebar-link span {
                display: block;
            }
        }
    </style>
</head>
<body class="admin-layout">
    <!-- Header -->
    <header class="bg-white shadow-sm border-b border-gray-200 sticky top-0 z-40">
        <div class="max-w-full mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <!-- Logo and Toggle -->
                <div class="flex items-center">
                    <button id="sidebarToggle" class="p-2 rounded-lg text-gray-400 hover:text-gray-600 hover:bg-gray-100 transition-colors mr-2">
                        <i class="fas fa-bars"></i>
                    </button>
                    <a href="/">
                        <div class="flex items-center space-x-2 space-x-reverse">
                            <div class="w-8 h-8 bg-blue-600 rounded-lg flex items-center justify-center">
                                <span class="text-white font-bold text-lg">د</span>
                            </div>
                            <span class="text-xl font-bold text-gray-900">پلتفرم دنگ</span>
                        </div>
                    </a>
                </div>

                <!-- User Actions -->
                <div class="flex items-center space-x-4 space-x-reverse">
                    <!-- Notifications -->
                    <a href="/Notifications" class="relative p-2 text-gray-400 hover:text-gray-600 transition-colors">
                        <i class="fas fa-bell"></i>
                        <span class="badge badge-danger absolute -top-1 -left-1 min-w-[1.25rem] h-5 flex items-center justify-center">
                            3
                        </span>
                    </a>

                    <!-- Profile Dropdown -->
                    <div class="relative">
                        <button onclick="toggleProfileDropdown()"
                                class="flex items-center space-x-2 space-x-reverse p-2 rounded-lg hover:bg-gray-100 transition-colors">
                            <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center">
                                <i class="fas fa-user text-blue-600"></i>
                            </div>
                            <span class="hidden sm:block font-medium text-gray-700">
                                ادمین
                            </span>
                        </button>

                        <!-- Dropdown Menu -->
                        <div id="profileDropdown" class="hidden absolute left-0 mt-2 w-48 bg-white rounded-lg shadow-lg border border-gray-200 py-1 z-50">
                            <a href="/Admin/Dashboard"
                               class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 transition-colors">
                                <i class="fas fa-tachometer-alt ml-3"></i>
                                داشبورد
                            </a>
                            <a href="/Profile"
                               class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 transition-colors">
                                <i class="fas fa-user ml-3"></i>
                                پروفایل
                            </a>
                            <form asp-page="/Logout" method="post" class="w-full">
                                <button type="submit"
                                        class="flex items-center w-full px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 transition-colors">
                                    <i class="fas fa-sign-out-alt ml-3"></i>
                                    خروج
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="flex">
        <!-- Sidebar -->
        <div class="admin-sidebar fixed h-full z-30">
            <div class="flex flex-col h-full">
                <!-- Sidebar Header -->
                <div class="p-4 border-b border-blue-700">
                    <div class="flex items-center justify-between">
                        <div class="flex items-center space-x-2 space-x-reverse">
                            <div class="w-8 h-8 bg-white rounded-lg flex items-center justify-center">
                                <span class="text-blue-600 font-bold text-sm">د</span>
                            </div>
                            <span class="text-white font-bold">پنل مدیریت</span>
                        </div>
                    </div>
                </div>

                <!-- Sidebar Menu -->
                <div class="flex-1 overflow-y-auto py-4">
                    <nav class="space-y-1">
                        <a href="/Admin/Dashboard" class="sidebar-link">
                            <i class="fas fa-tachometer-alt"></i>
                            <span>داشبورد</span>
                        </a>

                        <a href="/Admin/Product" class="sidebar-link active">
                            <i class="fas fa-box"></i>
                            <span>محصولات</span>
                        </a>

                        <a href="/Admin/Projects" class="sidebar-link">
                            <i class="fas fa-project-diagram"></i>
                            <span>پروژه‌ها</span>
                        </a>

                        <a href="/Admin/Categories" class="sidebar-link">
                            <i class="fas fa-folder"></i>
                            <span>دسته‌بندی‌ها</span>
                        </a>

                        <a href="/Admin/Users" class="sidebar-link">
                            <i class="fas fa-users"></i>
                            <span>کاربران</span>
                        </a>

                        <a href="/Admin/Orders" class="sidebar-link">
                            <i class="fas fa-shopping-cart"></i>
                            <span>سفارشات</span>
                        </a>

                        <a href="/Admin/Settings" class="sidebar-link">
                            <i class="fas fa-cog"></i>
                            <span>تنظیمات</span>
                        </a>
                    </nav>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="admin-main flex-1">
            <div class="admin-content">
                <!-- Page Header -->
                <div class="bg-white border-b border-gray-200">
                    <div class="max-w-full mx-auto px-4 sm:px-6 lg:px-8 py-6">
                        <div class="flex justify-between items-center">
                            <div>
                                <h1 class="text-2xl font-bold text-gray-900">مدیریت محصولات</h1>
                                <p class="mt-1 text-sm text-gray-600">ایجاد، ویرایش و مدیریت محصولات پلتفرم</p>
                            </div>
                            <div class="flex items-center space-x-3 space-x-reverse">
                                <a asp-page="Add" class="btn btn-primary">
                                    <i class="fas fa-plus ml-2"></i>
                                    افزودن محصول جدید
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Main Content Area -->
                <div class="max-w-full mx-auto px-4 sm:px-6 lg:px-8 py-6">
                    <!-- Products List -->
                    <div class="card">
                        <div class="p-6">
                            <div class="flex justify-between items-center mb-6">
                                <h2 class="text-lg font-semibold text-gray-900">لیست محصولات</h2>

                                <!-- Search and Filters -->
                                <form method="get" class="flex items-center space-x-3 space-x-reverse">
                                    <div class="relative">
                                        <input type="text"
                                               name="Title"
                                               value="@Model.FilterParams.Title"
                                               placeholder="جستجو بر اساس عنوان..."
                                               class="input pl-10">
                                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                            <i class="fas fa-search text-gray-400"></i>
                                        </div>
                                    </div>

                                    <select name="Status" class="input">
                                        <option value="">همه وضعیت‌ها</option>
                                        <option value="IsActive" selected="@(Model.FilterParams.Status?.ToString() == "Active")">فعال</option>
                                        <option value="NotActive" selected="@(Model.FilterParams.Status?.ToString() == "Inactive")">غیرفعال</option>
                                        <option value="IsDone" selected="@(Model.FilterParams.Status?.ToString() == "Draft")">تکمیل شده</option>
                                    </select>

                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-filter ml-2"></i>
                                        فیلتر
                                    </button>
                                </form>
                            </div>

                            <!-- Products Table -->
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>عنوان</th>
                                            <th>توضیحات</th>
                                            <th>اسلاگ</th>
                                            <th>وضعیت</th>
                                            <th>اطلاعات مالی</th>
                                            <th>تاریخ ایجاد</th>
                                            <th>عملیات</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model.Result?.Data != null && Model.Result.Data.Any())
                                        {
                                            int number = 0;
                                            foreach (var item in Model.Result.Data)
                                            {
                                                <tr>
                                                    <td>@(number += 1)</td>
                                                    <td>
                                                        <div class="flex items-center space-x-3 space-x-reverse">
                                                            @if (!string.IsNullOrEmpty(item.ImageName))
                                                            {
                                                                <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center">
                                                                    <i class="fas fa-box text-blue-600"></i>
                                                                </div>
                                                            }
                                                            else
                                                            {
                                                                <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center">
                                                                    <i class="fas fa-box text-blue-600"></i>
                                                                </div>
                                                            }
                                                            <div>
                                                                <div class="font-medium text-gray-900">@item.Title</div>
                                                                <div class="text-sm text-gray-500">@item.Id.ToString().Substring(0, 8)...</div>
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <div class="max-w-xs truncate" title="@item.Description">
                                                            @item.Description
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <code class="text-xs bg-gray-100 px-2 py-1 rounded">@item.Slug</code>
                                                    </td>
                                                    <td>
                                                        @switch (item.Status)
                                                        {
                                                            case ProductStatus.IsActive:
                                                                <span class="badge badge-success">فعال</span>
                                                                break;
                                                            case ProductStatus.NotActive:
                                                                <span class="badge badge-secondary">غیرفعال</span>
                                                                break;
                                                            case ProductStatus.IsDone:
                                                                <span class="badge badge-warning">تکمیل شده</span>
                                                                break;
                                                            default:
                                                                <span class="badge badge-secondary">@item.Status</span>
                                                                break;
                                                        }
                                                    </td>
                                                    <td>
                                                        @if (item.InventoryDto != null)
                                                        {
                                                            <div class="text-xs space-y-1">
                                                                <div>قیمت کل: @item.InventoryDto.TotalPrice تومان</div>
                                                                <div>تعداد دانگ: @item.InventoryDto.Dong</div>
                                                                <div>قیمت هر دانگ: @item.InventoryDto.PricePerDong تومان</div>
                                                                <div>سود: @item.InventoryDto.Profit تومان</div>
                                                                <div>زمان سود: @item.InventoryDto.ProfitableTime</div>
                                                            </div>
                                                        }
                                                        else
                                                        {
                                                            <span class="text-gray-400 text-xs">اطلاعات مالی ثبت نشده</span>
                                                        }
                                                    </td>
                                                    <td>@item.CreationDate.ToPersianDate()</td>
                                                    <td>
                                                        <div class="flex items-center space-x-2 space-x-reverse">
                                                            <a asp-page="Edit" asp-route-productId="@item.Id" class="btn btn-outline btn-sm">
                                                                <i class="fas fa-edit"></i>
                                                            </a>
                                                            <a asp-page="Details" asp-route-productId="@item.Id" class="btn btn-outline btn-sm">
                                                                <i class="fas fa-eye"></i>
                                                            </a>
                                                            <form method="post" asp-page-handler="Delete" asp-route-productId="@item.Id" class="inline">
                                                                <button type="button" class="btn btn-danger btn-sm delete-btn" data-product-id="@item.Id" data-product-title="@item.Title">
                                                                    <i class="fas fa-trash"></i>
                                                                </button>
                                                            </form>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                        else
                                        {
                                            <tr>
                                                <td colspan="8" class="text-center py-8 text-gray-500">
                                                    <i class="fas fa-box-open text-4xl mb-4 text-gray-300"></i>
                                                    <p>محصولی یافت نشد</p>
                                                    <a asp-page="Add" class="btn btn-primary mt-4">
                                                        <i class="fas fa-plus ml-2"></i>
                                                        افزودن اولین محصول
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>

                            <!-- Pagination -->
                            @if (Model.Result?.Data != null && Model.Result.Data.Any())
                            {
                                <div class="flex items-center justify-between mt-6">
                                    <div class="text-sm text-gray-700">
                                        نمایش @((Model.Result.CurrentPage - 1) * Model.Result.Take + 1) تا
                                        @Math.Min(Model.Result.CurrentPage * Model.Result.Take, Model.Result.EntityCount)
                                        از @Model.Result.EntityCount محصول
                                    </div>
                                    <div class="flex items-center space-x-2 space-x-reverse">
                                        @if (Model.Result.CurrentPage > 1)
                                        {
                                            <a href="?PageId=@(Model.Result.CurrentPage - 1)&Title=@Model.FilterParams.Title&Status=@Model.FilterParams.Status" class="btn btn-outline btn-sm">
                                                <i class="fas fa-chevron-right"></i>
                                            </a>
                                        }
                                        else
                                        {
                                            <button class="btn btn-outline btn-sm" disabled>
                                                <i class="fas fa-chevron-right"></i>
                                            </button>
                                        }

                                        @for (int i = 1; i <= Model.Result.PageCount; i++)
                                        {
                                            if (i == Model.Result.CurrentPage)
                                            {
                                                <span class="btn btn-primary btn-sm">@i</span>
                                            }
                                            else
                                            {
                                                <a href="?PageId=@i&Title=@Model.FilterParams.Title&Status=@Model.FilterParams.Status" class="btn btn-outline btn-sm">@i</a>
                                            }
                                        }

                                        @if (Model.Result.CurrentPage < Model.Result.PageCount)
                                        {
                                            <a href="?PageId=@(Model.Result.CurrentPage + 1)&Title=@Model.FilterParams.Title&Status=@Model.FilterParams.Status" class="btn btn-outline btn-sm">
                                                <i class="fas fa-chevron-left"></i>
                                            </a>
                                        }
                                        else
                                        {
                                            <button class="btn btn-outline btn-sm" disabled>
                                                <i class="fas fa-chevron-left"></i>
                                            </button>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // توابع مدیریت پنل ادمین
        function toggleSidebar() {
            document.body.classList.toggle('sidebar-collapsed');
        }

        function toggleMobileSidebar() {
            document.body.classList.toggle('sidebar-mobile-open');
        }

        function toggleProfileDropdown() {
            const dropdown = document.getElementById('profileDropdown');
            dropdown.classList.toggle('hidden');
        }

        // مدیریت منوی سایدبار
        document.getElementById('sidebarToggle').addEventListener('click', function() {
            if (window.innerWidth < 768) {
                toggleMobileSidebar();
            } else {
                toggleSidebar();
            }
        });

        // بستن منوها هنگام کلیک خارج
        document.addEventListener('click', function(event) {
            const profileDropdown = document.getElementById('profileDropdown');
            const profileButton = event.target.closest('button[onclick="toggleProfileDropdown()"]');

            if (profileDropdown && !profileDropdown.contains(event.target) && !profileButton) {
                profileDropdown.classList.add('hidden');
            }

            // بستن سایدبار موبایل هنگام کلیک خارج
            if (window.innerWidth < 768 &&
                !event.target.closest('.admin-sidebar') &&
                !event.target.closest('#sidebarToggle')) {
                document.body.classList.remove('sidebar-mobile-open');
            }
        });

        // مدیریت حذف محصول
        document.querySelectorAll('.delete-btn').forEach(button => {
            button.addEventListener('click', function() {
                const productId = this.getAttribute('data-product-id');
                const productTitle = this.getAttribute('data-product-title');

                Swal.fire({
                    title: 'آیا از حذف محصول اطمینان دارید؟',
                    text: `محصول "${productTitle}" حذف خواهد شد`,
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    cancelButtonColor: '#3085d6',
                    confirmButtonText: 'بله، حذف کن',
                    cancelButtonText: 'لغو',
                    reverseButtons: true
                }).then((result) => {
                    if (result.isConfirmed) {
                        // ارسال درخواست حذف
                        const form = document.createElement('form');
                        form.method = 'POST';
                        form.action = `?handler=Delete&productId=${productId}`;

                        const csrfToken = document.querySelector('input[name="__RequestVerificationToken"]').value;
                        const csrfInput = document.createElement('input');
                        csrfInput.type = 'hidden';
                        csrfInput.name = '__RequestVerificationToken';
                        csrfInput.value = csrfToken;
                        form.appendChild(csrfInput);

                        document.body.appendChild(form);
                        form.submit();
                    }
                });
            });
        });

        // مدیریت فرم فیلتر
        document.querySelector('form').addEventListener('submit', function(e) {
            // اعتبارسنجی‌های لازم در اینجا اضافه شود
        });
    </script>
    <script src="~/global.js"></script>
</body>
