                <div class="max-w-full mx-auto px-4 sm:px-6 lg:px-8 py-6">
                    <!-- آمار سریع -->
                    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
                        <div class="card">
                            <div class="p-6">
                                <div class="flex items-center">
                                    <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mr-4">
                                        <i class="fas fa-paper-plane text-blue-600 text-xl"></i>
                                    </div>
                                    <div>
                                        <p class="text-sm text-gray-600">کل نوتیفیکیشن‌ها</p>
                                        <p class="text-2xl font-bold text-gray-900">@Model.Result.EntityCount</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card">
                            <div class="p-6">
                                <div class="flex items-center">
                                    <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mr-4">
                                        <i class="fas fa-check text-green-600 text-xl"></i>
                                    </div>
                                    <div>
                                        <p class="text-sm text-gray-600">ارسال شده</p>
                                        <p class="text-2xl font-bold text-gray-900">@Model.Result.EntityCount</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card">
                            <div class="p-6">
                                <div class="flex items-center">
                                    <div class="w-12 h-12 bg-orange-100 rounded-lg flex items-center justify-center mr-4">
                                        <i class="fas fa-users text-orange-600 text-xl"></i>
                                    </div>
                                    <div>
                                        <p class="text-sm text-gray-600">کاربران هدف</p>
                                        <p class="text-2xl font-bold text-gray-900">@(Model.Result.Data.Sum(n => n.Users.Count))</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card">
                            <div class="p-6">
                                <div class="flex items-center">
                                    <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center mr-4">
                                        <i class="fas fa-chart-line text-purple-600 text-xl"></i>
                                    </div>
                                    <div>
                                        <p class="text-sm text-gray-600">میانگین بازدید</p>
                                        <p class="text-2xl font-bold text-gray-900">78%</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- فیلترها -->
                    <div class="card mb-8">
                        <div class="p-6">
                            <form method="get" class="grid grid-cols-1 md:grid-cols-5 gap-4">
                                <div>
                                    <label class="form-label">عنوان</label>
                                    <input type="text" asp-for="FilterParams.Title" class="input" />
                                </div>
                                <div>
                                    <label class="form-label">توضیحات</label>
                                    <input type="text" asp-for="FilterParams.Description" class="input" />
                                </div>
                                <div class="flex items-end space-x-3 space-x-reverse">
                                    <button type="submit" class="btn btn-primary flex-1">
                                        <i class="fas fa-filter ml-2"></i>
                                        اعمال فیلتر
                                    </button>
                                    <a href="?pageid=1&take=@Model.Result.Take" class="btn btn-outline">
                                        <i class="fas fa-refresh ml-2"></i>
                                        بازنشانی
                                    </a>
                                </div>
                            </form>
                        </div>
                    </div>

                    <!-- جدول نوتیفیکیشن‌ها -->
                    <div class="card">
                        <div class="p-6">
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>عنوان</th>
                                            <th>توضیحات</th>
                                            <th>گیرندگان</th>
                                            <th>وضعیت</th>
                                            <th>تاریخ ایجاد</th>
                                            <th>عملیات</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model.Result.EntityCount == 0)
                                        {
                                            <tr>
                                                <td colspan="6" class="text-center py-8 text-gray-500">
                                                    <i class="fas fa-bell text-4xl mb-2"></i>
                                                    <p>هیچ نوتیفیکیشنی یافت نشد</p>
                                                </td>
                                            </tr>
                                        }
                                        else
                                        {
                                            foreach (var notification in Model.Result.Data)
                                            {
                                                <tr>
                                                    <td>
                                                        <div class="max-w-xs">
                                                            <div class="font-medium text-gray-900 truncate">@notification.Title</div>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <div class="text-sm text-gray-500 truncate">@notification.Description</div>
                                                    </td>
                                                    <td>
                                                        <span class="badge badge-secondary">
                                                            <i class="fas fa-user ml-1"></i>
                                                            @notification.Users.Count نفر
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <span class="badge badge-success">
                                                            <i class="fas fa-check ml-1"></i>
                                                            ارسال شده
                                                        </span>
                                                    </td>
                                                    <td>@notification.CreationDate.ToPersianDate()</td>
                                                    <td>
                                                        <div class="flex items-center space-x-2 space-x-reverse">
                                                            <button onclick="viewNotification('@notification.Id')"
                                                                    class="btn btn-outline btn-sm" title="مشاهده">
                                                                <i class="fas fa-eye"></i>
                                                            </button>
                                                            <a asp-page="/Admin/Notification/Edit" asp-route-id="@notification.Id"
                                                               class="btn btn-outline btn-sm" title="ویرایش">
                                                                <i class="fas fa-edit"></i>
                                                            </a>
                                                            <button onclick="deleteNotification('@notification.Id')"
                                                                    class="btn btn-danger btn-sm" title="حذف">
                                                                <i class="fas fa-trash"></i>
                                                            </button>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                            @Html.AntiForgeryToken()
                            <!-- صفحه‌بندی -->
                            @if (Model.Result.PageCount > 1)
                            {
                                <div class="flex justify-center mt-6">
                                    <nav class="flex items-center space-x-2 space-x-reverse">
                                        <!-- دکمه قبلی -->
                                        @if (Model.Result.CurrentPage > 1)
                                        {
                                            <a href="?pageid=@(Model.Result.CurrentPage - 1)&take=@Model.Result.Take@GetFilterQueryString()"
                                               class="px-3 py-1 rounded-lg bg-gray-100 text-gray-700 hover:bg-gray-200">
                                                <i class="fas fa-chevron-right"></i>
                                            </a>
                                        }

                                        <!-- صفحات اولیه -->
                                        @if (Model.Result.StartPage > 1)
                                        {
                                            <a href="?pageid=1&take=@Model.Result.Take@GetFilterQueryString()"
                                               class="px-3 py-1 rounded-lg bg-gray-100 text-gray-700 hover:bg-gray-200">
                                                1
                                            </a>
                                            @if (Model.Result.StartPage > 2)
                                            {
                                                <span class="px-2 text-gray-500">...</span>
                                            }
                                        }

                                        <!-- صفحات میانی -->
                                        @for (int i = Model.Result.StartPage; i <= Model.Result.EndPage; i++)
                                        {
                                            <a href="?pageid=@i&take=@Model.Result.Take@GetFilterQueryString()"
                                               class="px-3 py-1 rounded-lg @(i == Model.Result.CurrentPage ? "bg-blue-600 text-white" : "bg-gray-100 text-gray-700 hover:bg-gray-200")">
                                                @i
                                            </a>
                                        }

                                        <!-- صفحات انتهایی -->
                                        @if (Model.Result.EndPage < Model.Result.PageCount)
                                        {
                                            @if (Model.Result.EndPage < Model.Result.PageCount - 1)
                                            {
                                                <span class="px-2 text-gray-500">...</span>
                                            }
                                            <a href="?pageid=@Model.Result.PageCount&take=@Model.Result.Take@GetFilterQueryString()"
                                               class="px-3 py-1 rounded-lg bg-gray-100 text-gray-700 hover:bg-gray-200">
                                                @Model.Result.PageCount
                                            </a>
                                        }

                                        <!-- دکمه بعدی -->
                                        @if (Model.Result.CurrentPage < Model.Result.PageCount)
                                        {
                                            <a href="?pageid=@(Model.Result.CurrentPage + 1)&take=@Model.Result.Take@GetFilterQueryString()"
                                               class="px-3 py-1 rounded-lg bg-gray-100 text-gray-700 hover:bg-gray-200">
                                                <i class="fas fa-chevron-left"></i>
                                            </a>
                                        }
                                    </nav>
                                </div>

                                <!-- اطلاعات صفحه -->
                                <div class="flex justify-center mt-4 text-sm text-gray-600">
                                    نمایش
                                    <span class="font-medium mx-1">@((Model.Result.CurrentPage - 1) * Model.Result.Take + 1)</span>
                                    تا
                                    <span class="font-medium mx-1">@Math.Min(Model.Result.CurrentPage * Model.Result.Take, Model.Result.EntityCount)</span>
                                    از
                                    <span class="font-medium mx-1">@Model.Result.EntityCount</span>
                                    نوتیفیکیشن
                                </div>

                                <!-- انتخاب تعداد آیتم در صفحه -->
                                <div class="flex justify-center mt-4">
                                    <div class="flex items-center space-x-2 space-x-reverse">
                                        <span class="text-sm text-gray-600">تعداد در صفحه:</span>
                                        <select onchange="changeTake(this.value)" class="input input-sm">
                                            <option value="5" selected="@(Model.Result.Take == 5)">5</option>
                                            <option value="10" selected="@(Model.Result.Take == 10)">10</option>
                                            <option value="20" selected="@(Model.Result.Take == 20)">20</option>
                                            <option value="50" selected="@(Model.Result.Take == 50)">50</option>
                                        </select>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // توابع مدیریت پنل ادمین
        function toggleSidebar() {
            document.body.classList.toggle('sidebar-collapsed');
        }

        function toggleMobileSidebar() {
            document.body.classList.toggle('sidebar-mobile-open');
        }

        function toggleProfileDropdown() {
            const dropdown = document.getElementById('profileDropdown');
            dropdown.classList.toggle('hidden');
        }

        // توابع مدیریت نوتیفیکیشن
        function changeTake(take) {
            const url = new URL(window.location.href);
            url.searchParams.set('take', take);
            url.searchParams.set('pageid', '1');
            window.location.href = url.toString();
        }

        async function deleteNotification(notificationId) {
            const result = await Alert.confirmDelete('این نوتیفیکیشن');
            if (result.isConfirmed) {
                try {
                    const response = await fetch(`/Admin/Notification/Index?handler=Delete&id=${notificationId}`, {
                        method: 'POST',
                        headers: {
                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                        }
                    });

                    if (response.ok) {
                        Alert.success('نوتیفیکیشن با موفقیت حذف شد');
                        location.reload();
                    } else {
                        Alert.error('خطا در حذف نوتیفیکیشن');
                    }
                } catch (error) {
                    Alert.error('خطا در ارتباط با سرور');
                }
            }
        }

        function viewNotification(notificationId) {
            window.open(`/Admin/Notification/Detail/${notificationId}`, '_blank');
        }

        function exportNotifications() {
            Alert.success('در حال آماده‌سازی فایل خروجی...');
        }

        // مدیریت منوی سایدبار
        document.getElementById('sidebarToggle').addEventListener('click', function() {
            if (window.innerWidth < 768) {
                toggleMobileSidebar();
            } else {
                toggleSidebar();
            }
        });

        // بستن منوها هنگام کلیک خارج
        document.addEventListener('click', function(event) {
            const profileDropdown = document.getElementById('profileDropdown');
            const profileButton = event.target.closest('button[onclick="toggleProfileDropdown()"]');

            if (profileDropdown && !profileDropdown.contains(event.target) && !profileButton) {
                profileDropdown.classList.add('hidden');
            }

            // بستن سایدبار موبایل هنگام کلیک خارج
            if (window.innerWidth < 768 &&
                !event.target.closest('.admin-sidebar') &&
                !event.target.closest('#sidebarToggle')) {
                document.body.classList.remove('sidebar-mobile-open');
            }
        });
    </script>

    <script src="~/Alert.js"></script>

    <script>
        // نمایش خودکار پیام‌های TempData
        function showTempDataMessages() {
        // موفقیت
        @if (TempData["Success"] != null)
        {
                <text>
                    Alert.success(decodePersianText('@TempData["Success"]'));
                </text>
        }

        // خطا
        @if (TempData["Error"] != null)
        {
                <text>
                    const errorMsg = decodePersianText('@TempData["Error"]');
                    if (errorMsg.includes('404') || errorMsg.includes('یافت نشد')) {
                    Alert.notFound(errorMsg);
                    } else if (errorMsg.includes('500') || errorMsg.includes('سرور')) {
                    Alert.serverError(errorMsg);
                    } else if (errorMsg.includes('400') || errorMsg.includes('نامعتبر')) {
                    Alert.badRequest(errorMsg);
                    } else if (errorMsg.includes('401') || errorMsg.includes('دسترسی')) {
                    Alert.unauthorized(errorMsg);
                    } else {
                    Alert.error(errorMsg);
                    }
                </text>
        }

        // هشدار
        @if (TempData["Warning"] != null)
        {
                <text>
                    const warningMsg = decodePersianText('@TempData["Warning"]');
                    if (warningMsg.includes('اعتبارسنجی') || warningMsg.includes('بررسی')) {
                    Alert.validationWarning(warningMsg);
                    } else if (warningMsg.includes('مالی') || warningMsg.includes('موجودی')) {
                    Alert.financialWarning(warningMsg);
                    } else if (warningMsg.includes('امنیتی') || warningMsg.includes('غیرامن')) {
                    Alert.securityWarning(warningMsg);
                    } else {
                    Alert.warning(warningMsg);
                    }
                </text>
        }

        // اطلاعیه
        @if (TempData["Info"] != null)
        {
                <text>
                    const infoMsg = decodePersianText('@TempData["Info"]');
                    if (infoMsg.includes('سیستم') || infoMsg.includes('بروزرسانی')) {
                    Alert.systemInfo(infoMsg);
                    } else if (infoMsg.includes('مالی') || infoMsg.includes('تراکنش')) {
                    Alert.financialInfo(infoMsg);
                    } else {
                    Alert.info(infoMsg);
                    }
                </text>
        }
        }

        // نمایش پیام‌ها پس از لود صفحه
        document.addEventListener('DOMContentLoaded', function() {
            showTempDataMessages();
        });
    </script>
</body>
</html>

@functions {
    protected string GetFilterQueryString()
    {
        var queryParams = new List<string>();

        if (!string.IsNullOrEmpty(Model.FilterParams.Title))
            queryParams.Add($"Title={Uri.EscapeDataString(Model.FilterParams.Title)}");

        if (!string.IsNullOrEmpty(Model.FilterParams.Description))
            queryParams.Add($"Description={Uri.EscapeDataString(Model.FilterParams.Description)}");

        return queryParams.Any() ? "&" + string.Join("&", queryParams) : "";
    }
}