        }

        // تابع وضعیت سرمایه‌گذاری
        function getStatusBadge(status) {
            const statusMap = {
                confirmed: { variant: 'success', text: 'تأیید شده', icon: 'fas fa-check-circle' },
                pending: { variant: 'warning', text: 'در انتظار', icon: 'fas fa-clock' },
                cancelled: { variant: 'danger', text: 'لغو شده', icon: 'fas fa-times-circle' },
                refunded: { variant: 'secondary', text: 'بازگردانده', icon: 'fas fa-exclamation-circle' }
            };
            return statusMap[status] || { variant: 'secondary', text: status, icon: 'fas fa-exclamation-circle' };
        }

        // تابع بارگذاری سرمایه‌گذاری‌ها
        function loadInvestments() {
            state.loading = true;
            updateUI();
            
            // شبیه‌سازی بارگذاری از API
            setTimeout(() => {
                state.investments = [...sampleInvestments];
                applyFilters();
                state.loading = false;
                updateUI();
            }, 1000);
        }

        // تابع اعمال فیلترها
        function applyFilters() {
            let filtered = [...state.investments];
            
            // فیلتر بر اساس وضعیت
            if (state.statusFilter !== 'all') {
                filtered = filtered.filter(investment => investment.status === state.statusFilter);
            }
            
            // فیلتر بر اساس جستجو
            if (state.searchQuery) {
                const query = state.searchQuery.toLowerCase();
                filtered = filtered.filter(investment => 
                    investment.project.name.toLowerCase().includes(query)
                );
            }
            
            // مرتب‌سازی
            filtered.sort((a, b) => {
                switch (state.sortBy) {
                    case 'created_at':
                        return new Date(b.created_at) - new Date(a.created_at);
                    case '-created_at':
                        return new Date(a.created_at) - new Date(b.created_at);
                    case 'paid_amount':
                        return a.paid_amount - b.paid_amount;
                    case '-paid_amount':
                        return b.paid_amount - a.paid_amount;
                    case 'total_profit_received':
                        return a.total_profit_received - b.total_profit_received;
                    case '-total_profit_received':
                        return b.total_profit_received - a.total_profit_received;
                    default:
                        return 0;
                }
            });
            
            state.filteredInvestments = filtered;
        }

        // تابع جستجو
        function handleSearch() {
            state.searchQuery = document.getElementById('search-query').value;
            applyFilters();
            updateUI();
        }

        // تابع تغییر فیلتر وضعیت
        function handleFilterChange() {
            state.statusFilter = document.getElementById('status-filter').value;
            applyFilters();
            updateUI();
        }

        // تابع تغییر مرتب‌سازی
        function handleSortChange() {
            state.sortBy = document.getElementById('sort-by').value;
            applyFilters();
            updateUI();
        }

        // تابع رندر سرمایه‌گذاری‌ها
        function renderInvestments() {
            const container = document.getElementById('investments-container');
            container.innerHTML = '';
            
            state.filteredInvestments.forEach(investment => {
                const statusInfo = getStatusBadge(investment.status);
                
                const investmentElement = document.createElement('div');
                investmentElement.className = 'card hover-shadow-md';
                investmentElement.innerHTML = `
                    <div class="p-6">
                        <div class="flex flex-col lg-flex-row lg-items-center lg-justify-between space-y-4 lg-space-y-0">
                            <!-- Project Info -->
                            <div class="flex items-start space-x-4 space-x-reverse">
                                <div class="w-16 h-16 bg-gradient-to-br from-primary-100 to-primary-200 rounded-lg flex items-center justify-center">
                                    <i class="fas fa-chart-line w-8 h-8 text-primary-600"></i>
                                </div>
                                <div class="flex-1">
                                    <h3 class="text-lg font-semibold text-gray-900 mb-1">
                                        ${investment.project.name}
                                    </h3>
                                    <p class="text-gray-600 text-sm mb-2">
                                        ${investment.project.category.name} • ${investment.project.city}
                                    </p>
                                    <div class="flex items-center space-x-4 space-x-reverse text-sm text-gray-500">
                                        <span>${investment.share_amount} سهم</span>
                                        <span>•</span>
                                        <span>${formatPercentage(investment.ownership_percentage)} مالکیت</span>
                                        <span>•</span>
                                        <span>${formatDate(investment.created_at)}</span>
                                    </div>
                                </div>
                            </div>

                            <!-- Investment Details -->
                            <div class="flex flex-col lg-items-end space-y-2">
                                <div class="flex items-center space-x-6 space-x-reverse">
                                    <div class="text-left">
                                        <p class="text-sm text-gray-600">مبلغ سرمایه‌گذاری</p>
                                        <p class="font-semibold text-gray-900">
                                            ${formatCurrency(investment.paid_amount)}
                                        </p>
                                    </div>
                                    <div class="text-left">
                                        <p class="text-sm text-gray-600">سود دریافتی</p>
                                        <p class="font-semibold text-green-600">
                                            ${formatCurrency(investment.total_profit_received)}
                                        </p>
                                    </div>
                                    <div class="text-left">
                                        <p class="text-sm text-gray-600">ارزش فعلی</p>
                                        <p class="font-semibold text-primary-600">
                                            ${formatCurrency(investment.current_value)}
                                        </p>
                                    </div>
                                </div>
                                
                                <div class="flex items-center space-x-4 space-x-reverse">
                                    <span class="badge badge-${statusInfo.variant}">
                                        <i class="${statusInfo.icon} w-3 h-3 ml-1"></i>
                                        ${statusInfo.text}
                                    </span>
                                    <button
                                        onclick="window.location.href = '/projects/${investment.project.id}'"
                                        class="btn btn-outline btn-sm">
                                        <i class="fas fa-eye ml-2"></i>
                                        مشاهده
                                    </button>
                                </div>
                            </div>
                        </div>

                        <!-- Progress Bar for Confirmed Investments -->
                        ${investment.status === 'confirmed' ? `
                            <div class="mt-4 pt-4 border-t border-gray-200">
                                <div class="flex justify-between items-center mb-2">
                                    <span class="text-sm font-medium text-gray-700">پیشرفت پروژه</span>
                                    <span class="text-sm font-bold text-primary-600">
                                        ${formatPercentage(investment.project.funding_percentage)}
                                    </span>
                                </div>
                                <div class="w-full bg-gray-200 rounded-full h-2">
                                    <div
                                        class="bg-gradient-to-r from-primary-500 to-primary-600 h-2 rounded-full transition-all duration-300"
                                        style="width: ${Math.min(investment.project.funding_percentage, 100)}%">
                                    </div>
                                </div>
                            </div>
                        ` : ''}
                    </div>
                `;
                
                container.appendChild(investmentElement);
            });
        }

        // تابع به‌روزرسانی آمار
        function updateStats() {
            const totalInvested = state.investments.reduce((sum, inv) => sum + inv.paid_amount, 0);
            const totalProfit = state.investments.reduce((sum, inv) => sum + inv.total_profit_received, 0);
            const activeInvestments = state.investments.filter(inv => inv.status === 'confirmed').length;
            
            document.getElementById('total-invested').textContent = formatCurrency(totalInvested);
            document.getElementById('total-profit').textContent = formatCurrency(totalProfit);
            document.getElementById('active-investments').textContent = activeInvestments;
        }

        // تابع به‌روزرسانی UI
        function updateUI() {
            const loadingSection = document.getElementById('loading-section');
            const contentSection = document.getElementById('content-section');
            const emptyState = document.getElementById('empty-state');
            const emptyTitle = document.getElementById('empty-title');
            const emptyMessage = document.getElementById('empty-message');
            const investmentsContainer = document.getElementById('investments-container');
            
            if (state.loading) {
                loadingSection.style.display = 'block';
                contentSection.style.display = 'none';
            } else {
                loadingSection.style.display = 'none';
                contentSection.style.display = 'block';
                
                updateStats();
                
                if (state.filteredInvestments.length === 0) {
                    emptyState.style.display = 'block';
                    investmentsContainer.style.display = 'none';
                    
                    if (state.searchQuery || state.statusFilter !== 'all') {
                        emptyTitle.textContent = 'سرمایه‌گذاری یافت نشد';
                        emptyMessage.textContent = 'با فیلترهای انتخابی شما هیچ سرمایه‌گذاری یافت نشد';
                    } else {
                        emptyTitle.textContent = 'هنوز سرمایه‌گذاری نکرده‌اید';
                        emptyMessage.textContent = 'اولین سرمایه‌گذاری خود را شروع کنید';
                    }
                } else {
                    emptyState.style.display = 'none';
                    investmentsContainer.style.display = 'block';
                    renderInvestments();
                }
            }
        }

        // مقداردهی اولیه
        document.addEventListener('DOMContentLoaded', function() {
            loadInvestments();
        });
    </script>
</body>
</html>