            }
        ];

        const sampleProjects = [
            {
                id: 1,
                name: "سی تی اسکن 64 اسلایس",
                min_investment: 5000000,
                funding_percentage: 75,
                is_featured: true
            },
            {
                id: 2,
                name: "دستگاه ام آر آی 1.5 تسلا",
                min_investment: 12000000,
                funding_percentage: 45,
                is_featured: false
            },
            {
                id: 3,
                name: "دستگاه پت اسکن",
                min_investment: 22000000,
                funding_percentage: 82,
                is_featured: true
            }
        ];

        // وضعیت برنامه
        let state = {
            loading: true,
            user: null,
            stats: null,
            investments: [],
            projects: []
        };

        // تابع فرمت ارز
        function formatCurrency(amount) {
            return new Intl.NumberFormat('fa-IR').format(amount) + ' ریال';
        }

        // تابع فرمت درصد
        function formatPercentage(percentage) {
            return Math.round(percentage) + '%';
        }

        // تابع وضعیت سرمایه‌گذاری
        function getStatusBadge(status) {
            const statusMap = {
                active: { variant: 'success', text: 'فعال' },
                confirmed: { variant: 'primary', text: 'تأیید شده' },
                pending: { variant: 'warning', text: 'در انتظار' },
                cancelled: { variant: 'danger', text: 'لغو شده' }
            };
            return statusMap[status] || { variant: 'secondary', text: status };
        }

        // تابع بارگذاری داده‌های داشبورد
        function loadDashboardData() {
            state.loading = true;
            updateUI();
            
            // شبیه‌سازی بارگذاری از API
            setTimeout(() => {
                state.user = sampleUser;
                state.stats = sampleStats;
                state.investments = sampleInvestments;
                state.projects = sampleProjects;
                state.loading = false;
                updateUI();
            }, 1500);
        }

        // تابع رندر سرمایه‌گذاری‌ها
        function renderInvestments() {
            const container = document.getElementById('investments-list');
            const emptyState = document.getElementById('empty-investments');
            
            if (state.investments.length === 0) {
                container.style.display = 'none';
                emptyState.style.display = 'block';
                return;
            }
            
            container.style.display = 'block';
            emptyState.style.display = 'none';
            container.innerHTML = '';
            
            state.investments.slice(0, 5).forEach(investment => {
                const statusInfo = getStatusBadge(investment.status);
                
                const investmentElement = document.createElement('div');
                investmentElement.className = 'flex items-center justify-between p-4 border border-gray-200 rounded-lg hover-bg-gray-50 transition-colors cursor-pointer';
                investmentElement.onclick = () => window.location.href = '/investments';
                investmentElement.innerHTML = `
                    <div class="flex items-center space-x-4 space-x-reverse">
                        <div class="w-12 h-12 bg-gradient-to-br from-primary-100 to-primary-200 rounded-lg flex items-center justify-center">
                            <i class="fas fa-chart-line w-6 h-6 text-primary-600"></i>
                        </div>
                        <div>
                            <h4 class="font-medium text-gray-900">
                                ${investment.project.name}
                            </h4>
                            <p class="text-sm text-gray-500">
                                ${investment.share_amount} سهم • ${formatCurrency(investment.paid_amount)}
                            </p>
                        </div>
                    </div>
                    <div class="text-left">
                        <span class="badge badge-${statusInfo.variant}">
                            ${statusInfo.text}
                        </span>
                        <p class="text-sm text-gray-500 mt-1">
                            ${formatPercentage(investment.ownership_percentage)} مالکیت
                        </p>
                    </div>
                `;
                
                container.appendChild(investmentElement);
            });
        }

        // تابع رندر پروژه‌ها
        function renderProjects() {
            const container = document.getElementById('projects-list');
            container.innerHTML = '';
            
            state.projects.forEach(project => {
                const projectElement = document.createElement('div');
                projectElement.className = 'p-3 border border-gray-200 rounded-lg hover-bg-gray-50 transition-colors cursor-pointer';
                projectElement.onclick = () => window.location.href = `/projects/${project.id}`;
                projectElement.innerHTML = `
                    <div class="flex items-center justify-between mb-2">
                        <h4 class="font-medium text-gray-900 text-sm">
                            ${project.name}
                        </h4>
                        ${project.is_featured ? `
                            <i class="fas fa-star w-4 h-4 text-yellow-500"></i>
                        ` : ''}
                    </div>
                    <div class="flex items-center justify-between text-xs text-gray-500">
                        <span>${formatCurrency(project.min_investment)}</span>
                        <span>${formatPercentage(project.funding_percentage)}</span>
                    </div>
                    <div class="w-full bg-gray-200 rounded-full h-1.5 mt-2">
                        <div
                            class="bg-gradient-to-r from-primary-500 to-primary-600 h-1.5 rounded-full transition-all duration-300"
                            style="width: ${Math.min(project.funding_percentage, 100)}%">
                        </div>
                    </div>
                `;
                
                container.appendChild(projectElement);
            });
        }

        // تابع به‌روزرسانی آمار
        function updateStats() {
            if (!state.stats) return;
            
            document.getElementById('total-invested').textContent = formatCurrency(state.stats.totalInvested);
            document.getElementById('total-profit').textContent = formatCurrency(state.stats.totalProfit);
            document.getElementById('active-investments').textContent = state.stats.activeInvestments;
            document.getElementById('total-investments').textContent = state.stats.totalInvestments;
            document.getElementById('return-rate').textContent = `+${formatPercentage(state.stats.averageReturn)} بازدهی`;
        }

        // تابع به‌روزرسانی UI
        function updateUI() {
            const loadingSection = document.getElementById('loading-section');
            const contentSection = document.getElementById('content-section');
            const welcomeMessage = document.getElementById('welcome-message');
            
            if (state.loading) {
                loadingSection.style.display = 'block';
                contentSection.style.display = 'none';
            } else {
                loadingSection.style.display = 'none';
                contentSection.style.display = 'block';
                
                // به‌روزرسانی پیام خوش‌آمدگویی
                if (state.user) {
                    welcomeMessage.textContent = `خوش آمدید، ${state.user.first_name} ${state.user.last_name}`;
                }
                
                // به‌روزرسانی آمار
                updateStats();
                
                // رندر لیست‌ها
                renderInvestments();
                renderProjects();
            }
        }

        // مقداردهی اولیه
        document.addEventListener('DOMContentLoaded', function() {
            loadDashboardData();
        });
    </script>
</body>
</html>