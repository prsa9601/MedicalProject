        document.addEventListener('DOMContentLoaded', function() {
            // Auto-scroll to top for better print experience
            if (window.location.search.includes('print=true')) {
                window.print();
            }

            // Add print event listener
            window.addEventListener('afterprint', function() {
                // Optional: Redirect or show message after printing
                console.log('Print completed');
            });
        });

        // Enhanced print function
        function enhancedPrint() {
            // Add print parameter to URL
            const url = new URL(window.location);
            url.searchParams.set('print', 'true');
            window.history.replaceState({}, '', url);
            
            // Trigger print
            window.print();
            
            // Remove parameter after print
            url.searchParams.delete('print');
            window.history.replaceState({}, '', url);
        }

        // Replace default print with enhanced version
        const printButton = document.querySelector('button[onclick="window.print()"]');
        if (printButton) {
            printButton.onclick = enhancedPrint;
        }
    </script>
