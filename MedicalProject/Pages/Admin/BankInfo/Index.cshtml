    <script>
        // متغیرهای سراسری
        let currentUserId = null;

        // توابع مدیریت پنل
        function toggleProfileDropdown() {
            const dropdown = document.getElementById('profileDropdown');
            dropdown.classList.toggle('hidden');
        }

        // مدیریت منوی سایدبار
        document.getElementById('sidebarToggle').addEventListener('click', function() {
            if (window.innerWidth < 768) {
                document.body.classList.toggle('sidebar-mobile-open');
            } else {
                document.body.classList.toggle('sidebar-collapsed');
            }
        });

        // توابع مدیریت اطلاعات بانکی
        function viewBankDetails(userId, firstName, lastName, phoneNumber, isActive, fullName, shaba, cardNumber, isConfirmed) {
            currentUserId = userId;

            // پر کردن اطلاعات در مودال
            document.getElementById('detailUserName').textContent = firstName + ' ' + lastName;
            document.getElementById('detailUserPhone').textContent = phoneNumber;
            document.getElementById('detailUserStatus').textContent = isActive === 'True' ? 'فعال' : 'غیرفعال';
            
            document.getElementById('detailAccountOwner').textContent = fullName || '-';
                   document.getElementById('detailShabaNumber').textContent = formatShaba(shaba) || '-';
            document.getElementById('detailCardNumber').textContent = cardNumber || '-';

            // وضعیت تایید
            const statusElement = document.getElementById('detailVerificationStatus');
            if (isConfirmed === 'True') {
                statusElement.className = 'badge badge-success mt-1';
                statusElement.textContent = 'تایید شده';
                document.getElementById('verifyBtn').style.display = 'none';
                document.getElementById('rejectBtn').style.display = 'inline-flex';
            } else {
                statusElement.className = 'badge badge-warning mt-1';
                statusElement.textContent = 'در انتظار بررسی';
                document.getElementById('verifyBtn').style.display = 'inline-flex';
                document.getElementById('rejectBtn').style.display = 'inline-flex';
            }

            // نمایش مودال
            document.getElementById('bankDetailsModal').classList.remove('hidden');
            document.body.style.overflow = 'hidden';
        }

        function closeBankDetailsModal() {
            document.getElementById('bankDetailsModal').classList.add('hidden');
            document.body.style.overflow = 'auto';
            currentUserId = null;
        }

        async function verifyBankInfo(userId) {
            const result = await Swal.fire({
                title: 'تایید اطلاعات بانکی',
                text: 'آیا از تایید این اطلاعات بانکی اطمینان دارید؟',
                icon: 'question',
                showCancelButton: true,
                confirmButtonText: 'بله، تایید شود',
                cancelButtonText: 'لغو'
            });

            if (result.isConfirmed) {
                try {
                    const formData = new FormData();
                    formData.append('userId', userId);

                    const response = await fetch('?handler=VerifyBankInfo', {
                        method: 'POST',
                        body: formData,
                        headers: {
                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                        }
                    });

                    if (response.ok) {
                        await Swal.fire({
                            title: 'موفق!',
                            text: 'اطلاعات بانکی با موفقیت تایید شد.',
                            icon: 'success',
                            confirmButtonText: 'باشه'
                        });
                        location.reload();
                    } else {
                        throw new Error('خطا در تایید اطلاعات بانکی');
                    }
                } catch (error) {
                    console.error('Error:', error);
                    await Swal.fire({
                        title: 'خطا!',
                        text: 'خطا در تایید اطلاعات بانکی',
                        icon: 'error',
                        confirmButtonText: 'باشه'
                    });
                }
            }
        }
       
        
        function formatShaba(shaba) {
            // حذف فاصله‌های اضافی
            shaba = shaba.replace(/\s+/g, '');

            // تقسیم هر 4 کاراکتر و چسباندن با فاصله
            return shaba.match(/.{1,4}/g).join(' ');
        }



        async function rejectBankInfo(userId) {
            const { value: reason } = await Swal.fire({
                title: 'رد اطلاعات بانکی',
                input: 'textarea',
                inputLabel: 'دلیل رد اطلاعات بانکی',
                inputPlaceholder: 'لطفاً دلیل رد این اطلاعات بانکی را وارد کنید...',
                showCancelButton: true,
                confirmButtonText: 'رد اطلاعات',
                cancelButtonText: 'لغو'
            });

            if (reason) {
                try {
                    const formData = new FormData();
                    formData.append('userId', userId);
                    formData.append('reason', reason);

                    const response = await fetch('?handler=RejectBankInfo', {
                        method: 'POST',
                        body: formData,
                        headers: {
                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                        }
                    });

                    if (response.ok) {
                        await Swal.fire({
                            title: 'موفق!',
                            text: 'اطلاعات بانکی با موفقیت رد شد.',
                            icon: 'success',
                            confirmButtonText: 'باشه'
                        });
                        location.reload();
                    } else {
                        throw new Error('خطا در رد اطلاعات بانکی');
                    }
                } catch (error) {
                    console.error('Error:', error);
                    await Swal.fire({
                        title: 'خطا!',
                        text: 'خطا در رد اطلاعات بانکی',
                        icon: 'error',
                        confirmButtonText: 'باشه'
                    });
                }
            }
        }

        // توابع مربوط به مودال جزئیات
        function verifyCurrentBankInfo() {
            if (currentUserId) {
                verifyBankInfo(currentUserId);
            }
        }

        function rejectCurrentBankInfo() {
            if (currentUserId) {
                rejectBankInfo(currentUserId);
            }
        }

        // انتخاب همه/عدم انتخاب همه
        function toggleSelectAll(checkbox) {
            const checkboxes = document.querySelectorAll('.user-checkbox');
            checkboxes.forEach(cb => {
                if (cb) {
                    cb.checked = checkbox.checked;
                }
            });
        }

        // نمایش مودال عملیات گروهی
        function showBulkActions() {
            const selectedCount = document.querySelectorAll('.user-checkbox:checked').length;
            if (selectedCount === 0) {
                Swal.fire({
                    title: 'هشدار!',
                    text: 'لطفاً حداقل یک کاربر را انتخاب کنید.',
                    icon: 'warning',
                    confirmButtonText: 'باشه'
                });
                return;
            }
            
            Swal.fire({
                title: 'غیرفعال',
                text: 'عملیات گروهی در حال حاضر غیرفعال است.',
                icon: 'info',
                confirmButtonText: 'باشه'
            });
        }

        function getSelectedUserIds() {
            const checkboxes = document.querySelectorAll('.user-checkbox:checked');
            return Array.from(checkboxes).map(cb => cb.value).filter(id => id);
        }

        function exportToExcel() {
            Swal.fire({
                title: 'در حال آماده‌سازی',
                text: 'خروجی Excel در حال آماده‌سازی است...',
                icon: 'info',
                showConfirmButton: false,
                timer: 2000
            });
        }

        function loadPage(page) {
            const url = new URL(window.location.href);
            url.searchParams.set('page', page);
            window.location.href = url.toString();
        }

        // بستن منوها هنگام کلیک خارج
        document.addEventListener('click', function(event) {
            const profileDropdown = document.getElementById('profileDropdown');
            const profileButton = event.target.closest('button[onclick="toggleProfileDropdown()"]');

            if (profileDropdown && !profileDropdown.contains(event.target) && !profileButton) {
                profileDropdown.classList.add('hidden');
            }

            if (window.innerWidth < 768 &&
                !event.target.closest('.admin-sidebar') &&
                !event.target.closest('#sidebarToggle')) {
                document.body.classList.remove('sidebar-mobile-open');
            }
        });

        // بستن مدال با کلید ESC
        document.addEventListener('keydown', function(event) {
            if (event.key === 'Escape') {
                closeBankDetailsModal();
            }
        });
    </script>
    <script src="~/Alert.js"></script>

    <script>
        // نمایش خودکار پیام‌های TempData
        function showTempDataMessages() {
        // موفقیت
        @if (TempData["Success"] != null)
        {
                    <text>
                        Alert.success(decodePersianText('@TempData["Success"]'));
                    </text>
        }

        // خطا
        @if (TempData["Error"] != null)
        {
                    <text>
                        const errorMsg = decodePersianText('@TempData["Error"]');
                        if (errorMsg.includes('404') || errorMsg.includes('یافت نشد')) {
                        Alert.notFound(errorMsg);
                        } else if (errorMsg.includes('500') || errorMsg.includes('سرور')) {
                        Alert.serverError(errorMsg);
                        } else if (errorMsg.includes('400') || errorMsg.includes('نامعتبر')) {
                        Alert.badRequest(errorMsg);
                        } else if (errorMsg.includes('401') || errorMsg.includes('دسترسی')) {
                        Alert.unauthorized(errorMsg);
                        } else {
                        Alert.error(errorMsg);
                        }
                    </text>
        }

        // هشدار
        @if (TempData["Warning"] != null)
        {
                    <text>
                        const warningMsg = decodePersianText('@TempData["Warning"]');
                        if (warningMsg.includes('اعتبارسنجی') || warningMsg.includes('بررسی')) {
                        Alert.validationWarning(warningMsg);
                        } else if (warningMsg.includes('مالی') || warningMsg.includes('موجودی')) {
                        Alert.financialWarning(warningMsg);
                        } else if (warningMsg.includes('امنیتی') || warningMsg.includes('غیرامن')) {
                        Alert.securityWarning(warningMsg);
                        } else {
                        Alert.warning(warningMsg);
                        }
                    </text>
        }

        // اطلاعیه
        @if (TempData["Info"] != null)
        {
                    <text>
                        const infoMsg = decodePersianText('@TempData["Info"]');
                        if (infoMsg.includes('سیستم') || infoMsg.includes('بروزرسانی')) {
                        Alert.systemInfo(infoMsg);
                        } else if (infoMsg.includes('مالی') || infoMsg.includes('تراکنش')) {
                        Alert.financialInfo(infoMsg);
                        } else {
                        Alert.info(infoMsg);
                        }
                    </text>
        }
        }

        // نمایش پیام‌ها پس از لود صفحه
        document.addEventListener('DOMContentLoaded', function() {
            showTempDataMessages();
        });
    </script>
    @Html.AntiForgeryToken()
