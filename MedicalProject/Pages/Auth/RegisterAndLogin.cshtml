@page
@model MedicalProject.Pages.Auth.RegisterAndLoginModel
@{
    ViewData["Title"] = "ثبت‌نام و ورود";
}

<div class="min-h-screen bg-gradient-to-br from-white via-blue-50 to-blue-100 flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-4xl w-full">
        <div class="bg-white rounded-2xl shadow-xl overflow-hidden">
            <div class="md:flex">
                <!-- بخش تصویر و توضیحات -->
                <div class="md:w-1/2 bg-gradient-to-br from-blue-600 to-blue-800 text-white p-8 flex flex-col justify-center">
                    <div class="text-center mb-8">
                        <div class="w-20 h-20 bg-white/20 rounded-full flex items-center justify-center mx-auto mb-4">
                            <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                            </svg>
                        </div>
                        <h2 class="text-2xl font-bold mb-2">به پلتفرم دنگ خوش آمدید</h2>
                        <p class="text-blue-100">سرمایه‌گذاری هوشمند در تجهیزات صنعتی و پزشکی</p>
                    </div>

                    <div class="space-y-4 mt-8">
                        <div class="flex items-center space-x-3 space-x-reverse">
                            <div class="w-8 h-8 bg-white/20 rounded-full flex items-center justify-center">
                                <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                </svg>
                            </div>
                            <span class="text-sm">امکان سرمایه‌گذاری با مبالغ کوچک</span>
                        </div>
                        <div class="flex items-center space-x-3 space-x-reverse">
                            <div class="w-8 h-8 bg-white/20 rounded-full flex items-center justify-center">
                                <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                </svg>
                            </div>
                            <span class="text-sm">دسترسی به پروژه‌های سودآور</span>
                        </div>
                        <div class="flex items-center space-x-3 space-x-reverse">
                            <div class="w-8 h-8 bg-white/20 rounded-full flex items-center justify-center">
                                <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                </svg>
                            </div>
                            <span class="text-sm">پشتیبانی ۲۴ ساعته</span>
                        </div>
                    </div>
                </div>

                <!-- بخش فرم‌ها -->
                <div class="md:w-1/2 p-8">
                    <!-- فرم ورود -->
                    <div id="loginForm" class="transition-all duration-300">
                        <div class="text-center mb-8">
                            <h2 class="text-2xl font-bold text-gray-900">ورود به حساب کاربری</h2>
                            <p class="text-gray-600 mt-2">حساب کاربری دارید؟ وارد شوید</p>
                        </div>

                        <form method="post" class="space-y-6">
                            <div>
                                <label for="loginPhone" class="label">شماره تلفن همراه</label>
                                <div class="mt-1 relative">
                                    <input type="tel" id="loginPhone" name="phone"
                                           class="input pr-10"
                                           placeholder="09xxxxxxxxx"
                                           required>
                                    <div class="absolute left-3 top-1/2 transform -translate-y-1/2">
                                        <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                                        </svg>
                                    </div>
                                </div>
                            </div>

                            <div>
                                <label for="loginPassword" class="label">رمز عبور</label>
                                <div class="mt-1 relative">
                                    <input type="password" id="loginPassword" name="password"
                                           class="input pr-10"
                                           placeholder="رمز عبور خود را وارد کنید"
                                           required>
                                    <div class="absolute left-3 top-1/2 transform -translate-y-1/2">
                                        <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                                        </svg>
                                    </div>
                                </div>
                            </div>

                            <div class="flex items-center justify-between">
                                <div class="flex items-center">
                                    <input id="remember-me" name="remember-me" type="checkbox"
                                           class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
                                    <label for="remember-me" class="mr-2 block text-sm text-gray-900">
                                        مرا به خاطر بسپار
                                    </label>
                                </div>

                                <div class="text-sm">
                                    <a href="#" class="font-medium text-blue-600 hover:text-blue-500">
                                        رمز عبور خود را فراموش کرده‌اید؟
                                    </a>
                                </div>
                            </div>

                            <div>
                                <button type="submit" class="w-full btn btn-primary py-3">
                                    ورود به حساب
                                </button>
                            </div>
                        </form>

                        <div class="mt-6">
                            <div class="relative">
                                <div class="absolute inset-0 flex items-center">
                                    <div class="w-full border-t border-gray-300"></div>
                                </div>
                                <div class="relative flex justify-center text-sm">
                                    <span class="px-2 bg-white text-gray-500">یا ادامه دهید با</span>
                                </div>
                            </div>

                            <div class="mt-6 grid grid-cols-2 gap-3">
                                <a href="#" class="w-full inline-flex justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                                    <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
                                        <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4" />
                                        <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853" />
                                        <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05" />
                                        <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335" />
                                    </svg>
                                </a>
                                <a href="#" class="w-full inline-flex justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                                    <svg class="w-5 h-5 text-blue-600" fill="currentColor" viewBox="0 0 24 24">
                                        <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z" />
                                    </svg>
                                </a>
                            </div>
                        </div>

                        <div class="mt-6 text-center">
                            <p class="text-sm text-gray-600">
                                حساب کاربری ندارید؟
                                <button type="button" onclick="showRegister()" class="font-medium text-blue-600 hover:text-blue-500 mr-1">
                                    ثبت‌نام کنید
                                </button>
                            </p>
                        </div>
                    </div>

                    <!-- فرم ثبت‌نام -->
                    <div id="registerForm" class="hidden transition-all duration-300">
                        <div class="text-center mb-8">
                            <h2 class="text-2xl font-bold text-gray-900">ایجاد حساب کاربری</h2>
                            <p class="text-gray-600 mt-2">حساب کاربری ندارید؟ ثبت‌نام کنید</p>
                        </div>

                        <form method="post" class="space-y-6">
                            <div>
                                <label for="registerName" class="label">نام و نام خانوادگی</label>
                                <div class="mt-1 relative">
                                    <input type="text" id="registerName" name="name"
                                           class="input pr-10"
                                           placeholder="نام کامل خود را وارد کنید"
                                           required>
                                    <div class="absolute left-3 top-1/2 transform -translate-y-1/2">
                                        <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                                        </svg>
                                    </div>
                                </div>
                            </div>

                            <div>
                                <label for="registerUsername" class="label">نام کاربری</label>
                                <div class="mt-1 relative">
                                    <input type="text" id="registerUsername" name="username"
                                           class="input pr-10"
                                           placeholder="نام کاربری مورد نظر"
                                           required>
                                    <div class="absolute left-3 top-1/2 transform -translate-y-1/2">
                                        <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                                        </svg>
                                    </div>
                                </div>
                            </div>

                            <div>
                                <label for="registerPhone" class="label">شماره تلفن همراه</label>
                                <div class="mt-1 relative">
                                    <input type="tel" id="registerPhone" name="phone"
                                           class="input pr-10"
                                           placeholder="09xxxxxxxxx"
                                           required>
                                    <div class="absolute left-3 top-1/2 transform -translate-y-1/2">
                                        <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                                        </svg>
                                    </div>
                                </div>
                            </div>

                            <div>
                                <label for="registerPassword" class="label">رمز عبور</label>
                                <div class="mt-1 relative">
                                    <input type="password" id="registerPassword" name="password"
                                           class="input pr-10"
                                           placeholder="رمز عبور قوی انتخاب کنید"
                                           required>
                                    <div class="absolute left-3 top-1/2 transform -translate-y-1/2">
                                        <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                                        </svg>
                                    </div>
                                </div>
                            </div>

                            <div class="flex items-center">
                                <input id="agree-terms" name="agree-terms" type="checkbox"
                                       class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" required>
                                <label for="agree-terms" class="mr-2 block text-sm text-gray-900">
                                    با <a href="#" class="text-blue-600 hover:text-blue-500">شرایط استفاده</a> و <a href="#" class="text-blue-600 hover:text-blue-500">حریم خصوصی</a> موافقم
                                </label>
                            </div>

                            <div>
                                <button type="submit" class="w-full btn btn-primary py-3">
                                    ایجاد حساب کاربری
                                </button>
                            </div>
                        </form>

                        <div class="mt-6 text-center">
                            <p class="text-sm text-gray-600">
                                قبلاً حساب کاربری دارید؟
                                <button type="button" onclick="showLogin()" class="font-medium text-blue-600 hover:text-blue-500 mr-1">
                                    وارد شوید
                                </button>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function showRegister() {
            document.getElementById('loginForm').classList.add('hidden');
            document.getElementById('registerForm').classList.remove('hidden');
        }

        function showLogin() {
            document.getElementById('registerForm').classList.add('hidden');
            document.getElementById('loginForm').classList.remove('hidden');
        }

        // اعتبارسنجی شماره تلفن
        document.querySelectorAll('input[type="tel"]').forEach(input => {
            input.addEventListener('input', function(e) {
                let value = e.target.value.replace(/\D/g, '');
                if (value.startsWith('98')) {
                    value = '0' + value.substring(2);
                }
                e.target.value = value;
            });
        });

        // اعتبارسنجی فرم‌ها
        document.querySelectorAll('form').forEach(form => {
            form.addEventListener('submit', function(e) {
                const phoneInput = this.querySelector('input[type="tel"]');
                if (phoneInput && !/^09[0-9]{9}$/.test(phoneInput.value)) {
                    e.preventDefault();
                    alert('لطفاً شماره تلفن همراه معتبر وارد کنید');
                    phoneInput.focus();
                }
            });
        });
    </script>
}