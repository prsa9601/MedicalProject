@page
@using MedicalProject.Infrastructure
@using MedicalProject.Infrastructure.EnumUtil
@using MedicalProject.Infrastructure.Extensions
@using MedicalProject.Models.User.Enum
@model MedicalProject.Pages.Admin.Finance.IndexModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>مدیریت مالی و سود - پلتفرم دنگ</title>

    <!-- فونت‌ها -->
    <link href="https://fonts.googleapis.com/css2?family=Vazir:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/gh/rastikerdar/vazir-font@v30.1.0/dist/font-face.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>

    <style>
        /* استایل‌های سفارشی - مشابه قالب کاربران */
        html {
            direction: rtl;
            font-family: 'Vazir', 'IRANSans', system-ui, sans-serif;
        }

        body {
            background-color: #f9fafb;
            color: #111827;
            font-family: 'Vazir', 'IRANSans', system-ui, sans-serif;
        }

        .btn {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            padding: 0.5rem 1rem;
            border: 1px solid transparent;
            font-size: 0.875rem;
            font-weight: 500;
            border-radius: 0.5rem;
            box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
            transition: all 0.2s;
            cursor: pointer;
        }

        .btn-primary {
            background-color: #2563eb;
            color: white;
        }

        .btn-success {
            background-color: #059669;
            color: white;
        }

        .btn-warning {
            background-color: #d97706;
            color: white;
        }

        .btn-info {
            background-color: #0891b2;
            color: white;
        }

        .card {
            background-color: white;
            border-radius: 0.75rem;
            box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
            border: 1px solid #f3f4f6;
            overflow: hidden;
        }

        .card-hover {
            transition: all 0.3s;
        }

        .card-hover:hover {
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
            transform: translateY(-0.25rem);
        }

        .badge {
            display: inline-flex;
            align-items: center;
            padding: 0.25rem 0.625rem;
            border-radius: 9999px;
            font-size: 0.75rem;
            font-weight: 500;
        }

        .badge-success {
            background-color: #d1fae5;
            color: #065f46;
        }

        .badge-warning {
            background-color: #fef3c7;
            color: #92400e;
        }

        .badge-danger {
            background-color: #fee2e2;
            color: #991b1b;
        }

        .badge-info {
            background-color: #d1f5f9;
            color: #0e7490;
        }

        /* استایل‌های مخصوص پنل ادمین */
        .admin-sidebar {
            width: 260px;
            background: linear-gradient(180deg, #1e40af 0%, #1e3a8a 100%);
            color: white;
            transition: all 0.3s;
        }

        .admin-main {
            margin-right: 260px;
            transition: all 0.3s;
        }

        .sidebar-link {
            display: flex;
            align-items: center;
            padding: 0.75rem 1rem;
            color: #d1d5db;
            border-radius: 0.5rem;
            margin: 0.25rem 0.5rem;
            transition: all 0.2s;
        }

        .sidebar-link:hover, .sidebar-link.active {
            background-color: rgba(255, 255, 255, 0.1);
            color: white;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
        }

        .table th, .table td {
            padding: 0.75rem 1rem;
            text-align: right;
            border-bottom: 1px solid #e5e7eb;
        }

        .table th {
            background-color: #f9fafb;
            font-weight: 600;
            color: #374151;
        }

        .profit-positive {
            color: #059669;
            font-weight: 600;
        }

        .profit-negative {
            color: #dc2626;
            font-weight: 600;
        }

        .chart-container {
            position: relative;
            height: 300px;
            width: 100%;
        }

        .stat-card {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border-radius: 1rem;
            padding: 1.5rem;
            position: relative;
            overflow: hidden;
        }

        .stat-card::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -50%;
            width: 200%;
            height: 200%;
            background: rgba(255, 255, 255, 0.1);
            transform: rotate(45deg);
        }
    </style>
</head>
<body class="admin-layout">
    <!-- Header -->
    <header class="bg-white shadow-sm border-b border-gray-200 sticky top-0 z-40">
        <div class="max-w-full mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <!-- Logo and Toggle -->
                <div class="flex items-center">
                    <button id="sidebarToggle" class="p-2 rounded-lg text-gray-400 hover:text-gray-600 hover:bg-gray-100 transition-colors mr-2">
                        <i class="fas fa-bars"></i>
                    </button>
                    <a href="/">
                        <div class="flex items-center space-x-2 space-x-reverse">
                            <div class="w-8 h-8 bg-blue-600 rounded-lg flex items-center justify-center">
                                <span class="text-white font-bold text-lg">د</span>
                            </div>
                            <span class="text-xl font-bold text-gray-900">پلتفرم دنگ</span>
                        </div>
                    </a>
                </div>

                <!-- User Actions -->
                <div class="flex items-center space-x-4 space-x-reverse">
                    <!-- Notifications -->
                    <a href="/Notifications" class="relative p-2 text-gray-400 hover:text-gray-600 transition-colors">
                        <i class="fas fa-bell"></i>
                        <span class="badge badge-danger absolute -top-1 -left-1 min-w-[1.25rem] h-5 flex items-center justify-center">
                            3
                        </span>
                    </a>

                    <!-- Profile Dropdown -->
                    <div class="relative">
                        <button onclick="toggleProfileDropdown()"
                                class="flex items-center space-x-2 space-x-reverse p-2 rounded-lg hover:bg-gray-100 transition-colors">
                            <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center">
                                <i class="fas fa-user text-blue-600"></i>
                            </div>
                            <span class="hidden sm:block font-medium text-gray-700">
                                ادمین
                            </span>
                        </button>

                        <!-- Dropdown Menu -->
                        <div id="profileDropdown" class="hidden absolute left-0 mt-2 w-48 bg-white rounded-lg shadow-lg border border-gray-200 py-1 z-50">
                            <a href="/Admin/Dashboard"
                               class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 transition-colors">
                                <i class="fas fa-tachometer-alt ml-3"></i>
                                داشبورد
                            </a>
                            <a href="/Profile"
                               class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 transition-colors">
                                <i class="fas fa-user ml-3"></i>
                                پروفایل
                            </a>
                            <form asp-page="/Logout" method="post" class="w-full">
                                <button type="submit"
                                        class="flex items-center w-full px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 transition-colors">
                                    <i class="fas fa-sign-out-alt ml-3"></i>
                                    خروج
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="flex">
        <!-- Sidebar -->
        <div class="admin-sidebar fixed h-full z-30">
            <div class="flex flex-col h-full">
                <!-- Sidebar Header -->
                <div class="p-4 border-b border-blue-700">
                    <div class="flex items-center justify-between">
                        <div class="flex items-center space-x-2 space-x-reverse">
                            <div class="w-8 h-8 bg-white rounded-lg flex items-center justify-center">
                                <span class="text-blue-600 font-bold text-sm">د</span>
                            </div>
                            <span class="text-white font-bold">پنل مدیریت</span>
                        </div>
                    </div>
                </div>

                <!-- Sidebar Menu -->
                <div class="flex-1 overflow-y-auto py-4">
                    <nav class="space-y-1">
                        <a asp-page="/Admin/Dashboard" class="sidebar-link">
                            <i class="fas fa-tachometer-alt"></i>
                            <span>داشبورد</span>
                        </a>

                        <a asp-page="/Admin/Users/Index" class="sidebar-link">
                            <i class="fas fa-users"></i>
                            <span>کاربران</span>
                        </a>

                        <a asp-page="/Admin/Finance/Index" class="sidebar-link active">
                            <i class="fas fa-chart-line"></i>
                            <span>مدیریت مالی</span>
                        </a>

                        <a asp-page="/Admin/Documents/Index" class="sidebar-link">
                            <i class="fas fa-file-alt"></i>
                            <span>مدارک کاربران</span>
                        </a>

                        <a asp-page="/Admin/Product/Index" class="sidebar-link">
                            <i class="fas fa-project-diagram"></i>
                            <span>پروژه‌ها</span>
                        </a>

                        <a asp-page="/Admin/Orders/Index" class="sidebar-link">
                            <i class="fas fa-shopping-cart"></i>
                            <span>سرمایه‌گذاری‌ها</span>
                        </a>

                        <a asp-page="/Admin/Settings/Index" class="sidebar-link">
                            <i class="fas fa-cog"></i>
                            <span>تنظیمات</span>
                        </a>
                    </nav>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="admin-main flex-1">
            <div class="admin-content">
                <!-- Page Header -->
                <div class="bg-white border-b border-gray-200">
                    <div class="max-w-full mx-auto px-4 sm:px-6 lg:px-8 py-6">
                        <div class="flex justify-between items-center">
                            <div>
                                <h1 class="text-2xl font-bold text-gray-900">مدیریت مالی و سود</h1>
                                <p class="mt-1 text-sm text-gray-600">مدیریت سود کلی سایت و سود کاربران</p>
                            </div>
                            <div class="flex items-center space-x-3 space-x-reverse">
                                <button onclick="exportFinancialReport()" class="btn btn-outline">
                                    <i class="fas fa-download ml-2"></i>
                                    خروجی گزارش
                                </button>
                                <button onclick="showSettlementModal()" class="btn btn-primary">
                                    <i class="fas fa-calculator ml-2"></i>
                                    تسویه حساب
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Main Content Area -->
                <div class="max-w-full mx-auto px-4 sm:px-6 lg:px-8 py-6">
                    <!-- Statistics Cards -->
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
                       @*  <div class="stat-card">
                            <div class="relative z-10">
                                <p class="text-sm opacity-90">سود کل پلتفرم</p>
                                <p class="text-2xl font-bold mt-2">@Model.TotalPlatformProfit.ToString("N0") <span class="text-sm">ریال</span></p>
                                <div class="flex items-center mt-2">
                                    <i class="fas fa-arrow-up ml-1 text-green-300"></i>
                                    <span class="text-green-300 text-sm">۱۲٪ رشد</span>
                                </div>
                            </div>
                        </div> *@

                        <div class="stat-card" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);">
                            <div class="relative z-10">
                                <p class="text-sm opacity-90">سود کاربران</p>
                               <p class="text-2xl font-bold mt-2">
    @Model.Result.Data.SafeSum(i => i.TotalPrice).ToString("N0")
    <span class="text-sm">ریال</span>
</p> <div class="flex items-center mt-2">
                                    <i class="fas fa-arrow-up ml-1 text-green-300"></i>
                                    <span class="text-green-300 text-sm">۸٪ رشد</span>
                                </div>
                            </div>
                        </div>
@* 
                        <div class="stat-card" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);">
                            <div class="relative z-10">
                                <p class="text-sm opacity-90">کارمزد پلتفرم</p>
                                <p class="text-2xl font-bold mt-2">@Model.TotalPlatformFee.ToString("N0") <span class="text-sm">ریال</span></p>
                                <div class="flex items-center mt-2">
                                    <i class="fas fa-arrow-up ml-1 text-green-300"></i>
                                    <span class="text-green-300 text-sm">۵٪ رشد</span>
                                </div>
                            </div>
                        </div>
 *@
                        <div class="stat-card" style="background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);">
                            <div class="relative z-10">
                                <p class="text-sm opacity-90">تعداد تراکنش‌ها</p>
                                <p class="text-2xl font-bold mt-2">@Model.Result.EntityCount.ToString("N0")</p>
                                <div class="flex items-center mt-2">
                                    <i class="fas fa-arrow-up ml-1 text-green-300"></i>
                                    <span class="text-green-300 text-sm">۱۵٪ رشد</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Charts Section -->
                    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
                        <!-- Profit Chart -->
                        <div class="card">
                            <div class="p-6 border-b border-gray-200">
                                <h3 class="text-lg font-semibold text-gray-900">روند سود ماهانه</h3>
                            </div>
                            <div class="p-6">
                                <div class="chart-container">
                                    <canvas id="profitChart"></canvas>
                                </div>
                            </div>
                        </div>

                        <!-- User Profit Distribution -->
                        <div class="card">
                            <div class="p-6 border-b border-gray-200">
                                <h3 class="text-lg font-semibold text-gray-900">توزیع سود کاربران</h3>
                            </div>
                            <div class="p-6">
                                <div class="chart-container">
                                    <canvas id="itemChart"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Financial Summary -->
                    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-8">
                        <!-- Platform Summary -->
                        <div class="card">
                            <div class="p-6 border-b border-gray-200">
                                <h3 class="text-lg font-semibold text-gray-900">خلاصه مالی پلتفرم</h3>
                            </div>
                            <div class="p-6">
                                <div class="space-y-4">
                                    <div class="flex justify-between items-center">
                                        <span class="text-gray-600">درآمد کل:</span>
                                        <span class="font-semibold text-green-600">@Model.Result.Data.SafeSum(i => i.TotalPrice).ToString("N0") ریال</span>
                                    </div>
                                    <div class="flex justify-between items-center">
                                        <span class="text-gray-600">هزینه‌ها:</span>
                                        <span class="font-semibold text-red-600">@Model.Result.Data.SafeSum(i => i.TotalPrice).ToString("N0") ریال</span>
                                    </div>
                                    <div class="flex justify-between items-center">
                                        <span class="text-gray-600">سود خالص:</span>
                                        <span class="font-semibold text-blue-600">@Model.Result.Data.SafeSum(i => i.TotalPrice).ToString("N0") ریال</span>
                                    </div>
                                    <div class="flex justify-between items-center">
                                        <span class="text-gray-600">نرخ سودآوری:</span>
                                        <span class="font-semibold text-purple-600">@Model.Result.Data.SafeSum(i => i.TotalPrice).ToString("P1")</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- User Profit Summary -->
                        <div class="card">
                            <div class="p-6 border-b border-gray-200">
                                <h3 class="text-lg font-semibold text-gray-900">سود کاربران</h3>
                            </div>
                            <div class="p-6">
                                <div class="space-y-4">
                                    <div class="flex justify-between items-center">
                                        <span class="text-gray-600">میانگین سود کاربر:</span>
                                        <span class="font-semibold text-green-600">@Model.Result.Data.SafeSum(i => i.TotalPrice).ToString("N0") ریال</span>
                                    </div>
                                    <div class="flex justify-between items-center">
                                        <span class="text-gray-600">بیشترین سود:</span>
                                        <span class="font-semibold text-blue-600">@Model.Result.Data.SafeSum(i => i.TotalPrice).ToString("N0") ریال</span>
                                    </div>
                                    <div class="flex justify-between items-center">
                                        <span class="text-gray-600">کمترین سود:</span>
                                        <span class="font-semibold text-orange-600">@Model.Result.Data.SafeSum(i => i.TotalPrice).ToString("N0") ریال</span>
                                    </div>
                                    <div class="flex justify-between items-center">
                                        <span class="text-gray-600">کاربران سودده:</span>
                                        <span class="font-semibold text-purple-600">@Model.Result.Data.SafeSum(i => i.TotalPrice).ToString("N0") نفر</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Quick Actions -->
                        <div class="card">
                            <div class="p-6 border-b border-gray-200">
                                <h3 class="text-lg font-semibold text-gray-900">عملیات سریع</h3>
                            </div>
                            <div class="p-6">
                                <div class="space-y-3">
                                    <button onclick="showSettlementModal()" class="btn btn-primary w-full justify-start">
                                        <i class="fas fa-calculator ml-2"></i>
                                        تسویه حساب کاربران
                                    </button>
                                    <button onclick="generateFinancialReport()" class="btn btn-success w-full justify-start">
                                        <i class="fas fa-file-excel ml-2"></i>
                                        گزارش مالی
                                    </button>
                                    <button onclick="showCommissionSettings()" class="btn btn-warning w-full justify-start">
                                        <i class="fas fa-cog ml-2"></i>
                                        تنظیمات کارمزد
                                    </button>
                                    <button onclick="showProfitAnalysis()" class="btn btn-info w-full justify-start">
                                        <i class="fas fa-chart-pie ml-2"></i>
                                        تحلیل سودآوری
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- User Profit List -->
                    <div class="card">
                        <div class="p-6">
                            <div class="flex flex-col lg:flex-row lg:justify-between lg:items-center mb-6 space-y-4 lg:space-y-0">
                                <h2 class="text-lg font-semibold text-gray-900">لیست سود کاربران</h2>

                                <!-- Search and Filters -->
                                <div class="flex flex-col sm:flex-row items-start sm:items-center space-y-3 sm:space-y-0 sm:space-x-3 space-x-reverse">
                                    <div class="relative w-full sm:w-64">
                                        <input type="text"
                                               id="searchInput"
                                               placeholder="جستجو بر اساس نام کاربر..."
                                               class="input pl-10">
                                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                            <i class="fas fa-search text-gray-400"></i>
                                        </div>
                                    </div>

                                    <select id="profitFilter" class="input w-full sm:w-auto">
                                        <option value="">همه وضعیت‌ها</option>
                                        <option value="positive">سود مثبت</option>
                                        <option value="negative">سود منفی</option>
                                        <option value="high">سود بالا</option>
                                        <option value="low">سود پایین</option>
                                    </select>

                                    <button onclick="applyProfitFilters()" class="btn btn-primary w-full sm:w-auto">
                                        <i class="fas fa-filter ml-2"></i>
                                        اعمال فیلتر
                                    </button>
                                </div>
                            </div>

                            <!-- Users Profit Table -->
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>کاربر</th>
                                            <th>شماره تلفن</th>
                                            <th>سرمایه‌گذاری کل</th>
                                            <th>سود کل</th>
                                            <th>سود ماه جاری</th>
                                            <th>نرخ بازدهی</th>
                                            <th>وضعیت</th>
                                            <th>عملیات</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            int number = 1;
                                            foreach (var item in Model.Result.Data)
                                            {
                                                <tr>
                                                    <td>@(number++)</td>
                                                    <td>
                                                        <div class="flex items-center space-x-3 space-x-reverse">
                                                            <img src="@Directories.GetUserImageAccountPath(item.UserId.ToString())"
                                                                 alt="@item.UserId@item.UserId"
                                                                 class="user-avatar">
                                                            <div>
                                                                <div class="font-medium text-gray-900">@item.UserId @item.UserId</div>
                                                                <div class="text-sm text-gray-500">شناسه: @item.UserId.ToString().Substring(0, 8)</div>
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td>@item.UserId</td>
                                                    <td>@decimal.Parse(item.TotalPrice).ToString("N0") ریال</td>
                                                    <td class="@(decimal.Parse(item.PurchasePricePerDang) >= 0 ? "profit-positive" : "profit-negative")">
                                                        @decimal.Parse(item.TotalProfit).ToString("N0") ریال
                                                    </td>
                                                    <td class="@(decimal.Parse(item.PurchasePricePerDang) >= 0 ? "profit-positive" : "profit-negative")">
                                                        @decimal.Parse(item.PurchasePricePerDang).ToString("N0") ریال
                                                    </td>
                                                    <td>
                                                        <span class="badge @(decimal.Parse(item.PurchasePricePerDang) >= 0 ? "badge-success" : "badge-danger")">
                                                            @decimal.Parse(item.PurchasePricePerDang).ToString("P1")
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <span class="badge @(decimal.Parse(item.TotalPrice) >= 0 ? "badge-success" : "badge-danger")">
                                                            @(decimal.Parse(item.TotalProfit) >= 0 ? "سودده" : "ضررده")
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <div class="flex items-center space-x-2 space-x-reverse">
                                                            <button onclick="showitemDetails('@item.UserId')" 
                                                                    class="btn btn-outline btn-sm" title="مشاهده جزئیات">
                                                                <i class="fas fa-eye"></i>
                                                            </button>
                                                            <button onclick="showSettlementModal('@item.UserId')" 
                                                                    class="btn btn-success btn-sm" title="تسویه حساب">
                                                                <i class="fas fa-money-bill-wave"></i>
                                                            </button>
                                                            <button onclick="generateUserReport('@item.UserId')" 
                                                                    class="btn btn-info btn-sm" title="گزارش کاربر">
                                                                <i class="fas fa-chart-bar"></i>
                                                            </button>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>

                            <!-- Pagination -->
                            <div class="flex flex-col sm:flex-row items-center justify-between mt-6 space-y-4 sm:space-y-0">
                                <div class="text-sm text-gray-700">
                                    نمایش
                                    <span>@((Model.Result.CurrentPage - 1) * Model.Result.Take + 1) - @Math.Min(Model.Result.CurrentPage * Model.Result.Take, Model.Result.EntityCount)</span>
                                    از
                                    <span>@Model.Result.EntityCount</span>
                                    کاربر
                                </div>
                                <div class="flex items-center space-x-2 space-x-reverse">
                                    <!-- Pagination buttons would go here -->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Settlement Modal -->
    <div id="settlementModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50 hidden">
        <div class="relative top-20 mx-auto p-5 border w-full max-w-md shadow-lg rounded-lg bg-white">
            <div class="flex justify-between items-center pb-3 border-b">
                <h3 class="text-xl font-semibold text-gray-900">تسویه حساب</h3>
                <button onclick="closeSettlementModal()" class="text-gray-400 hover:text-gray-600">
                    <i class="fas fa-times"></i>
                </button>
            </div>

            <div class="mt-4">
                <form id="settlementForm">
                    <div class="space-y-4">
                        <div>
                            <label class="form-label">کاربر</label>
                            <select id="userSelect" class="input" required>
                                <option value="">انتخاب کاربر</option>
                                <!-- Users would be populated here -->
                            </select>
                        </div>
                        <div>
                            <label class="form-label">مبلغ تسویه (ریال)</label>
                            <input type="number" id="settlementAmount" class="input" placeholder="مبلغ را وارد کنید" required>
                        </div>
                        <div>
                            <label class="form-label">توضیحات</label>
                            <textarea id="settlementDescription" class="input" rows="3" placeholder="توضیحات تسویه حساب"></textarea>
                        </div>
                    </div>

                    <div class="flex justify-end space-x-3 space-x-reverse mt-6">
                        <button type="button" onclick="closeSettlementModal()" class="btn btn-outline">
                            لغو
                        </button>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-check ml-2"></i>
                            تایید تسویه
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>



    <script>
        // توابع مدیریت پنل ادمین
        function toggleSidebar() {
            document.body.classList.toggle('sidebar-collapsed');
        }

        function toggleMobileSidebar() {
            document.body.classList.toggle('sidebar-mobile-open');
        }

        function toggleProfileDropdown() {
            const dropdown = document.getElementById('profileDropdown');
            dropdown.classList.toggle('hidden');
        }

        // مدیریت چارت‌ها
        function initializeCharts() {
            // Profit Chart
            const profitCtx = document.getElementById('profitChart').getContext('2d');
            const profitChart = new Chart(profitCtx, {
                type: 'line',
                data: {
                    labels: ['فروردین', 'اردیبهشت', 'خرداد', 'تیر', 'مرداد', 'شهریور'],
                    datasets: [{
                        label: 'سود پلتفرم',
                        data: [12000000, 19000000, 15000000, 25000000, 22000000, 30000000],
                        borderColor: '#3b82f6',
                        backgroundColor: 'rgba(59, 130, 246, 0.1)',
                        tension: 0.4,
                        fill: true
                    }, {
                        label: 'سود کاربران',
                        data: [8000000, 12000000, 10000000, 18000000, 15000000, 22000000],
                        borderColor: '#10b981',
                        backgroundColor: 'rgba(16, 185, 129, 0.1)',
                        tension: 0.4,
                        fill: true
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'top',
                            rtl: true
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                callback: function(value) {
                                    return value.toLocaleString() + ' ریال';
                                }
                            }
                        }
                    }
                }
            });

            // User Profit Distribution Chart
            const itemCtx = document.getElementById('itemChart').getContext('2d');
            const itemChart = new Chart(itemCtx, {
                type: 'doughnut',
                data: {
                    labels: ['سود بالا (>50M)', 'سود متوسط (10M-50M)', 'سود پایین (1M-10M)', 'بدون سود'],
                    datasets: [{
                        data: [15, 35, 45, 5],
                        backgroundColor: [
                            '#10b981',
                            '#3b82f6',
                            '#f59e0b',
                            '#ef4444'
                        ]
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom',
                            rtl: true
                        }
                    }
                }
            });
        }

        // توابع مدال‌ها
        function showSettlementModal(userId = '') {
            if (userId) {
                document.getElementById('userSelect').value = userId;
            }
            document.getElementById('settlementModal').classList.remove('hidden');
        }

        function closeSettlementModal() {
            document.getElementById('settlementModal').classList.add('hidden');
        }

        function showitemDetails(userId) {
            // Implementation for showing user profit details
            alert('جزئیات سود کاربر: ' + userId);
        }

        function generateUserReport(userId) {
            // Implementation for generating user report
            alert('گزارش کاربر: ' + userId);
        }

        function exportFinancialReport() {
            alert('گزارش مالی در حال آماده‌سازی است...');
        }

        function generateFinancialReport() {
            alert('گزارش مالی جامع در حال تولید است...');
        }

        function showCommissionSettings() {
            alert('تنظیمات کارمزد باز می‌شود...');
        }

        function showProfitAnalysis() {
            alert('تحلیل سودآوری باز می‌شود...');
        }

        function applyProfitFilters() {
            const search = document.getElementById('searchInput').value;
            const filter = document.getElementById('profitFilter').value;
            // Implementation for applying filters
            console.log('اعمال فیلترهای سود:', { search, filter });
        }

        // مدیریت فرم تسویه حساب
        document.getElementById('settlementForm').addEventListener('submit', function(e) {
            e.preventDefault();
            const userId = document.getElementById('userSelect').value;
            const amount = document.getElementById('settlementAmount').value;
            const description = document.getElementById('settlementDescription').value;

            // Implementation for settlement submission
            console.log('تسویه حساب:', { userId, amount, description });
            alert('تسویه حساب با موفقیت انجام شد');
            closeSettlementModal();
        });

        // Initialize charts when page loads
        document.addEventListener('DOMContentLoaded', function() {
            initializeCharts();
        });

        // بستن منوها هنگام کلیک خارج
        document.addEventListener('click', function(event) {
            const profileDropdown = document.getElementById('profileDropdown');
            const profileButton = event.target.closest('button[onclick="toggleProfileDropdown()"]');

            if (profileDropdown && !profileDropdown.contains(event.target) && !profileButton) {
                profileDropdown.classList.add('hidden');
            }
        });

        // مدیریت کلیک روی دکمه سایدبار
        document.getElementById('sidebarToggle').addEventListener('click', function() {
            if (window.innerWidth < 768) {
                toggleMobileSidebar();
            } else {
                toggleSidebar();
            }
        });
    </script>
</body>
